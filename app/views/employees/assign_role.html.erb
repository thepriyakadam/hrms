<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table  class="table table-bordered table-hover">
	    <thead>
	      <tr>
		      <th>Name</th>
		      <th>Contact no</th>
		      <th>Role</th>
		      <th>Reporting Manager</th>
		      <th>Department</th>
		      <th>Action</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @employees.each do |employee| %>
					<%= bootstrap_form_for :role, url: {action: 'submit_form'} do |f| %>    
			      <tr>
			        <td><%= employee.first_name %></td>
			        <td><%= employee.contact_no %></td>
			        <td><%= f.select :name, all_role_list,hide_label:true,prompt:true %>
			   					<%= f.hidden_field :employee_id, value: employee.id %>
			        </td>
			        <td><%= f.select :manager_id, all_employee_list,hide_label:true, prompt:true %></td>
			        <td><%= f.select :department_id, all_department_list,hide_label:true, prompt:true %></td>
			        <td><%= f.submit "+", class: 'btn btn-primary fa fa-user-plus' %></td>
			      </tr>	
		     	<% end %>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>


