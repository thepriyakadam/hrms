<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
   <% @religions.each do |religion| %>
      <tr>
        <td><%= religion.code %></td>
        <td><%= religion.name %></td>
        <td><%= religion.description %></td>
        <td> 
            <%= link_to '', edit_religion_path(religion),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  religion, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>