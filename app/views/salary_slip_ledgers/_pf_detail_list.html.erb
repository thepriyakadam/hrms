<div class="box-header">
    <div class="pull-right">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>ID</th>
        <th>Employee Name</th>
        <th>PF No.</th>
        <th>Payble Days</th>
        <th>Basic</th>
        <th>DA</th>
        <th>Total</th>
        <th>PF</th>
      </tr>
    </thead>

    <tbody>
      <% @salaryslips.each do |slip| %>
        <% employee = slip.employee %>
        <% joining = employee.joining_detail %>
        <% bank = employee.employee_bank_detail %>
        <% workingday = slip.workingday %>
        <tr>
          <td><%= slip.employee.manual_employee_code %></td>
          <td><%= employee.first_name.to_s+" "+employee.middle_name.to_s+" "+employee.last_name.to_s %></td>
          <td><%= joining.try(:employee_pf_no) %></td>
          <td><%= workingday.payable_day %></td>
          <% @addable_salaryslip_items = slip.salaryslip_components.where(is_deducted: false) %>
          <%basic_amt = 0%>
          <%da_amt = 0%>
          <% @addable_salaryslip_items.each do |item| %>
          
            <% case item.salary_component.try(:name) %>
            <% when "Basic" %>
            <td><%= basic_amt = item.calculated_amount.round %></td>
            <% when "DA" %>
            <td><%= da_amt = item.calculated_amount.round %></td>
            <% else %>
            <% end %> <!-- switch case --> 
          <% end %><!-- addable items -->
          <td><%= basic_amt+da_amt %></td>

          <% @deducted_salaryslip_items = slip.salaryslip_components.where(is_deducted: true) %>
          <% @deducted_salaryslip_items.each do |item| %>
            <% if item.salary_component_id.nil? %>
              <% if item.other_component_name == "PF" %>
                <td><%= item.calculated_amount.round %></td>
            <% end %>
          <% end %><!-- deducted items -->
      <% end %><!-- slip -->
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>
  <%= link_to " Excel Report ",pf_detail_xls_salary_slip_ledgers_path(month: params[:pf_detail][:month], year: params[:pf_detail][:year],company_id: params[:pf_detail][:company_id],company_location_id: params[:pf_detail][:company_location_id], format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>
  <!-- <= link_to " Print Food Deduction ",food_deduction_pdf_1_food_deductions_path(month: params[:food_deduction][:month], year: params[:food_deduction][:year],company_id: params[:food_deduction][:company_id],company_location_id: params[:food_deduction][:company_location_id], format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %> -->
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>