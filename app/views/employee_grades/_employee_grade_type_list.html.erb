<table id="example2" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @employee_grades.each do |employee_grade| %>
      <tr>
        <td><%= employee_grade.name %></td>
        <td>
          <% if employee_grade.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_employee_grade_path(employee_grade),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  employee_grade, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_employee_grades_path(employee_grade: employee_grade),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
