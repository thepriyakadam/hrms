<div class="box">
  <div class="box-header">
    <h3 class="box-title">Change Password</h3>
    </div>

<p id="notice"><%= notice %></p>
<div class="box-body">
<%= bootstrap_form_for Employee.new,url:{action:'update_password'},html: {id: 'employee'} do |f| %>
<div class="row">
  <div class="col-sm-3">
    <%= select :employee,:id,all_employee_list,{include_blank: " Select Employees"}, class: "form-control" %>
  </div>
  <div class="col-sm-3">
    <%= password_field :employee,:password,label: "Please Enter Password",class: "form-control" %>
  </div>
  <div class="col-sm-3">
    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div><br>
</div>
</div>
<% end %>

<script>
$("#employee").validate({
    rules: {
      "employee[id]":{
        required: true,
      },
      "employee[password]":{
        required: true,
      }
    },
    messages: {
      "employee[id]":{
        required: "Please Select Employee",
      },
      "employee[password]":{
        required: "Please Specify Password",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>

