<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>  
       <th>Employee Grade</th>
      <th>Leave Type</th>
      <th>No. of leave days</th>
      <th>Expire Date</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @company_leavs.each do |company_leav| %>
      <tr>
        <td><%= company_leav.employee_grade.try(:name) %></td>
        <td><%= company_leav.leav_category.try(:name) %></td>
        <td><%= company_leav.no_of_leave %></td>
        <td><%= company_leav.expiry_date %></td>
        <td>
          <%= link_to '', edit_company_leav_path(company_leav),class: 'btn btn-success fa fa-edit',remote:true %>
          <%= link_to '',  company_leav, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
