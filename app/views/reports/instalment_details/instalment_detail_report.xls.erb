<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
      	<Cell ss:Index="1"><Data ss:Type="String">Employee ID </Data></Cell>
        <Cell ss:Index="2"><Data ss:Type="String">Employee Name </Data></Cell>
        <Cell ss:Index="3"><Data ss:Type="String">Contact No. </Data></Cell>
        <Cell ss:Index="4"><Data ss:Type="String">Department Name </Data></Cell>
        <Cell ss:Index="5"><Data ss:Type="String">Advance Date </Data></Cell>
        <Cell ss:Index="5"><Data ss:Type="String">Installment Date </Data></Cell>
        <Cell ss:Index="6"><Data ss:Type="String">Installment Amount </Data></Cell>
      </Row>

      <% @instalments.each do |i| %>
      <Row>
      	  <Cell ss:Index="1"><Data ss:Type="String"><%= i.advance_salary.try(:employee).try(:manual_employee_code) %></Data></Cell>
          <Cell ss:Index="2"><Data ss:Type="String"><%= full_name(i.advance_salary.try(:employee)) %></Data></Cell>
          <Cell ss:Index="3"><Data ss:Type="String"><%= i.advance_salary.try(:employee).try(:contact_no) %></Data></Cell>
          <Cell ss:Index="4"><Data ss:Type="String"><%= i.advance_salary.try(:employee).try(:department).try(:name) %></Data></Cell>
          <Cell ss:Index="5"><Data ss:Type="String"><%= i.advance_salary.try(:advance_date) %></Data></Cell>
          <Cell ss:Index="5"><Data ss:Type="String"><%= i.instalment_date %></Data></Cell>
          <Cell ss:Index="6"><Data ss:Type="String"><%= i.instalment_amount %></Data></Cell>
          </Row><!-- Row -->
      <% end %><!-- slip -->
    </Table>
  </Worksheet>
</Workbook>
