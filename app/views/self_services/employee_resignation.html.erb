<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title"> Employee Resignation </h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= bootstrap_form_for(@employee_resignation, url: {action: 'create_self_resignation'},html: {id: 'employee_resignation'}) do |f| %>
      <%= hidden_field_tag :employee_id, current_user.employee_id %>
      <%= hidden_field_tag :application_date, Date.today %>

      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= f.text_field :resignation_date,label:'Resignation Date',class: 'resignation'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.select :leaving_reason_id, all_leaving_reason,{label: 'Reason of Leaving',include_blank: " Select Reason of Leaving"} %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :notice_period, label:'Notice Period (in days)',readonly: true %>
          </div>
        </div>
       
        <div class="col-sm-3">
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= f.text_field :tentative_leaving_date, class: 'resignation',label:'Requested Releaving Date'%>
            </div>
          </div>
        </div>
      </div>  

      <div class="row">
        <div class="col-sm-6">
          <div class="field">
            <%= f.text_area :reason, label: "Reason" %>
          </div>
        </div>
        
        <div class="col-sm-6">
          <div class="field">
            <%= f.text_area :note, label:'Note' %>
          </div>
        </div>
      </div>
    
      <div class="row">
        <div class="col-sm-6">
          <div class="actions">
            <%= f.submit 'Create Employee Resignation',class: "btn btn-primary btn-sm"  %>
            <%= link_to 'Back', employee_resignations_path,class: 'btn btn-sm btn-default fa fa-arrow-left' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(function(){
    $('.resignation').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-5:+10',
    dateFormat: 'dd-mm-yy' });

  $("#employee_resignation").validate({
    rules: {
       "employee_resignation[resignation_date]":{
        required: true,
      },
       "employee_resignation[leaving_reason_id]":{
        required: true,
      }
    },
    messages: {
      "employee_resignation[resignation_date]":{
        required: "Please Select Resignation Date",
      },
      "employee_resignation[leaving_reason_id]":{
        required: "Please Specify Leaving Reason",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>