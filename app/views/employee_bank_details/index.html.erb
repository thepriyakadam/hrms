<div class="box">
  <div class="box-header">
    <h3 class="box-title">Bank Details</h3>
    <div class="pull-right">
      <%= link_to "New Employee bank detail", new_employee_bank_detail_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Employee</th>
      <th>Account no</th>
      <th>Bank name</th>
      <th>Branch name</th>
      <th>Contact no</th>
      <th>Micr code</th>
      <th>Branch code</th>
      <th>Ifsc code</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_bank_details.each do |employee_bank_detail| %>
      <tr>
        <td><%= employee_bank_detail.employee %></td>
        <td><%= employee_bank_detail.account_no %></td>
        <td><%= employee_bank_detail.bank_name %></td>
        <td><%= employee_bank_detail.branch_name %></td>
        <td><%= employee_bank_detail.contact_no %></td>
        <td><%= employee_bank_detail.micr_code %></td>
        <td><%= employee_bank_detail.branch_code %></td>
        <td><%= employee_bank_detail.ifsc_code %></td>
        <td>
            <%= link_to '', employee_bank_detail,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_employee_bank_detail_path(employee_bank_detail),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', employee_bank_detail, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>