<h1>Listing Exit Interviews</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Question master</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exit_interviews.each do |exit_interview| %>
      <tr>
        <td><%= exit_interview.employee %></td>
        <td><%= exit_interview.question_master %></td>
        <td><%= exit_interview.answer %></td>
        <td><%= link_to 'Show', exit_interview %></td>
        <td><%= link_to 'Edit', edit_exit_interview_path(exit_interview) %></td>
        <td><%= link_to 'Destroy', exit_interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

