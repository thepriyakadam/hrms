<div class="box">
  <div class="box-header">
    <h3 class="box-title">Transport Allowance</h3>
    <div class="pull-right">
      <%= link_to 'New Transport Allowance', new_transport_allowance_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
       <% @transport_allowances.each do |transport_allowance| %>
        <tr>
          <td><%= transport_allowance.employee.try(:manual_employee_code) %></td>
          <td><%= full_name(transport_allowance.employee) %></td>
          <td><%= transport_allowance.amount %></td>
          <td>
            <%= link_to '',show_allowance_transport_allowances_path(transport_allowance_id: transport_allowance.id),class: 'btn btn btn-xs btn-default fa fa-eye',remote: true %>
            <%= link_to '', edit_transport_allowance_path(transport_allowance), class: 'btn btn-xs btn-success fa fa-edit' %>
            <%#= link_to '', transport_allowance,class: 'btn btn-xs btn-default fa fa-eye' %>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>

<div id="allowance" class="modal fade"></div>
<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>




