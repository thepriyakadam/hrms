<div class="box">
  <div class="box-header">
    <h3 class="box-title">Travel Final Approval/Reject<h3>
    <div class="pull-right">
    </div>
    </div>

<div class="box-body">

<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>From Date</th>
      <th>Place</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @travel_requests.each do |travel_request| %>
      <tr>
        <td><%= travel_request.employee.try(:manual_employee_code) %></td>
        <td><%= travel_request.employee.try(:first_name) %> <%= travel_request.employee.try(:middle_name) %> <%= travel_request.employee.try(:last_name) %></td>
        <td><%= travel_request.traveling_date %></td>
        <td><%= travel_request.place %></td>
        <td>
           <%= link_to 'View Detail',travel_request_confirmation_travel_requests_path(travel_request),class: 'btn btn-xs btn-primary' %>
                </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>

