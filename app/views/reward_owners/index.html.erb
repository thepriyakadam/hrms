<p id="notice"><%= notice %></p>

<h1>Listing Reward Owners</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reward_owners.each do |reward_owner| %>
      <tr>
        <td><%= reward_owner.code %></td>
        <td><%= reward_owner.name %></td>
        <td><%= reward_owner.description %></td>
        <td><%= reward_owner.status %></td>
        <td><%= link_to 'Show', reward_owner %></td>
        <td><%= link_to 'Edit', edit_reward_owner_path(reward_owner) %></td>
        <td><%= link_to 'Destroy', reward_owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

