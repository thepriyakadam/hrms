<div class="box">
  <div class="box-header with-border">
    <div class="pull-right"></div>
    <h3 class="box-title">Vacancy List</h3><br>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example6" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Sr.No.</th>
              <th>Recruiter</th>
              <th>Total Vacancy</th>
              <th>Closed</th>
            </tr>
          </thead>

          <tbody>
          <% i = 0 %>
            <% @vacancy_masters.each do |vacancy_master| %>
              <tr>
                <td><%= i=i+1 %></td>
                <td><%= full_name(vacancy_master.recruiter) %></td>
                <% vacancy = VacancyMaster.where(recruiter_id: vacancy_master.recruiter_id) %>
                <% vacancy_closed = VacancyMaster.where(recruiter_id: vacancy_master.recruiter_id,is_confirmed: true) %>

                <td><%= vacancy.count %></td>
                <td><%= vacancy_closed.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
   </div>
  </div>
<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>