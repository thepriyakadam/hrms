<table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Company location</th>
      <th>Department Code</th>
      <th>Department Name</th>
      <th>Department type</th>
      <th>Contact no</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.company_location.name %></td>
        <td><%= department.department_code %></td>
        <td><%= department.name %></td>
        <td><%= department.department_type.name %></td>
        <td><%= department.contact_no %></td>
        <td>
            <%= link_to '', departments, class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_departments_path(department), class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', department, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>