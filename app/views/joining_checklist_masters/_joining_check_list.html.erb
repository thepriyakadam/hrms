<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Action</th>
 
  <tbody>
    <% @joining_checklist_masters.each do |jc| %>
      <tr>
        <td><%= jc.code %></td>
        <td><%= jc.name %></td>
        <td><%= jc.description %></td>
         <td><%= jc.status ? "Active" : "Inactive" %></td>
        <td>
            <%= link_to '', edit_joining_checklist_master_path(jc),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  jc, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-close',remote:true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>