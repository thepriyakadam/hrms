<p id="notice"><%= notice %></p>

<h1>Listing Leave Transfers</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Transfer to</th>
      <th>Date</th>
      <th>No of leave</th>
      <th>Status</th>
      <th>Employee leav balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_transfers.each do |leave_transfer| %>
      <tr>
        <td><%= leave_transfer.employee %></td>
        <td><%= leave_transfer.transfer_to %></td>
        <td><%= leave_transfer.date %></td>
        <td><%= leave_transfer.no_of_leave %></td>
        <td><%= leave_transfer.status %></td>
        <td><%= leave_transfer.employee_leav_balance %></td>
        <td><%= link_to 'Show', leave_transfer %></td>
        <td><%= link_to 'Edit', edit_leave_transfer_path(leave_transfer) %></td>
        <td><%= link_to 'Destroy', leave_transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

