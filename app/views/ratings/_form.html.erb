<%= bootstrap_form_for(@rating,html: {id: 'rating'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :value,hide_label:true, placeholder: 'Rating' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_area :discription,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Rating", class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#rating").validate({
    rules: {
      "rating[value]":{
        required: true
      }
    },
    messages: {
      "rating[value]":{
        required: "Please Specify Rating"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
