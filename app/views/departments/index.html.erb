<div class="box">
  <div class="box-header">
    <h3 class="box-title">Department List</h3>
    <div class="pull-right">
      <%= link_to "New Department", new_department_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Company location</th>
      <th>Department Code</th>
      <th>Department Name</th>
      <th>Department type</th>
      <th>Contact no</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.company_location.name %></td>
        <td><%= department.department_code %></td>
        <td><%= department.name %></td>
        <td><%= department.department_type.name %></td>
        <td><%= department.contact_no %></td>
        <td>
            <%= link_to '', department, class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_department_path(department), class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', department, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
