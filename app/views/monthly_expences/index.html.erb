<div class="box">
  <div class="box-header">
    <h3 class="box-title"></h3>
    <div class="pull-right">
      <%= link_to "New Monthly Expense", new_monthly_expence_path, class: 'btn btn-sm btn-primary' %> 
      <%= link_to " Upload ", import_monthly_expence_monthly_expences_path, class: 'fa fa-upload btn btn-xl btn-info' %> 

      <%= link_to " Template", "/Templates/15.Monthly Expence Detail.xls", :class=>"fa fa-download btn-xl btn btn-warning" %>
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
    <tr><td colspan="4"><center><strong>Monthly Expenses</strong></center></td></tr>
      <tr>
        <th>Year</th>
        <th>Month</th>
        <th>Action</th>
        
      </tr>
    </thead>

    <tbody>
      <% @monthly_expences.each do |w| %>
        <% year = w.expence_date.strftime('%Y') %>
        <% month = w.expence_date.strftime('%B') %>
        <tr>
          <td><%= year %></td>
          <td><%= month %></td>
          <td><%= link_to '', employee_expences_monthly_expences_path(year: year, month: month), class: 'btn btn-xs btn-default fa fa-eye' %></td>
        </tr>
        
      <% end %>
    </tbody>
  </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true,
        "scrollY": 400
    } );
} );
</script>
