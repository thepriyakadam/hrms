<style>
th {
    text-align: left;
}
tr {
    page-break-inside: avoid;
}
div.alwaysbreak { page-break-before: always; }
div.nobreak:before { clear:both; }
div.nobreak{ page-break-inside: avoid;
  /* http://code.google.com/p/wkhtmltopdf/issues/detail?id=9#c21 */
}
</style>

<div>
<h3>Employee Details</h3>
<table style="border-collapse: collapse;" border=1 width=900 class="table table-bordered table-hover">
    <thead>
	    <tr>
	    	<th>Employee Id</th>
	    	<th>Name</th>
        <th>Age</th>
	    	<th>Department</th>
	    	<th>Date Of Joining</th>
	    	<th>Joining Grade</th>
	    	<th>Current Designation</th> 
      </tr>
    </thead>
    <tbody>
      <% @attribute_rating_sheets.each do |a| %>
      <tr>
        <td><%= a.appraisee.manual_employee_code %></td> 
        <td><%= a.appraisee.first_name %></td>
        <td><%= Time.now.year-a.appraisee.date_of_birth.year %></td>
        <td><%= a.appraisee.department.name %></td>
        <td><%= @joining_detail.joining_date %></td>
        <td><%= @joining_detail.employee_grade.name %></td>
        <td><%= @joining_detail.employee_designation.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table><br>

  <table style="border-collapse: collapse;" border=1 width=900 class="table table-bordered table-hover">
    <thead>
      <tr>
	    	<th>Past Company</th>
        <th>Designation</th>
        <th>Past Exp In Years</th>
        <th>Past CTC</th>
        <th>Current CTC</th>
      </tr>
    </thead>
    <tbody>
    <% @experiences.each do |e| %>
      <tr>
       <td><%= e.company_name %></td>
       <td><%= e.designation %></td>
       <td><%= e.no_of_year %></td>
       <td><%= e.ctc %></td>
       <td><%= @ctc %></td>
      </tr>
      <% end %>
    </tbody>
	</table><br>

	<table style="border-collapse: collapse;" border=1 width=900 class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Degree/Deploma</th>
            <th>Year Of Passing/marks%</th>
            <th>Qualification Category</th>
          </tr>
        </thead>
        <tbody>
        <% @qualifications.each do |q| %>
          <tr>
            <td><%= q.degree.name %></td>
            <td><%= q.year.name.to_s+" / "+q.marks.to_s %></td>
            <td><%= q.degree_type.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table><br>

  <table style="border-collapse: collapse;" border=1 width=900 class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Goal Perspctive</th>
        <th>Goal Measure</th>
        <th>Target</th>
        <th>Goal Weightage</th>
        <th>Difficulty Level</th>
        
        <th>Allign To Supervisor</th>
        <th>Appraisee Comment</th>
        <th>Appraisee Evaluation</th>
        <th>Appraiser Comment</th>
        <th>Appraiser Evaluation</th>
      </tr>
    </thead>
    <tbody>
      <% @goal_rating_sheets.each do |g| %>
        <tr>
          <td><%= g.employee_goal.goal_perspective.name %></td>
          <td><%= g.employee_goal.goal_measure %></td>
          <td><%= g.employee_goal.target %></td>
          <td><%= g.employee_goal.goal_weightage %></td>
          <td><%= g.employee_goal.difficulty_level %></td>
          <td><%= g.employee_goal.allign_to_supervisor %></td>

          <td><%= g.appraisee_comment %></td>
          <td><%= g.appraisee_rating.try(:code) %></td>
          <td><%= g.appraiser_comment %></td>
          <td><%= g.appraiser_rating.try(:code) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table style="border-collapse: collapse;" border=1 width=900 class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Attribute & Definition</th>
        <th>Weightage</th>
        <th>Appraisee Comment</th>
        <th>Appraisee Evaluation</th>
        <th>Appraiser Comment</th>
        <th>Appraiser Evaluation</th>
      </tr>
    </thead>
    <tbody>
      <% @attribute_rating_multiple_sheets.each do |a| %>
        <tr>
          <td><%= a.employee_attribute.attribute_master.name %></td>
          <td><%= a.employee_attribute.weightage %></td>
          <td><%= a.appraisee_comment %></td>
          <td><%= a.appraisee_rating.try(:code) %></td>
          <td><%= a.appraiser_comment %></td><br><br>
          <td><%= a.appraiser_rating.try(:code) %></td>   
        </tr>
      <% end %>
    </tbody>
  </table>
 </div> 