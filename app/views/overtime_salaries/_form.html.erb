            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group required">
              <%= f.text_field :ot_esic_amount,label:"ESIC Amount", readonly: true %>
            </div>
          </div>

          <div class="col-sm-3">
            <div class="field">
             <%= f.text_field :total_amount,placeholder: "OT Amount", readonly: true %>
            </div>
          </div>
