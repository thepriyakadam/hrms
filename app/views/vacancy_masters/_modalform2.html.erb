<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body" style="height:1000px; max-height:100px; width:630px; max-width:630px;">
     <%= bootstrap_form_for :particular_vacancy_request,url:{action:"confirm_candidate",id: @particular_vacancy_request.id} do |f| %>
        <div class="row">
          <div class="col-sm-6">
             <%= f.select :selected_resume_id, all_candidate_name, {hide_label: true,include_blank: " Select Candidate Name"}, class: 'input_degree_stream_id' %>
