<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Leave category</th>
      <th>Date</th>
      <th>Balance</th>
      <th>Encashment</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @leave_cashables.each do |leave_cashable| %>
      <tr>
        <td><%= leave_cashable.try(:employee).try(:manual_employee_code) %></td>
        <td><%= leave_cashable.try(:leav_category).try(:name) %></td>
        <td><%= leave_cashable.date %></td>
        <td><%= leave_cashable.no_of_leave %></td>
        <td><%= leave_cashable.cashable %></td>
        <td><%= leave_cashable.amount %></td>
        <td><%= leave_cashable.is_confirm ? "Yes" : "No" %></td>
        <td>
        	<!-- <= link_to '', edit_leave_cashable_path(leave_cashable),class: 'btn btn-success btn-xs fa fa-edit',remote:true %> -->
            <%= link_to '',  leave_cashable, method: :delete, data: { confirm: 'Are you sure?'},class: 'btn btn-danger btn-xs fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>