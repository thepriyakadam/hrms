<div class="box">
  <div class="box-header">
    <h3 class="box-title">Admin On Duty Approval</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee</th>
          <th>Manager</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @first_level_request_lists.try(:each) do |fl| %>
          <tr>
            <td><%= fl.employee.try(:manual_employee_code) %></td>
            <td><%= full_name(fl.employee) %></td>
            <td><%= fl.employee.try(:manager).try(:first_name) %> <%= fl.employee.try(:manager).try(:middle_name) %> <%= fl.employee.try(:manager).try(:last_name) %></td>
            <td><%= fl.start_date.to_date %> - <%= fl.end_date.to_date %></td>
            <td>
              <%= link_to 'View Detail', employee_od_request_detil_for_admin_on_duty_requests_path(fl),class: 'btn btn-xs btn-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>