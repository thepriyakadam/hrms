<div class="box box-default">
  <div class="box-body">

    <%= bootstrap_form_for :employee_attendances, url: { action: 'create_employee_attendance',department_id: @department} do |f| %>
      <div class="row">
        <div class="col-sm-2">
        <label>Present </label>
          <div class="field">
            <%= f.select :present,['P','1/2','W','A'],{hide_label: true,include_blank: "Select Option"} %>
            <%= f.hidden_field :day, value: @date %>
          </div>
        </div> 
      </div>

      <table id="example1" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th><input type="checkbox" id="selectAll" value="selectAll"></th>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Contact No.</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |e| %>
            <tr>
              <td><%= check_box_tag "employee_ids[]",e.id %></td>
              <td><%= e.manual_employee_code %></td>
              <td><%= e.first_name %> <%= e.middle_name %> <%= e.last_name %></td>
              <td><%= e.try(:department).try(:name)%></td>
              <td><%= e.try(:joining_detail).try(:employee_designation).try(:name) %></td>
              <td><%= e.contact_no %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Create Attendance" ,class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
      </div>
      <br>
    </div>
  </div>
  <% end %>

<script type="text/javascript">
  $('#selectAll').click(function() {
    if (this.checked) {
      $(':checkbox').each(function() {
        this.checked = true;
      });
    }
    else {
      $(':checkbox').each(function() {
        this.checked = false;
      });
    }
  });
</script>
