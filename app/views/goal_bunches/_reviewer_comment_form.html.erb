<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Reviewer Evaluation </center></h4>
    </div>
    <div class="modal-body">

      <%= bootstrap_form_for :goal_bunches,url:{action:'reviewer_create',emp_id: @employee.id,goal_bunch_id: @goal_bunch_id.id,period_id: @period.id} do |f| %> 
      <%= hidden_field_tag 'goal_rating_ids[]',"",value: @goal_rating.id %>

        <div class="row">
          <div class="col-sm-9">
            <label>Comment</label>
            <%= text_area_tag 'reviewer_comments[]',"",class: "form-control",autofocus: true %>    
          </div>
          <div class="col-sm-3" style="padding-top:20px;">
            <center><%= f.submit "Create", class: 'btn btn-success btn-sm' %></center>
          </div>
        </div>
      <% end %>

  	</div>
    <div class="modal-footer"></div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
	