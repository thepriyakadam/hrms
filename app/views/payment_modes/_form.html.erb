<%= bootstrap_form_for(@payment_mode,html: {id: "payment_mode"},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true, placeholder: 'Code' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Payment Mode' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Payment Mode",:class => class_name %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
 $("#payment_mode").validate({
    rules: {
      "payment_mode[code]":{
        required: true
      },
      "payment_mode[name]":{
        required: true
      }
    },
    messages: {
      "payment_mode[code]":{
        required: "Please specify Code"
      },
      "payment_mode[name]":{
        required: "Please specify Payment Mode"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>