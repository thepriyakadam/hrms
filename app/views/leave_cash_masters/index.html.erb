<h1>Listing Leave Encashment Masters</h1>

<table>
  <thead>
    <tr>
      <th>Base component</th>
      <th>Rate</th>
      <th>Is confirm</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_cash_masters.each do |leave_cash_master| %>
      <tr>
        <td><%= leave_cash_master.base_component %></td>
        <td><%= leave_cash_master.rate %></td>
        <td><%= leave_cash_master.is_confirm %></td>
        <td><%= leave_cash_master.is_active %></td>
        <td><%= link_to 'Show', leave_cash_master %></td>
        <td><%= link_to 'Edit', edit_leave_cash_master_path(leave_cash_master) %></td>
        <td><%= link_to 'Destroy', leave_cash_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

