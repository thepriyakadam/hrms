<div class="col-sm-6">
	  <label>Date: </label>
	  <div class="field">
	    <div class="input-group">
	      <div class="input-group-addon">
	        <i class="fa fa-calendar"></i>
	      </div>
	      <%= text_field :start_date, hide_label: true, class: 'birth_date'%>
	    </div>
	  </div>
	</div>


<script type="text/javascript">
  $(function(){
    $('.birth_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>