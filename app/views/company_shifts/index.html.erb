<div class="box">
  <div class="box-header">
    <h3 class="box-title">Company shift List</h3>
    <div class="pull-right">
      <%= link_to "New Company shift", new_company_shift_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Name</th>
      <th>In time</th>
      <th>Out time</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @company_shifts.each do |company_shift| %>
      <tr>
        <td><%= company_shift.name %></td>
        <td><%= company_shift.in_time %></td>
        <td><%= company_shift.out_time %></td>
        <td>
            <%= link_to '', company_shift,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_company_shift_path(company_shift),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', company_shift, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
