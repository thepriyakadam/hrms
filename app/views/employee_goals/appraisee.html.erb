<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Goal</h3>
    <div class="pull-right">
      <%= link_to "New Goal", new_employee_goal_path, class: 'btn btn-sm btn-primary' %> 
    </div>  
  </div>
  <div class="box-body">
  <%= bootstrap_form_for(:employee_goal,url: {action: "appraisee_create"}) do |f| %>
    <table id="example2" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Goal perspective</th>
          <th>Goal measure</th>
          <th>Target</th>
          <th>Goal weightage</th>
          <th>Difficulty level</th>
          <th>Allign To Supervisor</th>
          <th>Appraisee Comment</th>
          <th>Appraisee Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_goals.each do |employee_goal| %>
        <tr>
          <td><%= employee_goal.goal_perspective.name %></td>
          <td><%= employee_goal.goal_measure.name %></td>
          <td><%= employee_goal.target %></td>
          <td><%= employee_goal.goal_weightage %></td>
          <td><%= employee_goal.difficulty_level %></td>
          <td><%= select_tag :allign_to_supervisor,[['Yes','true'],['No','false']],{} %></td>
         
          <td><%= text_field_tag 'appraisee_comment[]' %></td>
          <td><%= text_field_tag 'appraisee_rating[]' %></td>
          <%= hidden_field_tag 'employee_goal_id[]',{},value: employee_goal.id %>
          <%= hidden_field_tag :appraisee_id, {},value: current_user.employee_id %>
        </tr>
        <% end %>
      </tbody>
    </table>
  
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Goal",class: 'btn btn-primary btn-sm'%>
      </div>
    </div>
  <% end %>
  </div>
</div>



