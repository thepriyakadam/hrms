<p id="notice"><%= notice %></p>

<h1>Listing Esic Employers</h1>

<table>
  <thead>
    <tr>
      <th>Base component</th>
      <th>Percentage</th>
      <th>Effective from</th>
      <th>Effective to</th>
      <th>Is active</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @esic_employers.each do |esic_employer| %>
      <tr>
        <td><%= esic_employer.base_component %></td>
        <td><%= esic_employer.percentage %></td>
        <td><%= esic_employer.effective_from %></td>
        <td><%= esic_employer.effective_to %></td>
        <td><%= esic_employer.is_active %></td>
        <td><%= esic_employer.is_confirm %></td>
        <td><%= link_to 'Show', esic_employer %></td>
        <td><%= link_to 'Edit', edit_esic_employer_path(esic_employer) %></td>
        <td><%= link_to 'Destroy', esic_employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

