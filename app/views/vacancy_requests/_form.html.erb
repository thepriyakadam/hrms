<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Vacancy Request</h3>
  </div>
  <div class="box-body">
<%= bootstrap_form_for(@vacancy_request,html: {id: 'vacancy_request'}) do |f| %>
<%= f.hidden_field :request_by_id, :value => current_user.employee_id %>
<%= f.hidden_field :approval_by_id, :value => current_user.employee_id %>
 <%= f.hidden_field :request_date, value: Time.zone.now.to_date %>

<div class="row">
   <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :vacancy, label: 'Vacancy Name' %>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :no_of_position, label: 'No. of Position' %>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :qualification, label: 'Qualification' %>
    </div>
  </div>
  <div class="col-sm-3">
         <div class="form-group required">
              <%= f.select :employee_designation_id,all_employee_designation,{label: 'Designation',include_blank: " Select Designation"} %>
          </div>
        </div>

</div>
<div class="row">
  
 <div class="col-sm-3">
          <div class="form-group required">
            <%= f.select :department_id,all_department_type_list2,label: 'Department',include_blank: "Select Department" %>
          </div>
        </div>

  <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :experience, label: 'Experience' %>
    </div>
  </div>
 
 <div class="col-sm-3">
    <div class="field">
      <%= f.select :vacancy_type,["Internal","External"] ,label: 'Vacancy Type',include_blank: "Select Vacancy Type" %>
    </div>
  </div>

   <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :skill_set, label: 'Skill Set' %>
    </div>
  </div>
  </div>

<div class="row">
  
  <div class="col-sm-6">
    <div class="field">
      <%= f.text_area :description, label: 'Description' %>
    </div>
  </div>

  <div class="col-sm-3">
  <label></label>
    <div class="actions">
      <%= f.submit "Create Vacancy Request",:class => class_name, data: { disable_with: data_info }  %>
      <!-- <= link_to 'Back', vacancy_requests_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %> -->
    </div>
  </div>
</div>

</div>
</div>
<% end %>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
    });
</script>

<script>
$("#vacancy_request").validate({
    rules: {
      "vacancy_request[vacancy]":{
        required: true,
      },
      "vacancy_request[no_of_position]":{
        required: true,
      },
      "vacancy_request[qualification]":{
        required: true,
         },
      "vacancy_request[employee_designation_id]":{
        required: true,
         },
      "vacancy_request[department_id]":{
        required: true,
      }
    },
    messages: {
      "vacancy_request[vacancy]":{
        required: "Please specify Vacancy Name",
      },
      "vacancy_request[no_of_position]":{
        required: "Please specify No. Of Position",
      },
      "vacancy_request[qualification]":{
        required: "Please specify Qualification ",
         },
      "vacancy_request[employee_designation_id]":{
        required: "Please Select Designation",
         },
      "vacancy_request[department_id]":{
        required: "Please select Department",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>

