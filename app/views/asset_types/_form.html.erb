<%= bootstrap_form_for(@asset_type,remote: true,html: {id: "asset_type"}) do |f| %>
   <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :code,hide_label: true,placeholder:"Code" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :name,hide_label: true,placeholder:"Name" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_area :description,hide_label: true,placeholder:"Description" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Asset Type",:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">


 $("#asset_type").validate({
    rules: {
      "asset_type[name]":{
        required: true
      },
       "asset_type[code]":{
        required: true
      }
    },
    messages: {
      "asset_type[name]":{
        required: "Please specify name"
      },
       "asset_type[code]":{
        required: "Please specify code"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
