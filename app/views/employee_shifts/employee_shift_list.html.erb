<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Shift List</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Employee Code</th>
      <th>Employee Name</th>
      <th>Employee Designation</th>
      <th>Employee Contact No.</th>
    </tr>
  </thead>
  <tbody>
    <% @employee_shifts.each do |employee_shift| %>
      <tr>
        <td><%= employee_shift.employee.try(:manual_employee_code) %></td>
       <td><%= employee_shift.employee.first_name %><%= employee_shift.employee.middle_name %><%= employee_shift.employee.last_name %></td>
        <td><%= employee_shift.employee.employee_shift.employee.try(:joining_detail).try(:employee_designation).try(:name) %></td>
        <td><%= employee_shift.employee.try(:contact_no) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>