<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_evalutions.each do |interview_evalution| %>
      <tr>
        <td><%= interview_evalution.code %></td>
        <td><%= interview_evalution.name %></td>
        <td><%= interview_evalution.description %></td>
        <td>
          <% if interview_evalution.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_interview_evalution_path(interview_evalution),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  interview_evalution, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_interview_evalutions_path(interview_evalution: interview_evalution),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>