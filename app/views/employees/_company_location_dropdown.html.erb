<label class="control-label required" for="company_state" aria-required="true">Company Location</label>
<% if @form == 'company' %>
	<%= select :company,:company_location_id,(@company_locations.present? ? (@company_locations.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select Company Location",hide_label:true},{onchange:"var a={id:$(this).val(), form : 'company'}; $.get('/employees/collect_department',a,function(response){});",class: "form-control"}%>
<% elsif @form == 'company_location' %>
	<%= select :company_location,:company_location_id,(@company_locations.present? ? (@company_locations.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select State",hide_label:true},{onchange:"var a={id:$(this).val(), form : 'company_location'}; $.get('/employees/collect_department',a,function(response){});",class: "form-control"}%>
<% elsif @form == 'employee' %>
	<%= select :employee,:company_location_id,(@company_locations.present? ? (@company_locations.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select State",hide_label:true},{onchange:"var a={id:$(this).val(), form : 'employee'}; $.get('/employees/collect_department',a,function(response){});",class: "form-control"}%>
<%elsif @form == 'family' %>
	<%= select :family,:company_location_id,(@company_locations.present? ? (@company_locations.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select State",hide_label:true},{onchange:"var a={id:$(this).val(), form : 'family'}; $.get('/employees/collect_department',a,function(response){});",class: "form-control"}%>
<%else %>
	<%= select :company,:company_location_id,(@company_locations.present? ? (@company_locations.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select State",hide_label:true},{onchange:"var a={id:$(this).val(), form : 'company'}; $.get('/employees/collect_department,a,function(response){});",class: "form-control"}%>
<%end%>