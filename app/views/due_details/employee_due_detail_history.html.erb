<div class="box">
  <div class="box-header">
    <h3 class="box-title">Due Clearance List</h3>
<div class="box-body">
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
     <th>ID</th>
     <th>Employee Name</th>
     <!-- <th>Member</th> -->
     <th>Template Name</th>
     <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @due_employee_details.each do |due_employee_detail| %>
      <tr>
       <td><%= due_employee_detail.employee.manual_employee_code %></td>
       <td><%= full_name(due_employee_detail.employee) %></td>
       <!-- <td><= due_employee_detail.reporting_master.employee.try(:first_name) %> <= due_employee_detail.reporting_master.employee.try(:moddle_name) %> <= due_employee_detail.reporting_master.employee.try(:last_name) %></td> -->
       <td><%= due_employee_detail.due_template.try(:name) %></td>
        <td>
        <% if due_employee_detail.is_confirmed == true %>
          <%= link_to ' Approve Due ', new_due_action_path(due_employee_detail_id: due_employee_detail.id),class: 'btn btn-xs btn-primary' %>
          <% else %>
          <%= link_to 'Due Clearance', new_due_action_path(due_employee_detail_id: due_employee_detail.id),class: 'btn btn-xs btn-info' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>