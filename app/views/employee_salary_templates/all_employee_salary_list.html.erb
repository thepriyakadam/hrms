<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  	 <div class="row">
      <div class="col-sm-3">
        <div class="field">
          <%= select :salary,:month_name, ['January','February','March','April','May','June','July','August','September','October','November','December'],{label: 'Select Month',include_blank: " Select Month"}, class: "form-control" %>
         </div>
      </div>
      <div class="col-sm-3">
        <div class="field">
         <%= select :salary,:year,['2015','2016','2017','2018','2019','2020','2021','2022','2023','2024','2025','2026','2027'],{label: 'Select Year',include_blank: " Select Year"}, class: "form-control" %>
         </div>
      </div>
      </div>
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th><input type="checkbox" id="selectAll" value="selectAll"></th>
      <th>Employee ID</th>
      <th>Employee Name</th>
      <th>Designation</th>
      <th>Employement</th>
      <th>Contact No</th>
      </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= check_box_tag "employee_ids[]", employee.id %></td>
        <td><%= employee.manual_employee_code %></td>
        <td><%= employee.first_name %><%= employee.middle_name %><%= employee.last_name %></td>
        <td><%= employee.joining_detail.try(:employee_designation).try(:name) %></td>
        <td><%= employee.employee_type.try(:name) %></td>
        <td><%= employee.contact_no %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>


<script type="text/javascript">
  $('#selectAll').click(function() {
    if (this.checked) {
      $(':checkbox').each(function() {
        this.checked = true;                        
    });
    } else {
      $(':checkbox').each(function() {
        this.checked = false;                        
    });
  } 
});
</script>