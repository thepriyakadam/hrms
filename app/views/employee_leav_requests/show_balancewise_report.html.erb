<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Detail</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
	  <table id="example1" class="table table-bordered table-hover table-condensed">
		  <thead>
		    <tr>
          		<th colspan="5">Employee : <%= @employee.try(:manual_employee_code) %> - <%= full_name(@employee) %></th>
        	</tr>
		    <tr>
		      <th>Leave Type</th>
		      <th>From</th>
		      <th>To</th>
		      <th>Status</th>
		    </tr>
		  </thead>

		  <tbody>
		  	<% @employee_leav_balances = EmployeeLeavBalance.where(employee_id: @employee_id) %>
		    <% @employee_leav_balances.each do |employee_leav_balance| %>
		    <tr>
		     <td colspan="4"><%= employee_leav_balance.leav_category.try(:name) %></td>
		     </tr>
		     <tr>
		     	<th>Date</th>
		     	<td></td>
			
		     	<th>Total</th>
		     	<td></td>
			
		     	<th>Balance</th>
		     	<td></td>

		     </tr>
		  		<% @employee_leav_requests = EmployeeLeavRequest.where(employee_leav_balance_id: employee_leav_balance.id) %>
				    <% @employee_leav_requests.each do |employee_leav_request| %> 
				      <tr>
			
				        <td><%= employee_leav_request.leave_type %></td>
				        <td><%= employee_leav_request.start_date.to_date %></td>
				        <td><%= employee_leav_request.end_date.to_date %></td>
				        <td><%= employee_leav_request.current_status %></td>
				      </tr>
				    <% end %>
			  <% end %>
		   </tbody>
		  </table>
		  <br>
      <%= link_to " Excel Report ",show_balancewise_report_employee_leav_requests_path(:employee => {:employee_id => params[:employee][:employee_id]},format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>

      <%= link_to " PDF Report ",show_balancewise_report_employee_leav_requests_path(:employee => {:employee_id => params[:employee][:employee_id]},format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>
      
      <%= link_to "Back",balancewise_report_employee_leav_requests_path,class: "btn btn-sm btn-default" %>
		  <br>
	 </div>