<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Advance Salary</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">

    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
     <tr>
      <td colspan = "3">
        <center><strong><%= current_user.employee.company_location.company.description %></strong></center>
      </td>
      </tr>
      <tr> 
      <td>
        <strong><%= @employee.manual_employee_code %></strong>
      </td> 
      <td colspan = "2">
        <strong><%= @employee.first_name %> <%= @employee.middle_name %> <%= @employee.last_name %></strong>
      </td>            
      </tr>   
    </thead>

    <tbody>
      <% @advance_salaries.each do |advance_salary| %>
        <% @instalment = Instalment.where(advance_salary_id: advance_salary) %>
        <tr>
        <th colspan = "3"><center> Advance </center></th>
        </tr>
       <tr>
        <th>Advance Date</th>
        <th>Advance Amount</th>
        <th>Installment Amount</th>
      </tr>

        <tr>
         <td><%= advance_salary.advance_date %></td>
         <td><%= advance_salary.advance_amount %></td>
         <td><%= advance_salary.instalment_amount %></td>
        </tr>

        <tr>
        <th colspan = "3"><center> Installment </center></th>
        </tr>
        <tr>
        <th>Installment Date</th>
        <th>Installment Amount</th>
        <th>Complete</th>
        </tr>
         <% @instalment.each do |instalment| %>
        <tr>
          <td><%= instalment.instalment_date %></td>
          <td><%= instalment.instalment_amount %></td>
          <td><%= instalment.is_complete ? "Yes" : "No" %></td>
        </tr>
      <% end %>
       
      <% end %>
    </tbody>
  </table>


    <%= link_to " Excel Report ",employee_advance_excel_advance_salaries_path(employee_id: @employee_id,format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>

    <%= link_to " PDF Report ",employee_advance_pdf_advance_salaries_path(employee_id: @employee_id,format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>
    </div>
  </div>
</div>