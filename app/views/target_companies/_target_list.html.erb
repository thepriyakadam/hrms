<br>
<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Action</th>
 
  <tbody>
    <% @target_companies.each do |target_company| %>
      <tr>
        <td><%= target_company.code %></td>
        <td><%= target_company.name %></td>
        <td><%= target_company.description %></td>
         <td><%= target_company.status ? "Active" : "Inactive" %></td>
        <td>
         
            <%= link_to '', edit_target_company_path(target_company),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  target_company, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-close',remote:true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>