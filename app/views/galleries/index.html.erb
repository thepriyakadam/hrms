<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Event Photo Galleries </h3>
    <div class="pull-right">
      <%= link_to 'Create New Event', new_gallery_path, class: "btn btn-sm btn-primary" %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
         <th>Sr.No.</th>
         <th>Event</th>
         <th>Photo</th>
         <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% @galleries.each do |gallery| %>
        <tr> 
          <td><%= i = i +1%></td>
          <td><%= gallery.name.truncate(14) %></td>
          <td>
            <div class="thumbnail1"> 
              <% if gallery.pictures.first %>
              <%= link_to image_tag(gallery.pictures.first.image.url), gallery_path(gallery) %>
              
              <% else %>
                N/A
              <% end %>
            </div>
          </td>
          <td>
              <%= link_to "Show", gallery_path(gallery) %>
              <%= link_to 'Edit', edit_gallery_path(gallery), class: "btn btn-xs btn-success fa fa-edit" %>
              <%= link_to "Delete", gallery, :data => { :confirm => "Are you sure?" },:method => :delete,class: 'btn btn-xs btn-danger fa fa-trash'
              %>
          </td>
        </tr>
      <% end %> 
    </tbody>
  </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>
       