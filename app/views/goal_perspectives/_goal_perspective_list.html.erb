<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Goal Perspective</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @goal_perspectives.each do |goal_perspective| %>
      <tr>
        <td><%= goal_perspective.name %></td>
        <td><%= goal_perspective.status ? "Active" : "Inactive" %></td>
        <td>
          <% if goal_perspective.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_goal_perspective_path(goal_perspective),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  goal_perspective, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_goal_perspectives_path(goal_perspective: goal_perspective),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>