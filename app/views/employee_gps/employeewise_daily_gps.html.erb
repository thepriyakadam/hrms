<div class="box">
  <div class="box-header">
    <div class="box-body">

      <%= bootstrap_form_for(:employee_gp, url: { action: 'show_employeewise_daily_gps'},html: {id: "employee_gp"},remote: true) do |f| %>

	      <div class="row">
		    	<div class="col-sm-3">
		        <div class="form-group required">
		          <%= select :employee_gp,:employee_id, employee_list_for_food_deduction, {include_blank: "Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
		        </div>
		      </div>
		      <div class="col-sm-3">
          	<%= submit_tag 'Show Gps', class: "btn btn-sm btn-primary" %>
          </div>
		    </div> 

		   <% end %>
       <div class="ajax-progress"></div>
      <div class="row">
        <div class="col-sm-12">
          <div id="employeewise_daily_gps"></div>    
        </div>
      </div>

    </div>
  </div>
</div>

<script type="text/javascript">
  $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#advance_salary").submit();
  })


   $("#employee_gp").validate({
    rules: {
      "employee_gp[employee_id]":{
        required: true,
      }
       },
    messages: {
      "employee_gp[employee_id]":{
        required: "Please Specify Employee",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });

</script>