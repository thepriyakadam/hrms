<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee GPS Setting List</h3>
    <div class="pull-right">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>Department</th>
      <th>Designation</th>
      <th>Status</th>
      <th>No.</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.manual_member_code %></td>
        <td><%= full_name(member.employee) %></td>
        <td><%= member.employee.try(:company).try(:name) %> - <%= member.employee.try(:company_location).try(:name) %> - <%= member.employee.try(:department).try(:name) %></td>
        <td><%= member.employee.try(:joining_detail).try(:employee_designation).try(:name) %></td>
        <td><%= member.employee.try(:status) %></td>
        <td><%= member.employee.try(:contact_no) %></td>
        <td>
          <%= link_to 'Set GPS', member_gps_form_employees_path(member),class: 'btn btn-xs btn-primary' %>
        </td>
        </tr>
      <% end %>
        </tbody>
  </table>
</div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>