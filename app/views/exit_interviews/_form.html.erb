<%= bootstrap_form_for(@exit_interview,html: {id: 'exit_interview'},remote:true) do |f| %>
  <div class="row">
    
     <div class="col-sm-9">
      <div class="form-group required">
      <%= f.select :question_master_id, all_question_master, {label: "Select Question",include_blank: " Select Question"} %>
      </div>
    </div>
     <div class="col-sm-9">
      <div class="field">
        <%= f.text_field :answer,label: "Answer" , placeholder: 'Answer' %>
      </div>
    </div>
    </div>
     <div class="row">
      <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Exit Interview", :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>