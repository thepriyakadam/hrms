<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Attendance</h3>
    <div class="pull-right">
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <div id="comments">
      <table id="example3" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>Employee Name</th>
            <% for i in 1..@day %>
              <td><%= i %></td>
            <%end%>
          </tr>
        </thead>

        <tbody>
          <% @employees.each do |e|%>
            <tr>
              <th><%= full_name(e) %></th>
              <% for i in 1..@day %>
                <td><%= 'P' %></td>
              <%end%>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>