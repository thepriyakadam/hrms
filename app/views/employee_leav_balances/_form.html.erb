<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Leave Balance</h3>
  </div><!-- /.box-header -->


  <div class="box-body">

<%= bootstrap_form_for(@employee_leav_balance) do |f| %>
  
   <div class="row">
        
        <div class="col-sm-2">
          <div class="form-group required">
           <%= f.text_field :employee_id %>
           </div>
        </div>

         <div class="col-sm-3">
          <div class="field">
          <%= f.select :leav_category_id, all_leav_category %>
          </div>
        </div>

         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :no_of_leave %>
          </div>
        </div>
    </div>
   <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="actions">
            <%= f.submit :class => class_name, data: { disable_with: data_info } %>
          </div>
        </div>
      </div>
<% end %>
</div><!-- /.box-body -->
</div><!-- /.box -->
  
