<div class="box">
  <div class="box-header">
    <h3 class="box-title">Exit Interview List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
        <th>ID</th>
        <th>Employee Name</th>
        <th>Date</th>
        <th>Status</th>
        <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_resignations.each do |employee_resignation| %>
        <tr>
        <td><%= employee_resignation.employee.try(:manual_employee_code)%></td>
        <td> <%= full_name(employee_resignation.employee)%></td>
        <td><%= employee_resignation.resignation_date %></td>
        <td><%= employee_resignation.resign_status %></td>
        <td>
        <% if employee_resignation.exit_interview_status == nil %>
         <%= link_to 'Exit Interview', exit_interview_employee_resignations_path(exit_interview: @exit_interview,employee_id: employee_resignation.employee_id),class: 'btn btn-xs btn-primary' %> 
        
        
           <%else%>
 <small class= "label label-primary">Done</small>
        
       <%end%></td>
        </tr>
           
        <% end %>
      </tbody>
    </table><br>

  </div>
</div>

