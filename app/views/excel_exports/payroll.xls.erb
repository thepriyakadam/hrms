<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>     
      <Row>
        <Cell><Data ss:Type="String">Employee Code</Data></Cell>
        <Cell><Data ss:Type="String">Template</Data></Cell>
        <Cell><Data ss:Type="String">First Name</Data></Cell>
        <Cell><Data ss:Type="String">Middle Name</Data></Cell>
        <Cell><Data ss:Type="String">Last Name</Data></Cell>
        <Cell><Data ss:Type="String">Salary Month</Data></Cell>
        <Cell><Data ss:Type="String">Year</Data></Cell>

        <Cell><Data ss:Type="String">Basic</Data></Cell>
        <Cell><Data ss:Type="String">HRA</Data></Cell>
        <Cell><Data ss:Type="String">Special Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Convenience Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Other Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Washing Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Direct Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Medical Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Driver Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Rembursement of Medical Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Children Education Allowence</Data></Cell>

        <Cell><Data ss:Type="String">Gross Salary</Data></Cell>

        <Cell><Data ss:Type="String">Calculated Basic</Data></Cell>
        <Cell><Data ss:Type="String">Calculated HRA</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Special Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Convenience Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Other Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Washing Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Direct Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Medical Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Driver Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Rembursement of Medical Allowence</Data></Cell>
        <Cell><Data ss:Type="String">Calculated Children Education Allowence</Data></Cell>

        <Cell><Data ss:Type="String">Calculated Gross Salary</Data></Cell>

        <Cell><Data ss:Type="String">PF</Data></Cell>
        <Cell><Data ss:Type="String">ESIC</Data></Cell>
        <Cell><Data ss:Type="String">Income Tax</Data></Cell>
        <Cell><Data ss:Type="String">Food Deduction</Data></Cell>
        <Cell><Data ss:Type="String">Other Deduction</Data></Cell>
        <Cell><Data ss:Type="String">Society</Data></Cell>
        <Cell><Data ss:Type="String">Socity Loan</Data></Cell>
        <Cell><Data ss:Type="String">Mobile Expences</Data></Cell>
        <Cell><Data ss:Type="String">Well Faire</Data></Cell>
        <Cell><Data ss:Type="String">Professional Tax</Data></Cell>

        <Cell><Data ss:Type="String">Total Deduction</Data></Cell>

        <Cell><Data ss:Type="String">Net Salary</Data></Cell>

        <Cell><Data ss:Type="String">Total Leave</Data></Cell>
        <Cell><Data ss:Type="String">No of Days in Month</Data></Cell>
        <Cell><Data ss:Type="String">Present Days</Data></Cell>
        <Cell><Data ss:Type="String">Holiday</Data></Cell>
        <Cell><Data ss:Type="String">Weekoff</Data></Cell>
        <Cell><Data ss:Type="String">Absent Days</Data></Cell>
        <Cell><Data ss:Type="String">Payable Days</Data></Cell>
      </Row>
      <% @salaryslips.each do |slip| %>
        <Row>
          <Cell><Data ss:Type="String"><%= slip.employee.manual_employee_code %></Data></Cell>
          <Cell><Data ss:Type="String"><%= slip.salary_template.code %></Data></Cell>
          <Cell><Data ss:Type="String"><%= slip.employee.first_name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= slip.employee.middle_name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= slip.employee.last_name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= slip.month %></Data></Cell>
          <Cell><Data ss:Type="String"><%= slip.year %></Data></Cell>
          
          <% @addable_salaryslip_items = slip.salaryslip_components.where(is_deducted: false) %>
          <% @addable_salaryslip_items.each do |item| %>
            <% case item.salary_component.name %>
            <% when "Basic" %>
              <Cell ss:Index="8"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "HRA" %>
              <Cell ss:Index="9"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "Special Allowance" %>
              <Cell ss:Index="10"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "Convenience Allowance" %>
              <Cell ss:Index="11"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "Other Allowance" %>
              <Cell ss:Index="12"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "Washing Allowance" %>
              <Cell ss:Index="13"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "DA" %>
              <Cell ss:Index="14"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "Medical Allowance" %>
              <Cell ss:Index="15"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "Driver Allowance" %>
              <Cell ss:Index="16"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "Rembursement of Medical Allowence" %>
              <Cell ss:Index="17"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% when "Children Education Allowance" %>
              <Cell ss:Index="18"><Data ss:Type="String"><%= item.actual_amount %></Data></Cell>
            <% else %>
            
            <% end %> <!-- switch case -->
          <% end %><!-- addable items -->
            <Cell ss:Index="19"><Data ss:Type="Number"><%= slip.actual_gross_salary %></Data></Cell>
          <% @addable_salaryslip_items.each do |item| %>
            <% case item.salary_component.name %>
            <% when "Basic" %>
              <Cell ss:Index="20"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "HRA" %>
              <Cell ss:Index="21"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Special Allowance" %>
              <Cell ss:Index="22"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Convenience Allowance" %>
              <Cell ss:Index="23"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Other Allowance" %>
              <Cell ss:Index="24"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Washing Allowance" %>
              <Cell ss:Index="25"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "DA" %>
              <Cell ss:Index="26"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Medical Allowance" %>
              <Cell ss:Index="27"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Driver Allowance" %>
              <Cell ss:Index="28"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Rembursement of Medical Allowence" %>
              <Cell ss:Index="29"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Children Education Allowance" %>
              <Cell ss:Index="30"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% else %>
            
            <% end %> <!-- switch case -->
          <% end %><!-- addable items -->
          <Cell ss:Index="31"><Data ss:Type="Number"><%= slip.calculated_gross_salary %></Data></Cell>

          <% @deducted_salaryslip_items = slip.salaryslip_components.where(is_deducted: true) %>
          <% @deducted_salaryslip_items.each do |item| %>
            <% case item.salary_component.name %>
            <% when "PF" %>
              <Cell ss:Index="32"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "ESIC" %>
              <Cell ss:Index="33"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Income Tax" %>
              <Cell ss:Index="34"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Food Deduction" %>
              <Cell ss:Index="35"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Other Deduction" %>
              <Cell ss:Index="36"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Prof. Tax" %>
              <Cell ss:Index="41"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Society" %>
              <Cell ss:Index="37"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Society Loan" %>
              <Cell ss:Index="38"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Mobile Deduction" %>
              <Cell ss:Index="39"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% when "Welfair" %>
              <Cell ss:Index="40"><Data ss:Type="String"><%= item.calculated_amount %></Data></Cell>
            <% else %>
            
            <% end %> <!-- switch case -->
          <% end %><!-- deducted items -->
          <Cell ss:Index="42"><Data ss:Type="Number"><%= slip.calculated_total_deduction %></Data></Cell>
          <Cell ss:Index="43"><Data ss:Type="Number"><%= slip.calculated_net_salary %></Data></Cell>

          <Cell ss:Index="44"><Data ss:Type="Number"><%= slip.workingday.total_leave %></Data></Cell>
          <Cell ss:Index="45"><Data ss:Type="Number"><%= slip.workingday.day_in_month %></Data></Cell>
          <Cell ss:Index="46"><Data ss:Type="Number"><%= slip.workingday.present_day %></Data></Cell>
          <Cell ss:Index="47"><Data ss:Type="Number"><%= slip.workingday.holiday_in_month %></Data></Cell>
          <Cell ss:Index="48"><Data ss:Type="Number"><%= slip.workingday.week_off_day %></Data></Cell>
          <Cell ss:Index="49"><Data ss:Type="Number"><%= slip.workingday.absent_day %></Data></Cell>
          <Cell ss:Index="50"><Data ss:Type="Number"><%= slip.workingday.payable_day %></Data></Cell>
          
        </Row><!-- Row -->
      <% end %><!-- slip -->
    </Table>
  </Worksheet>
</Workbook>