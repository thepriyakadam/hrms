<div class="box">
  <div class="box-header">
    <h3 class="box-title">Leave Type</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div id="comments">  
      <table id="example2" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>  
            <th>Code</th> 
            <th>Name</th>
            <th>Description</th>
            <th>From</th>
            <th>To</th>
            <th>Monthly Leave Limit</th>
            <th>Payble</th> 
            <th>Balance Required</th> 
            <th>Cashable</th> 
            <th>Assign Balance</th> 
            <th>Status</th> 
            <th>Limit</th>
            <th>Continue</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= @leav_category.code %></td> 
              <td><%= @leav_category.name %></td>
              <td><%= @leav_category.description %></td>
              <td><%= @leav_category.from %></td>
              <td><%= @leav_category.to %></td>
              <td><%= @leav_category.monthly_leave %></td>
              <td><%= @leav_category.is_payble ? "Yes" : "No" %></td>
              <td><%= @leav_category.is_balance ? "Yes" : "No" %></td>
              <td><%= @leav_category.is_cashable ? "Yes" : "No" %></td>
              <td><%= @leav_category.assign_balance ? "Yes" : "No" %></td>
              <td><%= @leav_category.is_active ? "Active" : "Inactive" %></td> 
              <td><%= @leav_category.limit %></td>
              <td><%= @leav_category.is_continuous ? "Yes" : "No" %></td> 
            </tr>
        </tbody>
      </table>

      <%= link_to 'Back',new_leav_category_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
    </div>
  </div>
</div>
