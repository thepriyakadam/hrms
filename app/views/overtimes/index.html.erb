
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Over Time List</h3>
    <div class="pull-right">
      <%= link_to "Create Overtime", new_overtime_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>Employee</th>
      <th>OT Date</th>
      <th>OT Type</th>
      <th>OT Total Hrs</th>
      <th>OT Wages Rate</th>
      <th>OT Earning</th>
      <th>Paid on Date</th>
      <th>Action</th>
      </tr>
    </thead>

    <tbody>
       <% @overtimes.each do |overtime| %>
        <tr>
        <td><%= overtime.employee %></td>
        <td><%= overtime.ot_date %></td>
        <td><%= overtime.ot_type %></td>
        <td><%= overtime.ot_total_hrs %></td>
        <td><%= overtime.ot_wages_rate %></td>
        <td><%= overtime.ot_earning %></td>
        <td><%= overtime.paid_on_date %></td>
        <td>
        <%= link_to '', overtime,class: 'btn btn-sm btn-default fa fa-eye' %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>
