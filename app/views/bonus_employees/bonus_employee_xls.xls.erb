<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>Bonus date</th>
      <th>Total Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @bonus_employees.each do |b| %>
      <tr>
        <td><%= b.employee.manual_employee_code %></td>
        <td><%= full_name(b.employee) %></td>
        <td><%= b.bonus_date %></td>
        <td><%= bonus_total(b) %></td>
      </tr>
    <% end %>
  </tbody>
</table>