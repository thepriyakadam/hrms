<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell ss:Index="1"><Data ss:Type="String">ID </Data></Cell>
        <Cell ss:Index="2"><Data ss:Type="String">Employee Name </Data></Cell>
        <Cell ss:Index="3"><Data ss:Type="String">Leave Date</Data></Cell>
        <Cell ss:Index="4"><Data ss:Type="String">Leave Category </Data></Cell>
        <Cell ss:Index="5"><Data ss:Type="String">Leave </Data></Cell>
        <Cell ss:Index="6"><Data ss:Type="String">Reason </Data></Cell>
         <Cell ss:Index="7"><Data ss:Type="String">Cancel After Approve </Data></Cell>
      </Row>

      <% @particular_leave_records.each do |particular_leave_record| %>
      <Row>
          <Cell ss:Index="1"><Data ss:Type="String"><%= particular_leave_record.employee_id %></Data></Cell>
          <Cell ss:Index="2"><Data ss:Type="String"><%= full_name(particular_leave_record.employee) %></Data></Cell>
          <Cell ss:Index="3"><Data ss:Type="String"><%= particular_leave_record.leave_date.to_date %></Data></Cell>
          <Cell ss:Index="4"><Data ss:Type="String"><%= particular_leave_record.leav_category.try(:name) %></Data></Cell>
          <Cell ss:Index="5"><Data ss:Type="String"><%= particular_leave_record.is_full ? "Full" : "Half" %></Data></Cell>
          <Cell ss:Index="6"><Data ss:Type="String"><%= particular_leave_record.employee_leav_request.try(:reason) %></Data></Cell>
          <Cell ss:Index="7"><Data ss:Type="String"><%= particular_leave_record.is_cancel_after_approve %></Data></Cell>
      </Row>
      <% end %>
    </Table>
  </Worksheet>
</Workbook>





