<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell ss:Index="1"><Data ss:Type="String">Sr.No.</Data></Cell>
        <Cell ss:Index="2"><Data ss:Type="String">Employee Code</Data></Cell>
				<Cell ss:Index="3"><Data ss:Type="String">Name</Data></Cell>
				<Cell ss:Index="4"><Data ss:Type="String">Day</Data></Cell>
        <Cell ss:Index="5"><Data ss:Type="String">In Time</Data></Cell>
        <Cell ss:Index="6"><Data ss:Type="String">Out Time</Data></Cell>
        <Cell ss:Index="7"><Data ss:Type="String">Working Hrs</Data></Cell>
        <Cell ss:Index="8"><Data ss:Type="String">Present</Data></Cell>
				</Row>

        <% i = 0 %>
        <% @employee_attendances.each do |employee_attendance| %>
        <Row>
          <Cell ss:Index="1"><Data ss:Type="String"><%= i = i + 1 %></Data></Cell>
          <Cell ss:Index="2"><Data ss:Type="String"><%= employee_attendance.employee.try(:manual_employee_code ) %></Data></Cell>
          <Cell ss:Index="3"><Data ss:Type="String"><%= full_name(employee_attendance.employee) %></Data></Cell>
          <Cell ss:Index="4"><Data ss:Type="String"><%= employee_attendance.try(:day) %></Data></Cell>
          <Cell ss:Index="5"><Data ss:Type="String"><%= employee_attendance.try(:in_time) %></Data></Cell>
          <Cell ss:Index="6"><Data ss:Type="String"><%= employee_attendance.try(:out_time) %></Data></Cell>
          <Cell ss:Index="7"><Data ss:Type="String"><%= employee_attendance.try(:working_hrs) %></Data></Cell>
          <Cell ss:Index="8"><Data ss:Type="String"><%= employee_attendance.try(:present) %></Data></Cell>
           </Row><!-- Row -->
      <% end %><!-- slip -->
    </Table>
  </Worksheet>
</Workbook>