<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_decisions.each do |interview_decision| %>
      <tr>
        <td><%= interview_decision.code %></td>
        <td><%= interview_decision.try(:name) %></td>
        <td><%= interview_decision.description %></td>
        <td>
          <% if interview_decision.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_interview_decision_path(interview_decision),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  interview_decision, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_interview_decisions_path(interview_decision: interview_decision),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>