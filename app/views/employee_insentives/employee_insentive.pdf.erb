<style type="text/css">
    th { text-align: left; }
    tr { page-break-inside: avoid; }
    div.alwaysbreak { page-break-before: always; }
    div.nobreak:before { clear:both; }
    div.nobreak{ page-break-inside: avoid;}
</style>

<table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10">
  <thead>
    <tr>
      <td colspan="6">
        <% if current_user.company_location.company.company_logo == nil %>
        <% else %>
          <center> <%= wicked_pdf_image_tag current_user.company_location.company.company_logo.url, :size => "90x50" %></center>
        <%end%>
        <center>
          <strong><%= current_user.company_location.company.try(:description) %></strong><br><%= current_user.company_location.try(:address) %>, <%= current_user.company_location.try(:name) %>.<br>
          <strong>Employee Insentive</strong>
        </center>
      </td>           
    </tr>
  <thead>
  <thead>
    <tr>
      <th>Sr.No.</th>
      <th>ID</th>
      <th>Employee</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @employee_insentives.each do |employee_insentive| %>
      <tr>
        <td><%= i = i + 1 %></td>
        <td><%= employee_insentive.employee.try(:manual_employee_code) %></td>
        <td><%= full_name(employee_insentive.employee) %></td>
        <td><%= employee_insentive.date %></td>
        <td><%= employee_insentive.amount %></td>
        <td><%= employee_insentive.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>