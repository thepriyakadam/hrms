<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
    <div class="pull-right">
      <%= link_to "New Employee", new_employee_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Department</th>
      <th>First name</th>
      <th>Contact no</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.department.try(:name) %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.contact_no %></td>
        <td><%= employee.email %></td>
        <td>
            <%= link_to '', employee,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_employee_path(employee),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', employee, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>