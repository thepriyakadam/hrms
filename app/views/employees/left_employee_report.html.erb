<!--SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Left Employee Report</h3>
  </div><!-- /.box-header -->

  <div class="box-body">
    <%= bootstrap_form_for(:employee, url: { action: 'dynamic_report'},html: {id: 'pf_detail'},remote:true) do |f| %>
      <div class="row">
        <div class="col-sm-3">
        <div class="field">
            <%= select :employee,:employee_type_id, all_employee_type,{include_blank: " Select Employee Type"},class: "form-control" %>
        </div>
        </div>

        <div class="col-sm-2">
            <div class="form-group required">
              <%= f.select :company_id, all_company,{include_blank: "Select Company",hide_label: true},{onchange:"var a={id:$(this).val(), form : 'food_deduction'}; $.get('/employees/collect_company_location',a,function(response){});"}%>
            </div>
          </div>

          <div class="col-sm-2">
            <div class="form-group required">
              <div id="company_location1">
                <%= render 'employees/company_loc_dropdown' %> 
            </div>
            </div>
          </div>
        
        <div class="col-sm-2">
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary" %>
          </div>
        </div>
        </div><br>
        <div id="left_employee_li"></div>

      <br>
    <% end %>
  </div><!-- /.box-body -->
</div><!-- /.box -->

<script>
$("#employee").validate({
    rules: {
      "employee[employee_type_id]":{
        required: true,
      },
      "employee[company_id]":{
        required: true,
      }
    },
    messages: {
      "employee[employee_type_id]":{
        required: "Please select Employee Type",
      },
      "employee[company_id]":{
        required: "Please select Company",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
