<%= bootstrap_form_for @employee_attribute,url:{action:'is_confirm',id: @employee.id} do |f| %> 
  <%= f.hidden_field :employee_id,value: @employee.id %>
  <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th><input type="checkbox" id="selectAll" value="selectAll"></th>
        <th>Period</th>
        <th>Attribute & Definition</th>
        <th>Weightage(Total - <%= @employee_attributes.sum(:weightage)%>%)</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @employee_attributes.each do |a| %>
        <tr>
          <td><%= check_box_tag "employee_attribute_ids[]", a.id unless a.is_confirm %></td>
          <td><%= a.performance_period.title %></td>
          <td><%= a.attribute_master.name %></td>
          <td><%= a.weightage %></td>
          <td>
            <% if a.is_confirm %>
              <small class="label label-info">Confirmed</small>
            <% else %>  
              <%= link_to '', edit_employee_attribute_path(a),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
              <%= link_to '', a, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
   
  <div class="row">
    <div class="col-sm-6">
      <div class="actions">      
        <%= f.submit "Confirm", class: 'btn btn-primary btn-sm' %> 
        <%= link_to 'Created Goals & Attributes', show_list_employee_attributes_path(@employee.id),class: 'btn btn-warning btn-sm' %>
        <%= link_to 'Back', new_employee_goal_path(@employee.id),class: 'btn btn-default btn-sm' %>
      </div>
    </div>
  </div>
<% end %> 

<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>