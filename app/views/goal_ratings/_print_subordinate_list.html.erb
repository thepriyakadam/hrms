<div class="box">
  <div class="box-header">
    <h3 class="box-title">Subordinate List For Report</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
  <%= form_for :goal_ratings, url: { action: 'all_subordinate_list',goal_bunch_id: @goal_bunch.id} do |f| %>
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
          <th><input type="checkbox" id="selectAll" value="selectAll"></th>
          <th>ID</th>
          <th>Employee</th>
          <th>Department</th>
          <th>Designation</th>
          <th>Contact No</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |e| %>
        <tr>
        <td><%= check_box_tag "employee_ids[]", e.id %></td>
        <td><%= e.manual_employee_code %></td>
        <td><%= full_name(e) %></td>
        <td><%= e.company_location.try(:name) %> - <%= e.department.try(:name) %></td> 
        <td><%= e.joining_detail.employee_designation.try(:name) %></td>
        <td><%= e.contact_no %>
        </tr>
        <% end %>
      </tbody>
    </table>
      <div class="col-sm-3">
          <%= f.submit "Print Employee Detail",class: "btn btn-xl btn-warning fa fa-print" %>
        </div>
    <% end %>    
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>
