<div class="box">
  <div class="box-header">
    <h3 class="box-title">Approval Reimbursement List</h3>
    <div class="pull-right">
    </div>
  </div>

<div class="box-body">

<table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
       <th>ID</th>
       <th>Employee</th>
       <th>Amount</th>
       <th>Action</th>
     </tr>
    </thead>

      <tbody>
        <% @rembursments.each do |rembursment| %>
          <tr>
        <td><%= rembursment.employee.try(:manual_employee_code) %></td>
        <td><%= full_name(rembursment.employee) %></td>
        <td><%= rembursment.amount %></td>
          <td>
            <% if rembursment.status == "Approved" or rembursment.status == "Rejected" %>
            <% else %>
             <%= link_to 'Approve / Reject',approval_detail_rembursments_path(rembursment_id: rembursment.id),class: 'btn btn-sm btn-primary' %>
            <% end %>
        </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>