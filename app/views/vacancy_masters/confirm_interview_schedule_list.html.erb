<div class="box">
  <div class="box-header">
    <h3 class="box-title">Candidate Confirmation List</h3>
<div class="box-body">
<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Sr.No.</th>
      <th>Candidate Name</th>
      <th>Email</th>
      <th>Job Title</th>
      <th>Location</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% @interview_schedules.each do |interview_schedule| %>
      <tr>
        <td><%= i=i+1 %></td>
        <td><%= interview_schedule.candidate_name %></td>
        <td><%= interview_schedule.email_id %></td>
        <td><!-- < interview_sched=InterviewSchedule.where(id: interview_schedule).take
        resume = SelectedResume.where(id: interview_sched.selected_resume_id).take
        vacancy = VacancyMaster.where(id: resume.vacancy_master_id).take %> -->
         <!--  <= vacancy.vacancy_name %> -->
         <%= interview_schedule.job_title %>
        </td>
        <td><%= interview_schedule.location %></td>
        <td>
        <% if interview_schedule.is_confirmed == true %>
        <%= link_to ' View Details',confirm_vacancy_vacancy_masters_path(interview_schedule),class: 'btn btn-xs btn-info' %>
        <% else %>
        <%= link_to ' Confirm Candidate',confirm_vacancy_vacancy_masters_path(interview_schedule),class: 'btn btn-xs btn-primary' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
</div>
<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>