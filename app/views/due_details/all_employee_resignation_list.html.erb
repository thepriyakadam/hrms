
<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Employee Separation</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-hover table-condensed'">
      <thead>
        <tr>
          <th>Employee ID</th>
          <th>Resignation Date</th>
          <th>Reason</th>
          <th>Leaving Date</th>
          <th>Notice Period</th>
          <th>Action</th>
       </tr>
      </thead>

      <tbody>
        <% @employee_resignations.each do |employee_resignation| %>
          <tr>
            <td><%= employee_resignation.employee.first_name+' '+employee_resignation.employee.middle_name+' '+employee_resignation.employee.last_name %></td>
            <td><%= employee_resignation.resignation_date %></td>
            <td><%= employee_resignation.reason %></td>
            <td><%= employee_resignation.leaving_date %></td>
            <td><%= employee_resignation.notice_period %></td>
            <td>
               <%= link_to ' Assign Template', all_due_template_due_details_path(employee_resignation),class: 'btn btn-xs btn-primary' %>
               <%= link_to ' View Template', due_employee_detail_list_due_details_path(employee_resignation),class: 'btn btn-xs btn-warning' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

