<%= bootstrap_form_for(@performance_activity,remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
          <%= f.text_field :code,hide_label:true, placeholder: 'Code' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Performance Activity' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_area :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Activity",:class => class_name %>
      </div>
    </div>
  </div>
<% end %>
