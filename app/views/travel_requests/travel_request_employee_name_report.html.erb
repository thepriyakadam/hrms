<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Travel Requests Report</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <%= bootstrap_form_for(:travel_request, url: { action: 'print_travel_request_employee_name_report'},html: {id: 'travel_request'},remote: true ) do |f| %>
     <div class="row">
        <div class="col-sm-4">
          <div class="field">
            <%= f.select :employee_id,employee_list_by_company_location,{hide_label:true,include_blank: " Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}  %>
           </div>
        </div>
        <div class="col-sm-4">
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
        </div>
      </div><br>
      <%end%>
    <div id="travel_request_employee_name"></div>
  </div>
</div>

<script>
$("#travel_request").validate({
    rules: {
      "travel_request[employee_id]":{
        required: true,
      }
    },
    messages: {
      "travel_request[employee_id]":{
        required: "Please Select Employee",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
