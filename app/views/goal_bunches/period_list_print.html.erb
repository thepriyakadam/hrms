<div class="box">
  <div class="box-header">
    <h3 class="box-title">Performance Goal List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
         <th>Base</th>
         <th>Period</th>
         <th>Employee Name</th>
         <th>Appraiser</th>
         <th>Reviewer</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @goal_bunches.each do |g| %>
        <tr>
          <td><%= g.period.try(:name) %></td>
          <td>From: <%= g.period.try(:from) %> To: <%= g.period.try(:to) %> </td>
          <td><%= full_name(g.employee) %></td>
          <td><%= g.employee.manager.try(:first_name) %> <%= g.employee.manager.try(:middle_name) %> <%= g.employee.manager.try(:last_name) %>  </td>
          <td><%= g.employee.manager_2.try(:first_name) %> <%= g.employee.manager_2.try(:middle_name) %> <%= g.employee.manager_2.try(:last_name) %>  </td>
          <td><%= link_to 'Employee Detail', final_detail_goal_bunches_path(id: g,emp_id: g.employee_id) ,class: 'btn btn-xs btn-info' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
<%= link_to 'Back',final_employee_list_goal_bunches_path,class: 'btn btn-sm btn-default'%>
  </div>
</div>