<table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Account Code</th>
      <th>Is Deducted</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @salary_components.each do |salary_component| %>
      <tr>
        <td><%= salary_component.code %></td>
        <td><%= salary_component.name %></td>
        <td><%= salary_component.description %></td>
        <td><%= salary_component.account_code %></td>
        <td><%= salary_component.is_deducted ? "Yes" : "No" %></td>
        <td>
          <%= link_to '', edit_salary_component_path(salary_component),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
