<label class="control-label required" for="company_state" aria-required="true">Designation</label>


<% if @form == 'company' %>
	<%= select :company,:employee_designation_id,(@employee_designations.present? ? (@employee_designations.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select Designation",hide_label:true},{onchange:"var a={id:$(this).val(), form : 'company'}; $.get('/employees/collect_department',a,function(response){});",class: "form-control"}%>
<%else %>
	<%= select :company,:employee_designation_id,(@employee_designations.present? ? (@employee_designations.collect {|b| [b.name,b.id]}) : {}),{hide_label: true,include_blank: " Select Designation"}, class: "form-control"%>
<%end%>