<br>
    <table id="example4" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee Name</th>
          <th>Time</th>
          <th>Reader Name</th>
          <th>Card No</th>
        </tr>
      </thead>
      <tbody>
        <% @daily_attendances.each do |a| %>
          <tr>
            <td><%= a.employee_code %></td>
            <td><%= a.employee_name %></td>
            <td><%= a.try(:time) %></td>
            <td><%= a.try(:reader_name) %></td>
            <td><%= a.try(:card_no) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<script type="text/javascript">
$(document).ready(function() {
    $('#example4').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>