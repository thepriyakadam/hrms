<table id="example2" class="table table-bordered table-hover table-condensed'">
    <thead>
      <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_categories.each do |employee_category| %>
      <tr>
        <td><%= employee_category.name %></td>
        <td><%= employee_category.description %></td>
        <td>
            
            <%= link_to '', edit_employee_category_path(employee_category), class: 'btn btn-sm btn-success fa fa-edit',remote:true %>
            <%= link_to '', employee_category, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-sm  btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>                                                                       
    </tbody>
  </table>              