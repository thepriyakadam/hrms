<style type="text/css">
    th { text-align: left; }
    tr { page-break-inside: avoid; }
    div.alwaysbreak { page-break-before: always; }
    div.nobreak:before { clear:both; }
    div.nobreak{ page-break-inside: avoid;}
</style>
 <table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10"> 

  <thead>
   <tr><td colspan="8"><center><strong><%= current_user.employee.company_location.company.try(:description) %></strong> <br>
        <%= current_user.employee.company_location.company.try(:address) %><br>  <%= current_user.employee.department.try(:name) %> -
        <%= current_user.employee.company_location.try(:name) %></center> </td></tr>
    <tr>
      <th>ID</th>
      <th>Reporting Master</th>
      <th>Employee Designation</th>
      <th>Employee Category</th>
      <th>Company</th>
      <th>Company Location</th>
      <th>Department</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_transfers.each do |employee_transfer| %>
      <tr>
        <td><%= employee_transfer.employee.try(:manual_employee_code) %></td>
        <td><%= employee_transfer.reporting_master_id %></td>
        <td><%= employee_transfer.designation %></td>
        <td><%= employee_transfer.category %></td>
        <td><%= employee_transfer.employee_company %></td>
        <td><%= employee_transfer.employee_company_location %></td>  
        <td><%= employee_transfer.employee_department %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>