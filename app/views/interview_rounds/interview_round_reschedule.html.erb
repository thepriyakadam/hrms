<div class="box box-default">
    <div class="box-header with-border">
      <h3 class="box-title">Interview Round Reschedule</h3>
    </div><!-- /.box-header -->
 <div class="box-body">
 
 <%= bootstrap_form_for(@interview_round_reschedule,html: {id: 'interview_round_reschedule'},url:{action:"reschedule_interview"}) do |f| %>
 <%= f.hidden_field :employee_id, value: @employee.id %>
 <%= f.hidden_field :interview_round_id, value: @interview_round.id %>
<!--  <div>
 <= render 'show_interview_schedule' %>
 </div> -->
  <div class="row">
  <div class="col-sm-3">
      <label>Interview Date</label>
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :interview_date, hide_label: true, class: 'interview_date'%>
        </div>
      </div>
    </div>
  
    <div class="col-sm-3">
      <div class="bootstrap-timepicker">
       <div class="form-group required">
       <label>Interview Time</label>
        <div class="input-group">
         <%= f.text_field :interview_time,hide_label:true, class: 'form-control timepicker' %>
        <div class="input-group-addon">
        <i class="fa fa-clock-o"></i>
        </div>
        </div><!-- /.input group -->
       </div><!-- /.form group -->
      </div>
    </div>

    <div class="col-sm-3">
     <div class="form-group required">
      <%= f.select :employee_id, all_interviewer_name_list,{label: 'Interviewer Name',include_blank: " Select Interviewer Name"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
     </div>
    </div>

    <div class="col-sm-3">
        <label>Interview Type</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_interview_type_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
               <%= f.select :interview_type_id, all_interview_type, {hide_label: true,include_blank: " Select Interviewer Type"} %>
            </div>
          </div>
    </div>

     <div class="col-sm-3">
     <div class="form-group required">
      <%= f.text_field :location,label:'Location' %>
     </div>
    </div>
    </div>
    
    <div class="row">
    <div class="col-sm-3">
      <div class="actions">
      <%= f.submit "Create Interview Rechedule",class: "btn btn-primary btn-sm" %>
      </div>
    </div> 
  </div>
  </div>
</div>
<% end %>
