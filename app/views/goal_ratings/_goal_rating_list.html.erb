<%= bootstrap_form_for GoalRating.new,url:{action:'send_mail_to_appraiser',goal_bunch_id: @goal_bunch.id} do |f| %>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Goal Perspective</th>
      <th>Goal Weightage</th>
      <th>Goal Measure</th>
      <th>Target</th>
      <th>Aligned</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @goal_ratings.each do |goal_rating| %>
      <tr>
        <td><%= goal_rating.goal_perspective.try(:name) %></td>
        <td><%= goal_rating.goal_weightage %></td>
        <td><%= goal_rating.goal_measure %></td>
        <td><%= goal_rating.target %></td>
        <td><%= goal_rating.aligned %></td>
        <td>
          <% if goal_rating.goal_bunch.goal_confirm == true %>
          <small class="label label-info">Confirmed</small>
          <% else %>
            <%= link_to '', edit_goal_rating_path(id: goal_rating,goal_bunch_id: @goal_ratings.first.goal_bunch_id),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
       <%= f.submit "Send For Confirmation", class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
  </div>
<% end %>
