<div class="box">
  <div class="box-header">
    <h3 class="box-title">Monthly Expenses</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example1" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Expence Type</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @monthly_expences.each do |m| %>
        <tr>
          <td><%= m.employee.try(:manual_employee_code) %></td>
          <td><%= full_name(m.employee) %></td>
          <td><%= m.expencess_type.name %></td>
          <td><%= m.amount %></td>
          <td><%= m.expence_date %></td>
          <td>
            <% if m.is_paid == true %>
              <small class="label label-primary">Paid</small>
            <% else %>
              <%= link_to '', edit_monthly_expence_path(m), class: 'btn btn-xs btn-success fa fa-edit' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <%= link_to 'Back',monthly_expences_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
</div>
</div>