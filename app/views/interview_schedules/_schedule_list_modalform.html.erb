 <div class="modal-dialog" style="height:1000px; max-height:1500px; width:1000px; max-width:1400px;">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Event Details </center></h4>
    </div>
    <div class="modal-body">
     <%= bootstrap_form_for :interview_schedule,url:{action:"update_interview_schedule",id: @interview_schedule.id} do |f| %> 
  <div class="row">
    <div class="col-sm-3">
     <div class="form-group required">
      <%= f.text_field :job_title,readonly: true,label: 'Job Title' %>
     </div>
    </div>

    <div class="col-sm-3">
     <div class="form-group required">
       <%= f.text_field :candidate_name,label: 'Job Title',readonly: true %>
     </div>
    </div>

     <div class="col-sm-3">
     <div class="form-group required">
         <%= f.text_field :email_id ,label: 'Email'%>
     </div>
    </div>
    
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :location,label:'Location' %>
      </div>
    </div>
  </div>
  
  <div class="row">

     <div class="col-sm-3">
           <div class="form-group required">
           <%= f.text_field :address,label: 'Address',placeholder: "e.g : Full Address Of Location"%>
          </div>
     </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
           <%= f.date_field :interview_date, label: "Interview Date"%>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="actions">
      <%= f.submit "Update Interview Schedule",class: "btn btn-primary btn-sm" %>
      <%= link_to 'Back', interview_schedules_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
      </div>
    </div>
  </div>

      <% end %>

</div>
      <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
    </div>
  </div>

<script type="text/javascript">
  $(document).ready(function() {
  $(".select2").select2();
});
</script>
