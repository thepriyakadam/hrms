<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Resignation</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
        <th>ID</th>
         <th>Employee Name</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_resignations.each do |g| %>
        <tr>
        <td><%= g.employee.try(:manual_employee_code)%></td>
        <td> <%= full_name(g.employee)%></td>
        <td> <%= link_to '', modal_resignation_detail_employee_resignations_path(g), class: 'btn btn-default fa fa-eye btn-xs ',remote:true %> 
         <%= link_to 'Exit Interview', new_exit_interview_path(g),class: 'btn btn-xs btn-primary' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div id="modal_resignation_detail" class="modal fade"></div>