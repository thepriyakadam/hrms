<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Travel Requests ID Report</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
<%= bootstrap_form_for(:travel_request, url: { action: 'print_travel_request_id_report'},html: {id: 'travel_request'},remote: true ) do |f| %>
	 <div class="row">
      <div class="col-sm-3">
          <div class="field">
          <%= f.select :travel_request_id,all_travel_request,{hide_label:true,include_blank: 'Select Travel Request ID'},class: 'form-control'%>
          </div>
         </div>
         <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
        </div>
    </div>
       <div id="travel_request_id"></div>
    </div>
</div>
<%end%>

<script>
$("#travel_request").validate({
    rules: {
      "travel_request[travel_request_id]":{
        required: true,
      }
    },
    messages: {
      "travel_request[travel_request_id]":{
        required: "Please Select Travel Request ID",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
