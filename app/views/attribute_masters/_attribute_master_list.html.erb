<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Attribute</th>
      <th>Definition</th>
      <th>Weightage</th>
      <th>From</th>
      <th>To</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  
  <tbody>
    <% @attribute_masters.each do |attribute_master| %>
      <tr>
        <td><%= attribute_master.code %></td>
        <td><%= attribute_master.name %></td>
        <td><%= attribute_master.definition %></td>
        <td><%= attribute_master.attribute_weightage ? "Yes" : "No" %></td>
        <td><%= attribute_master.from %></td>
        <td><%= attribute_master.to %></td>
        <td><%= attribute_master.status ? "Active" : "Inactive" %></td>
        <td>
          <% if attribute_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_attribute_master_path(attribute_master),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  attribute_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_attribute_masters_path(attribute_master: attribute_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>