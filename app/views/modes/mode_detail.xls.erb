<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
		  <th>Sr.No</th>
		  <th>Expence Option</th>
		  <th>Code</th>
		  <th>Name</th>
		  <th>Description</th>
		  <th>Status</th>
		</tr>
	</thead>

	<tbody>
		<% i = 0 %>
		<% @modes.each do |mode| %>
		  <tr>
		    <td><%= i = i + 1 %></td>
		    <td><%= mode.expence_opestion.name %></td>
		    <td><%= mode.code %></td>
		    <td><%= mode.name %></td>
		    <td><%= mode.description %></td>
		    <td><%= mode.status ? "Active" : "Inactive" %></td>
		  </tr>
		<% end %>
	</tbody>
</table>