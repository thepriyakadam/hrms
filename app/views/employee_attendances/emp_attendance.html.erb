<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Employee Attendance</h3>
 <div class="box-body">
  <%= bootstrap_form_for(:employee, url: { action: 'display_attendance_2'},html: {id: "employee"}) do |f| %>
     <div class="row">
        <div class="col-sm-3">
        <label>From Date</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= text_field :employee,:from,hide_label: true,class: 'request_date form-control'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
          <label>To Date</label>
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= text_field :employee,:to,label: "To Date",class: 'request_date form-control'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <label>Company</label>
          <div class="form-group required">
            <%= f.select :company_id, all_company,{include_blank: "Select Company",hide_label: true},{onchange:"var a={id:$(this).val(), form : 'employee'}; $.get('/employees/collect_company_location_dropdown_with_label',a,function(response){});"}%>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <div id="company_location_with_label">
              <%= render 'employees/company_location_dropdown_with_label' %> 
          </div>
          </div>
        </div>
        </div>
      
      <div class="row">
        <div class="col-sm-3">
          <div class="field">
            <div class="input-group">
              <div id="department">
                <%= render 'employees/department_dropdown' %> 
              </div> 
            </div>
          </div>
        </div>

        <div class="col-sm-3">
            <div class="field">
            <div class="input-group">
              <div id="sub_department">
                <%= render 'employees/sub_department_dropdown' %> 
              </div> 
           </div>
          </div>
        </div>


        <div class="col-sm-3">
          <label>Status</label>
          <div class="field">
            <%= select :employee,:status, ['Active','Inactive','All'],{label: 'Select Status',include_blank: " Select"}, class: "form-control" %>
         </div>
        </div>

        <div class="col-sm-3" style="padding-top:20px;">
          <%= f.submit "Show Employee List",class: "btn btn-xl btn-primary fa fa-print",id: "buttonCtc" %>
        </div>
      </div>
     </div>
  <% end %>
</div>
</div>
<script type="text/javascript">
  $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#advance_salary").submit();
  })
  
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

<script>
$("#employee").validate({
    rules: {
      "employee[from]":{
        required: true,
      },
      "employee[to]":{
        required: true,
      }
       },
    messages: {
      "employee[from]":{
        required: "Please Specify From",
      },
       "employee[to]":{
        required: "Please Select To",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>