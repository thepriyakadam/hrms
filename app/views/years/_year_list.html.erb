<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      
      <th>Passout Year</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @years.each do |year| %>
      <tr>
        <td><%= year.name %></td>
        <td>
            <%= link_to '', edit_year_path(year),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  year, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>