<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Update Shift</h3>
  </div><!-- /.box-header -->
  <div class="box-body">

  <%= bootstrap_form_for(:salary,html: {id: 'salary'},url: {action: 'update_shift_multiple'}) do |f| %>
  
  
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
         <%= select :salary,:shift_id_1, all_shift_time, {label: 'Shift',include_blank: " Select Shift"},{onchange:"var a={shift_id_1:$(this).val()}; $.get('/shift_schedules/show_employee',a,function(response){});",class: 'form-control'} %>
      </div>
    </div>
    
    <div class="col-sm-3">
      <div class="form-group required">
         <%= select :salary,:shift_id_2, all_shift_time, {label: 'New Shift',include_blank: " Select Shift"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}  %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Update Shift", class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
  </div>
    <div id="all_employee"></div>
<% end %>
</div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $(".select2").select2();
  });

  $("#salary").validate({
    rules: {
      "salary[shift_id_1]":{
        required: true
      },
      "salary[shift_id_2]":{
        required: true
      }
    },
    messages: {
      "salary[shift_id_1]":{
        required: "Please select Shift"
      },
       "salary[shift_id_2]":{
        required: "Please select Shift"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>