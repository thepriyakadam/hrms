<h1>Listing Travel Expense Types</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travel_expence_types.each do |travel_expence_type| %>
      <tr>
        <td><%= travel_expence_type.code %></td>
        <td><%= travel_expence_type.name %></td>
        <td><%= travel_expence_type.description %></td>
        <td><%= link_to 'Show', travel_expence_type %></td>
        <td><%= link_to 'Edit', edit_travel_expence_type_path(travel_expence_type) %></td>
        <td><%= link_to 'Destroy', travel_expence_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

