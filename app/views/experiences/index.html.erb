 <div class="box">
  <div class="box-header">
    <h3 class="box-title">Experience List</h3>
    <div class="pull-right">
      <%= link_to "New Experience", new_experience_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>Employee</th>
      <th>Experience</th>
      <th>Company name</th>
      <th>Designation</th>
      <th>Ctc</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.employee %></td>
        <td><%= experience.no_of_year %></td>
        <td><%= experience.company_name %></td>
        <td><%= experience.designation %></td>
        <td><%= experience.ctc %></td>
        <td>
            <%= link_to '', experience ,class: 'btn btn-xs btn-default fa fa-eye' %>
            <%= link_to '', edit_experience_path(experience),class: 'btn btn-xs btn-success fa fa-edit' %>
            <%= link_to '', experience, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
