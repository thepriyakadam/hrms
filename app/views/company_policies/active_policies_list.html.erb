<div class="box box-default">
<div class="box-header with-border">
<h3 class="box-title">Company Policy</h3>
</div><!-- /.box-header -->
<div class="box-body">
<table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Download Document</th>
    </tr>
  </thead>

  <tbody>
    <% @company_policies.each do |company_policy| %>
      <tr>
        <td><%= company_policy.name %></td>
        <td><%= company_policy.description %></td>
        <td>
           <% if company_policy.document_file_name == nil %>
           <small class="label label-default">Document Not Available</small>
             <% else %>
             <%= link_to ' Document',download_docs_path(id: company_policy.id),class: 'btn btn-xs btn btn-info fa fa-download' %>
             <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div><!-- /.box-body -->
</div><!-- /.box -->