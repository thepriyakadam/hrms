
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Final Approval/Reject Vacancy List</h3>
    <div class="pull-right">
    </div>
  </div>

<div class="box-body">

    <table id="example1" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
       <th>Vacancy</th>
      <th>No. of position</th>
      <th>Request date</th>
      <th>Qualification</th>
      <th>Skill set</th>
      <th>Designation</th>
      <th>Department</th>
      <th>Experience</th>
      <th>status</th>
      <th>Action</th>
        </tr>
      </thead>

      <tbody>
         <% @vacancy_requests.each do |vacancy_request| %>
      <tr>
        <td><%= vacancy_request.vacancy %></td>
        <td><%= vacancy_request.no_of_position %></td>
        <td><%= vacancy_request.request_date %></td>
        <td><%= vacancy_request.qualification %></td>
        <td><%= vacancy_request.skill_set %></td>
        <td><%= vacancy_request.employee_designation.try(:name) %></td>
        <td><%= vacancy_request.department.try(:name) %></td>
        <td><%= vacancy_request.experience %></td>
         <td><%= vacancy_request.current_status %></td>
            <td>
              <%= link_to 'Approve / Reject',approval_detail_vacancy_requests_path(vacancy_request: vacancy_request.id),class: 'btn btn-sm btn-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>