<%= bootstrap_form_for(@reporting_master,remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
    <div><label>Select Reporting Managar</label></div>
      <div class="form-group required">
        <%= f.select :employee_id,Employee.all.collect {|e| [e.manual_employee_code+"  "+e.first_name.to_s+" "+e.last_name.to_s,e.id]}, hide_label: true %>
      </div>
    </div>
    <div class="col-sm-3">
    <label></label>
      <div class="actions">
        <%= f.submit :class => class_name %>
      </div>
    </div>
  </div>
<% end %>