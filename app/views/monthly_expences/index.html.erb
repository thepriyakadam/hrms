<div class="box">
  <div class="box-header">
    <h3 class="box-title">Monthle Expences List</h3>
    <div class="pull-right">
      <%= link_to "New Monthly expence", new_monthly_expence_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Employee</th>
        <th>Expence date</th>
        <th>Expence Type</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @monthly_expences.each do |monthly_expence| %>
        <tr>
          <td><%= monthly_expence.employee.try(:manual_employee_code) %></td>
          <td><%= monthly_expence.expence_date %></td>
          <td><%= monthly_expence.expencess_type.name %></td>
          <td><%= monthly_expence.amount %></td>
          <td>
            <%= link_to '', monthly_expence,class: 'btn btn-sm btn-default fa fa-eye' %>
            <%= link_to '', edit_monthly_expence_path(monthly_expence), class: 'btn btn-success btn-sm fa fa-edit' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>