<table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee</th>
      <th>Date</th>
      <th>Day</th>
      <th>Compensatory Off</th>
      <th>Expiry Days</th>
      <th>Expiry Date</th>
      <th>Taken</th>
      <th>Taken Date</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @leave_c_offs.each do |leave_c_off| %>
      <%= bootstrap_form_for :login, url: {action: 'add_coff'}, html: {id: 'login'} do |f| %>
        <tr>
          <td><%= leave_c_off.employee.try(:manual_employee_code) %></td>
          <td><%= leave_c_off.employee.try(:first_name) %> <%= leave_c_off.employee.try(:middle_name) %> <%= leave_c_off.employee.try(:last_name) %></td>
          <td><%= leave_c_off.c_off_date %></td>
          <td><%= leave_c_off.c_off_date.strftime("%A") %></td>
          <td><%= leave_c_off.leave_count %></td>
          <td><%= leave_c_off.c_off_expire_day %></td>
          <td><%= leave_c_off.expiry_date %></td>
          <td><%= leave_c_off.is_taken ? "Yes" : "No" %></td>
          <td><%= leave_c_off.taken_date %></td>
          <td><%= leave_c_off.comment %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>