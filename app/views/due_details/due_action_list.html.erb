<div class="box">
  <div class="box-header">
    <h6 class="box-title">No Due Action of : <%= @due_employee_detail.employee.try(:first_name) %> <%= @due_employee_detail.employee.try(:middle_name) %> <%= @due_employee_detail.employee.try(:last_name) %></h6>
<div class="box-body">
<table  class="table table-bordered table-hover table-condensed'">
      <thead>
        <tr>
          <th>Name</th>
          <th>Remark</th>
          <th>Amount</th>
       </tr>
      </thead>

      <tbody>
        <% @due_actions.each do |due_action| %>
          <tr>
            <td><%= due_action.name %></td>
            <td><%= due_action.remark %></td>
            <td><%= due_action.amount %></td>
          </tr>
        <% end %>
      </tbody>
</table>
</div>
</div>
</div>


