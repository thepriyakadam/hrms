<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">

      <%= bootstrap_form_for @goal_rating_sheet,url:{action: "update_appraiser2_modal", method: :patch,id:@goal_rating_sheet.id} do |f| %>
        <div class="row">
          <div class="col-sm-4">
            <%= f.text_field :appraiser2_comment,hide_label:true, placeholder: "Appraiser2 Comment" %>    
          </div>

           <div class="col-sm-4">
            <%= f.text_field :appraiser2_rating_id,hide_label:true, placeholder: "Appraiser2 Rating" %>    
          </div>

          <div class="col-sm-2">
            <%= f.submit "Update", class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      <% end %>
     
    </div>
  </div>
</div>
