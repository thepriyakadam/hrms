	<table class="table table-bordered table-hover table-condensed">
	  <thead>
	    <tr>
	      <th><input type="checkbox" id="selectAll" value="selectAll"></th>
	    	<th>Employee ID</th>
		    <th>Name</th>
		    <th>Attribute</th>
		    <th>Rating</th>
		  </tr>
		</thead>
	  <tbody>
	  	<% @goal_ratings.each do |e|  %>
		    <tr>
		      <td><%= check_box_tag "goal_rating_ids[]", e.appraisee_id %></td>
		      <td><%= e.appraisee_id %></td> 
		      <td><%= e.appraisee.try(:first_name) %> <%= e.appraisee.try(:last_name) %></td>
		      <td><%= e.attribute_master.try(:name) %></td>
		      <td><%= e.appraiser_rating_id %></td>
		      <%= hidden_field_tag "period_id[]", value: e.goal_bunch.period_id %>
		      <%= hidden_field_tag "appraisee_id[]", value: e.appraisee_id %>
		      <%= hidden_field_tag "attribute_master_id[]", value: e.attribute_master_id %>
		    </tr>
	    <% end %>
	  </tbody>
	</table>


<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>