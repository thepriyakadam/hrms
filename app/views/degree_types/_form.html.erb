<%= bootstrap_form_for(@degree_type,html: {id: 'degree_type'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true, placeholder: 'Qualification Code' %>
      </div>
    </div>

        <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Qualification Level' %>
      </div>
    </div>

        <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :description,hide_label:true, placeholder: 'Qualification Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
      <%= f.submit "Create Qualification Level", class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end %>


<script>
$("#degree_type").validate({
    rules: {
      "degree_type[code]":{
        required: true,
      },
      "degree_type[name]":{
        required: true,
      }
       },
    messages: {
      "degree_type[code]":{
        required: "Please specify code",
      },
       "degree_type[name]":{
        required: "Please specify name",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>




