<table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10">
        <thead> 
        <tr>
          <td colspan="6"><center> 
            <% if @employee.company_location.company.company_logo == nil %>
            <%else %>
              <center> <%= wicked_pdf_image_tag @employee.company_location.company.company_logo.url, :size => "90x50" %></center>
            <%end%> 
              <strong><%=@employee.company_location.company.try(:description)%></strong> <br> <%= @employee.company_location.company.try(:address)%></center>
          </td>
        </tr>
        <tr>
          <th colspan="5">Employee : <%= @employee.try(:manual_employee_code) %> - <%= full_name(@employee) %></th>
        </tr>
        <tr>
          <th>Leave Category</th>
          <th>Leave Type</th>
          <th>From</th>
          <th>To</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <% @employee_leav_balances = EmployeeLeavBalance.where(employee_id: @employee_id) %>
        <% @employee_leav_balances.each do |employee_leav_balance| %>
          <% @employee_leav_requests = EmployeeLeavRequest.where(employee_leav_balance_id: employee_leav_balance.id) %>
            <% @employee_leav_requests.each do |employee_leav_request| %> 
              <tr>
                <td><%= employee_leav_request.leav_category.try(:name) %></td>
                <td><%= employee_leav_request.leave_type %></td>
                <td><%= employee_leav_request.start_date.to_date %></td>
                <td><%= employee_leav_request.end_date.to_date %></td>
                <td><%= employee_leav_request.current_status %></td>
              </tr>
            <% end %>
        <% end %>
       </tbody>
    </table>