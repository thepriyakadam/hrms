 <%= bootstrap_form_for(@employee_designation,html: {id: 'employee_designation'},remote:true) do |f| %>
  <div class="row">

      <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true, placeholder: 'Code' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Employee Designation' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Employee Designation",:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#employee_designation").validate({
    rules: {
      "employee_designation[code]":{
        required: true,
      },
       "employee_designation[name]":{
        required: true,
      }
       },
    messages: {
      "employee_designation[code]":{
        required: "Please specify code",
      },
       "employee_designation[name]":{
        required: "Please specify name",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>


