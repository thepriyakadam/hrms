<table id="example6" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @travel_options.each do |travel_option| %>
      <tr>
        <td><%= travel_option.code %></td>
        <td><%= travel_option.name %></td>
        <td>
            <%= link_to '', edit_travel_option_path(travel_option),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  travel_option, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
         </td>
      </tr>

    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>