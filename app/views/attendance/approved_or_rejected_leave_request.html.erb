<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Request</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-6">
        <div class="box-header">
          <h3 class="box-title">First Level Request</h3>
          <div class="pull-right"></div>
        </div>
        <table id="example2" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Employee Name</th>
              <th>Leave Category</th>
              <th>Leave Type</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @pending_employee_leav_requests.try(:each) do |employee_leav_request| %>
              <tr>
                <td><%= full_name(employee_leav_request.employee) %></td>
                <td><%= employee_leav_request.leav_category.name %></td>
                <td><%= employee_leav_request.leave_type %></td>
                <td><%= employee_leav_request.start_date.to_date.to_s+" "+employee_leav_request.start_date.to_s %></td>
                <td><%= employee_leav_request.end_date.to_date.to_s+" "+employee_leav_request.end_date.to_s %></td>
                <td>
                  <%= link_to 'History', employee_history_with_current_leave_employee_leav_requests_path(employee_leav_request),class: 'btn btn-sm btn-warning' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-sm-6">
      <div class="box-header">
        <h3 class="box-title">Second Level Request</h3>
        <div class="pull-right"></div>
      </div>
        <table id="example2" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Employee Name</th>
              <th>Leave Category</th>
              <th>Leave Type</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @first_approved_employee_leav_requests.try(:each) do |employee_leav_request| %>
              <tr>
                <td><%= full_name(employee_leav_request.employee) %></td>
                <td><%= employee_leav_request.leav_category.name %></td>
                <td><%= employee_leav_request.leave_type %></td>
                <td><%= employee_leav_request.start_date.to_date.to_s+" "+employee_leav_request.start_date.to_s %></td>
                <td><%= employee_leav_request.end_date.to_date.to_s+" "+employee_leav_request.end_date.to_s %></td>
                <td>
                  <%= link_to 'History', employee_history_with_current_leave_employee_leav_requests_path(employee_leav_request),class: 'btn btn-sm btn-warning' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>