<div class="box">
  <div class="box-header">
    <h3 class="box-title">Requisition List - Final Approval</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Sr.No.</th>
              <th>Vacancy Code</th>
              <th>Designation</th>
              <th>Vacancy Name</th>
              <th>No. of position</th>
              <th>Experience</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
              <% i = 0 %>
              <% @vacancy_masters.each do |vacancy_master| %>
              <tr>
                <td><%= i = i +1 %></td>
                 <td><%= vacancy_master.vacancy_code %></td>
                 <td><%= vacancy_master.employee_designation.try(:name) %></td>
                 <td><%= vacancy_master.vacancy_name %></td>
                 <td><%= vacancy_master.no_of_position %></td>
                 <td><%= vacancy_master.experience %></td>
                <td>
                  <%= link_to 'View Detail',vacancy_request_confirmation_vacancy_masters_path(vacancy_master),class: 'btn btn-xs btn-primary' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>

