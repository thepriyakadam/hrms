<p id="notice"><%= notice %></p>

<h1>Listing Departments</h1>

<table>
  <thead>
    <tr>
      <th>Company location</th>
      <th>Name</th>
      <th>Department type</th>
      <th>Address</th>
      <th>Pin code</th>
      <th>Head of department</th>
      <th>Contact no</th>
      <th>Manager</th>
      <th>Hr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.company_location.name %></td>
        <td><%= department.name %></td>
        <td><%= department.department_type %></td>
        <td><%= department.address %></td>
        <td><%= department.pin_code %></td>
        <td><%= department.head_of_department %></td>
        <td><%= department.contact_no %></td>
        <td><%= department.manager %></td>
        <td><%= department.hr %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

