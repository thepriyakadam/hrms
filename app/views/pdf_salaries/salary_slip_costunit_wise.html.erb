<div class="box">
  <div class="box-header">
    <h3 class="box-title">All Employee Monthly Salary List</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  	 <div class="row">
      <div class="col-sm-3">
        <div class="field">
          <%= select :salary,:month_name, ['January','February','March','April','May','June','July','August','September','October','November','December'],{label: 'Select Month',include_blank: " Select Month"}, class: "form-control" %>
         </div>
      </div>
      <div class="col-sm-3">
        <div class="field">
          <%= select :salary,:year,['2015','2016','2017','2018','2019','2020','2021','2022','2023','2024','2025','2026','2027'],{label: 'Select Year',include_blank: " Select Year"},{class: 'form-control'} %>
        </div>
      </div>
       <div class="col-sm-3">
        <div class="field">
           <%= select :salary, :cost_center, all_cost_center, {include_blank: "Cost Center"},{onchange:"var a={cost_center:$(this).val(),month_name:$('#salary_month_name').val(),year:$('#salary_year').val()};$('.ajax-progress').show(); $.get('/pdf_salaries/show_employee_costunit_wise',a,function(response){});",:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
        </div>
      </div>
    
      </div><br>
    <div id="employee_list_costunit_wise"></div>
</div>
</div>

