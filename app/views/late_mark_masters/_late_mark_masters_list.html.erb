<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Minutes From</th>
      <th>Minutes To</th>
      <th>Late Mark</th>
      <th>Active</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @late_mark_masters.each do |late_mark_master| %>
      <tr>
        <td><%= late_mark_master.from %></td>
        <td><%= late_mark_master.to %></td>
        <td><%= late_mark_master.late_mark %></td>
        <td><%= late_mark_master.is_active ? "Yes" : "No" %></td>
        <td>
          <% if late_mark_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_late_mark_master_path(late_mark_master),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  late_mark_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_late_mark_masters_path(late_mark_master: late_mark_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
