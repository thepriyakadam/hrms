
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Gratuity List</h3>
    <div class="pull-right">
      <%= link_to 'New Gratuity', new_gratuity_path, class: 'btn btn-sm btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>ID</th>
      <th>Employee</th>
      <th>Amount</th>
      <th>No of Year</th>
      <th>Total Gratuity</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @gratuities.each do |gratuity| %>
      <tr>
        <td><%= gratuity.employee.try(:manual_employee_code) %></td>
        <td><%= full_name(gratuity.employee) %></td>
        <td><%= gratuity.try(:gratuity_amount).try(:round) %></td>
        <td><%= gratuity.no_of_year %></td>
        <td><%= gratuity.total_gratuity %>
        <td><%= link_to '', gratuity,class: 'btn btn-xs btn-default fa fa-eye' %>
        <%= link_to '', edit_gratuity_path(gratuity),class: 'btn btn-success btn-xs fa fa-edit' %>
          <%= link_to '', gratuity, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-close' %></td>
      </tr>
   <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>