<table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Company Location</th>
      <th>Department Code</th>
      <th>Department Name</th>
      <th>Department Type</th>
      <th>Contact No</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.company_location.name %></td>
        <td><%= department.manual_department_code %></td>
        <td><%= department.name %></td>
        <td><%= department.department_type.name %></td>
        <td><%= department.contact_no %></td>
        <td><%= department.description %></td>
        <td>
            
            <%= link_to '', edit_department_path(department), class: 'btn btn-success fa fa-edit',remote:true %>
            <%= link_to '', department, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>