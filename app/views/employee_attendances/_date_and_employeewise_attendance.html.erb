<br>
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee Name</th>
          <th>Day</th>
          <th>Present</th>
          <th>In Time</th>
          <th>Out Time</th>
          <th>Working Hours</th>
          <th>Late Mark</th>
          <th>Comment</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_attendances.each do |a| %>
          <tr>
            <td><%= a.employee.manual_employee_code %></td>
            <td><%= full_name(a.employee) %></td>
            <td><%= a.try(:day) %></td>
            <td><%= a.try(:present) %></td>
            <td><%= a.try(:in_time) %></td>
            <td><%= a.try(:out_time) %></td>
            <td><%= a.try(:working_hrs) %></td>
            <% if a.try(:holiday_id).present? || a.try(:employee_week_off_id).present? || a.try(:on_duty_request_id).present? || a.try(:employee_leav_request_id).present? %>
              <td></td>
            <% else %>
              <% if a.try(:in_time).present? %>
                <% time = Time.at(a.try(:in_time)).utc.strftime("%H:%M") %>
                <% if time > "08:33" %>
                  <td class="danger"><%= a.try(:in_time) %></td>
                <% else %>
                  <td></td>
                <% end %>
              <% else %>
                <td></td>
              <% end %>
              
            <% end %>
            <td><%= a.try(:comment) %></td>
            <td>
              <% if @leav_category = LeavCategory.exists?(code: a.try(:present)) %>
                <small class="label label-primary">Leave</small>
              <%else%>
                <%= link_to ' ',modal_edit_for_show_employee_attendances_path(a),class: 'btn btn-success btn-xs fa fa-edit',remote: true %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div id="myModal" class="modal fade"></div>


<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>