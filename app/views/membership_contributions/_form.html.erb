<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Membership Contribution</h3>
    <div class="box-body">
      <%= bootstrap_form_for(@membership_contribution,html: {id: 'membership_contribution'}) do |f| %>
      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.select :membership_id,all_membership,{label: 'Member',include_blank: 'Select Member'} %>
          </div>
        </div>
    
        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :amount,label: 'Amount'%>
          </div>
        </div>

        <div class="col-sm-3">
         <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
             <i class="fa fa-calendar"></i>
            </div>
            <div class="form-group required">
              <%= f.text_field :date, label: 'Date', class: 'membership_contribution'%>
            </div>
          </div>
          </div>
        </div>
      </div>
      <div class="row">
         <label></label>
        <div class="actions">
          <%= f.submit'Create Membership Contribution', :class => class_name, data: { disable_with: data_info } %> | <%= link_to 'Back', memberships_path,class:'btn btn-sm btn-default fa fa-arrow-left' %>
          <!--  <= link_to 'Back',employee_list_employee_transfers_path,class: 'btn btn-default btn-sm fa fa-arrow-left'%> -->
        </div>
      </div>
    </div>
  </div>
</div>
  <% end %>

  <script type="text/javascript">
  $(function(){
    $('.membership_contribution').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
     });
</script>

<script>
$("#membership_contribution").validate({
    rules: {
      "membership_contribution[membership_id]":{
        required: true,
      },
      "membership_contribution[amount]":{
        required: true,
        numbersOnly: true,
      },
      "membership_contribution[date]":{
        required: true,
      }
    },
    messages: {
      "membership_contribution[membership_id]":{
        required: "Please Select Member",
      },
      "membership_contribution[amount]":{
        required: "Please Specify Amount",
      },
      "membership_contribution[date]":{
        required: "Please Select date",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>