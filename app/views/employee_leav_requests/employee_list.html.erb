<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Request List</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee</th>
          <th>Contact No.</th>
          <th>Designation</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.manual_employee_code %></td>
            <td><%= full_name(employee) %></td>
            <td><%= employee.try(:contact_no) %></td>
            <td><%= employee.joining_detail.try(:employee_designation).try(:name) %></td>
            <td>
              <%= link_to 'Leave Request', from_hr_employee_leav_requests_path(employee), class: 'btn btn-sm btn-primary' %>
              <%= link_to 'View Request', hr_view_request_employee_leav_requests_path(employee), class: 'btn btn-sm btn-info' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>