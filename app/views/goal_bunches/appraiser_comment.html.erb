<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Details</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
<table class="table table-bordered table-hover table-condensed">     
  <thead>
    <tr>
      <th>Employee Id</th>
      <th>Name</th>
      <th>Age</th>
      <th>Department</th>
      <th>Date Of Joining</th>
      <th>Grade</th>
      <th>Current Designation</th> 
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |a| %>
    <tr>
      <td><%= a.manual_employee_code %></td> 
      <td><%= a.first_name %> <%= a.middle_name %> <%= a.last_name %></td>
      <td><%=  %></td>
      <td><%= a.department.try(:name) %></td>
      <td><%= @joining_detail.joining_date %></td>
      <td><%= @joining_detail.employee_grade.name %></td>
      <td><%= @joining_detail.employee_designation.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

  <div class="box-header with-border">
    <h3 class="box-title">Previous Experience</h3>
  </div>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Previous Company</th>
        <th>Designation</th>
        <th>Previous Exp.(Years)</th>
        <th>CTC</th>
      </tr>
    </thead>
    <tbody>
      <% @experiences.each do |e| %>
        <tr>
          <td><%= e.company_name %></td>
          <td><%= e.designation %></td>
          <td><%= e.no_of_year %></td>
          <td><%= e.ctc %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="box-header with-border">
    <h3 class="box-title">Qualification Details</h3>
  </div>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Degree</th>
        <th>Year Of Passing</th>
        <th>Marks</th>
        <th>Qualification</th>
      </tr>
    </thead>
    <tbody>
      <% @qualifications.each do |q| %>
        <tr>
          <td><%= q.degree.try(:name) %></td>
          <td><%= q.year.try(:name)%> </td>
          <td><%= q.marks %></td>
          <td><%= q.degree_type.try(:name) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  
  <div class="box-header with-border">
    <h3 class="box-title">Promotion Details</h3>
  </div>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Department</th>
        <th>Designation</th>
        <th>Grade</th>
        <th>Category</th>
        <th>CTC</th>
        <th>From</th>
        <th>To</th>
      </tr>
    </thead>
    <tbody>
    <% @employee_promotions.each do |employee_promotion| %>
        <tr>
          <td><%= employee_promotion.employee.try(:company_location).try(:name) %> - <%= employee_promotion.employee.try(:department).try(:name) %></td>
          <td><%= employee_promotion.employee_designation.try(:name) %></td>
          <td><%= employee_promotion.employee_grade.try(:name) %></td>
          <td><%= employee_promotion.employee_category.try(:name) %></td>
          <td><%= employee_promotion.try(:ctc) %></td>
          <td><%= employee_promotion.effective_from %></td>
          <td><%= employee_promotion.effective_to %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  

  <% if  @goal_bunch.nil? %>
  <center><p class="text-warning"> No Goal Bunch Available </p></center> 
  <% else %>

<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Goal Rating</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <%= bootstrap_form_for (@goal_rating),url:{action:'appraiser_create',emp_id: @employee.id,goal_bunch_id: @goal_bunch_id.id} do |f| %>  
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Goal Perspective</th>
          <th>Goal Weightage</th>
          <th>Goal Measure</th>
          <th>Target/Unit</th>
          <th>Aligned</th>
          <th>Self Comment</th>
          <th>Appraiser Comment</th>
          <th>Appraiser Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @goal_ratings.each do |goal_rating| %>
          <tr>
            <td><%= goal_rating.goal_perspective.try(:name) %></td>
            <td><%= goal_rating.goal_weightage %></td>
            <td><%= goal_rating.goal_measure %></td>
            <td><%= goal_rating.target %></td>
            <td><%= goal_rating.aligned %></td>
            <td><%= goal_rating.appraisee_comment %></td>
            <td><%= text_field_tag 'appraiser_comments[]',"",class: "form-control" %></td>
            <td><%= select_tag 'appraiser_ratings[]',options_for_select(all_rating_type),{class: "form-control", hide_label: true,include_blank: " Select Rating"} %></td>
            <%= hidden_field_tag 'goal_rating_ids[]',"",value: goal_rating.id %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Goal Weightage</th>
          <th>Goal Measure</th>
          <th>Target/Unit</th>
          <th>Aligned</th>
          <th>Self Comment</th>
          <th>Appraiser Comment</th>
          <th>Appraiser Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @goal_attribute_ratings.each do |goal_rating| %>
          <tr>
            <td><%= goal_rating.attribute_master.try(:name) %></td>
            <td><%= goal_rating.goal_weightage %></td>
            <td><%= goal_rating.goal_measure %></td>
            <td><%= goal_rating.target %></td>
            <td><%= goal_rating.aligned %></td>
            <td><%= goal_rating.appraisee_comment %></td>
            <td><%= text_field_tag 'appraiser_comments[]',"",class: "form-control" %></td>
            <td><%= select_tag 'appraiser_ratings[]',options_for_select(all_rating_type),{class: "form-control", hide_label: true,include_blank: " Select Rating"} %></td>
            <%= hidden_field_tag 'goal_rating_ids[]',"",value: goal_rating.id %>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% unless @goal_ratings.empty? && @goal_attribute_ratings.empty? %>
    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit "Create", class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
</div>
</div>

<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Created Goal Rating</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <%= bootstrap_form_for GoalBunch.new,url:{action:'appraiser_comment_confirm',id: @employee.id} do |f| %>
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Goal Perspective</th>
          <th>Goal Weightage</th>
          <th>Goal Measure</th>
          <th>Target/Unit</th>
          <th>Aligned</th>
          <th>Self Comment</th>
          <th>Appraiser Comment</th>
          <th>Appraiser Rating</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @appraiser_goal_ratings.each do |goal_rating| %>
          <tr>
            <td><%= goal_rating.goal_perspective.try(:name) %></td>
            <td><%= goal_rating.goal_weightage %></td>
            <td><%= goal_rating.goal_measure %></td>
            <td><%= goal_rating.target %></td>
            <td><%= goal_rating.aligned %></td>
            <td><%= goal_rating.appraisee_comment %></td>
            <td><%= goal_rating.appraiser_comment %></td>
            <td><%= goal_rating.appraiser_rating_id %></td>
            <td>
              <% if @goal_bunch.appraiser_confirm == true %>
              <small class="label label-info">Confirmed</small>
              <% else %>
              <%= link_to '',appraiser_modal_goal_ratings_path(goal_rating),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
     <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Goal Weightage</th>
          <th>Goal Measure</th>
          <th>Target/Unit</th>
          <th>Aligned</th>
          <th>Self Comment</th>
          <th>Appraiser Comment</th>
          <th>Appraiser Rating</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @appraiser_attribute_ratings.each do |goal_rating| %>
          <tr>
            <td><%= goal_rating.attribute_master.try(:name) %></td>
            <td><%= goal_rating.goal_weightage %></td>
            <td><%= goal_rating.goal_measure %></td>
            <td><%= goal_rating.target %></td>
            <td><%= goal_rating.aligned %></td>
            <td><%= goal_rating.appraisee_comment %></td>
            <td><%= goal_rating.appraiser_comment %></td>
            <td><%= goal_rating.appraiser_rating_id %></td>
            <td>
              <% if @goal_bunch.appraiser_confirm == true %>
              <small class="label label-info">Confirmed</small>
              <% else %>
              <%= link_to '',appraiser_modal_goal_ratings_path(goal_rating),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="col-sm-3">
        <div class="actions">

          <% unless @goal_ratings.empty? && @goal_attribute_ratings.empty? %>
          <% else %>
            <% unless @goal_bunch.nil? %>
              <% if @goal_bunch.appraiser_confirm == true %>
              <% else %>
              <%= link_to 'Overall Comment', modal_appraiser_overall_goal_bunches_path(goal_bunch_id: @goal_bunch.id), class: 'btn btn-warning btn-sm',remote: true %>
              <% end %>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  <% end %>


  <div class="box-header with-border">
    <h3 class="box-title">Overall Comment</h3>
  </div>
  <%= bootstrap_form_for GoalBunch.new,url:{action:'appraiser_overall_comment_confirm',emp_id: @employee.id,goal_bunch_id: @goal_bunch.id} do |f| %>
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th><input type="checkbox" id="selectAll" value="selectAll"></th>
          <th>Overall Comment</th>
        </tr>
      </thead>
      <tbody>
      <% @goal_bunches.each do |goal_bunch| %>
        <tr>
          <td>
            <% if goal_bunch.appraiser_confirm == true %>
            <% else %>
            <%= check_box_tag "goal_bunch_ids[]", goal_bunch.id %>
            <% end %>
          </td>
          <td><%= goal_bunch.appraiser_comment %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <% unless @goal_bunch.nil? %>
      <% if @goal_bunch.appraiser_comment == nil %>
      <% else %>
        <div class="row">
          <div class="col-sm-3">
            <div class="actions">
              <%= f.submit "Confirm", class: 'btn btn-primary btn-sm' %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

  <% end %>
  </div>
</div>


<% end %>

<%= link_to 'Back',period_list_appraiser_goal_bunches_path(id: @employee.id),class: 'btn btn-sm btn-default'%>
</div>
</div>
<div id="myModal" class="modal fade"></div>
<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>
