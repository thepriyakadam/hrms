<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Shift Assignment</h3>
     <div class="pull-right">
      <%= link_to "Create Employee Shift", new_employee_shift_path, class: 'btn btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @company_shifts.each do |company_shift| %>
      <tr>
        <td><%= company_shift.name %></td>
        <td><%= company_shift.in_time %></td>
        <td><%= company_shift.out_time %></td>
        <td>
        <%= link_to '', shift_rotation_employee_shifts_path(company_shift),class: 'btn btn-sm btn-default fa fa-eye' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>