<div class="box">
  <div class="box-header">
    <h3 class="box-title">Vacancy </h3>
    <div class="pull-right">
      <%= link_to "Create New Vacancy", new_vacancy_master_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    </div>

<p id="notice"><%= notice %></p>

<div class="box-body">
<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Job Title</th>
      <th>Company Location</th>
      <th>Educational Qualification</th>
      <th>No of Position</th>
      <th>Vacancy Fulfillment Date</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @vacancy_masters.each do |vacancy_master| %>
      <tr>
       <td><%= vacancy_master.employee_designation.name %></td>
        <td><%= vacancy_master.company_location.try(:name) %> - <%= vacancy_master.department.try(:name) %></td>
        <td><%= vacancy_master.degree.try(:name) %></td>
        <td><%= vacancy_master.no_of_position %></td>
        <td><%= vacancy_master.vacancy_post_date %></td>
        <td>
            <%= link_to 'Show', vacancy_master,class: 'btn btn-sm btn-info fa fa-check' %>
            <%= link_to 'Cancel',method: :delete,data:{confirm:'Are you sure?'},class: 'btn btn-sm btn-danger fa fa-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  Download:
  <%= link_to "CSV", vacancy_masters_path(format: "csv") %>
  <%= link_to "Excel", vacancy_masters_path(format: "xls") %>

</p>

</div>
  </div>

<%= link_to 'New Vacancy master', new_vacancy_master_path %>

<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>

