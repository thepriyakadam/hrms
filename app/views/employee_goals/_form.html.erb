
<%= bootstrap_form_for(@employee_goal,html: {id: "employee_goal"},remote: true) do |f| %>

  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.select :period_id,all_period_type,{label: 'Period ',include_blank: " Select Period"} %>
      </div>
    </div>
  </div>

<table id="tbl" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Goal Perspective</th>
      <th>Goal Measure</th>
      <th>Target</th>
      <th>Goal Weightage</th>
      <th>Difficulty Level</th>
      <th>Allign To Supervisor</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.select :goal_perspective_id,all_goal_perspective_type,{hide_label: true,include_blank: "Select Goal Perspective"}%></td>
      <td><%= f.text_field :goal_measure,{hide_label: true,include_blank: "Select Goal Measure", placeholder: 'e.g.:punctuality'} %></td>
      <td><%= f.text_field :target,{hide_label: true, placeholder: 'e.g.:100%'} %></td>
      <td><%= f.select :goal_weightage,["1","2","3","4","5"],{hide_label: true, include_blank: "Select Goal Weightage"} %></td>
      <td><%= f.select :difficulty_level,["1","2","3"],{hide_label: true, include_blank: "Select Difficulty Level"} %></td>
      <td><%= f.select :allign_to_supervisor,["Yes","No"],{hide_label: true,include_blank: "Allign To Supervisor"} %></td>

        <%= f.hidden_field :employee_id,value: @employee.id %>
        <%= f.hidden_field :emp_head,value: current_user.employee_id %>
    </tr>   
  </tbody>
</table>
  <div class= "row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Goal",class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
  
<% end %>
<hr>

<script type="text/javascript">

$.validator.addMethod("goal_measure", function (value, element) {
    return this.optional(element) || /^[a-zA-Z_]+$/i.test(value);
},"Please Input Letters Only.");

  $("#employee_goal").validate({
    rules: {
      "employee_goal[target]":{
        required: true
      },
      "employee_goal[period_id]":{
        required: true
      },
      "employee_goal[goal_measure]":{
        required: true,
        goal_measure: true
      },
      "employee_goal[goal_weightage]":{
        required: true
      },
      "employee_goal[difficulty_level]":{
        required: true
      },
      "employee_goal[goal_perspective_id]":{
        required: true
      },
      "employee_goal[goal_measure_id]":{
        required: true
      }
    },
    messages: {
      "employee_goal[target]":{
        required: "Please specify Target"
      },
      "employee_goal[period_id]":{
        required: "Please specify period id"
      },
      "employee_goal[goal_measure]":{
        required: "Please specify Goal Measure"
      },
      "employee_goal[goal_weightage]":{
        required: "Please specify Goal Weightage"
      },
      "employee_goal[difficulty_level]":{
        required: "Please specify Difficulty Level"
      },
      "employee_goal[goal_perspective_id]":{
        required: "Please specify Goal Perspective"
      },
      "employee_goal[goal_measure_id]":{
        required: "Please specify Goal Measure"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>