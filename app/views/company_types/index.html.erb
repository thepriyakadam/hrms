<div class="box">
  <div class="box-header">
    <h3 class="box-title">Company Type List</h3>
    <div class="pull-right">
      <%= link_to "New Company type", new_company_type_path,remote: true, class: 'btn btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
      <thead>
        <tr>      
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @company_types.each do |company_type| %>
          <tr>
            <td><%= company_type.name %></td>
            <td>
              <%= link_to '', company_type,class: 'btn btn-default fa fa-eye' %>
              <%= link_to '', edit_company_type_path(company_type),class: 'btn btn-success fa fa-edit' %>
              <%= link_to '',  company_type, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div id="modal"></div>