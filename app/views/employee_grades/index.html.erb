<p id="notice"><%= notice %></p>

<h1>Listing Employee Grades</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_grades.each do |employee_grade| %>
      <tr>
        <td><%= employee_grade.name %></td>
        <td><%= link_to 'Show', employee_grade %></td>
        <td><%= link_to 'Edit', edit_employee_grade_path(employee_grade) %></td>
        <td><%= link_to 'Destroy', employee_grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

