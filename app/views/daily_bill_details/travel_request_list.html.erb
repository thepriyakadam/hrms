<div class="box">
  <div class="box-header">
    <h3 class="box-title">Travel Request</h3>
    </div>

<div class="box-body">

<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>Department</th>
      <th>Application Date</th>
      <th>Place</th>
      <th>Advance</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @travel_requests.each do |travel_request| %>
      <tr>
        <td><%= travel_request.employee.try(:manual_employee_code) %></td>
        <td><%= travel_request.employee.try(:first_name) %> <%= travel_request.employee.try(:middle_name) %> <%= travel_request.employee.try(:last_name) %></td>
        <td><%= travel_request.employee.company_location.try(:name) %> - <%= travel_request.employee.department.try(:name) %></td>
        <td><%= travel_request.application_date %></td>
        <td><%= travel_request.place %></td>
        <td><%= travel_request.total_advance %></td>
        <td>
            <% if travel_request.daily_bill_status == "true" %>
            <small class="label label-success">SApproved</small>
            <% else %>
            <%= link_to 'Approve / Reject', daily_bill_request_confirmation_daily_bill_details_path(travel_request),class: 'btn btn-sm btn-warning' %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>