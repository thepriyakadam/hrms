<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Requisition Form</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <%= bootstrap_form_for(@vacancy_master,html: {id: 'vacancy_master'}) do |f| %>
  <%= f.hidden_field :employee_id, :value => current_user.employee_id %>
  <%= f.hidden_field :vacancy_post_date, value: Date.today %>
      <div class="row">

       <div class="col-sm-3">
          <div class="field">
             <%= f.text_field :other_organization,label: 'Organization',value: current_user.employee.try(:company_location).try(:company).try(:description) %>
          </div>
        </div>

        <div class="col-sm-3">
         <div class="form-group required">
       <!--   <label>Job Title</label> -->
              <%= f.select :employee_designation_id,all_employee_designation,{label: 'Designation',include_blank: " Select Designation"} %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
           <%= f.text_field :vacancy_name,label: 'Vacancy Name'%>
          </div>
        </div>

         <div class="col-sm-3">
          <div class="form-group required">
           <%= f.select :vacancy_type,["Permanent Resource","Contract","Freelancer","Internship"],{include_blank: "Select Vacancy Type",label: 'Type of vacancy'}%>
          </div>
        </div>
      </div>
        
        <div class="row">
          <div class="col-sm-3">
          <div class="form-group required">
              <%=f.select :company_location_id, role_location_list,{include_blank: "Select Company Location"},{onchange:"var a={id:$(this).val(), form : 'employee'}; $.get('/employees/collect_department',a,function(response){});"}%>
          </div>
        </div> 

         <div class="col-sm-3">
         <div class="form-group required">
            <div class="input-group">
              <div id="department">
                <%= render 'employees/department_dropdown' %> 
            </div> 
            </div>
            </div>
            </div>
      
        <div class="col-sm-3">
          <div class="form-group required">
             <%= f.text_field :no_of_position,label: 'No. of Positions'%>
          </div>
        </div> 

         <div class="col-sm-3">
          <div class="field">
             <%= f.text_field :keyword,label: 'Primary Skill'%>
          </div>
        </div>  
      </div>

       <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
             <%= f.text_field :experience,label: 'Minimum Experience'%>
          </div>
        </div>
       
        <div class="col-sm-3">
          <div class="form-group required">
             <%= f.text_field :experince_max,label: 'Maximum Experience'%>
          </div>
        </div> 

        <div class="col-sm-3">
          <div class="form-group required">
             <%= f.text_field :budget,label: 'Minimum Budget'%>
          </div>
        </div> 

        <div class="col-sm-3">
          <div class="form-group required">
             <%= f.text_field :budget_max,label: 'Maximum Budget'%>
          </div>
        </div> 

        </div>

         <div class="row">

          <div class="col-sm-3">
          <div class="form-group required">
             <%= f.select :reason,["New Business Requirement","Replacement","Bench"],{include_blank: "Select Reason",label: 'Reason for the Requirement'}%>
          </div>
        </div> 

         <div class="col-sm-3">
          <div class="field">
          <%= f.select :replacement_id, all_active_employee_with_code, {include_blank: "Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>    
          </div>
        </div> 

         <div class="col-sm-3">
          <div class="form-group required">
             <%= f.select :notice_period,["Yes","No"],{label: 'Notice Period',include_label:"Select Option"}%>
          </div>
        </div> 

        <div class="col-sm-3">
          <div class="field">
             <%= f.text_field :notice_period_day,label: 'No. of days'%>
          </div>
        </div> 

         </div>
        <div class="row">
         <div class="col-sm-3">
          <div class="form-group required">
             <%= f.select :relocation_rerimbursement,["Yes","No"],{label: 'Relocation Reimbursment',include_label:"Select Option"}%>
          </div>
        </div> 

        <div class="col-sm-3">
          <div class="field">
             <%= f.text_field :relocation_cost,{label: 'Relocation Cost'}%>
          </div>
        </div>

         <div class="col-sm-3">
          <div class="form-group required">
          <!-- <label>Vacancy Fulfillment Date </label> -->
        
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
               <%= f.text_field :vacancy_fullfillment_date, label: 'Vacancy Fulfillment Date', class: 'birth_date'%>
            </div>
          </div>
        </div> 

        <div class="col-sm-3">
          <label>Qualification I</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_degree_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
               <%= f.select :degree_id, all_degree, {hide_label: true,include_blank: " Select Qualification"}, class: 'input_degree_stream_id' %>
            </div>
          </div>
        </div>     
     
        </div>

      <div class="row">       
        <div class="col-sm-3">
          <label>Qualification II</label>
          <div class="field">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_degree_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
               <%= f.select :degree_1_id, all_degree, {hide_label: true,include_blank: " Select Qualification"}, class: 'input_degree_stream_id' %>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <label>Qualification III</label>
          <div class="field">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_degree_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
               <%= f.select :degree_2_id, all_degree, {hide_label: true,include_blank: " Select Qualification"}, class: 'input_degree_stream_id' %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="field">
           <%= f.text_area :description,label: 'Job Description',placeholder: "e.g : Any Description related to Vacancy"%>
          </div>
        </div>
       
       
      <!--   <div class="col-sm-3">
          <div class="form-group required">
           <label>Vacancy Approval</label>
          <= f.select :reporting_master_id,all_recruitment_reporting_master_list,{label: 'Vacancy Approval',include_blank: " Select Reporting Person"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
            </div>
        </div> -->

       </div>  
     

      <div class="row">
        <div class="col-sm-12">
          <div class="field">
           <%= f.text_area :justification,label: 'Justification',placeholder: "e.g : Any Description related to why its needed for creating this vacancy"%>
          </div>
        </div>
      </div> 

      <div class="row">
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Initiate Requisition",class: "btn btn-primary btn-sm" %>
            <%= link_to 'Back', vacancy_masters_path,class:"btn btn-sm btn-default fa fa-arrow-left" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $(function(){
    $('.birth_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
});
</script>

