
<%= bootstrap_form_for(@employee_category,html: {id: 'employee_category'},remote: true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
       <%= f.text_field :code,hide_label: true,placeholder: "Employee Code"%>
       </div>
    </div>
       <div class="col-sm-3">
      <div class="form-group required">
       <%= f.text_field :name,hide_label: true,placeholder: "Employee Category"%>
       </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :description,hide_label: true,placeholder: "Description"%>
       </div>
    </div>
    <div class="col-sm-3">
            <div class="field">
            <%= f.check_box :is_active , label:'Active'%>
          </div>
          </div>
          </div>
  
 <div class="row">
 <label></label>
  <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Employee Category",:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#employee_category").validate({
    rules: {
      "employee_category[code]":{
        required: true,
      },
      "employee_category[name]":{
        required: true,
      }
       },
    messages: {
      "employee_category[code]":{
        required: "Please specify employee code",
      },
       "employee_category[name]":{
        required: "Please specify employee category",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
