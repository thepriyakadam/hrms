<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Shift</th>  
      <th>In Min Time</th>
      <th>In Max Time</th>
       <th>In Time</th>
      <th>Out Min Time</th>
      <th>Out Max Time</th>
      <th>Out Time</th>
      <th>Working Hrs</th>
      
      <th>Is Active</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @company_time_masters.each do |company_time_master| %>
      <tr>
        <td><%= company_time_master.shift_master.try(:name) %></td>
        <td><%= company_time_master.in_min_time %></td>
        <td><%= company_time_master.in_max_time %></td>
        <td><%= company_time_master.in_time %></td>
        <td><%= company_time_master.out_min_time %></td>
        <td><%= company_time_master.out_max_time %></td>
        <td><%= company_time_master.out_time %></td>
        <td><%= company_time_master.working_hrs %></td>
        
        <td><%= company_time_master.is_active ? "Yes" : "No" %></td>
        <td>
          <% if company_time_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_company_time_master_path(company_time_master),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  company_time_master, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_company_time_masters_path(company_time_master: company_time_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
