<div class="box">
  <div class="box-header">
    <h3 class="box-title">Exit Interview List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
<tr><td colspan="2"><font color='label-primary'><center>Exit Interview of <%= @exit_interviews.first.try(:employee).try(:manual_employee_code) %> - <%= full_name(@exit_interviews.first.try(:employee)) %></center></font></td></tr>
        <tr>
        <th>Questions</th>
        <th>Answer</th>
        </tr>
      </thead>
      <tbody>
        <% @exit_interviews.each do |exit_interview| %>
        <tr>
   
        <td><%= exit_interview.question_master.try(:name) %></td>
        <td><%= best_in_place exit_interview, :answer %></td>
        </tr>
           
        <% end %>
      </tbody>
    </table><br>

  </div>
</div>

