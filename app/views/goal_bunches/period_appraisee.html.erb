<div class="box">
  <div class="box-header">
    <h3 class="box-title">Performance Goal List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
         <th>Base</th>
         <th>Period</th>
         <th>Employee</th>
         <th>Appraiser</th>
         <th>Reviewer</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @goal_bunches.each do |g| %>
          <tr>
            <td> <%= g.period.try(:name) %></td>
            <td> From: <%= g.period.try(:from) %> To: <%= g.period.try(:to) %> </td>
            <td> <%= g.employee.try(:first_name) %> <%= g.employee.try(:middle_name) %> <%= g.employee.try(:last_name) %>  </td>
            <td> <%= g.employee.manager.try(:first_name) %> <%= g.employee.manager.try(:middle_name) %> <%= g.employee.manager.try(:last_name) %>  </td>
            <td> <%= g.employee.manager_2.try(:first_name) %> <%= g.employee.manager_2.try(:middle_name) %> <%= g.employee.manager_2.try(:last_name) %>  </td>
            <td>
              <!-- <= link_to "Details For Print", appraiser_detail_for_print_goal_bunches_path(emp_id: g.employee_id,id: g),class: "btn btn-xs btn-success" %> -->

              <%= link_to 'Print Report', print_appraiser_detail_goal_bunches_path(format: 'pdf',emp_id:g.employee_id,id: g ),class: "btn btn-xl btn-info fa fa-print" %>

              <%= link_to "Excel Report", xl_appraiser_detail_goal_bunches_path(format: 'xls',emp_id: g.employee_id,id: g),class: "btn btn-xl btn-success fa fa-print" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
<%= link_to 'Back',subordinate_list_for_appraisee_goal_bunches_path,class: 'btn btn-sm btn-default'%>
  </div>
</div>