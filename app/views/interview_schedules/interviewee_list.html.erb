<%= form_for :interview_schedule, url: { action: 'print_interviewee_list',format: 'pdf'},:html => {:target => '_blank'} do |f| %>
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Interview List</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
