<table id="example2" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>
      <th>Insurance</th>
      <th>Percentage</th>
      <th>Base Component</th>
      <th>Effective From</th>
      <th>Effective To</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @insurance_masters.each do |insurance_master| %>
      <tr>
        <td><%= insurance_master.is_insurance ? "Yes" : "No" %></td>
        <td><%= insurance_master.percentage %></td>
        <td><%= insurance_master.base_component %></td>
        <td><%= insurance_master.effective_from %></td>
        <td><%= insurance_master.effective_to %></td>
        <td><%= insurance_master.is_active ?  "Active" : "Inactive" %></td>
         <td>
          <% if insurance_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_insurance_master_path(insurance_master),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  insurance_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_insurance_masters_path(insurance_master: insurance_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>