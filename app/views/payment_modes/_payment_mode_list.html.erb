<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
   <% @payment_modes.each do |payment_mode| %>
      <tr>
        <td><%= payment_mode.code %></td>
        <td><%= payment_mode.name %></td>
        <td><%= payment_mode.description %></td>
        <td>
          <% if payment_mode.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
            <% else %>
            <%= link_to '', edit_payment_mode_path(payment_mode) ,class: 'btn btn-sm btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  payment_mode, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_payment_modes_path(payment_mode: payment_mode),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
