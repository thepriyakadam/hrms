<%= bootstrap_form_for(@reward_owner,remote:true) do |f| %>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,label: 'Code', placeholder: 'Code' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,label: 'Name', placeholder: 'Name' %>
      </div>
    </div>

    <div class="col-sm-3">
    <label>Description</label>
      <div class="field">
        <%= f.text_area :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <label>Status </label>
      <div class="field">
        <%= f.check_box :status, label: 'Active' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
    <% end %>
<br>