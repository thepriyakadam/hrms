<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @department_types.each do |department_type| %>
      <tr>
        <td><%= department_type.name %></td>
        <td>
          <%= link_to '', edit_department_type_path(department_type),class: 'btn btn-sm btn-success fa fa-edit',remote:true %>
          <%= link_to '',  department_type, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-sm btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
