<div class="box box-default">
  <div class="box-body">
      <table id="example1" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Contact No.</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.manual_employee_code %></td>
              <td><%= full_name(employee) %></td>
              <td><%= employee.try(:department).try(:name)%></td>
              <td><%= employee.try(:joining_detail).try(:employee_designation).try(:name) %></td>
              <td><%= employee.contact_no %></td>
              <td><%= link_to 'Revert',revert_employee_employees_path(emp_id: employee.id),class: 'btn btn-warning btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table> 
  </div>
</div>

<script type="text/javascript">
$(function () {
    $('#example1').Datatable();
  });

</script>