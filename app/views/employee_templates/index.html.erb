<div class="box">
  <div class="box-header">
    <h3 class="box-title">Salary Increment</h3>
    <div class="pull-right">
      
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee Name</th>
<!--           <th>Department</th>
          <th>Category</th> -->
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.try(:manual_employee_code) %></td>
            <td><%= full_name(employee) %></td>
<!--             <td><= employee.department.try(:name) %></td>
            <td><= employee.joining_detail.try(:employee_category).try(:name) %></td> -->
            <td>
              <%= link_to 'Increment Salary', new_employee_salary_template_path(id: employee),class: 'btn btn-sm btn-primary ' %>
              <%= link_to 'View Salary Brakeup', template_list_employee_templates_path(employee),class: 'btn btn-sm btn-info ' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

