<h1>Listing Plan Reason Masters</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plan_reason_masters.each do |plan_reason_master| %>
      <tr>
        <td><%= plan_reason_master.code %></td>
        <td><%= plan_reason_master.name %></td>
        <td><%= plan_reason_master.description %></td>
        <td><%= plan_reason_master.status %></td>
        <td><%= link_to 'Show', plan_reason_master %></td>
        <td><%= link_to 'Edit', edit_plan_reason_master_path(plan_reason_master) %></td>
        <td><%= link_to 'Destroy', plan_reason_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

