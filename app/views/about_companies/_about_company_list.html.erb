<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @about_companies.each do |about_company| %>
      <tr>
        <td><%= about_company.code %></td>
        <td><%= about_company.name %></td>
        <td><%= about_company.description %></td>
        <td><%= about_company.status ? "Active" : "Inactive" %></td>
        <td>
          <% if about_company.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_about_company_path(about_company),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  about_company, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_about_companies_path(about_company: about_company),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>