<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @company_types.each do |company_type| %>
      <tr>
        <td><%= company_type.name %></td>
        <td>
          <% if company_type.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
            <% else %>
              <%= link_to '', edit_company_type_path(company_type),class: 'btn btn-sm btn-success btn-xs fa fa-edit',remote:true %>
              <%= link_to '',  company_type, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>

              <%= link_to '', is_confirm_company_types_path(company_type: company_type),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
