<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Detail</h3>
  </div><!-- /.box-header -->
  <div class="box-body">

  	<% if @employee_leav_request_id == nil %>
     	<center><p class="text-primary"> Leave Request Not Available </p></center> 
    <% else %>

	  <table id="example1" class="table table-bordered table-hover table-condensed">
		  <thead>
		    <tr>
		      <th>Employee ID</th>
		      <th>Employee Name</th>
		      <th>Leave Category</th>
		      <th>Leave Type</th>
		      <th>No. Of Days</th>
		      <th>Start Date</th>
		      <th>End Date</th>
		      <th>Status</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @employee_leav_requests.each do |employee_leav_request| %>
		      <tr>
		        <td><%= employee_leav_request.employee.try(:manual_employee_code) %></td>
		        <td><%= full_name(employee_leav_request.employee) %></td>
		        <td><%= employee_leav_request.leav_category.try(:name) %></td>
		        <td><%= employee_leav_request.leave_type %></td>
		        <td><%= employee_leav_request.leave_count %></td>
		        <td><%= employee_leav_request.start_date.to_date %></td>
		        <td><%= employee_leav_request.end_date.to_date %></td>
		        <td><%= employee_leav_request.current_status %></td>
		      </tr>
		    <% end %>
		   </tbody>
		  </table>
		  <br>
		 <%= link_to " Excel Report ",status_wise_request_employee_leav_requests_path(start_date: params[:employee][:start_date],end_date: params[:employee][:end_date],company_id: params[:employee][:company_id],company_location_id: params[:employee][:company_location_id],department_id: params[:employee][:department_id],current_status: params[:employee][:current_status],format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>

	    <%= link_to " PDF Report ",status_wise_request_employee_leav_requests_path(start_date: params[:employee][:start_date],end_date: params[:employee][:end_date],company_id: params[:employee][:company_id],company_location_id: params[:employee][:company_location_id],department_id: params[:employee][:department_id],current_status: params[:employee][:current_status],format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>

	    <% end %> <!-- if for nil -->
		 </div>
	</div>