<%= bootstrap_form_for(@rewards_pal,html: {id: 'rewards_pal'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
      <%= f.select :employee_id,all_employee_list,{include_blank: "Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
      </div>
    </div> 

    <div class="col-sm-3">
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :date, label: 'Date', class: 'interview_date'%>
        </div>
      </div>
    </div>

     <div class="col-sm-3">
          <div class="form-group required">
        <%= f.text_field :purpose,label: 'Purpose' %>
      </div>
      </div>

    <div class="col-sm-3">
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_reward_type_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
               <%= f.select :reward_type_id, all_reward_type, {label: 'Reward Type' ,include_blank: " Select Reward Type"} %>
            </div>
          </div>
      </div>

  </div>

    

  <div class="row">

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :qty,label: 'Quantity' %>
    </div>
    </div>

    <div class="col-sm-3">
    <label>Approval</label>
      <div class="field">
        <%= f.select :reporting_master_id,all_reporting_master_list,{include_blank: "Select Approval",hide_label:true},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}%>
      </div>
    </div>
    </div>
   
    <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit'Create Reward Pals', :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %><br>

<script type="text/javascript">
  $(function(){
    $('.interview_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
  }); 

  $("#rewards_pal").validate({
    rules: {
      "rewards_pal[employee_id]":{
        required: true,
      },
       "rewards_pal[purpose]":{
        required: true,
      },
       "rewards_pal[reward_type_id]":{
        required: true,
      },
       "rewards_pal[date]":{
        required: true,
      },
      "rewards_pal[qty]":{
        required: true,
      }
    },
    messages: {
      "rewards_pal[employee_id]":{
        required: "Please Specify employee_id",
      },
      "rewards_pal[purpose]":{
        required: "Please Specify purpose",
      },
      "rewards_pal[reward_type_id]":{
        required: "Please Specify reward_type_id",
      },
      "rewards_pal[date]":{
        required: "Please Specify date",
      },
      "rewards_pal[qty]":{
        required: "Please Specify qty",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>

