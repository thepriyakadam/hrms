<br>
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th> 
      <th>Name</th>
      <th>Description</th>
      <th>From</th>
      <th>To</th>
      <th>Is Payble</th> 
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @leav_categories.each do |leav_category| %>
      <tr>
         <td><%= leav_category.code %></td> 
        <td><%= leav_category.name %></td>
        <td><%= leav_category.description %></td>
        <td><%= leav_category.from %></td>
        <td><%= leav_category.to %></td>
        <td><%= leav_category.is_payble ? "Yes" : "No" %></td> 
        <td>
          <%= link_to '', edit_leav_category_path(leav_category),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
          <%= link_to '',  leav_category, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
