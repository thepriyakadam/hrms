<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body" style="height:1000px; max-height:100px; width:630px; max-width:630px;">
     <%= bootstrap_form_for :induction_detail,url:{action:"update_date",id: @induction_detail.id},html: {id: 'induction_detail'} do |f| %>
        <div class="row">
          <div class="col-sm-4" style="padding-top:20px;">
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
               <%= f.date_field :end_date, hide_label: true,placeholder: 'End Date'%>
            </div>
          </div>
        </div>
          <div class="col-sm-3" style="padding-top:20px;">
            <%= f.submit "Update Date", class: 'btn btn-sm btn-warning fa fa-modx' %>
          </div>
        </div>
      <% end %>
      <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
    </div>
  </div>
</div>
<script>
$("#induction_detail").validate({
    rules: {
      "induction_detail[end_date]":{
        required: true,
      }
    },
    messages: {
      "induction_detail[end_date]":{
        required: "Please Specify End Date",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
<script type="text/javascript">
  $(function(){
    $('.end_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

