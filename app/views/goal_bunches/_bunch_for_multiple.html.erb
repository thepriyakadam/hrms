
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Performance Period</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
         <th>Base</th>
         <th>Period</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @goal_bunches.each do |g| %>
          <tr>
            <td><%= g.period.try(:name) %></td>
            <td> From: <%= g.period.try(:from) %> To: <%= g.period.try(:to) %> </td>
            <td><%= link_to 'Set Goals', new_form_goal_ratings_path(goal_bunch_id: g),class: 'btn btn-xs btn-primary'%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>