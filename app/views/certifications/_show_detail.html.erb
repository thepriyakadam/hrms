<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Certification Details</h3>
    <div class="box-tools pull-right">
      <%= link_to "Add Certification", ajax_new_certification_employees_path(id: @employee.id), class: 'btn btn-primary',remote:true %>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
   <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
     <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.name %></td>
        <td><%= certification.year.try(:name) %></td>
        <td><%= certification.duration %></td>
        <td><%= certification.description %></td>
        <td>
          <%= link_to '', edit_certification_path(certification),class: 'btn btn-success fa fa-edit',remote:true %>
          <%= link_to '', certification, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
        </td>
      </tr>
      <%end%>
    </table>
  </div><!-- /.box -->
</div>