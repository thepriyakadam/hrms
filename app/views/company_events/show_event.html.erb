<div class="box box-default">
<div class="box-body">
<table id="example2" class="table table-bordered table-hover table-condensed">
  <tbody>
      <tr><th colspan="5"><strong><center>Company Event</center></strong></th></tr>
      <tr>
      <th>Name</th>
      <td><%= @company_event.event_name %></td>
      </tr>

      <tr>
        <th>Date</th>
        <td><%= @company_event.event_date %></td>
      </tr>

      <tr>
        <th>Time</th>
        <td><%= @company_event.time %></td>
      </tr>

      <tr>
        <th>Location</th>
        <td><%= @company_event.location %></td>
      </tr>

      <tr>
        <th>Status</th>
        <td><%= @company_event.status ? 'Active' : 'Inactive' %></td>
      </tr>

      <tr>
        <th>Email</th>
        <td><%= @company_event.email %></td>
      </tr>

      <tr>
        <th>Description</th>
        <td><%= @company_event.description %></td>
      </tr>
  </tbody>
</table><br>
