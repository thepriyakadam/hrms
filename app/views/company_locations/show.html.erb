<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Company Location</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <tr> 
      <th colspan="2"></th>
      <th colspan="2"></th>
    </tr>
    <tr>
      <th><strong>Location Code</strong></th>
      <td><%= @company_location.manual_company_location_code %></td>

      <th></th>
      <td></td>
    </tr>
 
 
    <tr>
      <th><strong>Company</strong></th>
      <td> <%= @company_location.company.try(:name) %></td>

      <th><strong>Location Name</strong></th>
      <td><%= @company_location.name %></td>
    </tr>

    <tr>
      <th><strong>Address</strong></th>
      <td><%= @company_location.address %></td>

      <th><strong>City</strong></th>
      <td><%= @company_location.city %></td>
    </tr>

    <tr>
      <th><strong>Country</strong></th>
      <td><%= @company_location.country.try(:name) %></td>

      <th><strong>State</strong></th>
      <td><%= @company_location.state.try(:name) %></td>
    </tr>

    <tr>
      <th> <strong>District</strong></th>
      <td> <%= @company_location.district.try(:name) %></td>

      <th><strong>Pin/Zip Code</strong></th>
      <td><%= @company_location.pin_code %></td>
    </tr>

    <tr>
      <th><strong>Contact No</strong></th>
      <td><%= @company_location.contact_no %></td>

      <th><strong>Email</strong></th>
      <td><%= @company_location.email %></td>
    </tr>
     </table>

    <%= link_to 'Edit', edit_company_location_path(@company_location),class: 'btn btn-success fa fa-edit' %> |
    <%= link_to 'Back', company_locations_path,class: 'btn btn-default fa fa-arrow-left' %>
  </div><!-- /.box-body -->
  <div class="box-footer">
    Visit <a href="https://indiba.in/">www.indiba.in</a> for more Information about the HRMSONE.
  </div>
</div><!-- /.box -->
