<div class="box">
  <div class="box-header">
    <h3 class="box-title">Awards List</h3>
    <div class="pull-right">
      <%= link_to "New Leave category", new_leav_category_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @leav_categories.each do |leav_category| %>
      <tr>
        <td><%= leav_category.name %></td>
         <td>
            <%= link_to '', leav_category,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_leav_category_path(leav_category),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', leav_category, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>


        

