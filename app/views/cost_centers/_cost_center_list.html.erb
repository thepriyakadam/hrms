<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @cost_centers.each do |cost_center| %>
      <tr>
        <td><%= cost_center.name %></td>
        <td>
          <% if cost_center.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
            <% else %>
              <%= link_to '', edit_cost_center_path(cost_center),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
              <%= link_to '',  cost_center, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
              <%= link_to '', is_confirm_cost_centers_path(cost_center: cost_center),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
