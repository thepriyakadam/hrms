<div class="box">
  <div class="box-header">
    <h3 class="box-title">LIST OF BLOOD GROUP</h3>
    <div class="pull-right">
      <%= link_to "New Blood group", new_blood_group_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blood_groups.each do |blood_group| %>
      <tr>
        <td><%= blood_group.name %></td>
         <td>
            <%= link_to '', blood_group,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_blood_group_path(blood_group),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', blood_group, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
