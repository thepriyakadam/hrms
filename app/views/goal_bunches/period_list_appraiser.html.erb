<div class="box">
  <div class="box-header">
    <h3 class="box-title">Appraiser Evaluation - My Team</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example1" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
          <th>Employee ID</th>
          <th>Name</th>
          <th>Department</th>
          <th>Designation</th>
          <th>Contact No.</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |e| %>
        <tr>
        <td><%= e.employee.manual_employee_code %></td>
        <td><%= e.employee.first_name %> <%= e.employee.middle_name %> <%= e.employee.last_name %> </td>
        <td><%= e.employee.company_location.try(:name) %> - <%= e.employee.department.try(:name) %></td> 
        <td><%= e.employee.joining_detail.employee_designation.try(:name) %></td>
        <td><%= e.employee.contact_no %></td>
        <td><%= link_to 'Appraiser Comment', appraiser_comment_goal_bunches_path(goal_id: e.id,emp_id: e.employee_id,period_id: e.period_id) ,class: 'btn btn-xs btn-info' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#example1').Datatable();
  });
</script>