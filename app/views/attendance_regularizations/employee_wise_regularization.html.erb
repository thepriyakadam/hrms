<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Wise Attendance Regularization Report</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= bootstrap_form_for(:attendance_regularization, url: { action: 'employee_wise_regularization_report'},html: {id: 'attendance_regularization'},remote: true ) do |f| %>

  	  <div class="row">
        <div class="col-sm-3">
          <label>From Date</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= text_field :attendance_regularization,:from_date,label: 'From Date',placeholder: "From Date",class: 'form-control request_date'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <label>To Date</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
                <%= text_field :attendance_regularization,:to_date,label: 'To Date',placeholder: "To Date", class: 'form-control request_date'%>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
        <label>Select Employee</label>
          <div class="field">
            <%= select :attendance_regularization,:employee_id,employee_list_by_company_location,{hide_label:true,include_blank: " Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}  %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
        </div>
      </div>
      <div id="employee_wise_regularization_report"></div>
    <%end%>
  </div>
</div>

<script type="text/javascript">
 $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#advance_salary").submit();
  })
</script>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

<script type="text/javascript">
 
   $("#attendance_regularization").validate({
    rules: {
      "attendance_regularization[from_date]":{
        required: true,
      
      },
      "attendance_regularization[to_date]":{
        required: true,
      }
    },
    messages: {
      "attendance_regularization[from_date]":{
        required: "Please Specify Date Range",
      },
      "attendance_regularization[to_date]":{
        required: "Please Specify Date Range",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>