<%= bootstrap_form_for(@recognition_type,remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :code,hide_label:true, placeholder: 'Code' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Name' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_area :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.check_box :status %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
    <% end %>

<script>
$("#recognition_type").validate({
    rules: {
      "recognition_type[name]":{
        required: true
      }
    },
    messages: {
      "recognition_type[name]":{
        required: "Please Specify name"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
