
<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Food Deduction</h3>
  </div><!-- /.box-header -->
  
  <div class="box-body">
<%= bootstrap_form_for(@food_deduction,html: {id: 'food_deduction'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :employee_id, Employee.all.collect {|e| [e.manual_employee_code+"  "+e.first_name.to_s+" "+e.last_name.to_s,e.id]} %>
      </div>
    </div>

    <div class="col-sm-3">
     <label>Date</label>
      <div class="field">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </div>
        <%= f.text_field :food_date,hide_label: true, class: 'food_coupan_date'%>
      </div>
    </div>
    </div>

     <div class="col-sm-3">
    <div class="field">
      <%= f.select :food_coupan_master_id, all_food_coupan_master,{include_blank: " Select Coupan Type"},{onchange:"var a={id:$(this).val(),total_coupan:$('#food_deduction_total_coupan').val()}; $.get('/food_deductions/calculate_food_deduction_amount',a,function(response){});",class: 'form-control'} %>
    </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :no_of_coupan, placeholder: 'No.of Food Coupan' %>
      </div>
    </div>
  
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :return_coupan, placeholder: 'Return Food Coupan' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :total_coupan, placeholder: 'Total Food Coupan' %>
      </div>
    </div>
    <div id="amount"></div>
   </div>

    <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>

<script type="text/javascript">
  $(function(){
    $('.food_coupan_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>
