<div class="box">
  <div class="box-header">
    <h3 class="box-title">Leave Request Employee List</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>Employee Id</th>
      <th>Employee Name</th>
      <th>Date of Birth</th>
      <th>City</th>
      <th>Employement</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.manual_employee_code %></td>
        <td><%= employee.first_name.to_s+' '+employee.try(:last_name).to_s %></td>
        <td><%= employee.date_of_birth %></td>
        <td><%= employee.city %></td>
        <td> <%= employee.employee_type.try(:name) %></td>
        <td><%= employee.status %></td>
        <td>
          <%= link_to 'Leave Request', employee,class: 'btn btn-sm btn-info' %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>