<p id="notice"><%= notice %></p>

<h1>Listing Employee Designations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_designations.each do |employee_designation| %>
      <tr>
        <td><%= employee_designation.name %></td>
        <td><%= link_to 'Show', employee_designation %></td>
        <td><%= link_to 'Edit', edit_employee_designation_path(employee_designation) %></td>
        <td><%= link_to 'Destroy', employee_designation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

