<table id="example2" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr> 
      <th>Sr. No</th> 
      <th>Code</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @countries.each do |country| %>
      <tr>
        <td><%= i = i + 1 %></td>
        <td><%= country.code %></td>
        <td><%= country.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
