<div class="box">
  <div class="box-header">
    <h3 class="box-title">Company shift</h3>
    <div class="pull-right">
      <%= link_to "Create Employee shift", new_employee_shift_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Company Shift</th>
      <th>From Date</th>
      <th>To Date</th>
      <th>Employee Code</th>
      <th>Employee Name</th>
      <th>Contact No</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_shifts.each do |employee_shift| %>
      <tr>
        <td><%= employee_shift.company_shift.try(:name) %></td>
        <td><%= employee_shift.from_date %></td>
        <td><%= employee_shift.to_date %></td>
        <td><%= employee_shift.employee.try(:manual_employee_code) %></td>
        <td><%= employee_shift.employee.try(:first_name) %></td>
        <td><%= employee_shift.employee.try(:contact_no) %></td>
        <td><%= employee_shift.employee.try(:email) %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>