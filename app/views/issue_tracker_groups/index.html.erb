<p id="notice"><%= notice %></p>

<h1>Listing Issue Tracker Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Contact number</th>
      <th>Status</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_tracker_groups.each do |issue_tracker_group| %>
      <tr>
        <td><%= issue_tracker_group.name %></td>
        <td><%= issue_tracker_group.email %></td>
        <td><%= issue_tracker_group.contact_number %></td>
        <td><%= issue_tracker_group.status %></td>
        <td><%= issue_tracker_group.is_confirm %></td>
        <td><%= link_to 'Show', issue_tracker_group %></td>
        <td><%= link_to 'Edit', edit_issue_tracker_group_path(issue_tracker_group) %></td>
        <td><%= link_to 'Destroy', issue_tracker_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

