
<%= bootstrap_form_for(@leave_cash_master,html: {id: 'leave_cash_master'},remote:true) do |f| %>
<div class="row">
<div class="col-sm-3">
    <label>Base Component</label>
      <div class="form-group required">
        <%=select_tag("components[]",options_for_select(SalaryComponent.where(is_base: true).collect {|ff| [ff.name, ff.id] }),{:multiple=>true,:id => "batches",class: "form-control"})%>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group required">
        <%= f.text_field :rate %>
      </div>
    </div>
  <div class="col-sm-1">
      <label>Status </label>
      <div class="field">
        <%= f.check_box :is_active, label: 'Active'%>
      </div>
    </div>
    <div class="col-sm-3">
    <label></label>
      <div class="actions">
        <%= f.submit"Create Leave Cash Master", :class => class_name, data: { disable_with: data_info }%>
      </div>
    </div>
  </div>
  <br>
<% end %>

<script type="text/javascript">
$("#leave_cash_master").validate({
    rules: {
      "leave_cash_master[rate]":{
        required: true
      },
    },
    messages: {
      "leave_cash_master[rate]":{
        required: "Please Specify Rate."
      },
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
  });
  $(function(){
    $('#reservationtime').on('click', function() {
    
    });

  });
</script>
