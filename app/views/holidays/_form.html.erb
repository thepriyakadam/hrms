<%= bootstrap_form_for(@holiday,html: {id: 'holiday'},remote:true) do |f| %>
  <div class="row">
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true, placeholder: 'Holiday Code' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Holiday Name' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :description,hide_label:true, placeholder: 'Holiday Description' %>
      </div>
    </div>
    <div class="col-sm-3">
        <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :holiday_date, hide_label: true, placeholder: 'Holiday Calendar', class: 'holiday_date'%>
          </div>
        </div>
        </div>
    </div>    
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :holiday_type ,['National','Public'] ,{ hide_label: true,include_blank: "Select Type"} %>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="field">
        <%= f.check_box :c_off, label: 'C Off'%>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>
<br>

<script type="text/javascript">
  $(function(){
    $('.holiday_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-5:+10',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>
<script>
$("#holiday").validate({
    rules: {
      "holiday[code]":{
        required: true,
      },
      "holiday[name]":{
        required: true,
      },
      "holiday[type]":{
        required: true,
      }
       },
    messages: {
      "holiday[code]":{
        required: "Please Select Code",
      },
       "holiday[name]":{
        required: "Please Specify Name ",
      },
      "holiday[type]":{
        required: "Please Specify type",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>