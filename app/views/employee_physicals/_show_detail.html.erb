<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Physical Details</h3>
    <div class="box-tools pull-right">
      <%= link_to 'Edit',  edit_employee_physical_path(@employee_physical),class: 'btn btn-success fa fa-edit',remote:true %>
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
   <table id="example2" class="table table-bordered table-hover">

    <tr>
        <th><strong>Employee:</strong></th>
        <td>  <%= @employee_physical.employee.try(:first_name) %></td>

        <th> <strong>Height:</strong></th>
        <td> <%= @employee_physical.height %></td>
    </tr>
     <tr>
        <th><strong>Weight:</strong></th>
        <td><%= @employee_physical.weight %></td>

        <th> <strong>T-Shirt Size</strong></th>
        <td> <%= @employee_physical.size %></td>
    </tr>
     <tr>
        <th> <strong>Trouser Size</strong></th>
        <td> <%= @employee_physical.trouser_size %></td>

        <th></th>
        <td></td>
    </tr>
  
    </table>
  <div class="box-footer">
    Visit <a href="https://indiba.in/">www.indiba.in</a> for more Information about the HRMSONE.
  </div>
  </div><!-- /.box -->
</div>