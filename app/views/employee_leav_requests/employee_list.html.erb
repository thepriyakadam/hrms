<div class="box">
  <div class="box-header">
    <h3 class="box-title">Leave Request Employee List</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Employee Id</th>
          <th>Employee Name</th>
          <th>Department</th>
          <th>Contact No</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.manual_employee_code %></td>
            <td><%= employee.try(:first_name) %> <%= employee.try(:middle_name) %> <%= employee.try(:last_name).to_s %></td>
            <td><%= employee.company_location.try(:name) %> - <%= employee.department.try(:name) %></td>
             <td><%= employee.try(:contact_no) %></td>
            <td>
              <%= link_to 'Leave Request', from_hr_employee_leav_requests_path(employee), class: 'btn btn-sm btn-info' %>
              <%= link_to 'View Requests', hr_view_request_employee_leav_requests_path(employee), class: 'btn btn-sm btn-info' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>