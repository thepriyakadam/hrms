
<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th> 
      <th>Name</th> 
      <th>Status</th> 
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @leav_categories.each do |leav_category| %>
      <tr>
        <td><%= leav_category.code %></td> 
        <td><%= leav_category.name %></td>

        <td><%= leav_category.is_active ? "Active" : "Inactive" %></td> 
        <td>
          <!-- < if leav_category.is_confirm == true %> -->
            <!-- <small class= "label label-primary">Confirmed</small> -->
            <%= link_to '', edit_leav_category_path(leav_category),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <!-- <= link_to '', show_leave_category_leav_categories_path(leav_category: leav_category),class: 'btn btn-default btn-xs fa fa-eye' %> -->
            <%= link_to '',  leav_category, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', leave_category_modal_leav_categories_path(leav_category), class: 'btn btn-xs btn-default fa fa-eye',remote: true%>
          <!--   <= link_to '', is_confirm_leav_categories_path(leav_category: leav_category),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="leave_category_modal" class="modal fade"></div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>