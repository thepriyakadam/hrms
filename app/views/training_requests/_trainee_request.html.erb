<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <td colspan="5"><center>Employee List For Training</center></td>
    </tr>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Department</th>
      <th>Designation</th>
      <th>Contact No</th>
      </tr>
  </thead>

  <tbody>
   <% @trainee_requests.each do |trainee_request| %>
      <tr>
        <td><%= trainee_request.employee.try(:manual_employee_code) %></td> 
        <td><%= full_name(trainee_request.employee) %></td>
        <td><%= trainee_request.employee.department.try(:name) %></td>
        <td><%= trainee_request.employee.joining_detail.employee_designation.try(:name) %></td>
        <td><%= trainee_request.employee.try(:contact_no) %></td>
      </tr>
      <% end %>
  </tbody>
</table>

