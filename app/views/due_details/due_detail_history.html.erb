<div class="box">
  <div class="box-header">
    <h3 class="box-title">Due Detail History</h3>
<div class="box-body">
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
     <th>Reporting Manager</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @due_details.each do |due_detail| %>
      <tr>
       <td><%= due_detail.reporting_master_id %></td>
        <td><%= due_detail.status ? "Active" : "Inactive" %></td>
        <td>
          <%= link_to ' Assign Due Action', new_due_action_path(due_detail_id: due_detail.id),class: 'btn btn-xs btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>