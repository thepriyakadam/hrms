<div class="box">
  <div class="box-header">
    <h3 class="box-title">Monthly Expences</h3>
    <div class="pull-right">
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example1" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Employee</th>
        <th>Month Name</th>
        <th>Year</th>
        <th>Day in Month</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
       <% @monthly_expences.each do |m| %>
        <tr>
          <td><%= full_name(m.employee) %></td>
          <td><%= m.expencess_type.name %></td>
          <td><%= m.amount %></td>
          <td><%= m.expence_date %></td>
          
          <td>
            <%= link_to '', edit_monthly_expence_path(m), class: 'btn btn-xs btn-success fa fa-edit' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>