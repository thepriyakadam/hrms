<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">New Accident Record</h3>
  </div><!-- /.box-header -->
  
  <div class="box-body">
  <div id="dynamicDropdown"></div>
    <%= bootstrap_form_for(@accident_record,html: {id: 'accident_record'}) do |f| %>

      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
           <%= f.text_field :code , label: 'Accident Code',placeholder: "Accident Code"%>
           </div>
        </div>
       <div class="col-sm-3">
          <div class="form-group required">
            <%= f.select :employee_id, employee_list_for_food_deduction, {include_blank: "Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
          </div>
        </div> 

         <div class="col-sm-3">
          <label>Date</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= f.text_field :accident_date,hide_label: true, class: 'food_coupan_date'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :esic_no,label: 'ESIC NO',placeholder: "e.g : ESIC No" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <div class="field">
            <%= f.select :case_type,['ESIC','PRIVATE'],{label: 'Case Option',include_blank: " Select Case Option"} %>
          </div>
        </div> 
      
        <div class="col-sm-3">
          <div class="field">
          <%= f.select :type_of_injury,['MAJOR','MINOR'],{label: 'Injury Type',include_blank: " Select Injury Type"} %>
         </div>
        </div> 
        <div class="col-sm-3">
        <label>Date Range </label>
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= f.text_field :leave_date_range, hide_label: true,class: "pull-right active",id: "reservationtime" %>
            </div><!-- /.input group -->
          </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :no_of_day,label: 'No of Days' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="field">
           <%= f.text_area :description,label: 'Description' %>
          </div>
        </div>
      </div>   
      <div class="row">
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit :class => class_name, data: { disable_with: data_info } %>
          </div>
        </div>
    </div>
    <% end %>
  </div><!-- /.box-body -->
</div><!-- /.box -->

<script type="text/javascript">
  $(function(){
    $('.food_coupan_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
  });

   $("#accident_record").validate({
  rules: {
    "accident_record[code]":{
      required: true
    },
    "accident_record[employee_id]":{
      required: true
    },
    "accident_record[accident_date]":{
      required: true
    },
    "accident_record[esic_no]":{
      required: true
    },
    "accident_record[case_type]":{
      required: true
    },
    "accident_record[type_of_injury]":{
      required: true
    }
  },
  
  errorPlacement: function(error, element) {
   error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
   error.insertAfter(element.parent(element));
  }
});
</script>