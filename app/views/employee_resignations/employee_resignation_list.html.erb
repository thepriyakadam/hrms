<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Resignation List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
         <th>Employee Name</th>
         <th>Department</th>
         <th>Contact No.</th>
         <th>Designation</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_resignations.each do |g| %>
        <tr>
        <td> <%= full_name(g.employee)%></td>
        <td><%= g.employee.try(:company_location).try(:name) %> - <%= g.employee.try(:department).try(:name) %></td> 
         <td><%= g.employee.try(:contact_no) %></td>
        <td><%= g.employee.try(:joining_detail).try(:employee_designation).try(:name) %></td>
        <td> <%= link_to '', g,class: 'btn btn-xs btn-default fa fa-eye' %> 
         <%= link_to 'Exit Interview', new_exit_interview_path(g),class: 'btn btn-xs btn-primary' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>