<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Approval</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-6">
        <table class="table table-bordered table-hover table-condensed">
          <thead>
           <tr><td colspan="5"><center>First Level Request</center></td></tr>
            <tr>
              <th>ID</th>
              <th>Employee Name</th>
              <th>Category</th>
              <th>Day</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @pending_employee_leav_requests.try(:each) do |employee_leav_request| %>
              <tr>
                <td><%= employee_leav_request.employee.try(:manual_employee_code) %></td>
                <td><%= employee_leav_request.employee.try(:first_name) %> <%= employee_leav_request.employee.try(:middle_name) %> <%=employee_leav_request.employee.try(:last_name) %></td>
                <td><%= employee_leav_request.leav_category.try(:name) %></td>
                <td><%= employee_leav_request.leave_count %></td>
                <td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

       <div class="col-sm-6">
        <table class="table table-bordered table-hover table-condensed">
          <thead>
          <tr><td colspan="5"><center>Second Level Request</center></td></tr>
            <tr>
              <th>ID</th>
              <th>Employee Name</th>
              <th>Category</th>
              <th>Day</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @first_approved_employee_leav_requests.try(:each) do |employee_leav_request| %>
              <tr>
                <td><%= employee_leav_request.employee.try(:manual_employee_code) %></td>
                <td><%= employee_leav_request.employee.try(:first_name) %> <%= employee_leav_request.employee.try(:middle_name) %> <%=employee_leav_request.employee.try(:last_name) %></td>
                <td><%= employee_leav_request.leav_category.try(:name) %></td>
                <td><%= employee_leav_request.leave_count %></td>
                <td>
                  <%= link_to 'View Detail', employee_history_with_current_leave_employee_leav_requests_path(employee_leav_request),class: 'btn btn-sm btn-warning' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>