<h1>Listing Professional Tax Masters</h1>

<table>
  <thead>
    <tr>
      <th>Base component</th>
      <th>Min amount</th>
      <th>Max amount</th>
      <th>For month</th>
      <th>March amount</th>
      <th>Effective from</th>
      <th>Effective to</th>
      <th>Is active</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professional_tax_masters.each do |professional_tax_master| %>
      <tr>
        <td><%= professional_tax_master.base_component %></td>
        <td><%= professional_tax_master.min_amount %></td>
        <td><%= professional_tax_master.max_amount %></td>
        <td><%= professional_tax_master.for_month %></td>
        <td><%= professional_tax_master.march_amount %></td>
        <td><%= professional_tax_master.effective_from %></td>
        <td><%= professional_tax_master.effective_to %></td>
        <td><%= professional_tax_master.is_active %></td>
        <td><%= professional_tax_master.is_confirm %></td>
        <td><%= link_to 'Show', professional_tax_master %></td>
        <td><%= link_to 'Edit', edit_professional_tax_master_path(professional_tax_master) %></td>
        <td><%= link_to 'Destroy', professional_tax_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

