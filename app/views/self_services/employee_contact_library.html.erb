<div class="box">
  <div class="box-header">
    <h3 class="box-title">Contact Library</h3>
    <div class="pull-right">
    </div>
  </div>
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
    	<tr>
    		<th>Employee Name</th>
    		<th>Extention Line 1</th>
            <th>Extention Line 2</th>
    		<th>Email ID</th>
    		<th>Designation</th>
    		<th>Department</th>
    	</tr>
    </thead>

    <tbody>
    	<% @employees.each do |employee| %>
    	<tr>
    		<td><%= full_name(employee) %></td>
    		<td><%= employee.contact_no %></td>
            <td><%= employee.optinal_contact_no1 %></td>
    		<td><%= employee.email %></td>
    		<td><%= employee.joining_detail.try(:employee_designation).try(:name) %></td>
    		<td><%= employee.department.try(:name) %> <%= employee.try(:sub_department).try(:name) %></td>
    	</tr>
    	<% end %>
    </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>