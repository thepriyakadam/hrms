<%= bootstrap_form_for(@employee_daily_activity,html: {id: 'employee_daily_activity'},remote:true) do |f| %>
    <%= f.hidden_field :employee_id, :value => current_user.employee_id %>

    <!--< f.hidden_field :employee_id, :value => current_user.employee_id %>-->
        <div class="row">
        
        <div class="col-sm-6">
          <label>Date </label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
             <!--  < date_field_tag(:day, Date.today)%> -->
              <%= f.text_field :day,hide_label: true,class: 'day'%>
            </div>
          </div>
        </div>
        
        <div class="col-sm-6">
          <div class="field">
           <%= f.select :project_master_id, project_master,{label: 'Project',include_blank: " Select Project Master"} %>
          </div>
        </div>
        
        </div>

        <div class="row">
        <div class="col-sm-6">
         <div class="field">
           <%= f.text_area :today_activity, label:'Today Activity' %>
         </div>
       </div>

      <div class="col-sm-6">
       <div class="field">
         <%= f.text_area :tomorrow_plan, label:'Tomorrow Plan' %>
       </div>
      </div>
      </div><br><br>

    <div class="row">
     <div class="col-sm-6">
      <div class="actions">
      <%= f.submit "Save Activity",:class => class_name, data: { disable_with: data_info } %>
      </div>
     </div>
   </div>
<% end %>  
  </div><!-- /.box-body -->
</div><!--box -->

<script type="text/javascript">
  $(function(){
    $('.day').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-2:+25',
    dateFormat: 'dd-mm-yy' });
  
  }); 
</script>

