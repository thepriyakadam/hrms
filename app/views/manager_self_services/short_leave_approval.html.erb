<div class="box">
  <div class="box-header">
    <h3 class="box-title">Short Leave Approval</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
        <table id="example6" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>ID</th>
              <th>Employee</th>
              <th>Day</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @short_leave_requests.try(:each) do |short_leave_request| %>
              <tr>
                <td><%= on_duty_request.employee.try(:manual_employee_code) %></td>
                <td><%= on_duty_request.employee.try(:first_name) %> <%= on_duty_request.employee.try(:middle_name) %> <%=on_duty_request.employee.try(:last_name) %></td>
                <td><%= on_duty_request.try(:start_date).to_date %> - <%= on_duty_request.try(:end_date).to_date %></td>
                <td>
                  <%= link_to 'Approve', second_approve_od_status_record_path(on_duty_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-primary fa fa-check' %> 
                  <%= link_to 'Reject', second_reject_od_status_record_path(on_duty_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-danger fa fa-trash' %>
                  <%= link_to '', employee_od_request_detail_on_duty_requests_path(on_duty_request),class: 'btn btn-xs btn-default fa fa-eye' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>