<div class="box">
  <div class="box-header">
    <h3 class="box-title">Company List</h3>
    <div class="pull-right">
      <%= link_to "Create Company", new_company_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Registration no</th>
        <th>Address</th>
        <th>Email</th>
        <th>Contact no</th>
        <th>Web site</th>
        <th>Starting date</th>
        <th>Ceo name</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td><%= company.registration_no %></td>
          <td><%= company.address %></td>
          <td><%= company.email %></td>
          <td><%= company.contact_no %></td>
          <td><%= company.web_site %></td>
          <td><%= company.starting_date %></td>
          <td><%= company.ceo_name %></td>
          <td>
            <%= link_to '', company,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_company_path(company),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', company, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>