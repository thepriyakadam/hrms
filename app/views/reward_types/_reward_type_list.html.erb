<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @reward_types.each do |reward_type| %>
      <tr>
        <td><%= reward_type.code %></td>
        <td><%= reward_type.name %></td>
        <td><%= reward_type.description %></td>
        <td><%= reward_type.status ? "Active" : "Inactive" %></td>
        <td>
          <% if reward_type.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_reward_type_path(reward_type),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  reward_type, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_reward_types_path(reward_type: reward_type),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

