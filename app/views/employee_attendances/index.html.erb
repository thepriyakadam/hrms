<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Employee Attendance</h3>
    <div class="pull-right">
    <%= link_to "Add Employee Attendance", new_employee_attendance_path, class: 'btn btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Year</th>
        <th>Months</th>
      </tr>
    </thead>
    <tbody>
      <% @employee_attendances.each do |a| %>
        <tr>
          <% year = a.day.strftime("%Y") %>
          <td><%= year %></td>
          <td>
            <%= link_to 'January',monthly_attendance_employee_attendances_path(year: year, month: "January") , class: 'btn btn-xs btn-primary' %>
            <%= link_to 'February',monthly_attendance_employee_attendances_path(year: year, month: "February") , class: 'btn btn-xs btn-primary' %>
            <%= link_to 'March',monthly_attendance_employee_attendances_path(year: year, month: "March") , class: 'btn btn-xs btn-primary' %>
            <%= link_to 'April',monthly_attendance_employee_attendances_path(year: year, month: "April") , class: 'btn btn-xs btn-primary' %>
            <%= link_to 'May',monthly_attendance_employee_attendances_path(year: year, month: "May") , class: 'btn btn-xs btn-success' %>
            <%= link_to 'June',monthly_attendance_employee_attendances_path(year: year, month: "June") , class: 'btn btn-xs btn-success' %>
            <%= link_to 'July',monthly_attendance_employee_attendances_path(year: year, month: "July") , class: 'btn btn-xs btn-success' %>
            <%= link_to 'August',monthly_attendance_employee_attendances_path(year: year, month: "August") , class: 'btn btn-xs btn-success' %>
            <%= link_to 'September',monthly_attendance_employee_attendances_path(year: year, month: "September") , class: 'btn btn-xs btn-info' %>
            <%= link_to 'October',monthly_attendance_employee_attendances_path(year: year, month: "October") , class: 'btn btn-xs btn-info' %>
            <%= link_to 'November',monthly_attendance_employee_attendances_path(year: year, month: "November") , class: 'btn btn-xs btn-info' %>
            <%= link_to 'December',monthly_attendance_employee_attendances_path(year: year, month: "December") , class: 'btn btn-xs btn-info' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>