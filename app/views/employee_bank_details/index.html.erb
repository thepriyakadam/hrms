<h1>Listing Employee Bank Details</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Account no</th>
      <th>Bank name</th>
      <th>Branch name</th>
      <th>Address</th>
      <th>Contact no</th>
      <th>Micr code</th>
      <th>Branch code</th>
      <th>Ifsc code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_bank_details.each do |employee_bank_detail| %>
      <tr>
        <td><%= employee_bank_detail.employee %></td>
        <td><%= employee_bank_detail.account_no %></td>
        <td><%= employee_bank_detail.bank_name %></td>
        <td><%= employee_bank_detail.branch_name %></td>
        <td><%= employee_bank_detail.address %></td>
        <td><%= employee_bank_detail.contact_no %></td>
        <td><%= employee_bank_detail.micr_code %></td>
        <td><%= employee_bank_detail.branch_code %></td>
        <td><%= employee_bank_detail.ifsc_code %></td>
        <td><%= link_to 'Show', employee_bank_detail %></td>
        <td><%= link_to 'Edit', edit_employee_bank_detail_path(employee_bank_detail) %></td>
        <td><%= link_to 'Destroy', employee_bank_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

