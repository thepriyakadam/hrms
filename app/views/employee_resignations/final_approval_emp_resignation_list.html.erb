<div class="box">
  <div class="box-header">
    <h3 class="box-title">Final Approval Resignation List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
        <th>ID</th>
         <th>Employee Name</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_resignations.each do |g| %>
        <tr>
        <td><%= g.employee.try(:manual_employee_code) %></td>
        <td> <%= full_name(g.employee)%></td>
         <td><%= link_to 'View Detail',employee_resignation_confirmation_employee_resignations_path(g),class: 'btn btn-sm btn-primary' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
