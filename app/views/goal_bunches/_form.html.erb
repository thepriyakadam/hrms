<%= bootstrap_form_for(@goal_bunch,html: {id: 'goal_bunch'},remote:true) do |f| %>
<%= f.hidden_field :employee_id, value: current_user.employee_id  %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :period_id,all_period_type,{hide_label:true, include_blank: 'Select Period'} %>
      </div>
    </div>
    
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create" , class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $("#goal_bunch").validate({
    rules: {
      "goal_bunch[period_id]":{
        required: true
      }
    },
    messages: {
      "goal_bunch[period_id]":{
        required: "Please specify Period"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>