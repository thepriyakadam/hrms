
<%= bootstrap_form_for(@pf_master,html: {id: 'pf_master'},remote:true) do |f| %>
<div class="row">
    <div class="col-sm-3">
       <label>Effective Date</label>
      <div class="field">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :date_effective,hide_label: true, class: 'effective_date'%>
        </div>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="form-group required">
        <%= f.select :is_pf,[['Yes','true'],['No','false']],{label: 'PF',include_blank: " Select PF Option"} %>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="form-group required">
        <%= f.text_field :percentage %>
      </div>
    </div>
   
    <div class="col-sm-3">
    <label>Base Component</label>
      <div class="form-group required">
        <%=select_tag("components[]",options_for_select(SalaryComponent.all.collect {|ff| [ff.name, ff.id] }),{:multiple=>true,:id => "batches",class: "form-control"})%>
      </div>
    </div>
 
  <div class="col-sm-2">
    <div class="form-group required">
      <%= f.select :is_active,[['Yes','true'],['No','false']],{label: 'Active?',include_blank: " Select Active"} %>
    </div>
  </div>

</div>
  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit"Create PF Master", :class => class_name, data: { disable_with: data_info }%>
      </div>
    </div>
  </div>
  
<% end %>

<script type="text/javascript">
  $(function(){
    $('.effective_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
  });

  // $(function() {
  //   $('#batches').multiselect({
  //   includeSelectAllOption: true,
  //   maxHeight: 200
  //   });
  // });

    $("#pf_master").validate({
      rules: {
        "pf_master[date_effective]":{
          required: true
        },
        "pf_master[is_pf]":{
          required: true
        },
        "pf_master[percentage]":{
          required: true
        },
        "pf_master[is_active]":{
          required: true
        }
        
      },
  
    errorPlacement: function(error, element) {
      error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
      error.insertAfter(element.parent(element));
    }
  }); 

</script>
