<div class="box">
  <div class="box-header">
    <h3 class="box-title">Salary Slip</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Sr. No</th>
        <!-- <th>Salary Slip Code</th> -->
        <th>Month</th>
        <th>Year</th>
        <th>Action</th>
      </tr>
  </thead>

  <tbody>
  <% i = 0 %>
    <% @salary_slips.each do |salary| %>
      <tr>
        <td><%= i = i + 1 %></td>
        <!-- <td><%#= salary.salary_slip_code %></td> -->
        <td><%= salary.month %></td>
        <td><%= salary.year %></td>
        <td>
          <!-- <= link_to '', show_salaryslip_salaryslips_path(salary), class: 'btn btn-default fa fa-eye' %>  -->
        <%= link_to '', show_salaryslip_rg_salaryslips_path(salary), class: 'btn btn-default fa fa-eye' %>
<!--           <= link_to '', show_salaryslip_salaryslips_path(salary), class: 'btn btn-default fa fa-eye' %> 
 -->        

        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>