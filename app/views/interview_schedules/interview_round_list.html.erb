<div class="box">
  <div class="box-header">
    <!-- <h6 class="box-title">Interview Round of : <= @interview_schedule.try(:candidate_name) %></h6> -->
    <h6 class="box-title">Interviewee List</h6>
<div class="box-body">
<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Candidate Name</th> 
      <th>Job Title</th>
      <th>Interviewer Name</th>
      <th>Interview Type</th>
      <th>Interview Date</th>
      <th>Interview Time</th>
      <th>Location</th>
      <th>Download</th>
      <th>Evaluation</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_rounds.each do |interview_round| %>
      <tr>
        <td><%= interview_round.interview_schedule.try(:candidate_name) %></td>
        <td><%= interview_round.interview_schedule.try(:job_title) %></td>
        <td><%= full_name(interview_round.employee) %></td>
        <td><%= interview_round.interview_type.try(:name) %></td>
        <td><%= interview_round.interview_date %></td>
        <td><%= interview_round.interview_time %></td>
        <td><%= interview_round.location %></td>
        <td><%= link_to '', resume_list_interview_schedules_path(interview_round),class: 'btn btn-xs fa fa-download' %></td>
        <td>
        <% if %>
            <% if interview_round.is_confirm == true %>
              <%= link_to ' View', new_interview_analysis_path(interview_round_id: interview_round.id),class: 'btn btn-xs btn-info' %>
             <!--  <= link_to '', show_interview_round_list_interview_schedules_path(interview_round),class: 'btn btn-xs btn-default fa fa-eye' %> -->
            <% else %>
              <%= link_to ' Evaluate', new_interview_analysis_path(interview_round_id: interview_round.id),class: 'btn btn-xs btn-primary fa fa-comment' %>
            <% end %>
        </td>
        <!-- <td>
        <= link_to '', interview_round,class: 'btn btn-xs btn-default fa fa-eye' %>
        </td> -->
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

