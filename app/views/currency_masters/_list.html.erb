<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @currency_masters.each do |currency_master| %>
      <tr>
        <td><%= currency_master.code %></td>
        <td><%= currency_master.name %></td>
        <td><%= currency_master.description %></td>
        <td>
          <% if currency_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_currency_master_path(currency_master),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '', currency_master, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_currency_masters_path(currency_master: currency_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
