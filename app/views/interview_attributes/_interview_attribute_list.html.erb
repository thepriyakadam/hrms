<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_attributes.each do |interview_attribute| %>
      <tr>
        <td><%= interview_attribute.code %></td>
        <td><%= interview_attribute.name %></td>
        <td><%= interview_attribute.description %></td>
        <td>
          <% if interview_attribute.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_interview_attribute_path(interview_attribute),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  interview_attribute, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_interview_attributes_path(interview_attribute: interview_attribute),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>