<p id="notice"><%= notice %></p>

<h1>Listing Investment Declarations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Investment head</th>
      <th>Amount</th>
      <th>Employee</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investment_declarations.each do |investment_declaration| %>
      <tr>
        <td><%= investment_declaration.date %></td>
        <td><%= investment_declaration.investment_head %></td>
        <td><%= investment_declaration.amount %></td>
        <td><%= investment_declaration.employee %></td>
        <td><%= investment_declaration.status %></td>
        <td><%= link_to 'Show', investment_declaration %></td>
        <td><%= link_to 'Edit', edit_investment_declaration_path(investment_declaration) %></td>
        <td><%= link_to 'Destroy', investment_declaration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

