<p id="notice"><%= notice %></p>

<h1>Listing Salary Components</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Is deducted</th>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salary_components.each do |salary_component| %>
      <tr>
        <td><%= salary_component.name %></td>
        <td><%= salary_component.is_deducted %></td>
        <td><%= salary_component.code %></td>
        <td><%= salary_component.description %></td>
        <td><%= link_to 'Show', salary_component %></td>
        <td><%= link_to 'Edit', edit_salary_component_path(salary_component) %></td>
        <td><%= link_to 'Destroy', salary_component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

