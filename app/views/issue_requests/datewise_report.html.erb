<div class="box">
  <div class="box-header">
    <h3 class="box-title">Issue Tracker</h3>
    <div class="pull-right">
    <!--  <= link_to "New Issue Request",  new_issue_request_path, class: 'btn btn-primary' %>  -->
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">

     <div class="col-sm-3">
         <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= text_field :id,:date,hide_label: true,placeholder: "Date",class: 'request_date'%>
          </div>
         </div>
        </div>
    </div>
      <div id="report_li"></div>
    </div>
</div>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>



