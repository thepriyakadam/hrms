<br>
<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Department</th>
      <th>Code</th>
      <th>Name</th>
      <th>Status</th>
      <th>Action</th>
 
  <tbody>
    <% @sub_departments.each do |sub_department| %>
      <tr>
        <td><%= sub_department.department.try(:name) %></td>
        <td><%= sub_department.code %></td>
        <td><%= sub_department.name %></td>
         <td><%= sub_department.status ? "Active" : "Inactive" %></td>
        <td>
            <%= link_to '', edit_sub_department_path(sub_department),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  sub_department, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-close',remote:true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>