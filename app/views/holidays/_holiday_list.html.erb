<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Holiday date</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.code %></td>
        <td><%= holiday.name %></td>
        <td><%= holiday.description %></td>
        <td><%= holiday.holiday_date %></td>
        <td>
          <%= link_to '', edit_holiday_path(holiday),class: 'btn btn-success btn-sm fa fa-edit',remote:true %>
          <%= link_to '',  holiday, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-sm fa fa-close' %>
          <% unless holiday.is_loaded %>
            <%= link_to 'Assign to employee', assign_to_employee_holidays_path(holiday),class: 'btn btn-info btn-sm fa fa-check',remote:true %>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>