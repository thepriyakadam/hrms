<div class="box box-default">
<div class="box-header with-border">
</div><!-- /.box-header -->
<div class="box-body">
<table id="example1" class="table table-bordered table-hover table-condensed">
 <thead>
    <tr>
      <th>DA</th>
      <th>Minimum Wages</th>
      <th>Effective From</th>
      <th>Effective To</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @da_masters.each do |da_master| %>
      <tr>
        <td><%= da_master.is_da ? "Yes" : "No" %></td>
        <td><%= da_master.minimum_wages %></td>
        <td><%= da_master.effective_from %></td>
        <td><%= da_master.effective_to %></td>
        <td><%= da_master.is_active ? "Active" : "Inactive" %></td>
        <td>
          <% if da_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_da_master_path(da_master) ,class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  da_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_da_masters_path(da_master: da_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>