    <h2><strong><center>INDUCTION SCHEDULE</center></strong></h2><br><br>
    <div style="float:right;">
       <td><%= @induction_detail.induction_master.try(:code) %> - <%= @induction_detail.induction_master.try(:description) %></td>
    </div>

    <table style="border-collapse: collapse;" border=1 width=900 class="table table-bordered table-hover">
    <tr>
      <th><strong>Employee</strong></th>
      <td><%= @induction_detail.employee.try(:first_name) %> <%= @induction_detail.employee.try(:middle_name) %> <%= @induction_detail.employee.try(:last_name) %></td>

     
    </tr>

    <tr>
      <th><strong>Date Of Joining</strong></th>
      <td><%= @induction_detail.employee.joining_detail.joining_date %></td>

       <th><strong>Induction Start Date</strong></th>
      <td><%= @induction_detail.start_date %></td>

     

      
    </tr>  
  </table><br><br>

  <table style="border-collapse: collapse;" border=1 width=900 class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Sr.No</th>
      <th>Activity</th>
      <th>Day</th>
      <th>Duration(Hrs)</th>
      <th>Contact Person</th>
<!--       <th>Download</th>
 -->    </tr>
  </thead>

  <tbody>
  <% i = 0 %>
   <% @induction_activities.each do |induction_activity| %>
      <tr>
        <td><%= i=i+1 %></td>
        <td><%= induction_activity.activity %></td>
        <td><%= induction_activity.day %></td>
        <td><%= induction_activity.duration %></td>
        <td><%= full_name(induction_activity.employee) %></td>
