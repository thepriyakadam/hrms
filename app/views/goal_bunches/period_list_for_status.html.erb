<div class="box">
  <div class="box-header">
    <h3 class="box-title">Period List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
         <th>Base</th>
         <th>Period</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @period.each do |g| %>
        <tr>
        <td><%= g.try(:name) %></td>
        <td>From: <%= g.try(:from) %> To: <%= g.try(:to) %> </td>
        <td><%= link_to 'Status', status_list_goal_bunches_path(period_id: g.id) ,class: 'btn btn-xs btn-info' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>