<div class="box">
  <div class="box-header">
    <h3 class="box-title">Approval/Reject Vacancy List</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-6">
        <table id="example6" class="table table-bordered table-hover table-condensed">
          <thead>
           <tr><td colspan="5"><center>First Level Request</center></td></tr>
            <tr>
				      <th>Vacancy</th>
				      <th>Request date</th>
				      <th>Designation</th>
				      <th>Department</th>
				      <th>Action</th>
				    </tr>
          </thead>

          <tbody>
         		<% @vacancy_request_pending.each do |vacancy_request| %>
			      	<tr>
				        <td><%= vacancy_request.vacancy %></td>
				        <td><%= vacancy_request.request_date %></td>
				        <td><%= vacancy_request.employee_designation.try(:name) %></td>
				        <td><%= vacancy_request.department.try(:name) %></td>
            		<td>
                	<%= link_to 'View Detail',approval_detail_vacancy_requests_path(vacancy_request: vacancy_request.id),class: 'btn btn-sm btn-primary' %>

             		</td>
            	</tr>
          	<% end %>
          </tbody>
        </table>
      </div>

       <div class="col-sm-6">
        <table id="example7" class="table table-bordered table-hover table-condensed">
          <thead>
          <tr><td colspan="5"><center>Second Level Request</center></td></tr>
          	<tr>
					      <th>Vacancy</th>
					      <th>Request date</th>
					      <th>Designation</th>
					      <th>Department</th>
					      <th>Action</th>
					    </tr>
					  </thead>

      			<tbody>
    					<% @vacancy_request_first_approved.each do |vacancy_request| %>
					      <tr>
					        <td><%= vacancy_request.vacancy %></td>
					        <td><%= vacancy_request.request_date %></td>
					        <td><%= vacancy_request.employee_designation.try(:name) %></td>
					        <td><%= vacancy_request.department.try(:name) %></td>
          				<td>
                  <%= link_to 'View Detail',approval_detail_vacancy_requests_path(vacancy_request: vacancy_request.id),class: 'btn btn-sm btn-primary' %>

                </td>
            		</tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

<script type="text/javascript">
$(document).ready(function() {
    $('#example7').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>