<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Resignation List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
        <th>ID</th>
         <th>Employee Name</th>
         <th>Status</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_resignations.each do |g| %>
        <tr>
        <td><%= g.employee.try(:manual_employee_code)%></td>
        <td> <%= full_name(g.employee)%></td>
        <td><%= g.resign_status %></td>
<!--        <= link_to '', g,class: 'btn btn-xs btn-default fa fa-eye' %> 
 -->         
     <td><%= link_to '', modal_show_resignation_status_detail_employee_resignations_path(g),class: 'btn btn-xs btn-default fa fa-eye',remote:true %> </td>
        </tr>
        <% end %>
      </tbody>
    </table><br>
    <%= link_to 'Back', emp_resignation_history_employee_resignations_path,class: 'btn btn-default fa fa-arrow-left' %>
  </div>
</div>

<div id="modal_show_resignation_status_detail" class="modal fade"></div>
