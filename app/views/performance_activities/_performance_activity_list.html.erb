<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
    	<th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  	<% @performance_activities.each do |performance_activity| %>
      <tr>
        <td><%= performance_activity.code %></td>
        <td><%= performance_activity.name %></td>
        <td><%= performance_activity.description %></td>
        <td>
          <% if performance_activity.is_confirm == true %>
          <%= link_to '', edit_performance_activity_path(performance_activity) ,class: 'btn btn-sm btn-success btn-xs fa fa-edit',remote:true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_performance_activity_path(performance_activity) ,class: 'btn btn-sm btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  performance_activity, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_performance_activities_path(performance_activity: performance_activity),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>