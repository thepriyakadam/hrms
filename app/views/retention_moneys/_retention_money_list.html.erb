<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Retention</th>
      <th>Amount</th>
      <th>No. of month</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @retention_moneys.each do |retention_money| %>
      <tr>
        <td><%= retention_money.have_retention %></td>
        <td><%= retention_money.amount %></td>
        <td><%= retention_money.no_of_month %></td>
        <td><%= retention_money.description %></td>
        <td>
          <%= link_to '', edit_retention_money_path(retention_money),class: 'btn btn-sm btn-success fa fa-edit',remote:true %>
          <%= link_to '',  retention_money, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-sm btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>