<div class="box">
  <div class="box-header">
    <h3 class="box-title">Daily Bill Details</h3>
    <div class="pull-right">
      <%= link_to "Create Bill Detail", new_daily_bill_detail_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    </div>
    <div class="box-body">
    <table id="example" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Expence date</th>
          <th>E place</th>
          <th>Travel expence</th>
          <th>Local travel expence</th>
          <th>Lodging expence</th>
          <th>Boarding expence</th>
          <th>Other expence</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @daily_bill_details.each do |daily_bill_detail| %>
          <tr>
            <td><%= daily_bill_detail.expence_date %></td>
            <td><%= daily_bill_detail.e_place %></td>
            <td><%= daily_bill_detail.travel_expence %></td>
            <td><%= daily_bill_detail.local_travel_expence %></td>
            <td><%= daily_bill_detail.lodging_expence %></td>
            <td><%= daily_bill_detail.boarding_expence %></td>
            <td><%= daily_bill_detail.other_expence %></td>
            <td>
            <%= link_to '', daily_bill_detail,class: 'btn btn-default btn-sm fa fa-eye' %>
            <%= link_to '', edit_daily_bill_detail_path(daily_bill_detail),class: 'btn btn-sm btn-success fa fa-edit' %>
            <%= link_to '', daily_bill_detail, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>