<div class="box">
  <div class="box-header">
    <h3 class="box-title">Requisition - Approval List</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example6" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Sr.No.</th>
              <th>Vacancy Code</th>
              <th>Designation</th>
              <th>Vacancy Name</th>
              <th>Department</th>
              <th>Status</th>
<!--          <th>Action</th>
 -->            </tr>
          </thead>

          <tbody>
            <% i= 0 %>
              <% @vacancy_masters.each do |vacancy_master| %>
              <tr>
                <td><%= i = i + 1 %></td>
                <td><%= vacancy_master.vacancy_code %></td>
                <td><%= vacancy_master.employee_designation.try(:name) %></td>
                <td><%= vacancy_master.vacancy_name %></td>
                <td><%= vacancy_master.department.try(:name) %></td>
                 <td>
                    <% if vacancy_master.current_status == "Pending" %>
                    <%= link_to 'Approve ', vacancy_request_confirmation_vacancy_masters_path(vacancy_master),class: 'btn btn-xs btn-primary' %>
                    <% elsif vacancy_master.current_status == "Approved & Send Next" %>
                    <%= link_to 'Approve', vacancy_request_confirmation_vacancy_masters_path(vacancy_master),class: 'btn btn-xs btn-primary' %>
                    <% elsif vacancy_master.current_status == "Edit And Approved" %>
                   <small class="label label-success">Edit And Approved</small>
                    <% elsif vacancy_master.current_status == "Approved" %>
                    <small class="label label-primary">Approved</small>
                    <% elsif vacancy_master.current_status == "Rejected" %>
                    <small class="label label-primary">Rejected</small>
                    <% else %>
                    <%= link_to 'Approve', vacancy_request_confirmation_vacancy_masters_path(vacancy_master),class: 'btn btn-xs btn-primary' %>
                    <% end %>
                  </td>
                 <!--  <td>
                    <= link_to 'History',reporting_masters_vacancy_master_list_vacancy_masters_path(vacancy_master_id: vacancy_master.id),class: 'btn btn-xs btn-primary' %>
                  </td> -->
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>

