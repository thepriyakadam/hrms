<div class="box">
  <div class="box-header">
    <center><h3 class="box-title">Interview Schedule Report</h3></center><br>
<div class="box-body">
<%= form_for :interview_schedule, url: { action: 'print_final_report',format: 'pdf',id: @interview_schedule.id},:html => {:target => '_blank'} do |f| %>
<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
<!--       <th>ID</th>
 -->      <th>Job Title</th>
      <th>Candidate Name</th>
      <th>Interviewer Name</th>
      <th>Interview Date</th>
      <th>Interview Time</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_schedules.each do |interview_schedule| %>
      <tr>
<!--         <td><%= interview_schedule.id %></td>
 -->        <td><%= interview_schedule.interviewer_name %></td>
        <td><%= interview_schedule.candidate_name %></td>
        <td><%= interview_schedule.employee.first_name+' '+interview_schedule.employee.middle_name+' '+interview_schedule.employee.last_name %></td>
        <td><%= interview_schedule.interview_date %></td>
        <td><%= interview_schedule.interview_time %></td>
      </tr>
  </tbody>
</table><br><br>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr> 
      <th>Interview Evalution</th>
      <th>Interview Attribute</th>
      <th>Interview Decision</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_analyses.each do |interview_analysis| %>
      <tr> 
        <td><%= interview_analysis.interview_evalution.name %></td>
        <td><%= interview_analysis.interview_attribute.name %></td>
        <td><%= interview_analysis.interview_decision.name %></td>
        <td><%= interview_analysis.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>     
<br>
<div class="col-sm-3">
    <%= f.submit "Print Interviewee Detail",class: "btn btn-xl btn-warning fa fa-print" %>
  </div>
</div>
</div>
</div>
<% end %>
