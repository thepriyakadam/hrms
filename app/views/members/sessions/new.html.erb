 <div class="row">
    <div class="col-sm-6">
<div class="login-box">
  <div class="login-logo">

  <!-- <= image_tag "redefine_logo.jpg",size: "120x120" %> -->
<!--   <= image_tag "span_pumps_logo.jpg",size: "120x120" %> -->
   <% t = Company.first %>
    <%if t.nil?%>
     <%= image_tag "demo_logo.jpg",size: "120x120" %>
   <%else%>
     <%= image_tag t.company_logo.url, :size => "120x120" %>
   <%end%>
  </div><!-- /.login-logo -->
  <p><center><strong>Welcome in HRMS </strong></center></p>
  <div class="login-box-body">
  <%if t.nil?%>
    <p class="login-box-msg"><center> Login in to the portal</center></p>
  <%else%>
    <p class="login-box-msg"><center> Login in to the of <%=t.name%> portal</center></p>
  <%end%>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Employee Code" %>
      </div>
      <div class="form-group has-feedback">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
      </div>
          <div class="checkbox icheck">
            <label>
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            </label>

          </div>
      <%= f.submit 'SIGN IN' ,data: { disable_with: "Logging in..."}, class: "btn btn-block btn-social btn-github" %>

      <div class="social-auth-links text-center">
        <!-- <p>- OR -</p> -->
        <a target="_blank" href="https://www.facebook.com/SGAnalytics" class="btn btn-social-icon btn-facebook"><i class="fa fa-facebook"></i> </a>
        <a target="_blank" href="https://twitter.com/search?q=sg%20analytics&src=typd" class="btn btn-social-icon btn-twitter"><i class="fa fa-twitter"></i> </a>
        <a target="_blank" href="https://www.linkedin.com/company/523808/" class="btn btn-social-icon btn-linkedin"><i class="fa fa-linkedin"></i> </a>
        <a target="_blank" href="https://plus.google.com/+sganalytics" class="btn btn-social-icon btn-google"><i class="fa fa-google"></i> </a>
        <a target="_blank" href="https://www.instagram.com/sganalytics/?hl=en" class="btn btn-social-icon btn-instagram"><i class="fa fa-instagram"></i> </a>
      </div> <!-- /.social-auth-links-->
     <!--  <= render "members/shared/links" %> -->
    <% end %> 
  </div><!-- /.login-box-body -->


</div><!-- /.login-box -->
</div>
<div class="col-sm-6">

<div class="login-box">

<div class="login-box-body">
  <% t=Thought.where(date: Date.today) %>
<% t.each do |t| %>
<div style="padding-top: 150px; font-size: 16pt;font-style: italic;color: #000000; font-family: 'Times New Roman', Times, serif;">
  <%= t.thought %>
  </div>
  <div  style="font-size: 12pt;font-style: italic;color: #000000; font-family: 'Times New Roman', Times, serif; text-align: right;">
  -<%= t.thought_of %>
  </div>
<% end %>
</div>
</div>
</div>
