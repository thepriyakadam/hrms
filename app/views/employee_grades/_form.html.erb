<%= bootstrap_form_for(@employee_grade,html: {id: 'employee_grade'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Employee Grade' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Employee Grade",:class => class_name, data: { disable_with: data_info }%>
      </div>
    </div>
  </div>
<% end %>
