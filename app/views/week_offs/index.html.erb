<p id="notice"><%= notice %></p>

<h1>Listing Week Offs</h1>

<table>
  <thead>
    <tr>
      <th>Weekoff date range</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @week_offs.each do |week_off| %>
      <tr>
        <td><%= week_off.weekoff_date_range %></td>
        <td><%= week_off.employee %></td>
        <td><%= link_to 'Show', week_off %></td>
        <td><%= link_to 'Edit', edit_week_off_path(week_off) %></td>
        <td><%= link_to 'Destroy', week_off, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

