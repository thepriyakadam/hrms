<p id="notice"><%= notice %></p>

<h1>Listing Company Events</h1>

<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Event date</th>
      <th>Location</th>
      <th>Status</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_events.each do |company_event| %>
      <tr>
        <td><%= company_event.event_name %></td>
        <td><%= company_event.event_date %></td>
        <td><%= company_event.location %></td>
        <td><%= company_event.status %></td>
        <td><%= company_event.time %></td>
        <td><%= link_to 'Show', company_event %></td>
        <td><%= link_to 'Edit', edit_company_event_path(company_event) %></td>
        <td><%= link_to 'Destroy', company_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

