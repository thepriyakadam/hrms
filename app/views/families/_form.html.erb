<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Family Details</h3>
  </div><!-- /.box-header -->


<div class="box-body">
<%= bootstrap_form_for(@family,html: {id: 'family'},remote:true) do |f| %>
<%= f.hidden_field :employee_id, value: @employee.id %>
  <div class="row">
      <div class="col-sm-3">
        <div class="form-group required">
          <%= f.text_field :relation %>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group required">
         <%= f.text_field :f_name,label: 'First Name' %>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="field">
         <%= f.text_field :m_name,label: 'Middle Name' %>
        </div>
    </div>
     <div class="col-sm-3">
        <div class="form-group required">
        <%= f.text_field :l_name,label: 'Last Name' %>
        </div>
    </div>
</div>

<div class="row">
     <div class="col-sm-3">
     <label>Birth Date: </label>
         <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :date_of_birth,hide_label:true, class: 'family_birth_date' %>
          </div>
         </div>
        </div>
      <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :age %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :contact_no,label: 'Contact No' %>
        </div>
     </div>
     <div class="col-sm-3">
        <div class="field">
         <%= f.text_field :email %>
        </div>
    </div>
</div>

<div class="row">
   
      <div class="col-sm-6">
        <div class="field">
         <%= f.text_field :current_address,label: 'Current Address' %>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="field">
         <%= f.select :gender,['Male','Female'],{label: 'Gender',include_blank: " Select Gender"} %>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="field">
        <%= f.select :blood_group_id, all_blood_group,{label: 'Blood Group',include_blank: " Select Blood Group"} %>
        </div>
      </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :adhar_no,label: 'Aadhaar Card No' %>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :pan_no,label:"PAN Card No" %>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="field">
        <%= f.select :marital, ['Married','UnMarried'],{label: 'Marital Status',include_blank: " Select Marital Status"}%>
        </div>
    </div>

      <div class="col-sm-3">
        <div class="field">
          <%= f.select :medical_claim, ['Yes','No'],{label: 'Medical Insurance',include_blank: " Select Medical Insurance"} %>
        </div>
      </div>
</div>
<div class="row">
     <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :profession %>
        </div>
      </div>

     <div class="col-sm-3">
        <div class="field">
        <%= f.text_field :passport_no,label: 'Passport No' %>
       </div>
      </div>

      <div class="col-sm-3">
       <div class="field">
        <label>Passport Issue Date: </label>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :passport_issue_date,hide_label:true, class: 'family_passport_issue_date'%>
          </div>
        </div>
        </div>
        <div class="col-sm-3">
        <div class="field">
        <label>Passport Expiry Date: </label>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :passport_expiry_date,hide_label: true, class: 'family_passport_expiry_date'%>
          </div>
        </div>
        </div>
  </div>

  <div class="row">  
      <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :religion %>
        </div>
      </div>
 
      <div class="col-sm-3">
        <div class="field">
          <%= f.select :is_handicap, ['Yes','No'],{label: 'Differently Abled',include_blank: "Please Select"},{onchange:"var a={id:$(this).val()}; $.get('/families/ajax_show_handicap_type_textbox',a,function(response){});"} %>
        </div>
      </div>

      <div class="col-sm-3">
        <div class="field">
          <div id="handicap_type">
              <% if action_name == 'edit' and @family.handicap_type != "" %>
                <%= f.text_field :handicap_type %>
              <% end %>
            </div>
        </div>
      </div>
  </div>

  <div class="row">
      <div class="col-sm-3">
        <div class="actions">
            <%= f.submit :class => class_name, data: { disable_with: data_info } %>
        </div>
    </div>
  </div>
<% end %>
</div><!-- /.box-body -->
</div><!-- /.box -->
<script type="text/javascript">
  $(function(){
    $('.family_birth_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });

    $('.family_passport_issue_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });

    $('.family_passport_expiry_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:+30',
    dateFormat: 'dd-mm-yy' });

  }); 
</script>
