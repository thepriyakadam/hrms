<div class="box">
  <div class="box-header">
    <% if @employee_attendance_id == nil %>
      <center><p class="text-primary"> Attendance Not Available </p></center> 
    <% else %>

      <%= form_for (:employees, url: { action: 'employee_list_for_print'},employee_attendances: @employee_attendances) do |f| %>
        <table id="example" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Employee Id</th>
              <th>Employee Name</th>
              <th>Designation</th>
              <th>Department Name</th>
              <th>Employement</th>
              <th>Cost Center</th>
              <th>Contact No</th>
            </tr>
          </thead>
          <tbody>
            <% @employee_attendances.each do |a| %>
              <tr>
                <td><%= a.employee.manual_employee_code %></td>
                <td><%= a.employee.first_name %> <%= a.employee.middle_name %> <%= a.employee.last_name %></td>
                <td><%= a.employee.joining_detail.try(:employee_designation).try(:name) %></td>
                <td><%= a.employee.company_location.try(:name) %> - <%= a.employee.department.try(:name) %></td>
                <td><%= a.employee.employee_type.try(:name) %></td>
                <td><%= a.employee.joining_detail.cost_center.try(:name) %></td>
                <td><%= a.employee.contact_no %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="col-sm-3">
          <%= f.submit "Show Employee List", class: "btn btn-primary btn-sm" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

  <script>
  $(document).ready(function() {
      $('#example').DataTable();
  } );
  </script>
