<%= bootstrap_form_for(@blood_group,html: {id: 'blood_group'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Blood Group' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Blood Group",:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>