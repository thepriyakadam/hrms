<h1>Listing Leav Types</h1>

<table>
  <thead>
    <tr>
      <th>Leave type</th>
      <th>No of leave</th>
      <th>Leave expiry date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leav_types.each do |leav_type| %>
      <tr>
        <td><%= leav_type.leave_type %></td>
        <td><%= leav_type.no_of_leave %></td>
        <td><%= leav_type.leave_expiry_date %></td>
        <td><%= link_to 'Show', leav_type %></td>
        <td><%= link_to 'Edit', edit_leav_type_path(leav_type) %></td>
        <td><%= link_to 'Destroy', leav_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

