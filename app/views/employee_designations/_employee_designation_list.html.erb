<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
     <% @employee_designations.each do |employee_designation| %>
      <tr>
        <td><%= employee_designation.name %></td>
        <td>
          <%= link_to '', edit_employee_designation_path(employee_designation),class: 'btn btn-success fa fa-edit',remote:true %>
          <%= link_to '',  employee_designation, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
