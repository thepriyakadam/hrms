<p id="notice"><%= notice %></p>

<h1>Listing Employee Task To Dos</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Task name</th>
      <th>Task date</th>
      <th>Status</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_task_to_dos.each do |employee_task_to_do| %>
      <tr>
        <td><%= employee_task_to_do.employee %></td>
        <td><%= employee_task_to_do.task_name %></td>
        <td><%= employee_task_to_do.task_date %></td>
        <td><%= employee_task_to_do.status %></td>
        <td><%= employee_task_to_do.task_time %></td>
        <td><%= link_to 'Show', employee_task_to_do %></td>
        <td><%= link_to 'Edit', edit_employee_task_to_do_path(employee_task_to_do) %></td>
        <td><%= link_to 'Destroy', employee_task_to_do, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

