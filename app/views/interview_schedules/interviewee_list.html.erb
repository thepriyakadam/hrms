              <th>Download Resume/Photo</th>
              <th>Interview Rounds</th>
            </tr>
          </thead>

          <tbody>
          <% i = 0 %>
            <% @interview_schedules.each do |interview_schedule| %>
              <tr>
              <!-- <td>
                  <= check_box_tag "interview_schedule_ids[]", interview_schedule.id %>
              </td> -->
