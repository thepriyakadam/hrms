<%= bootstrap_form_for(@due_template,html: {id: 'due_template'}) do |f| %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,label: 'Code' %>
      </div>
    </div> 
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,label: 'Name' %>
      </div>
    </div>

     <div class="col-sm-3">
     <label>Status</label>
      <div class="form-group required">
        <%= f.check_box :status,label: 'Active' %>
      </div>
    </div>

    <div class="row">
     <div class="col-sm-3">
        <div class="field">
          <%= f.file_field :document,label: 'Document Upload(only docx,pdf)' %>
        </div>
     </div>
  </div>  

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create No Dues Template ",:class => class_name,  data: { disable_with: data_info } %>
      </div>
    </div>

  </div>
<% end %>