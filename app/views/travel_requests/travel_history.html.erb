<div class="box">
  <div class="box-header">
    <h3 class="box-title">Travel Approval/Reject<h3>
    <div class="pull-right">
    </div>
    </div>

<div class="box-body">

<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Employee ID</th>
      <th>Employee Name</th>
      <th>Department</th>
      <th>Request To</th>
      <th>Traveling Date</th>
      <th>Place</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @travel_requests.each do |travel_request| %>
      <tr>
        <td><%= travel_request.employee.try(:manual_employee_code) %></td>
        <td><%= travel_request.employee.try(:first_name) %> <%= travel_request.employee.try(:middle_name) %> <%= travel_request.employee.try(:last_name) %></td>
        <td><%= travel_request.employee.company_location.try(:name) %> - <%= travel_request.employee.department.try(:name) %></td>
        <td><%= travel_request.reporting_master.employee.try(:first_name) %> <%= travel_request.reporting_master.employee.try(:middle_name) %> <%= travel_request.reporting_master.employee.try(:last_name) %></td>
        <td><%= travel_request.traveling_date %></td>
        <td><%= travel_request.place %></td>
        <td>
              <% if travel_request.current_status == "Pending" %>
                <%= link_to 'Approve / Reject',travel_request_confirmation_travel_requests_path(travel_request),class: 'btn btn-sm btn-warning' %> 
                  <% elsif travel_request.current_status == "Approved" %>
                  <small class="label label-primary">Approved</small>
                   <%= link_to '', travel_request,class: 'btn btn-sm btn-default fa fa-eye' %>
                  <% elsif travel_request.current_status == "Approved & Send Next" %>
                  <small class="label label-primary">Approved & Send Next</small>
                   <%= link_to '', travel_request,class: 'btn btn-sm btn-default fa fa-eye' %>
                  <% elsif travel_request.current_status == "Edit & Send Next" %>
                  <small class="label label-primary">Edit & Send Next</small>
                  <%= link_to '', travel_request,class: 'btn btn-sm btn-default fa fa-eye' %>
              <% else %>
              <% end %>
          </td>
        <td>
           
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>

