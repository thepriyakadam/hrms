<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Description</th>
      <th>Validity Date</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @salary_templates.each do |salary_template| %>
      <tr>
        <td><%= salary_template.code %></td>
        <td><%= salary_template.description %></td>
        <td><%= salary_template.validity_date %></td>
        <td>
          <%= link_to 'Edit Template Detail', edit_salary_template_path(salary_template),class: 'btn btn-sm btn-success btn-xs',remote:true %>
           <!-- link_to '', salary_template, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-sm btn-danger btn-xs fa fa-close' -->
          <%= link_to 'Assign Component To Template', salary_component_templates_path(salary_template),class: 'btn btn-sm btn-info btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>