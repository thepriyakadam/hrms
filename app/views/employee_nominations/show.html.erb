<div class="box box-default">
<div class="box-header with-border">
    <h3 class="box-title">Employee Name: <%= @employee.first_name+' '+@employee.middle_name+' '+@employee.last_name %></h3>
  </div><!-- /.box-header -->
  <div class="box-body">
   <table id="example2" class="table table-bordered table-hover table-condensed">
    
 <tr>    
  <th><strong>Nomination Type</strong></th>
  <td><%= @employee_nomination.nomination_master.try(:name) %></td>

