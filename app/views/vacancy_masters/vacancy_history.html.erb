<div class="box">
  <div class="box-header">
    <h3 class="box-title">Vacancy Approval</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example2" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Organization</th>
              <th>Job Title</th>
              <th>Vacancy Name</th>
              <th>Company Location</th>
              <th>Department</th>
              <th>Educational Qualification</th>
              <th>No of Position</th>
              <th>Experience</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @vacancy_masters.each do |vacancy_master| %>
              <tr>
                <td><%= vacancy_master.justification %></td>
                <td><%= vacancy_master.employee_designation.try(:name) %></td>
                <td><%= vacancy_master.vacancy_name %></td>
                <td><%= vacancy_master.company_location.try(:name) %></td>
                <td><%= vacancy_master.department.try(:name) %></td>
                <td><%= vacancy_master.degree.try(:name) %></td>
                <td><%= vacancy_master.no_of_position %></td>
                <td><%= vacancy_master.experience %></td>
                <td>
                <%= link_to 'Reject/Approve', vacancy_request_confirmation_vacancy_masters_path(vacancy_master),class: 'btn btn-sm btn-warning' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>