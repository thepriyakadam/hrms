<table id="example2" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @degree_streams.each do |degree_stream| %>
      <tr>
        <td><%= degree_stream.name %></td>
        <td>
          <% if degree_stream.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_degree_stream_path(degree_stream),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  degree_stream, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_degree_streams_path(degree_stream: degree_stream),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
