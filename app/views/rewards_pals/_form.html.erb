<%= bootstrap_form_for(@rewards_pal,html: {id: 'rewards_pal'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
      <%= f.select :employee_id,all_employee_list,{label: 'Select Employee Name',include_blank: " Select Reporting Person"} %>
      </div>
    </div> 

    <div class="col-sm-3">
      <label>Date: </label>
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :date, hide_label: true, class: 'interview_date'%>
        </div>
      </div>
    </div>

     <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :purpose,label: 'Purpose' %>
      </div>
      </div>

    <div class="col-sm-3">
        <label>Reward Type</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_reward_type_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
               <%= f.select :reward_type_id, all_reward_type, {hide_label: true,include_blank: " Select Reward Type"} %>
            </div>
          </div>
      </div>

  </div>

    

  <div class="row">

    <div class="col-sm-3">
    <div class="field">
        <%= f.text_field :qty,label: 'Qty' %>
    </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.select :reporting_master_id,all_reporting_master_list,{label: 'Reporting Manager',include_blank: " Select Reporting Person"} %>
      </div>
    </div>
    </div>
   
    <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit'Create Reward Pals', :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %><br>

<script type="text/javascript">
  $(function(){
    $('.interview_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

