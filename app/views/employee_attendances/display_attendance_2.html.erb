<div class="box">
  <div class="box-body">
      <table id="example6" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
          <th>ID</th>
            <th>Name</th>
              <% for i in 1..@day %>
                <th><%= i %></th>
              <%end%>
          </tr>
          <tr>
            <th colspan="2">Day</th>
              <% @start_date.step(@end_date).each do |l| %>
                <th><%= l.strftime("%a") %></th>
              <%end%>
          </tr>
        </thead>
        <tbody>
          <% exist = {} %>
          <% @employee_attendances.each do |e| %>
            <tr>
            <td><%= e.employee.try(:manual_employee_code) %></td>
              <td><%= full_name(e.employee) %></td>
              <% sorted_exists = calculate_attendance(@date, exist, e)%>
              <% sorted_exists.each do |k,v|%>
                <td><%= v %></td>
              <% end %>
            </tr> 
            <% present_day = present_day_count(exist) %>

            <% holiday_in_month = holiday_in_month_count(exist) %>

            <% week_off_day = week_off_day_count(exist) %>

            <% gate_pass = gate_pass_count(exist) %>

            <% od_day = od_day_count(exist) %>


            <% workingday = [] %>
            <% workingday = create_leave(@date, e) %>

            <%= hidden_field_tag "attendances[]", e.id %>

            <%= hidden_field e.employee_id, 'employee_id', value: e.employee_id %>

            <%= hidden_field e.employee_id, 'month_name', value: @date.strftime("%B") %>

            <%= hidden_field e.employee_id, 'year', value: @date.strftime("%Y") %>

            <%= hidden_field e.employee_id, 'day_in_month', value: count_day(@day,e.employee_id) %>

            <%= hidden_field e.employee_id, 'present_day', value: present_day + workingday[2] %>

            <%= hidden_field e.employee_id, 'od_day', value: od_day %>

            <%= hidden_field e.employee_id, 'total_leave', value: workingday[0] + workingday[1] %>

            <%= hidden_field e.employee_id, 'nonpay_leave', value: workingday[1] %>

            <%= hidden_field e.employee_id, 'pay_leave', value: workingday[0] %>

            <%= hidden_field e.employee_id, 'holiday_in_month', value: holiday_in_month %>

            <%= hidden_field e.employee_id, 'week_off_day', value: week_off_day %>
           
            <% if gate_pass <= 2 %>
              <%= hidden_field e.employee_id, 'absent_day', value: absent_day_count(exist) %>
            <% else %>
              <% @a = gate_pass.to_f - 2 %>
              <% @b = @a.to_f/2 %>
              <%= hidden_field e.employee_id, 'absent_day', value: absent_day_count(exist) + @b.to_f %>
            <% end %>

            <% if gate_pass <= 2 %>
              <% if e.employee.try(:joining_detail).try(:employee_category).try(:name) == 'Worker' %>
                <%= hidden_field e.employee_id, 'payable_day', value: present_day.to_f + holiday_in_month.to_f + workingday[0] + gate_pass.to_f + workingday[2] + od_day %>
              <% else %>
                <%= hidden_field e.employee_id, 'payable_day', value: present_day.to_f + holiday_in_month.to_f + week_off_day.to_f + workingday[0] + gate_pass.to_f + workingday[2] + od_day %>
              <% end %>
            <% else %>
              <% @a = gate_pass.to_f - 2 %>
              <% @b = @a.to_f/2 %>
              <% if e.employee.try(:joining_detail).try(:employee_category).try(:name) == 'Worker' %>
                <%= hidden_field e.employee_id, 'payable_day', value: present_day.to_f + holiday_in_month.to_f + workingday[0] + @b.to_f + 2 + workingday[2] + od_day %>
              <% else %>
                <%= hidden_field e.employee_id, 'payable_day', value: present_day.to_f + holiday_in_month.to_f + week_off_day.to_f + workingday[0] + @b.to_f + 2 + workingday[2] + od_day %>
              <% end %>
            <% end %>

            <%= hidden_field e.employee_id, 'gatepass', value: gate_pass %>
            
            <% exist.clear %>
          <%end%>
        </tbody>
      </table>
      <%= link_to " Excel Report ",display_attendance_2_employee_attendances_path(:employee => {:month => params[:employee][:month],:year => params[:employee][:year],:company_id => params[:employee][:company_id],:company_location_id => params[:employee][:company_location_id],:department_id => params[:employee][:department_id]},format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>

      <%= link_to " Print Attendance Slip ",display_attendance_2_employee_attendances_path(:employee => {:month => params[:employee][:month],:year => params[:employee][:year],:company_id => params[:employee][:company_id],:company_location_id => params[:employee][:company_location_id],:department_id => params[:employee][:department_id]},format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>
      
      <%= link_to "Back",emp_attendance_employee_attendances_path,class: "btn btn-sm btn-default" %>
  </div>
</div>
