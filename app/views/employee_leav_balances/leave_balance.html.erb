<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Leave Balance</h3>
  </div><!-- /.box-header -->

  <div class="box-body">
<%= bootstrap_form_for (:salary),url:{action:"leave" } ,html: {id: "salary"} do |f| %>
  <div class="row">

          <div class="col-sm-3">
          <div class="form-group required">
            <%= f.select :leav_category_id,options_for_select(all_leav_category),{label: 'Leave Category',include_blank: "Select Leave" }%>
          </div>
        </div>

<div class="col-sm-3">
<!--     <label>Traveling Date </label>
 -->    <div class="field">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </div>
          <div class="form-group required">
        <%= f.text_field :from_date, label: 'From Date', class: 'application_date'%>
      </div>
    </div>
  </div>
  </div>

<div class="col-sm-3">
     <div class="field">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </div>
          <div class="form-group required">
        <%= f.text_field :to_date, label: 'TO Date', class: 'application_date'%>
      </div>
    </div>
  </div>
  </div>

    <div class="col-sm-3">
    <label></label>
      <div class="actions"">
        <%= f.submit "Create Employee Leave Balance",class: 'btn btn-sm btn-primary' %>

      </div>
    </div>
  </div>
<% end %>
</div>
</div>

