<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Relation</th>
      <th>Second name</th>
      <th>Designation</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @income_tax_masters.each do |income_tax_master| %>
      <tr>
        <td><%= income_tax_master.name %></td>
        <td><%= income_tax_master.relation %></td>
        <td><%= income_tax_master.second_name %></td>
        <td><%= income_tax_master.designation %></td>
        <td><%= income_tax_master.status ? 'Active' : 'Inactive' %></td>
        <td>
            <%= link_to '', edit_income_tax_master_path(income_tax_master),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  income_tax_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>