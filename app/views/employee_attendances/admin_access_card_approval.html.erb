<div class="box box-default">
  <div class="box-header">
    <h3 class="box-title">ACF Request Admin Approval</h3>
  </div><!-- /.box-header -->
  <div class="box-body">

      <table id="example6" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>ID</th>
            <th>Employee</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @pending_requests.try(:each) do |pending_request| %>
            <tr>
              <td><%= pending_request.employee.try(:manual_employee_code) %></td>
              <td><%= full_name(pending_request.employee) %></td>
              <td>
                <%= link_to 'Approve', approve_acf_request_employee_attendances_path(pending_request),class: 'btn btn-xs btn-primary fa fa-check',data: { confirm: 'Are you sure?' } %>
                <%= link_to 'Reject', reject_acf_request_employee_attendances_path(pending_request),class: 'btn btn-xs btn-danger fa fa-trash' ,data: { confirm: 'Are you sure?' }%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>