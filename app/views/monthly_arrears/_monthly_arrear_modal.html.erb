<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Monthly Arrear Detail </center></h4>
    </div>
    <div class="modal-body">
<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <td><%= @monthly_arrear.employee.try(:manual_employee_code) %></td>  
      <th>Employee Name</th>
      <td><%= full_name(@monthly_arrear.employee) %></td>
    </tr>
    <tr>   
      <th>Date</th>
      <td><%= @monthly_arrear.day %></td>
      <th>Amount</th>
      <td><%= @monthly_arrear.amount %></td>
    </tr>
    <tr>  
      <th>Description</th>
       <td colspan="3"><%= @monthly_arrear.description %></td>
    </tr>
  </thead>
</table>
</div>
<div class="modal-footer"></div>
</div>
</div>  