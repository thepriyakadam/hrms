<%= bootstrap_form_for(@thought,html: {id: 'thought'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group required">
        <%= f.text_area :thought,label:'Thought', placeholder: 'Thought' %>
      </div>
    </div>
    
    <div class="col-sm-6">
      <div class="field">
        <%= f.text_area :thought_of,label:'Thought By', placeholder: 'Thought Given By' %>
      </div>
    </div>
  </div>  
  <div class="row">
      <div class="col-sm-6">
      <div class="field">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
        <div class="form-group required">
            <%= f.text_field :date, label: 'Date', class: 'date'%>
        </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="actions" style="padding: 20px">
        <%= f.submit 'Create Thought',:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $(function(){
    $('.date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
    });
</script>


<script>
$("#thought").validate({
    rules: {
      "thought[thought]":{
        required: true,
      }
       },
    messages: {
    
       "thought[thought]":{
        required: "Please specify thought",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
