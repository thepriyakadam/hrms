<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Attribute Definition Detail </center></h4>
    </div>
    <div class="modal-body">
<table class="table table-bordered table-hover table-condensed">
  <thead>
 <tr>
 	<th>Code</th>
 	<td><%= @attribute_master.code %></td>

 	<th>Attribute</th>
 	<td><%= @attribute_master.name%></td>
 </tr>

  <tr>
 	<th>From</th>
 	<td><%= @attribute_master.from %></td>

 	<th>To</th>
 	<td><%= @attribute_master.to %></td>
 </tr>

 <tr>
 <th>Weightage</th>
 <td><%= @attribute_master.attribute_weightage ? "Yes" : "No" %></td>

 	<th>Defination</th>
 	<td><%= @attribute_master.definition %></td>
 </tr>
<tr>
 <th>Status</th>
 <td><%= @attribute_master.status ? "Active" : "Inactive" %></td>
 </tr>

  </thead>
</table>
</div>
<div class="modal-footer"></div>
</div>
</div>  