<div class="box">
  <div class="box-header">
    <h3 class="box-title">GPS Information</h3>
    </div>

<p id="notice"><%= notice %></p>
<div class="box-body">
<%= bootstrap_form_for :member,url:{action:'update_gps'},html: {id: 'member'} do |f| %>
<%= f.hidden_field :employee_id,value: @member.employee_id %>
<div class="row">
  <!-- <div class="col-sm-3">
    <= select :employee,:id,all_employee_list,{include_blank: " Select Employees"}, class: "form-control" %>
  </div> -->
   <div class="col-sm-3">
      <div class="field">
        <%= text_field :member,:latitude,placeholder: "Latitude",class: "form-control" %>
      </div>
    </div>
  <div class="col-sm-3">
      <div class="field">
        <%= text_field :member,:longitude,placeholder: "Longitude",class: "form-control" %>
      </div>
    </div>
   <div class="col-sm-3">
      <div class="field">
        <%= text_field :member,:location,placeholder: "Location",class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-3">
    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
 </div><br>
</div>
</div>
<% end %>

<script>
$("#member").validate({
    rules: {
      "member[latitude]":{
        required: true,
      },
      "member[longitude]":{
        required: true,
      }
    },
    messages: {
      "member[latitude]":{
        required: "Please Specify Latitude",
      },
      "member[longitude]":{
        required: "Please Specify Longitude",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>