<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">

      <%= bootstrap_form_for(:goal_bunch,url:{action:'appraiser_overall_comment_create',employee_id: current_user.employee_id,goal_bunch_id: @goal_bunch.id,appraiser_overall: @appraiser_overall},html: {id: 'goal_bunch'}) do |f| %>
        <div class="row">
          <div class="col-sm-9">
          <label>Overall Comment</label>
              <%= f.text_field :appraiser_comment,hide_label:true,placeholder: 'Overall Comment' %>
            </div>
          
          <div class="col-sm-3">
          <label></label>
            <div class="actions">
              <%= f.submit "Create" , class: 'btn btn-primary btn-sm' %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

<script type="text/javascript">
  $("#goal_bunch").validate({
    rules: {
      "goal_bunch[appraiser_comment]":{
        required: true
      }
    },
    messages: {
      "goal_bunch[appraiser_comment]":{
        required: "Please specify Appraiser Comment"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>