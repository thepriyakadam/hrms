<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Due Employee Template</th>
      <th>Reporting Manager</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @due_details.each do |due_detail| %>
      <tr>
        <td><%= due_detail.due_employee_template %></td>
        <td><%= due_detail.reporting_master_id %></td>
        <td><%= due_detail.status ? "Active" : "Inactive" %></td>
        <td>
          <%= link_to '', edit_due_detail_path(due_detail),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
          <%= link_to '',  due_detail, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>