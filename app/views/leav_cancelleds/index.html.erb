<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
    <div class="pull-right">
      <%= link_to "New Leave cancelled",new_leav_cancelled_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>Employee leav request</th>
      <th>Cancelled date</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @leav_cancelleds.each do |leav_cancelled| %>
      <tr>
        <td><%= leav_cancelled.employee_leav_request %></td>
        <td><%= leav_cancelled.cancelled_date %></td>

         <td>
            <%= link_to '', leav_cancelled,class: 'btn btn-default btn-sm fa fa-eye' %>
            <%= link_to '',  edit_leav_cancelled_path(leav_cancelled),class: 'btn btn-success btn-sm fa fa-edit' %>
            <%= link_to '', leav_cancelled, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>