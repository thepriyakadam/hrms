<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @travel_modes.each do |travel_mode| %>
      <tr>
        <td><%= travel_mode.code %></td>
        <td><%= travel_mode.name %></td>
        <td><%= travel_mode.description %></td>
        <td>
          <% if travel_mode.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_travel_mode_path(travel_mode),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  travel_mode, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_travel_modes_path(travel_mode: travel_mode),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>