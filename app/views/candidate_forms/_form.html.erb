<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Candidate Form</h3>
  </div>
  <div class="box-body">
<%= bootstrap_form_for(@candidate_form,html: {id: 'candidate_form'},vacancy_request_id: @vacancy_request.id) do |f| %>
 <%= f.hidden_field :vacancy_request_id,value:@vacancy_request.id  %> 

<div class="row">
  <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :name, label: 'Candidate Name' %>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="field">
     <div class="input-group">
         <div class="input-group-addon">
           <%= link_to "", new_degree_path,class: "fa fa-plus fa-success",:target => "_blank" %>
               </div>

      <%= f.select :degree_id,all_degree,{include_blank: 'Select Qualification',label: 'Select Qualification'} %>
  </div>
  </div>
  </div>

  <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :skill_set, label: 'Skill Set' %>
    </div>
  </div>
   <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :contact_no, label: 'Contact No.' %>
    </div>
  </div>
</div>
 
 <div class="row">
 

   <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :email, label: 'Email' %>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="field">
      <%= f.select :candidate_type,["Fresher","Experience"],{include_blank: 'Select Candidate Type' ,label: 'Candidate Type'} %>
    </div>
  </div>
   <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :experience, label: 'Experience' %>
    </div>
  </div>
   <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :notice_period, label: 'Notice Period' %>
    </div>
  </div>

</div>

<div class="row">


   <div class="col-sm-3">
     <div class="form-group required">

             <%= f.select :selected_by_id, all_active_employee_with_code, {include_blank: "Select Employee",label: "Selected By"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
      
          </div>
  </div>

  <div class="col-sm-3">
          <div class="field">
            <%= f.file_field :document1,label: 'Upload Document(only docx,pdf)' %>
          </div>
      </div>
      <div class="col-sm-3">
        <div class="field">
            <%= f.file_field :document2,label: 'Upload Photo(only jpeg,jpg,png)' %>
        </div>
      </div>
      </div>
<div class="row">
  <div class="col-sm-3">
  <label></label>
    <div class="actions">
      <%= f.submit "Create Candidate Form",:class => class_name, data: { disable_with: data_info }  %>
      <!-- <= link_to 'Back', vacancy_requests_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %> -->
    </div>
  </div>
</div>
</div>

</div>
</div>
<% end %>

<script>
$("#candidate_form").validate({
    rules: {
      "candidate_form[name]":{
        required: true,
      },
      "candidate_form[qualification_id]":{
        required: true,
      },
      "candidate_form[contact_no]":{
        required: true,
         },
      "candidate_form[email]":{
        required: true,
         },
      "candidate_form[notice_period]":{
        required: true,
          },
      "candidate_form[selected_by]":{
        required: true,
      }
    },
    messages: {
      "candidate_form[name]":{
        required: "Please specify Place",
      },
      "candidate_form[qualification_id]":{
        required: "Please specify Qualification",
      },
      "candidate_form[skill_set]":{
        required: "Please specify Skill Set",
         },
      "candidate_form[contact_no]":{
        required: "Please specify Contact No.",
         },
      "candidate_form[email]":{
        required: "Please specify Email",
         },
      "candidate_form[notice_period]":{
        required: "Please specify Notice Period",
         },
      "candidate_form[selected_by]":{
        required: "Please select Selected By",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
