<table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr> 
      <th>Employee ID</th>
      <th>Employee Name</th>
      <th>Is Expences</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
   <% @reporting_masters.each do |reporting_master| %>
      <tr>
        <td><%= reporting_master.employee.try(:manual_employee_code) %></td>
        <td><%= reporting_master.employee.first_name.to_s+' '+reporting_master.employee.try(:middle_name).to_s+' '+reporting_master.employee.try(:last_name).to_s %>
        <td><%= reporting_master.is_expences ? "Yes" : "No" %></td>
        </td> 
        <td>
          <!-- link_to '', edit_reporting_master_path(reporting_master),class: 'btn btn-sm btn-success fa fa-edit',remote:true  -->
          <%= link_to '',  reporting_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(function () {
    $('#example1').Datatable();
  });
</script>