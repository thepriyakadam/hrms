<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Resignation List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
        <th>ID</th>
         <th>Employee Name</th>
         <th>Status</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_resignations.each do |g| %>
        <tr>
        <td><%= g.employee.try(:manual_employee_code)%></td>
        <td> <%= full_name(g.employee)%></td>
        <td><%= g.resign_status %></td>
<!--        <= link_to '', g,class: 'btn btn-xs btn-default fa fa-eye' %> 
 -->         <td><%= link_to '', show_resignation_status_detail_employee_resignations_path(g),class: 'btn btn-xs btn-default fa fa-eye' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table><br>
      <% if @employee.manager_id == current_user.employee_id || @employee.manager_2_id == current_user.employee_id %>
        <%= link_to 'Back', employee_resignation_history_manager_self_services_path,class: 'btn btn-default fa fa-arrow-left' %>
      <% else %>
        <%= link_to 'Back', emp_resignation_history_employee_resignations_path,class: 'btn btn-default fa fa-arrow-left' %>
      <% end %>
  </div>
</div>