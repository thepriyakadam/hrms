<div class="box">
  <div class="box-header">
    <h3 class="box-title">Food Deduction List</h3>
    <div class="pull-right">
      <%= link_to "New Food Deduction", new_food_deduction_path, class: 'btn btn-sm btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
        <div class="col-sm-3">
          <div class="field">
            <%= select :food_deduction,:month, ['January','February','March','April','May','June','July','August','September','October','November','December'],{label: 'Select Month',include_blank: " Select Month"}, class: "form-control" %>
           </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
            <%= select :food_deduction,:year,['2015','2016','2017','2018','2019','2020','2021','2022','2023','2024','2025','2026','2027'],{label: 'Select Year',include_blank: " Select Year"}, {onchange:"var a={department_id:$(this).val(),month:$('#food_deduction_month').val(),year:$('#food_deduction_year').val()};$('.ajax-progress').show(); $.get('/food_deductions/display_food_deduction',a,function(response){});",class: 'form-control'} %>
          </div>
        </div>
        </div>
      <div id="food_deduction_li"></div>
    </div>
</div>