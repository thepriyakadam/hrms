<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Leave Request Details</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <tr> 
      <th colspan="2"></th>
      <th colspan="2"></th>
    </tr>

    <tr>
      <th><strong>Employee</strong></th>
      <td> <%= @employee_leav_request.employee.try(:manual_employee_code) %></td>
      <th></th>
      <td></td>
      
    </tr>

    <tr>
      <th>  <strong>Leave Category</strong></th>
      <td> <%= @employee_leav_request.leav_category.try(:name) %></td>

      <th> <strong>Leave Type</strong></th>
      <td><%= @employee_leav_request.leave_type %></td>

    </tr>
    <tr>
      <th><strong>To Date</strong></th>
      <td><%= @employee_leav_request.end_date %></td>

      <th> <strong>From Date</strong></th>
      <td><%= @employee_leav_request.start_date %></td>

    </tr>
    <tr>
      <th><strong>Leave Reason</strong></th>
      <td colspan="3"><%= @employee_leav_request.reason %></td>

    </tr>

   </table>
    <%= link_to 'Edit', edit_employee_leav_request_path(@employee_leav_request),class: 'btn btn-success fa fa-edit' %> |
    <%= link_to 'Back', employee_leav_requests_path,class: 'btn btn-default fa fa-arrow-left' %>
  </div><!-- /.box-body -->
  <div class="box-footer">
    Visit <a href="https://indiba.in/">www.indiba.in</a> for more Information about the HRMSONE.
  </div>
</div><!-- /.box -->