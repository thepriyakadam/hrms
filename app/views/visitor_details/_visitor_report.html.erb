<div class="box">
  <div class="box-header">
    <div class="pull-right">
    </div>
    </div>

<div class="box-body">

<table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Contact No.</th>
      <th>From</th>
      <th>Meet To</th>
      <th>Entry Time</th>
      <th>Exit Time</th>
    </tr>
  </thead>

  <tbody>
    <% @visitor_details.each do |visitor_detail| %>
      <tr>
        <td><%= visitor_detail.name %></td>
        <td><%= visitor_detail.age %></td>
        <td><%= visitor_detail.contact_no %></td>
        <td><%= visitor_detail.from %></td>
        <td><%= full_name(visitor_detail.employee) %></td>
        <td><%= visitor_detail.in_time %></td>
        <td><%= visitor_detail.out_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to " Excel Report ",print_visitor_report_visitor_details_path(from_date: params[:salary][:from_date],to_date: params[:salary][:to_date], format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>
 
<%= link_to " Print Report ",print_visitor_report_visitor_details_path(from_date: params[:salary][:from_date],to_date: params[:salary][:to_date],format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>
</div>