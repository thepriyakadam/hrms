<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Plan Reason</h3>
    <div class="pull-right"></div>
    <div class="box-body">
      <%= bootstrap_form_for :employee_plan, url:{ action: "reason", employee_plan_id: @employee_plan.id, html: {id: 'employee_plan' } }  do |f| %>
        <div class="row">
          <div class="col-sm-3">
            <div class="form-group">
              <%= f.select :plan_reason_master_id, all_plan_reason,{include_blank: 'Select plan reason'} %>
            </div>
          </div>
          <div class="col-sm-5">
            <div class="form-group required">
              <%= f.text_field :feedback, label:'Reason' %>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="actions" style="padding-top: 20px;">
              <%= f.submit 'Submit', class: "btn btn-primary btn-sm"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  $("#employee_plan").validate({
    rules: {
      "employee_plan_id[plan_reason_master_id]":{
        required: true,
      },
      "employee_plan_id[feedback]":{
        required: true,
      },
    },
    messages: {
      "employee_plan_id[plan_reason_master_id]":{
        required: "Please Select plan reason",
      },
       "employee_plan_id[feedback]":{
        required: "Please Specify The Reason",
      },
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
  });
</script>
