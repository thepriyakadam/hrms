<p id="notice"><%= notice %></p>

<h1>Listing Employee Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Company shift</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_shifts.each do |employee_shift| %>
      <tr>
        <td><%= employee_shift.company_shift %></td>
        <td><%= employee_shift.employee %></td>
        <td><%= link_to 'Show', employee_shift %></td>
        <td><%= link_to 'Edit', edit_employee_shift_path(employee_shift) %></td>
        <td><%= link_to 'Destroy', employee_shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

