<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Salary Advance</h3>
    <div class="box-tools pull-right">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <tr>
      <th><strong>Employee</strong></th>
      <td><%= @advance_salary.employee.try(:manual_employee_code) %></td>

      <th><strong>Emplyee Name</strong></th>
      <td><%= @advance_salary.employee.try(:first_name)+' '+@advance_salary.employee.try(:middle_name)+' '+@advance_salary.employee.try(:last_name) %></td>
    </tr>
    <tr>
      <th><strong>Advance Amount</strong></th>
      <td><%= @advance_salary.advance_amount %></td>
   
      <th><strong>No of Instalment</strong></th>
      <td><%= @advance_salary.no_of_instalment %></td>
    </tr>
    <tr>
      <th><strong>Instalment Amount</strong></th>
      <td><%= @advance_salary.instalment_amount %></td>

      <th><strong>Advance Date</strong></th>
      <td><%= @advance_salary.advance_date %></td>
    </tr>
    </table>
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Instalment Details</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Instalment Date</th>
        <th>Instalment Amount</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
       <% @instalments.each do |instalment| %>
        <tr>
          <% if instalment.instalment_date.nil? %>
            <td><%=  %></td>
          <% else %>
            <td><%= instalment.try(:instalment_date).strftime("%B %Y") %></td>
          <% end %>
          
          <td><%= instalment.instalment_amount %></td>
          <td>
            <%= link_to '', edit_instalment_path(instalment), class: 'btn btn-sm btn-success fa fa-edit' %>
            <%= link_to '', instalment, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-sm  btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>