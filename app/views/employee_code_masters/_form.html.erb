<%= bootstrap_form_for(@employee_code_master,html: {id: 'employee_code_master'}) do |f| %>
  <div class="row">
   <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,label: "Name" %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :range,label: "Range" %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :last_range,label: "Last Range" %>
      </div>
    </div>

    <div class="col-sm-3">
      <label>Status </label>
      <div class="field">
        <%= f.check_box :is_active, label: 'Active'%>
      </div>
    </div><br>
    </div>
    <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Employee Code",:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %><br>

<script>
$("#employee_code_master").validate({
    rules: {
      "employee_code_master[name]":{
        required: true,
      },
      "employee_code_master[range]":{
        required: true,
      }
    },
    messages: {
      "employee_code_master[name]":{
        required: "Please specify name",
      },
      "employee_code_master[range]":{
        required: "Please specify range",
      }    
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>

