<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Template Name</th>
      <th>Status</th>
      <th>Document</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @due_templates.each do |due_template| %>
      <tr>
        <td><%= due_template.code %></td>
        <td><%= due_template.name %></td>
        <td><%= due_template.status ? "Active" : "Inactive" %></td>
        <td>
           <% if due_template.document_file_name == nil %>
           <small class="label label-default">Not Available</small>
             <% else %>
             <%= link_to '',download_due_tempalte_documents_path(id: due_template.id),class: 'btn btn-xs btn btn-info fa fa-download' %>
             <% end %>
        </td>
        <td>
          <%= link_to '', edit_due_template_path(due_template),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
          <%= link_to '',  due_template, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
          <%= link_to '', new_due_detail_path(due_template_id: due_template.id),class: 'btn btn-xs btn-info btn-xs fa fa-tasks' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>