<div class="box box-default">
   <div class="box-body"> 
<%= bootstrap_form_for(@issue_tracker_member, remote:true) do |f| %>
     <div class="row">
        <div class="col-sm-3">
            <div class="form-group required">
              <%= f.select :issue_tracker_group_id,all_issue_tracker_group,{include_blank: "Select Group"} %>
            </div>
        </div> 

      <div class="col-sm-3">
          <div class="form-group required">
             <%= f.select :employee_id,employee_list_for_food_deduction,{include_blank: "Select Employee"} %>
          </div>
      </div>

    <div class="col-sm-3">
    <label>Status</label>
       <%= f.check_box :status,label:'Active' %>
     </div>
 
  <div class="col-sm-3">
    <div class="form-group required">
     <label>Is Confirm</label>
       <%= f.check_box :is_confirm,label:'Confirm', placeholder: 'Confirm'%>
    </div>
  </div>
  </div>
   <div class="row">
  <div class="col-sm-3">
     <div class="actions">
    <%= f.submit'Create Member',:class => class_name, data: { disable_with: data_info } %>
  </div>
  </div>
  </div>
<% end %>
 </div>
  </div>