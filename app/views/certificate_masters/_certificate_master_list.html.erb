<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Action</th>
 
  <tbody>
    <% @certificate_masters.each do |certificate_master| %>
      <tr>
        <td><%= certificate_master.name %></td>
        <td><%= certificate_master.description %></td>
         <td><%= certificate_master.status ? "Active" : "Inactive" %></td>
        <td>
          <% if certificate_master.confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_certificate_master_path(certificate_master),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  certificate_master, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-close',remote:true %>
            <%= link_to '', is_confirm_certificate_masters_path(certificate_master: certificate_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>