<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body" style="height:1000px; max-height:100px; width:630px; max-width:630px;">
     <%= bootstrap_form_for :employee_transfer,url:{action:"send_request_to_higher_authority", emp_transfer_id: @employee_transfer.id},html: {id: 'employee_transfer'} do |f| %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.select :reporting_master_id, all_reporting_master_list, {hide_label: true,include_blank: " Select Reporting Manager"}, class: 'input_degree_stream_id' %>
          </div>
          <div class="col-sm-2">
            <%= f.submit "Approve & Send next", class: 'btn btn-sm btn-warning fa fa-modx' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
$("#employee_transfer").validate({
    rules: {
      "employee_transfer[reporting_master_id]":{
        required: true,
      }
    },
    messages: {
      "employee_transfer[reporting_master_id]":{
        required: "Please specify Reporting Manager Name",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>


