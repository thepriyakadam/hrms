<%= bootstrap_form_for(@company) do |f| %>
  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :name %>
     </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
      <div class="col-sm-3">
       <div class="field">
      <%= f.select :company_type_id, all_company_type %>
     </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :registration_no %>
     </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :pan_card_no %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :tax_no %>
     </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :professional_tax_no %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_area :address %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :city %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :district %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.number_field :pin_code %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :state %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :email %>
     </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :contact_no %>
     </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :web_site %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.date_select :starting_date %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="field">
       <%= f.text_field :ceo_name %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-1"></div>
     <div class="col-sm-3">
      <div class="actions">
       <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
