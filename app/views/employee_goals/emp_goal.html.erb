<%= bootstrap_form_for(:employee_goal,html: {id: "employee_goal"},remote: true, id:@employee_goal.id) do |f| %>

  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.select :period_id,all_period_type,{label: 'Period ',include_blank: " Select Period"} %>
      </div>
    </div>
  </div>

<table id="tbl" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Goal Perspective</th>
      <th>Goal Measure</th>
      <th>Target</th>
      <th>Goal Weightage</th>
      <th>Difficulty Level</th>
      <th>Allign To Supervisor</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.select :goal_perspective_id,all_goal_perspective_type,{hide_label: true,include_blank: "Select Goal Perspective"}%></td>
      <td><%= f.text_field :goal_measure,{hide_label: true,include_blank: "Select Goal Measure", placeholder: 'e.g.:punctuality'} %></td>
      <td><%= f.text_field :target,{hide_label: true, placeholder: 'e.g.:100%'} %></td>
      <td><%= f.select :goal_weightage,["1","2","3","4","5"],{hide_label: true, include_blank: "Select Goal Weightage"} %></td>
      <td><%= f.select :difficulty_level,["1","2","3"],{hide_label: true, include_blank: "Select Difficulty Level"} %></td>
      <td><%= f.select :allign_to_supervisor,["Yes","No"],{hide_label: true,include_blank: "Allign To Supervisor"} %></td>

        <%= f.hidden_field :employee_id,value: @employee.id %>
        <%= f.hidden_field :emp_head,value: current_user.employee_id %>
    </tr>   
  </tbody>
</table>
  <div class= "row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Goal",class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
  
<% end %>
<hr>
