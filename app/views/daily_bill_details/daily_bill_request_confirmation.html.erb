<div class="box">
  <div class="box-header">
    <h3 class="box-title">Daily Bill Request Confirmation</h3>
    <div class="pull-right">
    </div>
    </div>
<div class="box-body">
<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Travel Request ID</th>
      <th>Expence Date</th>
      <th>E Place</th>

      <th>Travel Expence</th>
      <th>Local Travel Expence </th>
      <th> Lodging Expence</th>

      <th>Boarding Expence</th>
      <th>Other Expence</th>
      <th>Travel Expence Type ID</th>
    </tr>
  </thead>

  <tbody>
      <% @daily_bill_details.each do |daily_bill_detail| %>
      <tr>
        <td><%= daily_bill_detail.travel_request %></td>
        <td><%= daily_bill_detail.expence_date %></td>
        <td><%= daily_bill_detail.e_place %></td>
        <td><%= daily_bill_detail.travel_expence_type.try(:name) %></td>
        <td><%= daily_bill_detail.local_travel_expence %></td>
        <td><%= daily_bill_detail.lodging_expence %></td>
        <td><%= daily_bill_detail.boarding_expence %></td>
        <td><%= daily_bill_detail.other_expence %></td>
        <td><%= daily_bill_detail.travel_expence_type %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  <div class="box-header">
    <h3 class="box-title">Daily Bill Request Details</h3>
    <div class="pull-right">
    </div>
  </div>
<div>
    
    </div>
</div>
</div>


<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>



