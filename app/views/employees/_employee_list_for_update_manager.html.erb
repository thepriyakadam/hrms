<table  id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Employee ID</th>
      <th>Employee Name</th>
      <th>Location</th>
      <th>HRMS Access Role</th>
      <th>Reporting Manager 1</th>
      <th>Reporting Manager 2</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |e| %>
      <tr>
        <td><%= e.manual_employee_code %></td>
        <td><%= e.first_name %> <%= e.middle_name %> <%= e.last_name %></td> 
        <td><%= e.member.try(:company_location).try(:name) %></td>
        <td><%= e.member.try(:role).try(:name) %></td>
        <td><%= e.manager.try(:first_name) %> <%= e.manager.try(:middle_name) %> <%= e.manager.try(:last_name) %></td>
        <td><%= e.manager_2.try(:first_name) %> <%= e.manager_2.try(:middle_name) %> <%= e.manager_2.try(:last_name) %></td>
        <td><%= link_to "", edit_manager_employee_path(e), class: "btn btn-success btn-xs fa fa-edit", remote:true %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>