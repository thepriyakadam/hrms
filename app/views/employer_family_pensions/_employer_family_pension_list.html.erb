<table id="example1" class="table table-bordered table-hover table-condensed">
 <thead>
    <tr>
      <th>Percentage</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
      <% @employer_family_pensions.each do |employer_family_pension| %>
      <tr>
        <td><%= employer_family_pension.percentage %></td>
        <td><%= employer_family_pension.is_active ? "Active" : "Inactive" %></td>
        <td>
          <% if employer_family_pension.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
            <%= link_to '', edit_employer_family_pension_path(employer_family_pension) ,class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
          <% else %>
            <%= link_to '', edit_employer_family_pension_path(employer_family_pension) ,class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  employer_family_pension, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_employer_family_pensions_path(employer_family_pension: employer_family_pension),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
             <%= link_to '',employer_family_pension,class: 'btn btn-xs btn-default fa fa-eye' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>