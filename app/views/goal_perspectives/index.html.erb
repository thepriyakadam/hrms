<p id="notice"><%= notice %></p>

<h1>Listing Goal Perspectives</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goal_perspectives.each do |goal_perspective| %>
      <tr>
        <td><%= goal_perspective.name %></td>
        <td><%= link_to 'Show', goal_perspective %></td>
        <td><%= link_to 'Edit', edit_goal_perspective_path(goal_perspective) %></td>
        <td><%= link_to 'Destroy', goal_perspective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

