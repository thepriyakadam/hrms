<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listing Family Member</h3>
    <div class="pull-right">
      <%= link_to "New Family Details", new_family_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th> No of member</th>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Contact no</th>
        <th>Relation</th>
        <th>Profession</th>
        <th>Blood group</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.no_of_member %></td>
        <td><%= family.f_name %></td>
        <td><%= family.date_of_birth %></td>
        <td><%= family.contact_no %></td>
        <td><%= family.relation %></td>
        <td><%= family.profession %></td>
        <td><%= family.blood_group %></td>
        <td><%= family.email %></td>
        <td>
            <%= link_to '', family,class: 'btn btn-sm btn-default fa fa-eye' %>
            <%= link_to '', edit_family_path(family),class: 'btn btn-sm btn-success fa fa-edit' %>
            <%= link_to '', family, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

<%= link_to 'New Family', new_family_path %>
