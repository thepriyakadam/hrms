<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-body" style="height:1000px; max-height:100px; width:630px; max-width:630px;">
     <%= bootstrap_form_for :daily_bill_detail,url:{controller: "daily_bill_details",action:"approve_and_send_next",travel_request_id: @travel_request.id},html: {id: 'daily_bill_detail'} do |f| %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.text_area :comment,hide_label: true,placeholder: "eg:- Justification " %>
          </div>
          <div class="col-sm-3">
            <%= f.submit " Comment & Approve", class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      <% end %>
      <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
    </div>
  </div>
</div>
