<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">

      <%= bootstrap_form_for @goal_rating,url:{action: "update_attribute_modal",goal_rating_id:@goal_rating.id,period_id: @period.id} do |f| %>
        <div class="row">
          <div class="col-sm-4">
          <label>Attribute</label>
            <%= f.select :attribute_master_id,department_wise_attribute,{hide_label:true, include_blank: "Select Attribute"} %>    
          </div>
          <div class="col-sm-4">
          <label>Goal Weightage</label>
            <%= f.text_field :goal_weightage,hide_label:true, placeholder: "Goal Weightage" %>    
          </div>
          <div class="col-sm-4">
          <label>Goal Measure</label>
            <%= f.text_field :goal_measure,hide_label:true, placeholder: "Goal Measure" %>   
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
        <label>Target/Unit</label>
            <%= f.text_field :target,hide_label:true, placeholder: "Target/Unit" %>    
          </div>
          <div class="col-sm-4">
          <label>Aligned</label>
            <%= f.select :aligned,["Yes","No"],hide_label:true, placeholder: "Aligned" %>    
          </div>

          <div class="col-sm-2" style="padding-top:20px;">
            <%= f.submit "Update", class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      <% end %>
     
    </div>
  </div>
</div>
