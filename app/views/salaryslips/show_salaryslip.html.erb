<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Salary slip <%= @salaryslip.month%> <%= @salaryslip.year%></h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Employee Code</th>
          <td><%= @employee.manual_employee_code%></td>
          <th>Employee Name</th>
          <td><%= full_name(@employee) %></td>
          <th>Designation</th>
          <td><%= @employee.joining_detail.try(:employee_designation).name %></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>Joining Date</th>
          <td><%= @employee.joining_detail.try(:joining_date) %></td>
          <th>Employement</th>
          <td><%= @employee.employee_type.try(:name) %></td>
          <th>Contact No</th>
          <td><%= @employee.contact_no %></td>
        </tr>

        <tr>
          <th>Month Day</th>        
          <td align="right"><%= @working_day.try(:day_in_month) %></td>      
          <th>Holidays</th>        
          <td align="right"><%= @working_day.try(:holiday_in_month) %></td>    
          <th>Leave Total</th>    
          <td align="right"><%= @working_day.try(:total_leave) %></td>            
        </tr>
        <tr>
          <th>Working Days</th>
          <td align="right"><%= @working_day.try(:present_day) %></td>
          <th>Absent Days</th>
          <td align="right"><%= @working_day.try(:absent_day) %></td>
          <th>Payble Days</th>
          <td align="right"><%= @working_day.try(:payable_day) %></td>
        </tr>
      </tbody>
    </table>
    <br>
      
    <div id="slip"><%= render 'slip' %></div>
  </div>
</div>

<div id="myModal" class="modal fade"></div>