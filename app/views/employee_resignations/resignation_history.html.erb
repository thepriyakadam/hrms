<div class="box">
  <div class="box-header">
    <h3 class="box-title">Approval/Reject Resignation List</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-6">
        <table id="example6" class="table table-bordered table-hover table-condensed">
          <thead>
           <tr><td colspan="5"><center>First Level Request</center></td></tr>
            <tr>
              <th>ID</th>
              <th>Employee Name</th>
              <th>Designation</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @pending_resignation_requests.try(:each) do |pending_resignation_request| %>
              <tr>
                <td><%= pending_resignation_request.employee.try(:manual_employee_code) %></td>
                <td><%= pending_resignation_request.employee.try(:first_name) %> <%= pending_resignation_request.employee.try(:middle_name) %> <%=pending_resignation_request.employee.try(:last_name) %></td>
                <td><%= pending_resignation_request.employee.joining_detail.employee_designation.try(:name) %></td>
                <td>
                  <%= link_to 'View Detail',employee_resignation_confirmation_employee_resignations_path(pending_resignation_request),class: 'btn btn-sm btn-primary' %>

                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

       <div class="col-sm-6">
        <table id="example7" class="table table-bordered table-hover table-condensed">
          <thead>
          <tr><td colspan="5"><center>Second Level Request</center></td></tr>
            <tr>
              <th>ID</th>
              <th>Employee Name</th>
              <th>Designation</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @first_approved_resignation_requests.try(:each) do |first_approved_resignation_request| %>
              <tr>
                <td><%= first_approved_resignation_request.employee.try(:manual_employee_code) %></td>
                <td><%= first_approved_resignation_request.employee.try(:first_name) %> <%= first_approved_resignation_request.employee.try(:middle_name) %> <%=first_approved_resignation_request.employee.try(:last_name) %></td>
                <td><%= first_approved_resignation_request.employee.joining_detail.employee_designation.try(:name) %></td>
                <td>
                  <%= link_to 'View Detail',employee_resignation_confirmation_employee_resignations_path(first_approved_resignation_request),class: 'btn btn-sm btn-primary' %>

                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

<script type="text/javascript">
$(document).ready(function() {
    $('#example7').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

