<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title"> Request For Issue </h3>
  </div>
  <div class="box-body">
  <%= bootstrap_form_for(@issue_request,html: {id: 'issue_tracker'}) do |f| %>
  
  <%= f.hidden_field :employee_id, :value => current_user.employee_id %>
  <%= f.hidden_field :date, :value => Time.zone.now.to_date %>
   <%= f.hidden_field :time, :value => Time.zone.now.to_time %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

<div class="row">
 <div class="col-sm-3">
   <label>Issue Tracker Group</label>
     <div class="form-group required">
       <div class="input-group">
         <div class="input-group-addon">
               <%= link_to "", new_issue_tracker_group_path,class: "fa fa-plus fa-success",:target => "_blank" %>
          </div>
        <%= f.select :issue_tracker_group_id,all_issue_tracker_group,{hide_label: true ,include_blank: "Select Group"},{onchange:"var a={group_id:$(this).val()}; $.get('/issue_masters/collect_issues',a,function(response){});"}%>
      </div>
    </div>
  </div> 
  

   <div class="col-sm-3">
    <div class="form-group required">
    <div class="input-group">
      <div class="input-group-addon">
      </div>
      <div id="issues">
        <%= render 'issue_masters/issue_dropdown' %> 
    </div> 
    </div>
    </div>
  </div>
<!-- 

  <div class="col-sm-3">
      <label>Issue Master</label>
    <div class="form-group required">
      <div class="input-group">
        <div class="input-group-addon">
          <= link_to "", new_issue_master_path,class: "fa fa-plus fa-success",:target => "_blank" %>
        </div>
          <= f.select :issue_master_id,all_issue_master, {hide_label: true,include_blank: " Select Master"}, class: 'input_degree_stream_id' %>
    </div>
  </div>
  </div> -->
  
  <div class="col-sm-3">
  <label>Issue Priority</label>
    <div class="group">
     <%= f.select :issue_priority , ['Low','Medium','High'] ,{hide_label: true,include_blank: 'Select Issue Priority'}%>
    </div>
  </div>
  
</div>

<div class="row">
<div class="col-sm-6">
  <label>Description</label>
    <div class="group">
      <%= f.text_area :description ,{hide_label:true} %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="field">
      <%= f.file_field :document1,label: 'Upload Document(only docx,pdf)' %>
    </div>
  </div>
 <div class="col-sm-3">
    <div class="field">
      <%= f.file_field :document2,label: 'Upload Photo(only jpeg,jpg,png)' %>
    </div>
  </div>
  
  </div>
  <div class="row">
 <div class="col-sm-3">
   <label></label>
  <div class="actions">
    <%= f.submit 'Create Issue Request',class: "btn btn-primary btn-sm"  %>
    <%= link_to 'Back', issue_requests_path,class: 'btn btn-sm btn-default fa fa-arrow-left' %>
  </div>
 </div>
 </div>
 </div>
 </div>
</div>
  <% end %>
    
  </div>
</div>