<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Interview Round</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_types.each do |interview_type| %>
      <tr>
        <td><%= interview_type.code %></td>
        <td><%= interview_type.name %></td>
        <td><%= interview_type.description %></td>
        <td>
            <%= link_to '', edit_interview_type_path(interview_type),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  interview_type, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>