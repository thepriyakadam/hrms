<div class="modal-dialog" style="height:1000px; max-height:100px; width:1000px; max-width:1400px;">
  <div class="modal-content">
    <div class="modal-body">
  <%= bootstrap_form_for MachineAttendance.new,url:{action:'edit_machine_attendance',id: @machine_attendance.id},html: {id: 'machine_attendance'} do |f| %>

  <div class="row">
  <label></label>
    <div class="col-sm-3">
     <%= text_field :machine_attendance,:employee_id,hide_label: true, class: 'form-control',readonly: true,value:full_name(@machine_attendance.employee) %>
  </div>
   <div class="col-sm-2">
    <%= select :machine_attendance,:shift_master_id,all_shift_type,{include_blank: " Select Shift"}, class: "form-control" %>
    </div>
     <div class="col-sm-3">
      <%= text_field :machine_attendance,:day,hide_label: true, class: 'form-control machine_attendance',value: @machine_attendance.day %>
    </div>
  

    <div class="col-sm-2">
      <div class="bootstrap-timepicker">
        <div class="form-group">
<!--           <label>In Time</label>
 -->          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-clock-o"></i>
            </div> 
            <%= text_field :machine_attendance,:in,hide_label: true, placeholder: 'In Time',class: 'form-control timepicker',value: @machine_attendance.in %>
          </div><!-- /.input group -->
        </div><!-- /.form group -->
      </div>
    </div>
    <div class="col-sm-2">
      <div class="bootstrap-timepicker">
        <div class="form-group">
<!--           <label>Out Time</label>
 -->          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-clock-o"></i>
            </div>
            <%= text_field :machine_attendance,:out,hide_label: true, placeholder: 'Out Time',class: 'form-control timepicker',value: @machine_attendance.out %>
          </div><!-- /.input group -->
        </div><!-- /.form group -->
      </div>
    </div>
   
    </div>

    <div class="row">
    <div class="col-sm-3">
    <label></label>
      <div class="field">
        <%= text_field :machine_attendance,:present , hide_label: true, placeholder: 'Present',class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-3">
    <label></label>
      <div class="actions">
        <%= f.submit "Update Machine Attendance" ,class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div><br>
      <% end %>
      <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function(){
     $(".timepicker").timepicker({
    showInputs: false
  });
    $('.machine_attendance').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>