<%= bootstrap_form_for(@performance_activity,html: {id: 'performance_activity'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
          <%= f.text_field :code,hide_label:true, placeholder: 'Code' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Performance Activity' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Activity",:class => class_name %>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#performance_activity").validate({
    rules: {
      "performance_activity[code]":{
        required: true,
      },
      "performance_activity[name]":{
        required: true,
      }
       },
    messages: {
      "performance_activity[code]":{
        required: "Please Specify Reservation Code",
      },
       "performance_activity[name]":{
        required: "Please Specify Performance Activity",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>