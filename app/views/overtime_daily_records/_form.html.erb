<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Create Overtime Daily Record</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= bootstrap_form_for(@overtime_daily_record,html: {id: 'overtime_daily_record'}) do |f| %>
        <div class="row">
          <div class="col-sm-3">
            <div class="form-group required">
           <%= f.select :employee_id, employee_list_by_company_location, {label: 'Employee',include_blank: " Select Employee"},{onchange:"var a={employee_id:$(this).val()}; $.get('/overtime_salaries/collect_basic',a,function(response){});",:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}  %>
           </div>
          </div>
          <div class="col-sm-3">
            <div id="basic_amount"></div>
          </div>
        </div>

    <div class="row">
      <div class="col-sm-3">
      <label>Overtime Date </label>
        <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
             <%= f.text_field :ot_daily_date,hide_label:true, class: 'ot_daily_date'%>
          </div>
        </div>
      </div>
          <div class="col-sm-3">
            <div class="form-group required">
             <%= f.text_field :ot_daily_hrs,label:"OT Hrs"%>
            </div>
          </div>

          <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :ot_rate,label:"Wages Rate" %>
            </div>
          </div>

          <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :ot_daily_amount,label:"OT Amount" %>
            </div>
          </div>
      </div>
      <div class="row">
         <div class="col-sm-5">
          <div class="actions">
            <%= f.submit :class => class_name, data: { disable_with: data_info } %>
          </div>
          </div>
      <% end %>
      </div>
        </div><!-- /.box-body -->
</div><!-- /.box -->

<script type="text/javascript">
  $(function(){
    $('.ot_daily_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>
