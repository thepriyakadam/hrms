<div class="box">
  <div class="box-header">
    <h3 class="box-title">Candidate Registrations</h3>
    <div class="pull-right">
      <%= link_to "Candidate Registrations", new_capture_resume_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    </div>
<div class="box-body">
<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name of Candidate</th>
      <th>Contact No.</th>
      <th>Post Applied</th>
      <th>Mode of Application</th>
      <th>Date of Application</th>
      <th>Download Image</th>
      <th>Download Resume</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @capture_resumes.each do |capture_resume| %>
      <tr>
        <td><%= capture_resume.name_of_candidate %></td>
        <td><%= capture_resume.contact_no %></td>
        <td><%= capture_resume.post_applied %></td>
        <td><%= capture_resume.mode_of_application %></td>
        <td><%= capture_resume.date_of_application %></td>
        <td>
          <% if capture_resume.passport_photo_file_name == nil %>
              <small class="label label-default">Image Not Available</small>
              <% else %>
              <center><%= link_to '',download_photo_path(id: capture_resume.id),class: 'btn btn-xs fa fa-picture-o' %></center>
              <% end %>
        </td>
        <td>
         <% if capture_resume.avatar_file_name == nil %>
           <small class="label label-default">Resume Not Available</small>
             <% else %>
             <center><%= link_to '',download_path(id: capture_resume.id),class: 'btn btn-xs fa fa-download' %>
             <% end %>
             </center>
        </td>
        <td>
          <%= link_to '', capture_resume,class: 'btn btn-xs btn-default fa fa-eye' %>
          <%= link_to '', edit_capture_resume_path(capture_resume),class: 'btn btn-xs btn-success fa fa-edit' %>
          <%= link_to '', capture_resume,method: :delete,data:{confirm:'Are you sure?'},class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Capture resume', new_capture_resume_path %></div>
</div>
<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>