<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @cost_centers.each do |cost_center| %>
      <tr>
        <td><%= cost_center.name %></td>
        <td>
          <%= link_to '', edit_cost_center_path(cost_center),class: 'btn btn-sm btn-success fa fa-edit',remote:true %>
          <%= link_to '',  cost_center, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-sm btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
