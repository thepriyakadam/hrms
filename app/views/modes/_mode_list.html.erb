<div class="box">
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Sr.No</th>
          <th>Expence opestion</th>
          <th>Code</th>
          <th>Name</th>
          <th>Description</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% i = 0 %>
        <% @modes.each do |mode| %>
          <tr>
            <td><%= i = i + 1 %></td>
            <td><%= mode.expence_opestion.name %></td>
            <td><%= mode.code %></td>
            <td><%= mode.name %></td>
            <td><%= mode.description %></td>
            <td><%= mode.status ? "Active" : "Inactive" %></td>
            <td>
              <%= link_to '', edit_mode_path(mode),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
              <%= link_to '',  mode, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <%#= link_to 'Back', root_url ,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
