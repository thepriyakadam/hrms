<p id="notice"><%= notice %></p>

<h1>Listing Leave Travel Assistances</h1>

<table>
  <thead>
    <tr>
      <th>Investment declaration</th>
      <th>Journey from date</th>
      <th>Journey to date</th>
      <th>From location</th>
      <th>To location</th>
      <th>Person traveled</th>
      <th>Relationship</th>
      <th>Travel mode</th>
      <th>Estimated amt</th>
      <th>Actual amt</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_travel_assistances.each do |leave_travel_assistance| %>
      <tr>
        <td><%= leave_travel_assistance.investment_declaration %></td>
        <td><%= leave_travel_assistance.journey_from_date %></td>
        <td><%= leave_travel_assistance.journey_to_date %></td>
        <td><%= leave_travel_assistance.from_location %></td>
        <td><%= leave_travel_assistance.to_location %></td>
        <td><%= leave_travel_assistance.person_traveled %></td>
        <td><%= leave_travel_assistance.relationship %></td>
        <td><%= leave_travel_assistance.travel_mode %></td>
        <td><%= leave_travel_assistance.estimated_amt %></td>
        <td><%= leave_travel_assistance.actual_amt %></td>
        <td><%= leave_travel_assistance.total %></td>
        <td><%= link_to 'Show', leave_travel_assistance %></td>
        <td><%= link_to 'Edit', edit_leave_travel_assistance_path(leave_travel_assistance) %></td>
        <td><%= link_to 'Destroy', leave_travel_assistance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

