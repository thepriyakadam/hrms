	<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Details</h3>
  </div>
  <div class="box-body">


	<table class="table table-bordered table-hover table-condensed">
       
    <thead>
	    <tr>
	    	<th>Employee Id</th>
	    	<th>Name</th>
        <th>Age</th>
	    	<th>Department</th>
	    	<th>Date Of Joining</th>
	    	<th>Joining Grade</th>
	    	<th>Current Designation</th> 
      </tr>
    </thead>
    <tbody>
      <% @attribute_rating_sheets.each do |a| %>
      <tr>
        <td><%= a.appraisee.manual_employee_code %></td> 
        <td><%= a.appraisee.first_name %></td>
        <td><%= Time.now.year-a.appraisee.date_of_birth.year %></td>
        <td><%= a.appraisee.department.name %></td>
        <td><%= @joining_detail.joining_date %></td>
        <td><%= @joining_detail.employee_grade.name %></td>
        <td><%= @joining_detail.employee_designation.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<div class="row">
  <div class="col-sm-6">
    <div class="box-header with-border">
    
      <h3 class="box-title">Employee Past Experience</h3>
    </div>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
	    	<th>Past Company</th>
        <th>Designation</th>
        <th>Past Exp In Years</th>
        <th>Past CTC</th>
        <th>Current CTC</th>
      </tr>
    </thead>
    <tbody>
    <% @experiences.each do |e| %>
      <tr>
       <td><%= e.company_name %></td>
       <td><%= e.designation %></td>
       <td><%= e.no_of_year %></td>
       <td><%= e.ctc %></td>
       <td><%= @ctc %></td>
      </tr>
      <% end %>
    </tbody>
	</table>
  </div>

  <div class="col-sm-6">
    <div class="box-header with-border">
      <h3 class="box-title">Employee Qualification Details</h3>
    </div>
      <table class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>Degree/Deploma</th>
            <th>Year Of Passing/marks%</th>
            <th>Qualification Category</th>
          </tr>
        </thead>
        <tbody>
        <% @qualifications.each do |q| %>
          <tr>
            <td><%= q.degree.name %></td>
            <td><%= q.year.name.to_s+" / "+q.marks.to_s %></td>
            <td><%= q.degree_type.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  
</div>

	
<%= bootstrap_form_for(@attribute_rating_sheet,url:{action: "appraiser2_create"}) do |f| %>
  <div class="box-header with-border">
    <h3 class="box-title">Employee Attribute</h3>
  </div>
  <table id="tbl" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Attribute & Definition</th>
        <th>Weightage</th>
        <th>Appraisee Comment</th>
        <th>Appraisee Rating</th>
        <th>Appraiser1 Comment</th>
        <th>Appraiser1 Rating</th>
        <th>Appraiser2 Comment</th>
        <th>Appraiser2 Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @attribute_rating_multiple_sheets.each do |a| %>
        <tr>
          <td><%= a.employee_attribute.attribute_master.name %></td>
          <td><%= a.employee_attribute.weightage %></td>
          <td><%= a.appraisee_comment %></td>
          <td><%= a.appraisee_rating %></td>
          <td><%= a.appraiser_comment %></td>
          <td><%= a.appraiser_rating %></td> 
          <td><%= text_field_tag 'appraiser2_comment[]' %></td>
          <td><%= text_field_tag 'appraiser2_rating[]' %></td>
          <%= hidden_field_tag 'attribute_rating_sheet_id[]', {},value: a.id %>  
        </tr>
      <% end %>
    </tbody>
  </table>

    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit "Create Rating" , class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>

<%= bootstrap_form_for @attribute_rating_sheet,url:{action:'is_confirm_appraiser2'} do |f| %>
  <table id="tbl" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th><input type="checkbox" id="selectAll" value="selectAll"></th>
        <th>Attribute & Definition</th>
        <th>Weightage</th>
        <th>Appraisee Comment</th>
        <th>Appraisee Rating</th>
        <th>Appraiser1 Comment</th>
        <th>Appraiser1 Rating</th>
        <th>Appraiser2 Comment</th>
        <th>Appraiser2 Rating</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @attribute_rating_multiple_sheets.each do |a| %>
        <tr>
          <td><%= check_box_tag "attribute_rating_sheet_ids[]", a.id %></td>
          <td><%= a.employee_attribute.attribute_master.name %></td>
          <td><%= a.employee_attribute.weightage %></td>
          <td><%= a.appraisee_comment %></td>
          <td><%= a.appraisee_rating %></td>
          <td><%= a.appraiser_comment %></td>
          <td><%= a.appraiser_rating %></td> 
          <td><%= a.appraiser2_comment %></td>
          <td><%= a.appraiser2_rating %></td>
          <%= hidden_field_tag 'attribute_rating_sheet_id[]', {},value: a.id %> 
          <td>
            <% if a.is_confirm_appraiser2 == true %>
            <% else %>
              <%= link_to '', edit_appraiser2_attribute_rating_sheets_path(a) ,class: 'btn btn-xs btn-success fa fa-edit' %>
            <% end %>
          </td> 
        </tr>
      <% end %>
    </tbody>
  </table>

    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit "Confirm", class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>
</div>
</div>
<% end %>
<%= link_to 'Back', subordinate_list_attribute_rating_sheets_path(@employee.id) %>

<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>
