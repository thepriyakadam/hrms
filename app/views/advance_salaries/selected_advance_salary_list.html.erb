 <div class="box-header">
    <h3 class="box-title">Employee Advance Salary</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example1" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th><input type="checkbox" id="selectAll" value="selectAll"></th>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Advance Amount</th>
        <th>No. of Installment</th>
        <th>Installment Amount</th>
        <th>Advance Date</th>
<!--         <th>Location</th>
 -->      </tr>
    </thead>

    <tbody>
      <% @advance_salaries.each do |advance_salary| %>
        <tr>
        <td><%= check_box_tag "employee_id[]", advance_salary.id %></td>
         <td><%= advance_salary.employee.try(:manual_employee_code) %></td>
         <td><%= full_name(advance_salary.employee) %></td>
         <td><%= advance_salary.advance_amount %></td>
         <td><%= advance_salary.no_of_instalment %></td>
         <td><%= advance_salary.instalment_amount %></td>
         <td><%= advance_salary.advance_date %></td>
<!--          <td><%= advance_salary.employee.company_location.name %></td>
 -->        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <%= link_to 'Back', advance_salaries_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
  <%= link_to " Excel Report ",advance_salary_xls_advance_salaries_path(month: @month, year: @year,company_id: @company,company_location_id: @location, format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>
  <%= link_to " PDF Report ",advance_salary_pdf_advance_salaries_path(month: @month, year: @year,company_id: @company,company_location_id: @location, format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>
</div>
