<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
    <div class="pull-right">
    </div>
  </div>
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Employee ID</th>
          <th>Employee Name</th>
          <th>Contact No</th>
          <th>Designation</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
          <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.try(:manual_employee_code) %></td>
            <td><%= full_name(employee)%></td>
            <td><%= employee.try(:contact_no) %></td>
            <td><%= employee.try(:joining_detail).try(:employee_designation).try(:name) %></td>
            <td>
              <%= link_to '', reporties_profile_modal_manager_self_services_path(employee_id: employee.id), class: 'btn btn-default fa fa-eye btn-sm',remote: true %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
<div id="reporties_profile" class="modal fade"></div>
<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

