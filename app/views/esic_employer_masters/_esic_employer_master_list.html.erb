<table id="example2" class="table table-bordered table-hover table-condensed'">
<thead>
    <tr>
      <th>Esic</th>
      <th>Percentage</th>
      <th>Effective From</th>
      <th>Effective To</th>
      <th>Max Limit</th>
      <th>Base Component</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @esic_employer_masters.each do |esic_employer_master| %>
      <tr>
        <td><%= esic_employer_master.esic ? "Yes" : "No" %></td>
        <td><%= esic_employer_master.percentage %></td>
        <td><%= esic_employer_master.effective_from %></td>
        <td><%= esic_employer_master.effective_to %></td>
        <td><%= esic_employer_master.max_limit %></td>
        <td><%= esic_employer_master.base_component %></td>
        <td><%= esic_employer_master.is_active ? "Active" : "Inactive" %></td>
        <td>
          <% if esic_employer_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_esic_employer_master_path(esic_employer_master),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  esic_employer_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_esic_employer_masters_path(esic_employer_master: esic_employer_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
         </tr>
    <% end %>
  </tbody>
</table>