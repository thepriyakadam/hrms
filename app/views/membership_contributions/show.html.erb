<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Member Contribution</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    
    <tr>
    	<th>Member</th>
    	<td><%= full_name(@membership_contribution.membership.employee) %></td>

    	<th>Date</th>
    	<td><%= @membership_contribution.date %></td>
    </tr>
    
    <tr>
      <th>Amount</th>
      <td colspan="3"><%= @membership_contribution.amount %></td>
    </tr> 

</table><br>
<%= link_to 'Edit', edit_membership_contribution_path(@membership_contribution) ,class:'btn btn-sm btn-success fa fa-edit'%> |
<%= link_to 'Back', membership_contributions_path,class:'btn btn-sm btn-default fa fa-arrow-left' %>
</div>
</div>