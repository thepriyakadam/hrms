<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
   <% @other_salary_components.each do |other_salary_component| %>
      <tr>
        <td><%= other_salary_component.code %></td>
        <td><%= other_salary_component.name %></td>
        <td><%= other_salary_component.description %></td>
        <td>
          <%= link_to '', edit_other_salary_component_path(other_salary_component),class: 'btn btn-sm btn-success fa fa-edit',remote:true %>
          <%= link_to '',  other_salary_component, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-sm btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>