<div class="box">
  <div class="box-header">
    <h3 class="box-title">Company Type List</h3>
    <div class="pull-right">
      <%= link_to "New Department type", new_department_type_path, class: 'btn btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @department_types.each do |department_type| %>
      <tr>
        <td><%= department_type.name %></td>

         <td>
            <%= link_to '', department_type,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_department_type_path(department_type)class: 'btn btn-success fa fa-edit' %>
            <%= link_to '',  department_type, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>