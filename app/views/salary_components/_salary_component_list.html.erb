<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @salary_components.each do |salary_component| %>
      <tr>
        <td><%= salary_component.code %></td>
        <td><%= salary_component.name %></td>
        <td><%= salary_component.is_active ? "Active" : "Inactive" %></td>

        <td>
          <% if salary_component.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_salary_component_path(salary_component),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '', is_confirm_salary_components_path(salary_component: salary_component),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
            <%= link_to '', modal_salary_components_path(salary_component),class: 'btn btn-default btn-xs fa fa-eye' ,remote:true%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="myModal" class="modal fade"></div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
