<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Daily Bill Detail</h3>
  </div>
  <div class="box-body">
    <%= bootstrap_form_for(@daily_bill_detail) do |f| %>
  
  <div class="row">
    <div class="col-sm-3">
      <label>Expence Date </label>
      <div class="field">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :expence_date, hide_label: true, class: 'birth_date' %>
        </div>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :e_place, label: 'E Place'  %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :travel_expence, label: 'Travel Expence'  %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :local_travel_expence, label: 'Local Travel Expence'  %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :lodging_expence, label: 'Lodging Expence'  %>
      </div>
    </div>
  
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :boarding_expence, label: 'Boarding Expence'  %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :other_expence, label: 'Other Expence'  %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name, data: { disable_with: data_info }  %>
      </div>
    </div>
  </div>

  <%= link_to 'Back', daily_bill_details_path,class: 'btn btn-default btn-sm fa fa-arrow-left'  %>
  </div>
  </div>
      <% end %>
