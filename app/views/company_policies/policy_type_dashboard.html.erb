<div class="box box-default">
  <div class="box-header with-border"></div>
  <div class="box-body">
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Effective from</th>
      <th>Effective to</th>
      <th>Document</th>
    </tr>
  </thead>

  <tbody>
    <% @company_policies.each do |company_policy| %>
      <tr>
        <td><%= company_policy.name %></td>
        <td><%= company_policy.effective_from %></td>
        <td><%= company_policy.effective_to %></td>
        <td>
           <% if company_policy.document_file_name == nil %>
           <small class="label label-default">Document Not Available</small>
             <% else %>
             <%= link_to '',download_docs_path(id: company_policy.id),class: 'btn btn-xs btn btn-info fa fa-download',:target => "_blank" %>
             <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table><br>
<%= link_to 'Back', root_url,class: 'btn btn-default fa fa-arrow-left' %>
</div>
</div> 
 


