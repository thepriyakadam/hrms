<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List For Training</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">

      <table class="table table-bordered table-hover table-condensed">     
        <thead>
        <tr><td colspan="6"><center> Employee Goal Details for Training </center></td></tr>
          <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Goal</th>
            <th>Rating</th>
            <th>Training Course</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @goal_ratings.each do |a| %>
          <tr>
          <%= bootstrap_form_for :login, url: {action: 'create_goal_training',emp_id: a.appraisee_id,goal_rating_id: a.id}, html: {id: 'login'} do |f| %> 
            <td><%= a.appraisee.manual_employee_code %></td> 
            <td><%= a.appraisee.first_name %> <%= a.appraisee.middle_name %> <%= a.appraisee.last_name %></td>
            <td><%= a.goal_perspective.try(:name) %></td>
            <td><%= a.appraiser_rating_id %></td>
            <td><%= select_tag :training_topic_master_id,options_for_select(all_training_topic),{class: "form-control",include_blanck: "Select Training Topic",hide_label: true,value: a.training_topic_master_id} %></td>
            <td><%= f.submit "Confirm Training", class: 'btn btn-info btn-sm fa fa-user-plus' %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br><br>

      <table class="table table-bordered table-hover table-condensed">     
        <thead>
        <tr><td colspan="6"><center> Employee Attribute Details for Training </center></td></tr>
          <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Attribute</th>
            <th>Rating</th>
            <th>Training Course</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @attribute_ratings.each do |a| %>
          <tr>
          <%= bootstrap_form_for :login, url: {action: 'create_attribute_training',emp_id: a.appraisee_id,goal_rating_id: a.id}, html: {id: 'login'} do |f| %> 
            <td><%= a.appraisee.manual_employee_code %></td> 
            <td><%= a.appraisee.first_name %> <%= a.appraisee.middle_name %> <%= a.appraisee.last_name %></td>
            <td><%= a.attribute_master.try(:name) %></td>
            <td><%= a.appraiser_rating_id %></td>
            <td><%= select_tag :training_topic_master_id,options_for_select(all_training_topic),{class: "form-control",include_blanck: "Select Training Topic",hide_label: true,value: a.training_topic_master_id} %></td>
            <td><%= f.submit "Confirm Training", class: 'btn btn-info btn-sm fa fa-user-plus' %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>

  </div>
</div>