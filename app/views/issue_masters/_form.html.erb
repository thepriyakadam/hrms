<div class="box box-default">
   <div class="box-body"> 
<%= bootstrap_form_for(@issue_master,remote:true )do |f| %>
<div class="row">
  <div class="col-sm-3">
    <div class="form-group required">
      <%= f.select :issue_tracker_group_id,all_issue_tracker_group,{label:"Group" ,include_blank: "Select Group"} %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="form-group required">
      <%= f.select :issue_type_id ,all_issue_types,{label:"Issue Type",include_blank: "Select Type"}%>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :name,label:'Issue', placeholder: 'Issue' %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="group">
      <%= f.text_field :description ,label:'Description', placeholder: 'Description'%>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-3">
   <label></label>
   <div class="actions">
     <%= f.submit'Create Issue',:class => class_name, data: { disable_with: data_info } %>
   </div>
  </div>
</div>
<% end %>
</div>
</div>
