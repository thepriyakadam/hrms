<p id="notice"><%= notice %></p>

<h1>Listing Dearness Allowances</h1>

<table>
  <thead>
    <tr>
      <th>Base component</th>
      <th>Minimum wages</th>
      <th>Effective from</th>
      <th>Effective to</th>
      <th>Is active</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dearness_allowances.each do |dearness_allowance| %>
      <tr>
        <td><%= dearness_allowance.base_component %></td>
        <td><%= dearness_allowance.minimum_wages %></td>
        <td><%= dearness_allowance.effective_from %></td>
        <td><%= dearness_allowance.effective_to %></td>
        <td><%= dearness_allowance.is_active %></td>
        <td><%= dearness_allowance.is_confirm %></td>
        <td><%= link_to 'Show', dearness_allowance %></td>
        <td><%= link_to 'Edit', edit_dearness_allowance_path(dearness_allowance) %></td>
        <td><%= link_to 'Destroy', dearness_allowance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

