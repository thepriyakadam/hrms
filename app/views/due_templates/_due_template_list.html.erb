<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Status</th>
      <th>Download</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @due_templates.each do |due_template| %>
      <tr>
        <td><%= due_template.code %></td>
        <td><%= due_template.name %></td>
        <td><%= due_template.status ? "Active" : "Inactive" %></td>
        <td>
           <% if due_template.document_file_name == nil %>
           <small class="label label-default">Document Not Available</small>
             <% else %>
             <%= link_to ' Document',download_due_tempalte_documents_path(id: due_template.id),class: 'btn btn-xs btn btn-info fa fa-download' %>
             <% end %>
        </td>
        <td>
          <%= link_to '', edit_due_template_path(due_template),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
          <%= link_to '',  due_template, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
          <%= link_to ' Assign Component to  No Due Template', new_due_detail_path(due_template_id: due_template.id),class: 'btn btn-xs btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>