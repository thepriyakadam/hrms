<div class="box">
  <div class="box-header">
    <h3 class="box-title">Vacancy List</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
	 	<table id="example6" class="table no-margin">
	    <thead>
	      <tr>
	      	<th>Sr. No</th>
	        <th>Vacancy Code</th>
	        <th>Vacancy</th>
	        <th>Action</th>
	      </tr>
	    </thead>

	    <tbody>
	    	<% i = 0 %>
	      <% @vacancy_masters.each do |vacancy_master| %>
	      	<tr>
	      		<td><%= i = i + 1 %></td>
		        <td><%= vacancy_master.vacancy_code %></td>
		        <td><%= vacancy_master.vacancy_name %></td>
	          <td>
	             <%= link_to 'Apply', refferal_selected_resumes_path(vacancy_master_id: vacancy_master.id) ,class: 'btn btn-xs btn-primary' %>
	             <%= link_to '', modal_vacancy_master_selected_resumes_path(vacancy_master), class: 'btn btn-xs btn-default fa fa-eye',remote: true%>
	          </td>
	        </tr>
	      <% end %>
	    </tbody>
	  </table>
	</div>
</div>
  <div id="myModal4" class="modal fade"></div>
<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>