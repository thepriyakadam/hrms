<div class="box">
  <div class="box-header">
    <h3 class="box-title">Contact Library</h3>
    <div class="pull-right">
    </div>
  </div>
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
    	<tr>
            <th>Sr.No</th>
    		<th>Employee Name</th>
    		<th>Extension Line 1</th>
           <!--  <th>Extension Line 2</th> -->
            <th>Action</th>
    	</tr>
    </thead>
<% i=0 %>
    <tbody>
    	<% @employees.each do |employee| %>
    	<tr>
            <td><%= i = i+1 %></td>
    		<td><%= full_name(employee) %></td>
    		<td><%= employee.contact_no %></td>
           <!--  <td><= employee.try(:optinal_contact_no1) %></td> -->
            <td><%= link_to '', modal_contact_library_self_services_path(employee), class: 'btn btn-xs btn-default fa fa-eye',remote: true%></td>
    	</tr>
    	<% end %>
    </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

<div id="modal_contact_library" class="modal fade"></div>