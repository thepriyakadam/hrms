<div class="box">
  <div class="box-header">
    <h3 class="box-title">Appraiser Evaluation - My Team</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example1" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Department</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |e| %>
        <tr>
        <td><%= e.employee.manual_employee_code %></td>
        <td><%= full_name(e.employee) %></td>
        <td><%= e.employee.company_location.try(:name) %> - <%= e.employee.department.try(:name) %></td> 
        <td>
          <% if e.appraiser_confirm == true %>
            <%= link_to 'Show Detail', appraiser_comment_goal_bunches_path(goal_id: e.id,emp_id: e.employee_id,period_id: e.period_id) ,class: 'btn btn-xs btn-primary' %>
          <% else %>
            <%= link_to 'Appraiser Comment', appraiser_comment_goal_bunches_path(goal_id: e.id,emp_id: e.employee_id,period_id: e.period_id) ,class: 'btn btn-xs btn-info' %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'Back',appraiser_subordinate_goal_bunches_path,class: 'btn btn-sm btn-default fa fa-arrow-left'%>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#example1').Datatable();
  });
</script>