<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Shift Details </center></h4>
    </div>
    <div class="modal-body">
  		<%= bootstrap_form_for(:shift_employee, url: { action: 'update_shift',shift_employee_id: @shift_employee.id},html: {id: 'shift_employee'}) do |f| %>

        <div class="row">
          <div class="col-sm-9">
            <label>Shift</label>
        			<%= f.select :shift_schedule_id,all_shift_schedule,{hide_label: true,include_blank: "Select Shift"} %>    
          </div>
          
          <div class="col-sm-2" style="padding-top:30px;">
              <%= f.submit "Update", class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
      <% end %>
     
    </div>
		<div class="modal-footer"></div>
	</div>
</div>  

<script type="text/javascript">
	$("#shift_employee").validate({
    rules: {
      "shift_employee[shift_time_id]":{
        required: true,
      }
    },
    messages: {
      "shift_employee[shift_time_id]":{
        required: "Please Select Shift",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });

</script>