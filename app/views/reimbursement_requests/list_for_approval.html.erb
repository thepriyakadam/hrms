<div class="box">
  <div class="box-header">
    <h3 class="box-title">Reimbursement Approval List</h3>
  </div>
	<div class="box-body">
		<table class="table table-bordered table-hover table-condensed">
		  <thead>
		    <tr>
		      <th>ID</th>
		      <th>Employee</th>
		      <th>Reimbursement head</th>
		      <th>Date</th>
		      <th>Amount</th>
		      <th>Action</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @reimbursement_requests.each do |reimbursement_request| %>
		      <tr>
		        <td><%= reimbursement_request.employee.manual_employee_code %></td>
		        <td><%= full_name(reimbursement_request.employee) %></td>
		        <td><%= reimbursement_request.reimbursement_head.try(:name) %></td>
		        <td><%= reimbursement_request.date %></td>
		        <td><%= reimbursement_request.amount %></td>
		        <td>
		        	<%= link_to 'Approve', approve_request_reimbursement_requests_path(reimbursement_request) ,class: 'btn btn-xs btn-primary' %>
		        	<%= link_to 'Reject', reject_request_reimbursement_requests_path(reimbursement_request) ,class: 'btn btn-xs btn-danger' %>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>