<div class="box">
  <div class="box-header">
    <h3 class="box-title">Performance Goal List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
         <th>Base</th>
         <th>Period</th>
         <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @goal_bunches.each do |g| %>
        <tr>
          <td> <%= g.period.try(:name) %></td>
          <td> From: <%= g.period.try(:from) %> To: <%= g.period.try(:to) %> </td>
          <td><%= link_to 'Show Employee List', period_list_reviewer_goal_bunches_path(period_id: g.period_id) ,class: 'btn btn-xs btn-info' %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

