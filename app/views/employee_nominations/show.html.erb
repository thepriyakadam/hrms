</tr>

<tr>
  <th><strong>Relation Type</strong></th>
  <td><%= @employee_nomination.relation_master.try(:name) %></td>

  <th><strong>Address</strong></th>
  <td><%= @employee_nomination.address %></td>
</tr>

<tr>
  <th><strong>City</strong></th>
  <td><%= @employee_nomination.city %></td>

  <th><strong>District</strong></th>
  <td><%= @employee_nomination.district.try(:name) %></td>
</tr>

<tr>
  <th><strong>State</strong></th>
  <td><%= @employee_nomination.state.try(:name) %></td>

  <th><strong>Country</strong></th>
  <td><%= @employee_nomination.country.try(:name) %></td>
</tr>

<tr>
  <th><strong>Pin Code</strong></th>
  <td><%= @employee_nomination.pin_code %></td>

  <th><strong>Phone No.</strong></th>
  <td><%= @employee_nomination.phone_no %></td>
</tr>

<tr>
  <th><strong>Mobile No.</strong></th>
  <td><%= @employee_nomination.mobile_no %></td>
 
 <th><strong>Email:</strong></th>
  <td><%= @employee_nomination.try(:email) %></td>
  </tr>

