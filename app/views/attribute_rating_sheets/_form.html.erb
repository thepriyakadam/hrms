<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Attribute Rating</h3>
  </div>
  <div class="box-body">
    <%= bootstrap_form_for(@attribute_rating_sheet) do |f| %>
    <table id="tbl" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Attribute & Definition</th>
          <th>Weightage</th>
          <th>Appraisee Comment</th>
          <th>Appraisee Rating</th>
        </tr>
      </thead>
      <tbody>
      <% @employee_attributes.each do |employee_attribute| %>
        <tr>
          <% if employee_attribute.is_confirm == true %>
          <td><%= employee_attribute.attribute_master.name %></td>
          <td><%= employee_attribute.weightage %></td>
          <td><%= text_field_tag 'appraisee_comment[]' %></td>
          <td><%= select_tag 'appraisee_rating[]',options_for_select(["1","2","3","4","5"]), class: 'form_control' %></td>
          <% else %>
          <% end %>
          <%= hidden_field_tag 'employee_attribute_id[]',{},value: employee_attribute.id %>
          <%= hidden_field_tag :appraisee_id, {},value: current_user.employee_id %>
        </tr>
      <% end %>
      </tbody>
    </table>

  <% if @employee_attributes.empty? %>

  <% else %>
    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit "Create Rating", class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
  
</div>
</div>
<% end %>
