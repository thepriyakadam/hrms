<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell ss:Index="1"><Data ss:Type="String">Sr No.</Data></Cell>
        <Cell ss:Index="2"><Data ss:Type="String">Employee Code</Data></Cell>

        <Cell ss:Index="3"><Data ss:Type="String">First Name</Data></Cell>
        <Cell ss:Index="3"><Data ss:Type="String">Middle Name</Data></Cell>
        <Cell ss:Index="3"><Data ss:Type="String">Last Name</Data></Cell>

        <Cell ss:Index="4"><Data ss:Type="String">Gender</Data></Cell>
        <Cell ss:Index="5"><Data ss:Type="String">Aadhar Card No</Data></Cell>
        <Cell ss:Index="6"><Data ss:Type="String">Pan Card No</Data></Cell>
        <Cell ss:Index="7"><Data ss:Type="String">Licence No</Data></Cell>
        <Cell ss:Index="8"><Data ss:Type="String">Marital Status</Data></Cell>
        <Cell ss:Index="9"><Data ss:Type="String">Nationality</Data></Cell>
        <Cell ss:Index="10"><Data ss:Type="String">Date of Birth</Data></Cell>
        <Cell ss:Index="11"><Data ss:Type="String">Blood Group</Data></Cell>
        <Cell ss:Index="12"><Data ss:Type="String">Permanent Address</Data></Cell>
        <Cell ss:Index="13"><Data ss:Type="String">Pin Code</Data></Cell>
        <Cell ss:Index="14"><Data ss:Type="String">Country</Data></Cell>

        <Cell ss:Index="15"><Data ss:Type="String">State</Data></Cell>
        <Cell ss:Index="16"><Data ss:Type="String">Distict</Data></Cell>
        <Cell ss:Index="17"><Data ss:Type="String">City</Data></Cell>
        <Cell ss:Index="18"><Data ss:Type="String">Current Address</Data></Cell>
        <Cell ss:Index="19"><Data ss:Type="String">Religion</Data></Cell>
        <Cell ss:Index="20"><Data ss:Type="String">Contact No</Data></Cell>
        <Cell ss:Index="21"><Data ss:Type="String">Email</Data></Cell>
        <Cell ss:Index="22"><Data ss:Type="String">Differently Abled</Data></Cell>
        <Cell ss:Index="23"><Data ss:Type="String">Disability Type</Data></Cell>
        <Cell ss:Index="24"><Data ss:Type="String">Employement Type</Data></Cell>
        <Cell ss:Index="25"><Data ss:Type="String">Employee Status</Data></Cell>
        <Cell ss:Index="26"><Data ss:Type="String">Company Location</Data></Cell>
        <Cell ss:Index="27"><Data ss:Type="String">Department</Data></Cell>  
      </Row>

      <% i = 0 %>
      <% @employees.each do |e| %>
        <% employee = slip.employee %>
        <% joining = employee.joining_detail %>
        <% bank = employee.employee_bank_detail %>
        <% workingday = slip.workingday %>
        <Row>
          <Cell ss:Index="1"><Data ss:Type="String"><%= i=i+1 %></Data></Cell>
          <Cell ss:Index="2"><Data ss:Type="String"><%= slip.employee.manual_employee_code %></Data></Cell>
          <Cell ss:Index="3"><Data ss:Type="String"><%= employee.first_name.to_s+" "+employee.middle_name.to_s+" "+employee.last_name.to_s %></Data></Cell>
          
          <Cell ss:Index="4"><Data ss:Type="String"><%= joining.employee_designation.try(:name) %></Data></Cell>
          <Cell ss:Index="5"><Data ss:Type="String"><%= joining.department.try(:name) %></Data></Cell>
          <Cell ss:Index="6"><Data ss:Type="String"><%= joining.cost_center.try(:name) %></Data></Cell>
          <Cell ss:Index="7"><Data ss:Type="String"><%= slip.year %></Data></Cell>
          <Cell ss:Index="8"><Data ss:Type="String"><%= slip.month %></Data></Cell>
          <Cell ss:Index="9"><Data ss:Type="String"><%= joining.employee_category.try(:name) %></Data></Cell>
          <Cell ss:Index="10"><Data ss:Type="String"><%= bank.account_no %></Data></Cell>
          <Cell ss:Index="11"><Data ss:Type="String"><%= bank.bank_name %></Data></Cell>
          <Cell ss:Index="12"><Data ss:Type="String"><%= joining.payment_mode.try(:name) %></Data></Cell>
          <Cell ss:Index="13"><Data ss:Type="String"><%= joining.employee_pf_no %></Data></Cell>
          <Cell ss:Index="14"><Data ss:Type="String"><%= joining.employee_efic_no %></Data></Cell>

          <% @addable_salaryslip_items = slip.salaryslip_components.where(is_deducted: false) %>
          <% @addable_salaryslip_items.each do |item| %>
            <% case item.salary_component.try(:name) %>
            <% when "Basic" %>
              <Cell ss:Index="15"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "HRA" %>
              <Cell ss:Index="16"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "Special Allowance" %>
              <Cell ss:Index="17"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "Convenience Allowance" %>
              <Cell ss:Index="18"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "Other Allowance" %>
              <Cell ss:Index="19"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "Washing Allowance" %>
              <Cell ss:Index="20"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "DA" %>
              <Cell ss:Index="21"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "Medical Allowance" %>
              <Cell ss:Index="22"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "Driver Allowance" %>
              <Cell ss:Index="23"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "Rembursement of Medical Allowence" %>
              <Cell ss:Index="24"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% when "Children Education Allowance" %>
              <Cell ss:Index="25"><Data ss:Type="Number"><%= item.actual_amount.round %></Data></Cell>
            <% else %>
            
            <% end %> <!-- switch case -->
          <% end %><!-- addable items -->
            <Cell ss:Index="26"><Data ss:Type="Number"><%= slip.actual_gross_salary.round %></Data></Cell>
          <% @addable_salaryslip_items.each do |item| %>
            <% case item.salary_component.try(:name) %>
            <% when "Basic" %>
              <Cell ss:Index="27"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "HRA" %>
              <Cell ss:Index="28"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Special Allowance" %>
              <Cell ss:Index="29"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Convenience Allowance" %>
              <Cell ss:Index="30"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Other Allowance" %>
              <Cell ss:Index="31"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Washing Allowance" %>
              <Cell ss:Index="32"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "DA" %>
              <Cell ss:Index="33"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Medical Allowance" %>
              <Cell ss:Index="34"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Driver Allowance" %>
              <Cell ss:Index="35"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Rembursement of Medical Allowence" %>
              <Cell ss:Index="36"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Children Education Allowance" %>
              <Cell ss:Index="37"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% else %>
            
            <% end %> <!-- switch case -->
          <% end %><!-- addable items -->
          <Cell ss:Index="38"><Data ss:Type="Number"><%= slip.calculated_gross_salary.round %></Data></Cell>

          <% @deducted_salaryslip_items = slip.salaryslip_components.where(is_deducted: true) %>
          <% @deducted_salaryslip_items.each do |item| %>
            <% case item.salary_component.try(:name) %>
            <% when "PF" %>
              <Cell ss:Index="39"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "ESIC" %>
              <Cell ss:Index="40"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Income Tax" %>
              <Cell ss:Index="41"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Food Deduction" %>
              <Cell ss:Index="42"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Other Deduction" %>
              <Cell ss:Index="43"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Society" %>
              <Cell ss:Index="44"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Society Loan" %>
              <Cell ss:Index="45"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Mobile Deduction" %>
              <Cell ss:Index="46"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Welfair" %>
              <Cell ss:Index="47"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% when "Prof. Tax" %>
              <Cell ss:Index="48"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
            <% else %>
            
            <% end %> <!-- switch case -->
            <% if item.salary_component_id.nil? %>
              <% if item.other_component_name == "Advance" %>
                <Cell ss:Index="49"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
              <% elsif item.other_component_name == "Retention" %>
                <Cell ss:Index="50"><Data ss:Type="Number"><%= item.calculated_amount.round %></Data></Cell>
              <% end %>
            <% end %>
          <% end %><!-- deducted items -->

          <Cell ss:Index="51"><Data ss:Type="Number"><%= slip.calculated_total_deduction.round %></Data></Cell>
          <Cell ss:Index="52"><Data ss:Type="Number"><%= slip.calculated_net_salary.round %></Data></Cell>
          <Cell ss:Index="53"><Data ss:Type="Number"><%= workingday.lwp_leave %></Data></Cell>
          <Cell ss:Index="54"><Data ss:Type="Number"><%= workingday.cl_leave %></Data></Cell>
          <Cell ss:Index="55"><Data ss:Type="Number"><%= workingday.el_leave %></Data></Cell>
          <Cell ss:Index="56"><Data ss:Type="Number"><%= workingday.esic_leave %></Data></Cell>

          <Cell ss:Index="57"><Data ss:Type="Number"><%= workingday.day_in_month %></Data></Cell>
          <Cell ss:Index="58"><Data ss:Type="Number"><%= workingday.present_day %></Data></Cell>
          <Cell ss:Index="59"><Data ss:Type="Number"><%= workingday.holiday_in_month %></Data></Cell>
          <Cell ss:Index="60"><Data ss:Type="Number"><%= workingday.week_off_day %></Data></Cell>
          <Cell ss:Index="61"><Data ss:Type="Number"><%= workingday.absent_day %></Data></Cell>
          <Cell ss:Index="62"><Data ss:Type="Number"><%= workingday.payable_day %></Data></Cell>
          <Cell ss:Index="63"><Data ss:Type="String"><%= employee.company_location.name %></Data></Cell>
        </Row><!-- Row -->
      <% end %><!-- slip -->
    </Table>
  </Worksheet>
</Workbook>