<style>
    th { text-align: left;}
    tr {page-break-inside: avoid;}
    div.alwaysbreak { page-break-before: always; }
    div.nobreak:before { clear:both; }
    div.nobreak{ page-break-inside: avoid;
    }
</style>

 <% @employee_promotions.each do |employee_promotion| %>
<table style="border-collapse: collapse; font-size:11pt;" border=1 width=1200 cellpadding="10">
<tr><th colspan="5"><center><strong><%= @employee_promotions.first.employee.company_location.company.try(:description) %><br> <%= @employee_promotions.first.employee.company_location.company.try(:address) %><br> <%= @employee_promotions.first.employee.department.try(:name) %> - <%= @employee_promotions.first.employee.company_location.try(:name) %></strong></center></th></tr>
<tr><th colspan="1">From Date: <%= employee_promotion.effective_from %></th><th colspan="3"><center> Promotion History of <%= @employee_promotions.first.try(:employee).try(:manual_employee_code) %> <%= full_name(@employee_promotions.first.try(:employee)) %></center></th><th colspan="1">To Date: <%= employee_promotion.effective_to %></th></tr>
  <tr>
        <th>Department</th>
        <th>Designation</th>
        <th>Grade</th>
        <th>Category</th>
        <th>CTC</th>
       
      
  </tr>
  <tr>
      <td><%= employee_promotion.employee.try(:company_location).try(:name) %> - <%= employee_promotion.employee.try(:department).try(:name) %></td>
      <td><%= employee_promotion.employee_designation.try(:name) %></td>
      <td><%= employee_promotion.employee_grade.try(:name) %></td>
      <td><%= employee_promotion.employee_category.try(:name) %></td>
      <td><%= employee_promotion.employee_ctc %></td>
    
      
  </tr>
  <tr>
    <th>Justification</th>
    <td colspan="5"><%= employee_promotion.justification %></td>
  </tr>
<% end %>