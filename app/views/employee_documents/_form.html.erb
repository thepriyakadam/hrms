 <%= bootstrap_form_for(@employee_document,html: {id: 'employee_document'},remote:true) do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %> 
      <div class="row">
        <div class="col-sm-3">
          <div class="field">
            <%= f.select :employee_id, employee_list_for_food_deduction, {include_blank: "Select Employee"} %>
          </div>
        </div>
           <div class="col-sm-3">
            <div class="form-group required">
              <%= f.text_field :name,label:'Document Name', placeholder: 'Name' %>
              </div>
              </div>

              <div class="col-sm-3">
            <div class="field">
              <%= f.file_field :document,label: 'Document(doc,docx,pdf only)' %>
            </div>
           </div>

            <div class="col-sm-3">
            <label>Status</label>
            <div class="field">
            <%= f.check_box :status , label:'Active'%>
          </div>
          </div>
          </div><br><br>
           <div class="row">
          <div class="col-sm-3">
            <div class="actions">
              <%= f.submit 'Create Employee Document',:class => class_name, data: { disable_with: data_info } %>
            </div>
          </div>
          </div>
<% end %> 
   