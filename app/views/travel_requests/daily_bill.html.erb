<div class="box">
  <div class="box-header">
    <h3 class="box-title">Expense Claim List</h3>
    <div class="pull-right">
    </div>
    </div>

<div class="box-body">
<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Sr. No</th>
      <!-- <th>ID</th>
      <th>Employee Name</th> -->
      <th>Place</th>
      <th>Date</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @travel_requests.each do |travel_request| %>
      <tr>
        <td><%= i = i + 1 %></td>
        <!-- <td><%#= travel_request.try(:employee).try(:manual_employee_code) %></td>
        <td><%#= full_name(travel_request.employee) %></td> -->
        <td><%= travel_request.place %></td>
        <td><%= travel_request.traveling_date.to_date %> to <%= travel_request.to.to_date %></td>
        <td>
            <% if @a = ReportingMastersTravelRequest.where(travel_request_id: travel_request.id).pluck(:status).first == true %>
            <%= link_to 'View', new_daily_bill_detail_path(travel_request_id: travel_request.id),class: 'btn btn-info btn-xs' %>
            <% else %>
            <%= link_to 'Add', new_daily_bill_detail_path(travel_request_id: travel_request.id),class: 'btn btn-primary btn-xs' %>
            <% end %>
            <!-- < if travel_request.is_confirm == true %>
            <small class="label label-primary">Sent for Approval</small>
            < else %> -->
            <!--<= link_to 'Confirm', is_confirm_travel_requests_path(travel_id: travel_request.id),class: 'btn btn-info btn-sm' %>-->
<!--             < end %>
 -->        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>