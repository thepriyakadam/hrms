<p id="notice"><%= notice %></p>

<h1>Listing Leave C Offs</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>C off date</th>
      <th>C off type</th>
      <th>C off expire day</th>
      <th>Expiry status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_c_offs.each do |leave_c_off| %>
      <tr>
        <td><%= leave_c_off.employee %></td>
        <td><%= leave_c_off.c_off_date %></td>
        <td><%= leave_c_off.c_off_type %></td>
        <td><%= leave_c_off.c_off_expire_day %></td>
        <td><%= leave_c_off.expiry_status %></td>
        <td><%= link_to 'Show', leave_c_off %></td>
        <td><%= link_to 'Edit', edit_leave_c_off_path(leave_c_off) %></td>
        <td><%= link_to 'Destroy', leave_c_off, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

