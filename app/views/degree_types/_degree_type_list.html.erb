<table id="example6" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @degree_types.each do |degree_type| %>
      <tr>
        <td><%= degree_type.code %></td>
        <td><%= degree_type.name %></td>
        <td><%= degree_type.description %></td>
        <td>
            <%= link_to '', edit_degree_type_path(degree_type),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  degree_type, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>