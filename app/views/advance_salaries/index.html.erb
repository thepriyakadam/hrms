<div class="box">
  <div class="box-header">
    <h3 class="box-title">Emplyee List</h3>
    <div class="pull-right">
      <%= link_to 'New Advance salary', new_advance_salary_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Advance Amount</th>
        <th>No of Instalment</th>
        <th>Instalment Amount</th>
        <th>Advance Date</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @advance_salaries.each do |advance_salary| %>
        <tr>
       
     
         <td><%= advance_salary.employee.try(:manual_employee_code) %></td>
         <td><%= advance_salary.employee.try(:first_name)+' '+advance_salary.employee.try(:middle_name)+' '+advance_salary.employee.try(:last_name) %></td>
         <td><%= advance_salary.advance_amount %></td>
         <td><%= advance_salary.no_of_instalment %></td>
         <td><%= advance_salary.instalment_amount %></td>
         <td><%= advance_salary.advance_date %></td>
         <td>
         <%= link_to '', edit_advance_salary_path(advance_salary), class: 'btn btn-sm btn-success fa fa-edit' %>
            <%= link_to '', advance_salary, method: :delete, data: { confirm: 'Are you sure?'},class: 'btn btn-sm  btn-danger fa fa-close' %>
            <%= link_to '', advance_salary ,class: 'btn btn-sm btn-default fa fa-eye' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>