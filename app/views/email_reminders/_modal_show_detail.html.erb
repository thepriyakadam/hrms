
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Email Reminder Detail </center></h4>
    </div>
    <div class="modal-body">
	    <table id="example2" class="table table-bordered table-hover table-condensed">
			  <thead>
			    <tr>
			      <th><strong>Task</strong></th>
			      <td><%= @email_reminder.task.try(:name) %></td>
			    </tr>

			    <tr>
			      <th><strong>Frequency</strong></th>
			      <td><%= @email_reminder.frequency %></td>
			    </tr>

			    <tr>
			      <th><strong>Task Date</strong></th>
			      <td><%= @email_reminder.task_date %></td>
			    </tr>

			    <tr>
			      <th><strong>Reminder From</strong></th>
			      <td><%= @email_reminder.reminder_from %></td>
			    </tr>

			    <tr>
			      <th><strong>Reminder To</strong></th>
			      <td><%= @email_reminder.reminder_to %></td>
			    </tr>

			    <tr>
			      <th><strong>Email To</strong></th>
			      <td><%= @email_reminder.email_to %></td>
			    </tr>

			    <tr>
			      <th><strong>Email CC</strong></th>
			      <td><%= @email_reminder.email_cc %></td>
			    </tr>

			    <tr>
			      <th><strong>Email BCC</strong></th>
			      <td><%= @email_reminder.email_bcc %></td>
			    </tr>

			    <tr>
			      <th><strong>Email Text</strong></th>
			      <td><%= @email_reminder.email_text %></td>
			    </tr>

			    <tr>
			      <th><strong>Status</strong></th>
			      <td><%= @email_reminder.status ? "Active" : "Inactive" %></td>
			    </tr>
			  </thead>
			</table>
    </div>
  </div>
</div>