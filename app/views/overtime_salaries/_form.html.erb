<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Create Overtime Salary</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= bootstrap_form_for(@overtime_salary,html: {id: 'overtime_salary'}) do |f| %>
        <div class="row">
          <div class="col-sm-3">
            <div class="form-group required">
           <%= f.select :employee_id, employee_list_by_company_location, {label: 'Employee',include_blank: " Select Employee"},{onchange:"var a={employee_id:$(this).val()}; $.get('/overtime_salaries/collect_basic',a,function(response){});",:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}  %>
           </div>
          </div>
          <div class="col-sm-3">
            <div id="basic_amount"></div>
          </div>
        </div>

      <div class="row">
      <div class="col-sm-3">
      <label>Overtime Date </label>
        <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
             <%= f.text_field :ot_date,hide_label:true, class: 'ot_date'%>
          </div>
        </div>
      </div>
          <div class="col-sm-3">
            <div class="form-group required">
             <%= f.text_field :ot_hrs,label:"OT Hrs"%>
            </div>
          </div>

          <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :attendence_bouns_amount,label:"Attendance Bouns" %>
            </div>
          </div>

          <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :paid_holiday_amount,label:"PH Amount" %>
            </div>
          </div>

          
        </div>
