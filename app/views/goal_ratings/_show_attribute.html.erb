<div class="modal-dialog" style="height:900px; max-height:1500px; width:800px; max-width:1000px;">
  <div class="modal-content">
   <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      
      <h5 class="modal-title"><center>Employee Attribute & Definition</center></h5>
    </div>
    <div class="modal-body">

      <table class="table table-bordered table-hover table-condensed">
          <thead>
               <tr>
                 <th>Attribute</th>
                 <td><%= @goal_rating.attribute_master.try(:name) %></td>
                </tr>
                <tr>
                  <th>Measure</th>
                  <td><%= @goal_rating.goal_measure%></td>
                </tr>
                <tr>
                  <th>Activity</th>
                  <td><%= @goal_rating.activity %></td>
                </tr>
                <tr>
             	    <th>Target</th>
             	    <td><%= @goal_rating.target %></td>
             	  </tr>
             	  <tr>
             	    <th>Weightage</th>
             	    <td><%= @goal_rating.goal_weightage %></td>
                </tr>
                <tr>
             	    <th>Aligned</th>
             	    <td><%= @goal_rating.aligned %></td>
                </tr>
         </thead>
      </table><br>
    </div>
  </div>
</div>
