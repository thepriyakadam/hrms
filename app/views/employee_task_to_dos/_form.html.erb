
<%= bootstrap_form_for(@employee_task_to_do,remote: true,html: {id: "employee_task_to_do"}) do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="field">
        <%= f.select :employee_id, all_employee_list,{hide_label: true,include_blank: " Select Employee" }%>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="field">
        <%= f.text_field :task_name,hide_label: true,placeholder: 'Task Name' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="field">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :task_date, hide_label: true, class: 'birth_date',placeholder: 'Task Date' %>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="field">
        <%= f.text_field :time,hide_label: true,placeholder: 'Time'%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="field">
        <%= f.check_box :status ,label: "Active/Inactive" %>
      </div>
    </div>
    
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Employee Task", class:'btn btn-primary btn-sm' %>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">


 $("#employee_task_to_do").validate({
    rules: {
      "employee_task_to_do[task_name]":{
        required: true
      }
    },
    messages: {
      "employee_task_to_do[task_name]":{
        required: "Please Specify Task Name"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });

  $(function(){
    $('.birth_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>