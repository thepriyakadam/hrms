<div class="box">
  <div class="box-header">
    <h3 class="box-title">Issue Request</h3>
    <!-- <div class="pull-right">
      <= link_to "New Issue Request",  new_issue_request_path, class: 'btn btn-primary' %> 
    </div> -->
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>
      <th>Issue Master</th>
      <th>Issue Tracker Group</th>
      <th>Date</th>
      <th>Time</th>
      <th>Issue Priority</th>
      <th>Upload Document</th>
      <th>Uplaod Image</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @issue_requests.each do |issue_request| %>
      <tr>
        <td><%= issue_request.issue_master.try(:name) %></td>
        <td><%= issue_request.issue_tracker_group.try(:name) %></td>
        <td><%= issue_request.date %></td>
        <td><%= issue_request.time %></td>
        <td><%= issue_request.issue_priority %></td>
        <td>
         <% if issue_request.document1_file_name == nil %>
           <small class="label label-default">Not Available</small>
             <% else %>
             <center><%= link_to '',download_screenshot_path(id: issue_request.id),class: 'btn btn-xs fa fa-download' %>
             <% end %>
             </center>
        </td>
        <td>
          <% if issue_request.document2_file_name == nil %>
              <small class="label label-default">Not Available</small>
              <% else %>
              <center><%= link_to '',download_screenshot_image_path(id: issue_request.id),class: 'btn btn-xs fa fa-picture-o' %></center>
              <% end %>
        </td>
        <td>
       <!--  <td><= link_to '', issue_request, class: 'btn btn-default fa fa-eye btn-sm' %> -->
        <%= link_to '',lock_request_issue_requests_path(issue_request),class: 'btn btn-sm btn-primary fa fa-lock',data: { confirm: 'Are you sure?' } %> 
            </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>