<%= bootstrap_form_for(@transaction_record,htlm: {id: 'transaction_record'},remote: true) do |f| %>
  
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
      <%= f.select :compliance_type_id,all_compliance_type,{label:'Compliance Type',include_blank: " Select Compliance Type"} %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :transaction_type,['Daily','Weekly','Monthly','Quarterly','Yearly'],{label: 'Type',include_blank: "Select Type"}%>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :submission_date, label: 'Date of Submission', class: 'submission'%>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :reminder_Date, label: 'Reminder Date', class: 'submission'%>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :previous_days, hide_label: true,placeholder: "e.g. 2"%>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :after_days, hide_label: true,placeholder: "e.g. 3"%>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :email_1, hide_label: true,placeholder: 'abc@gmail.com'%>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :email_2, hide_label: true,placeholder: "abc@gmail.com"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :status, hide_label: true,placeholder: "Status"%>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Transaction Record",class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>

<% end %>

<script type="text/javascript">
  $(function(){
    $('.submission').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-2:+8',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

<script>
$("#transaction_record").validate({
    rules: {
      "transaction_record[compliance_type_id]":{
        required: true,
      },
       "transaction_record[transaction_type]":{
        required: true,
      },
       "transaction_record[previous_days]":{
        required: true,
      },
       "transaction_record[after_days]":{
        required: true,
      },
       "transaction_record[reminder_Date]":{
        required: true,
      },
      "transaction_record[email_1]":{
        loginRegex: true
      }
       },
    messages: {
      "transaction_record[compliance_type_id]":{
        required: "Please specify Compliance Type",
      },
      "transaction_record[transaction_type]":{
        required: "Please specify Type",
      },
      "transaction_record[previous_days]":{
        required: "Please specify Days",
      },
      "transaction_record[after_days]":{
        required: "Please specify Days",
      },
      "transaction_record[reminder_Date]":{
        required: "Please specify Date",
      },
      "transaction_record[email_1]":{
        required: "Please specify Email",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>