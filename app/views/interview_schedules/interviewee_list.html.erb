<div class="box">
  <div class="box-header">
    <h3 class="box-title">Interview List</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Sr.No</th>
              <th>Candidate Name</th>
              <th>Interview Date</th>
              <th>Interview Time</th>
              <th>Download Resume/Photo</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
          <% i = 0 %>
            <% @interview_schedules.each do |interview_schedule| %>
              <tr>
                <td><%= i=i+1 %></td>
                <td><%= interview_schedule.candidate_name %></td>
                <td><%= interview_schedule.interview_date %></td>
                <td><%= interview_schedule.interview_time %></td>
                <td><%= link_to '', resume_list_interview_schedules_path(interview_schedule),class: 'btn btn-xs fa fa-download' %></td>
                <td>
                  <%= link_to ' Feedback', new_interview_analysis_path(interview_schedule),class: 'btn btn-xs btn-success fa fa-comment' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>

<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>