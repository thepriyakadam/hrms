<%= bootstrap_form_for(@survey_question,html: {id: 'survey_question'}, remote:true) do |f| %>
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group required">
          <%= f.select :survey_group_id,all_survey_group,{label: "Group",include_blank: "Select Group"} %>
          <%#= f.text_field :survey_group_id %>
        </div>
     </div> 
     <div class="col-sm-4">
      <div class="form-group required">  
       <div class="field">
        <%= f.text_field :question_code %>
       </div>
      </div>
     </div>  
      <div class="col-sm-4">
        <%= f.select :question_category,['General','Work Relation','Employee Management Retaion','House Keeping'],{include_blank: "Select Category"} %>
      </div>
    </div>
    <div class="row">  
      <div class="col-sm-8">
        <%= f.text_area :question %>
      </div>
      <div class="col-sm-4">
      <label>Status</label>
        <%= f.check_box :status,label:'Active' %>
      </div>
    </div>  
    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit'Create Question',:class => class_name, data: { disable_with: data_info } %>
        </div>
      </div>
    </div>
  <% end %>
  <br />
