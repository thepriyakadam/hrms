<div class="login-box">
  <div class="login-logo">
    <a><b>Registration</b></a>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign up to start your session</p>

    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email",required: true %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
      <label>Company Name</label>
        <%= f.text_field :subdomain, class: "form-control", placeholder: "Company Name", required: true,hide_label: true %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password", required: true %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="row">
        <div class="col-xs-3">
          <%= f.submit "Sign up",class: "btn btn-primary",data: {disable_with: "Signing up..."} %>
        </div><!-- /.col -->
        <div class="col-xs-3">
          <%= link_to 'Existing User', new_session_path(resource_name), class: 'btn btn-primary'%>
        </div>
      </div>
      <%= render "members/shared/links" %>
    <% end %>  
  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->