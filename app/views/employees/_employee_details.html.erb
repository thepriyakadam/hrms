<div class="box-body">

  <div style="width: auto; height: auto;
          padding: 10px;
          border: 5px solid gray;
          margin: 10;">
    <div style="float:left;"></div>
<div class="box-header">
   <center> <h3 class="box-title">Employee Information</h3></center>
    <div class="pull-right">
    <%= image_tag @employee.passport_photo.url, :size => "70x70" %>
    </div>
  </div><!-- /.box-header -->
    <!-- <center><b>PERSONAL </b><br><br></center> -->

    <table id="example2" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <td colspan="2"><b>Name :</b> <%= @employee.try(:first_name) %> <%= @employee.try(:middle_name) %> <%= @employee.try(:last_name) %></td></tr>

          <tr><td colspan="2"><b>Address : </b><%= @employee.permanent_address %></td></tr>
         <tr> <td><b>Contact No. :</b> <%= @employee.contact_no %></td>
          <td><b>Email :</b> <%= @employee.email %></td></tr>

         <tr> <td><b>DOB : </b><%= @employee.date_of_birth %></td>
              <td><b> Marital Status : </b> <%= @employee.marital_status%></td>
         </tr>
          <tr> <td><b>Nationality : </b><%= @employee.nationality.try(:name) %> </td>
           <td><b>Current Experience : </b>
              <% if @employee.joining_detail.joining_date == nil %>
                <%= %>
              <% else %>
                <% day = Date.today - @employee.joining_detail.joining_date.to_date %><% d = day.to_f/365 %><% int = d.to_i %><% remaining = d.to_f - int.to_f %><% day1 = remaining.to_f * 365 %><% day2 = day1.to_f/30 %>
                <% if int.to_i > 0 %>
                  <%= int.to_i %>.<%= day2.to_i %> <%= "year" %>
                <% else %>
                  <%= day2.to_i %><%= "month" %>
                <% end %>
              <% end %>
          </td></tr>
      </tbody>
 </table>

