<p id="notice"><%= notice %></p>

<h1>Listing Bonus Employers</h1>

<table>
  <thead>
    <tr>
      <th>Base component</th>
      <th>Limit amount</th>
      <th>Percentage</th>
      <th>Effective from</th>
      <th>Effective to</th>
      <th>Is active</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bonus_employers.each do |bonus_employer| %>
      <tr>
        <td><%= bonus_employer.base_component %></td>
        <td><%= bonus_employer.limit_amount %></td>
        <td><%= bonus_employer.percentage %></td>
        <td><%= bonus_employer.effective_from %></td>
        <td><%= bonus_employer.effective_to %></td>
        <td><%= bonus_employer.is_active %></td>
        <td><%= bonus_employer.is_confirm %></td>
        <td><%= link_to 'Show', bonus_employer %></td>
        <td><%= link_to 'Edit', edit_bonus_employer_path(bonus_employer) %></td>
        <td><%= link_to 'Destroy', bonus_employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

