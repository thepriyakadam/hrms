<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Detail</h3>
  </div>

<%= form_for :employee_goal,url: { action: 'print_detail',format: 'pdf'},:html => {:target => '_blank'}  do |f| %>
<div class="box-body">

<table id="example" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th><input type="checkbox" id="selectAll" value="selectAll"></th>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Designation</th>
        <th>Employement</th>
        <th>Contact No</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= check_box_tag "employee_ids[]", employee.id %></td>
          <td><%= employee.manual_employee_code %></td>
          <td><%= employee.first_name %> <%= employee.middle_name %> <%= employee.last_name %></td>
          <td><%= employee.joining_detail.try(:employee_designation).try(:name) %></td>
          <td><%= employee.employee_type.try(:name) %></td>
          <td><%= employee.contact_no %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br><br>
  
  <div class="col-sm-3">
        <%= f.submit "Print ",class: "btn btn-xl btn-warning fa fa-print" %>
  </div>

<% end %>
</div>
</div>

<script type="text/javascript">
$('#selectAll').click(function() {
  if (this.checked) {
    $(':checkbox').each(function() {
      this.checked = true;                       
    });
  } 
  else {
    $(':checkbox').each(function() {
      this.checked = false;                        
    });
  } 
});
</script>