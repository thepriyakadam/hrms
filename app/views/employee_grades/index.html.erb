<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Grade</h3>
    <div class="pull-right">
      <%= link_to "New Employee grade", new_employee_grade_path, class: 'btn btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>    
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_grades.each do |employee_grade| %>
      <tr>
        <td><%= employee_grade.name %></td>
         <td>
            <%= link_to '', employee_grade,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_employee_grade_path(employee_grade),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '',  employee_grade, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>