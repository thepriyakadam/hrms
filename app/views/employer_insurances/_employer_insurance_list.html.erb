<div class="box box-default">
<div class="box-header with-border">
</div><!-- /.box-header --><!-- 
<div class="box-body"></div> -->
<table id="example1" class="table table-bordered table-hover table-condensed">
 <thead>
    <tr>
      <th>Base component</th>
      <th>Percentage</th>
      <th>Effective from</th>
      <th>Effective to</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employer_insurances.each do |employer_insurance| %>
      <tr>
        <td>
          <% i = 0 %>
          <% employer_insurance.base_component.split(",").try(:each) do |e| %>
            <% if i == 0 %>
              <%= SalaryComponent.find(e.to_i).name %>
            <% else %>
              + <%= SalaryComponent.find(e.to_i).name %>
            <% end %>
            <% i = i + 1 %>
          <% end %>
        </td>
        <td><%= employer_insurance.percentage %></td>
        <td><%= employer_insurance.effective_from %></td>
        <td><%= employer_insurance.effective_to %></td>
        <td><%= employer_insurance.is_active ? "Active" : "Inactive" %></td>
        <td>
          <% if employer_insurance.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_employer_insurance_path(employer_insurance) ,class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  employer_insurance, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_employer_insurances_path(employer_insurance: employer_insurance),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>