
<%= bootstrap_form_for(@pf_master,html: {id: 'pf_master'}) do |f| %>
<div class="row">
    <div class="col-sm-3">
       <label>Effective Date</label>
      <div class="field">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :date_effective,hide_label: true, class: 'effective_date'%>
        </div>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="form-group required">
        <%= f.select :is_pf,[['Yes','true'],['No','false']],{label: 'PF',include_blank: " Select PF Option"} %>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="form-group required">
        <%= f.text_field :percentage %>
      </div>
    </div>
   
    <div class="col-sm-3">
    <label>Base Component</label>
      <div class="form-group required">
        <%=select_tag("components[]",options_for_select(SalaryComponent.all.collect {|ff| [ff.name, ff.id] }),{:multiple=>true,:id => "batches",class: "form-control"})%>
      </div>
    </div>
 
  <div class="col-sm-1">
      <label>Status </label>
      <div class="field">
        <%= f.check_box :is_active, label: 'Active'%>
      </div>
    </div>
</div>
  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit"Create PF Master", :class => class_name, data: { disable_with: data_info }%>
      </div>
    </div>
  </div>
  <br>
<% end %>

