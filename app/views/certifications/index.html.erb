<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listing Certifications</h3>
    <div class="pull-right">
      <%= link_to "New Certification", new_certification_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>Employee</th>
      <th>Name</th>
      <th>Year</th>
      <th>Duration</th>
      <th>description</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.employee.try(:id) %></td>
        <td><%= certification.name %></td>
        <td><%= certification.year_id %></td>
        <td><%= certification.duration %></td>
        <td><%= certification.description %></td>
        <td>
         <%= link_to '', certification,class: 'btn btn-default btn-sm fa fa-eye' %>
            <%= link_to '', edit_certification_path(certification),class: 'btn btn-success btn-sm fa fa-edit' %>
            <%= link_to '', certification, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>




       