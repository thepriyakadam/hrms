<div class="box">
  <div class="box-header">
    <h3 class="box-title">Approve/Reject Investment Declaration</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
          <th>ID</th>
          <th>Employee Name</th>
          <th>Department</th>
          <th>Contact No.</th>
          <th>Designation</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |e| %>
        <tr>
          <td><%= e.manual_employee_code %></td>
          <td><%= full_name(e)%></td>
          <td><%= e.try(:company_location).try(:name) %> - <%= e.try(:department).try(:name) %></td> 
          <td><%= e.try(:contact_no) %></td>
          <td><%= e.try(:joining_detail).try(:employee_designation).try(:name) %></td>
          <td><%= link_to 'View Declaration',investment_declaration_list_manager_self_services_path(employee_id: e.id),class: 'btn btn-sm btn-primary' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>