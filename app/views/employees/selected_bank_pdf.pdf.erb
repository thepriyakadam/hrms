<style>
    th {
        text-align: left;
    }
    tr {
        page-break-inside: avoid;
    }
    div.alwaysbreak { page-break-before: always; }
    div.nobreak:before { clear:both; }
    div.nobreak{ page-break-inside: avoid;
    }
</style>
   <table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10">
    <thead>
    <tr><td colspan="8"><center><strong><%= current_user.employee.company_location.company.try(:description) %></strong> <br>
        <%= current_user.employee.company_location.company.try(:address) %><br> 
        <%= current_user.employee.company_location.try(:name) %></center> </td></tr>
      <tr>
      <th>Employee Name</th>
      <th>Account No</th>
      <th>Bank Name</th>
      <th>Branch Name</th>
      <th>Contact No</th>
      <th>MICR Code</th>
      <th>Branch Code</th>
      <th>IFSC Code</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_bank_details.each do |employee_bank_detail| %>
      <tr>
        <td><%= full_name(employee_bank_detail.try(:employee))%></td>
        <td><%= employee_bank_detail.account_no %></td>
        <td><%= employee_bank_detail.bank.try(:name) %></td>
        <td><%= employee_bank_detail.branch_name %></td>
        <td><%= employee_bank_detail.contact_no %></td>
        <td><%= employee_bank_detail.micr_code %></td>
        <td><%= employee_bank_detail.branch_code %></td>
        <td><%= employee_bank_detail.ifsc_code %></td>
       </tr>
      <% end %>
    </tbody>
    </table>
