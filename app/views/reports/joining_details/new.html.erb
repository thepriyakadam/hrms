
<!--SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Joining Report</h3>
  </div><!-- /.box-header -->

  <div class="box-body">
    <%= bootstrap_form_for(:emploee, url: { action: 'joining_detail_report',format: 'xls'}) do |f| %>

      <div class="col-sm-3">
        <label>Company Location</label>
          <div class="field">
          <%= select :salary, :company_location_id, all_company_location,{include_blank: 'select Location'},{onchange:"var a={id:$(this).val()}; $.get('/reports/joining_details/collect_departments',a,function(response){});", class: "form-control"}%>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <div id="dept">
              
            </div>
          </div>
        </div>


        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Download Excel", class: "btn btn-sm btn-warning" %>
          </div>
        </div>

      </div><br>
    <% end %>
  </div><!-- /.box-body -->
</div><!-- /.box -->
