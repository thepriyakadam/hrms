<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <center>Add Housing Loan Details</center>
    </div>

    <div class="modal-body">
      <%#= bootstrap_form_for :policy_detail,url:{action:"policy_details"},html: {id: 'policy_detail'}, remote:true  do |f| %>
      <%= bootstrap_form_for(@interest_on_housing_loan,html: {id: 'interest_on_housing_loan'} ) do |f| %>
       <%#= f.hidden_field :investment_declaration_id , value: current_user.employee_id %>
       
        <%= f.hidden_field :investment_declaration_id , value: params[:format] %>
        <!-- <div class="col-sm-4">
          <div class="field">
            <%#= f.text_field :investment_declaration_id %>
          </div>
        </div> -->
        
        <div class="row">
          <div class="col-sm-4">
            <div class="field">
              <%= f.text_field :property_name, label:'Property Name' %>
            </div>
          </div>
          
          <div class="col-sm-4">
            <div class="field">
              <%= f.text_field :property_address, label:'Property Address' %>
            </div>
          </div>
          
          <div class="col-sm-4">
            <div class="field">
              <%= f.text_field :date_of_possession, label:'Possession Date', id:'datepicker' %>
            </div>
          </div>
        </div>  
          
        <div class="row">  
          <div class="col-sm-4">
            <div class="field">
              <%= f.text_field :lender_name, label:'Lender Name' %>
            </div>
          </div>
          
          <div class="col-sm-4">
            <div class="field">
              <%= f.text_field :lender_address, label:'Lender Adress' %>
            </div>
          </div>
          
          <div class="col-sm-4">
            <div class="field">
              <%= f.text_field :lender_pan_no, label:'Lender PAN No.' %>
            </div>
          </div>
        </div>  
          
        <div class="row">  
          <div class="col-sm-4">
            <div class="field">
              <%= f.text_field :estimated_interest, label:'Estimated' %>
            </div>
          </div>

          <div class="col-sm-4">
            <div class="field">
              <%= f.text_field :actual_interest, label:'Actual' %>
            </div>
          </div>

          <!-- <div class="col-sm-4">
            <div class="field">
              <%#= f.text_field :total_interest, label:'TOTAL INTEREST' %>
            </div>
          </div> -->
        </div>  

          <div class="row" align="center">
            <div class="col-sm-12">
              <%= f.submit "Submit", class: 'btn btn-sm btn-success fa fa-modx' %>
            </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
         $('#datepicker').datepicker({
   format: "yyyy-mm-dd"
  })
  .on('changeDate', function(ev){
  $('#datepicker').datepicker('hide');
});       
</script>