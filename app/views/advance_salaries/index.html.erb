<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Advance Salary List</h3>
    <div class="pull-right">
      <%= link_to "New Advance Salary", new_advance_salary_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    </div><br>
 
  <div class="box-body">
    <div id="comments">
    <% i = 0 %>
    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Sr. No</th>
        <th>Year</th>
        <th>Month</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @advance_salaries.each do |a| %>

        <% year = a.advance_date.strftime('%Y') %>
        <% month = a.advance_date.strftime('%B') %>
        <tr>
          <td><%= i = i + 1 %></td>
          <td><%= year %></td>
          <td><%= month %></td>
          <td><%= link_to '', advances_advance_salaries_path(year: year, month: month), class: 'btn btn-xs btn-default fa fa-eye' %></td>
        </tr>
        
      <% end %>
    </tbody>
  </table>
  </div>
<!--   <div id="advance_salaries_li_1"></div>
 --></div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
