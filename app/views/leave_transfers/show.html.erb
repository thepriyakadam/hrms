<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Leave Transfer</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">

      <tr>
        <th><strong>Employee</strong></th>
        <td><%= full_name(@leave_transfer.employee) %></td>
      </tr>

      <tr>
        <th><strong>Transfer To</strong></th>
        <td><%= full_name(@leave_transfer.transfer_to) %></td>
      </tr>

      <tr>
        <th><strong>Date</strong></th>
        <td><%= @leave_transfer.date %></td>
      </tr>

      <tr>
        <th><strong>No. of leaves</strong></th>
        <td><%= @leave_transfer.no_of_leave %></td>
      </tr>

      <tr>
        <th><strong>Status</strong></th>
        <td><%= @leave_transfer.status %></td>
      </tr>

      <tr>
        <th><strong>Employee Leave Balance</strong></th>
        <td><%= @leave_transfer.employee_leav_balance.from_date %> to <%= @leave_transfer.employee_leav_balance.to_date %></td>
      </tr>

      <tr>
        <th><strong>Reason</strong></th>
        <td><%= @leave_transfer.reason %></td>
      </tr>

    </table> <br>

    <%= link_to 'Back', new_leave_transfer_path,class: 'btn btn-sm btn-default fa fa-arrow-left' %>
  </div><!-- /.box-body -->
</div><!-- /.box -->
