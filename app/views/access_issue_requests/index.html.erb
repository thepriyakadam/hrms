<p id="notice"><%= notice %></p>

<h1>Listing Access Issue Requests</h1>

<table>
  <thead>
    <tr>
      <th>Issue tracker access</th>
      <th>Issue request</th>
      <th>Status</th>
      <th>Current status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @access_issue_requests.each do |access_issue_request| %>
      <tr>
        <td><%= access_issue_request.issue_tracker_access %></td>
        <td><%= access_issue_request.issue_request %></td>
        <td><%= access_issue_request.status %></td>
        <td><%= access_issue_request.current_status %></td>
        <td><%= link_to 'Show', access_issue_request %></td>
        <td><%= link_to 'Edit', edit_access_issue_request_path(access_issue_request) %></td>
        <td><%= link_to 'Destroy', access_issue_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

