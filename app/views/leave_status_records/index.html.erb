<h1>Listing Leave Status Records</h1>

<table>
  <thead>
    <tr>
      <th>Employee leav request</th>
      <th>Change status employee</th>
      <th>Status</th>
      <th>Change date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_status_records.each do |leave_status_record| %>
      <tr>
        <td><%= leave_status_record.employee_leav_request %></td>
        <td><%= leave_status_record.change_status_employee %></td>
        <td><%= leave_status_record.status %></td>
        <td><%= leave_status_record.change_date %></td>
        <td><%= link_to 'Show', leave_status_record %></td>
        <td><%= link_to 'Edit', edit_leave_status_record_path(leave_status_record) %></td>
        <td><%= link_to 'Destroy', leave_status_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

