
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Leave Category</th>
      <th>Expiry Date</th>
      <th>Remaining Balance</th>
      <th>Total Leave</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_leav_balances.each do |b| %>
      <tr>
        <td><%= b.leav_category.try(:name) %></td>
        <td><%= b.expiry_date %></td>
        <td><%= b.no_of_leave %></td>
        <td><%= b.total_leave %></td>
      </tr>
    <% end %>
  </tbody>
</table>
