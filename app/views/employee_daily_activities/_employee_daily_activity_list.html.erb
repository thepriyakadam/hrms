<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Employee Daily Activity List</h3> 
    </div><!-- /.box-header -->
        <div class="box-body"> 
      <table id="example2" class="table table-bordered table-hover table-condensed">
       <thead>
          <tr>
           
            <th>Date</th>
            <th>Project</th>
            <th>Day activity</th>
            <th>Next Day Plan</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @employee_daily_activities.each do |employee_daily_activity| %>
            <tr>

              
              <td><%= employee_daily_activity.day %></td>
              <td><%= employee_daily_activity.project_master.try(:name) %></td>
              <td><%= employee_daily_activity.today_activity %></td>
              <td><%= employee_daily_activity.tomorrow_plan %></td>
              <td>
              <%= link_to '', edit_employee_daily_activity_path(employee_daily_activity) ,class: 'btn btn-xs btn-success fa fa-edit',remote: true %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
</div>



