<p id="notice"><%= notice %></p>

<h1>Listing Event Details</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_details.each do |event_detail| %>
      <tr>
        <td><%= event_detail.date %></td>
        <td><%= event_detail.name %></td>
        <td><%= event_detail.description %></td>
        <td><%= event_detail.status %></td>
        <td><%= link_to 'Show', event_detail %></td>
        <td><%= link_to 'Edit', edit_event_detail_path(event_detail) %></td>
        <td><%= link_to 'Destroy', event_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

