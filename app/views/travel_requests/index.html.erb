<div class="box">
  <div class="box-header">
    <h3 class="box-title">Travel Request</h3>
    <div class="pull-right">
      <%= link_to "Create Travel Request", new_travel_request_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    </div>

<div class="box-body">

<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Employee ID</th>
      <th>Employee Name</th>
      <th>Department</th>
      <th>Approver</th>
      <th>Traveling Date</th>
      <th>Place</th>
      <th>Total Advance</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @travel_requests.each do |travel_request| %>
      <tr>
        <td><%= travel_request.employee.try(:manual_employee_code) %></td>
        <td><%= travel_request.employee.try(:first_name) %> <%= travel_request.employee.try(:middle_name) %> <%= travel_request.employee.try(:last_name) %></td>
        <td><%= travel_request.employee.company_location.try(:name) %> - <%= travel_request.employee.department.try(:name) %></td>
        <td><%= travel_request.reporting_master_id %></td>
        <td><%= travel_request.traveling_date %></td>
        <td><%= travel_request.place %></td>
        <td><%= travel_request.total_advance %></td>
        <td>
            <%= link_to 'Show', travel_request,class: 'btn btn-xs btn-info fa fa-check' %>
            <% if travel_request.current_status == "Pending" %>
             <%= link_to '', cancel_travel_request_travel_requests_path(travel_request),data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-trash' %>
             <% elsif travel_request.current_status == "Approved" %>
              <small class="label label-primary">Approved</small>
             <% elsif travel_request.current_status == "Reject" %>
              <small class="label label-danger">Reject</small>
              <% elsif travel_request.current_status == "Approved & Send Next" %>
              <small class="label label-info">Approved & Send Next</small>
              <% elsif travel_request.current_status == "Cancelled" %>
              <small class="label label-warning">Cancelled</small>
              <% else %>
               <small class="label label-danger">Revert</small>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>