<div class="box box-default">
   <div class="box-body"> 
 <%= bootstrap_form_for(@issue_root_cause) do |f| %>
 <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
              <%= f.select :issue_tracker_group_id,all_issue_tracker_group,{label:true,include_blank: "Select Group"} %>
            </div>
        </div> 
  <div class="col-sm-3">
    <div class="form-group required">
      <%= f.text_field :name,label:'Issue', placeholder: 'Issue' %>
    </div>
  </div>
   <div class="col-sm-3">
     <label>Status</label>
     <%= f.check_box :is_active,label:'Active' %>
    </div>
 <div class="col-sm-3">
     <label>Confirm</label>
    <%= f.check_box :is_confirm ,label:'Confirm'%>
  </div>
   <div class="col-sm-3">
    <label></label>
      <div class="actions">
       <%= f.submit'Create Root Cause',:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
<% end %>
