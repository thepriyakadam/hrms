<p id="notice"><%= notice %></p>

<h1>Listing Issue Tracker Members</h1>

<table>
  <thead>
    <tr>
      <th>Issue tracker group</th>
      <th>Employee</th>
      <th>Status</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_tracker_members.each do |issue_tracker_member| %>
      <tr>
        <td><%= issue_tracker_member.issue_tracker_group %></td>
        <td><%= issue_tracker_member.employee %></td>
        <td><%= issue_tracker_member.status %></td>
        <td><%= issue_tracker_member.is_confirm %></td>
        <td><%= link_to 'Show', issue_tracker_member %></td>
        <td><%= link_to 'Edit', edit_issue_tracker_member_path(issue_tracker_member) %></td>
        <td><%= link_to 'Destroy', issue_tracker_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue tracker member', new_issue_tracker_member_path %>
