
<%= bootstrap_form_for(@employee_monthly_day) do |f| %>
<%= hidden_field :employee_monthly_day, :employee_id, value: @employee.id%>
<div class="row">
  <div class="col-sm-3">
    <div class="field">
       <%= f.text_field :month %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="field">
       <%= f.text_field :year_id %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="field">
     <%= f.text_field :overtime %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-3">
    <div class="actions">
      <%= f.submit :class => class_name, data: { disable_with: data_info } %>
    </div>
  </div>
</div>
<% end %>