<%= bootstrap_form_for(@retention_money,html: {id: 'retention_money'}) do |f| %>
  <div class="row">
     <div class="col-sm-3">
        <div class="form-group required">
        <%= f.select :have_retention, [['Yes', true], ['No', false]],{label: 'Percentage',include_blank: "Select Percentage"},{onchange:"var a={have_retention:$(this).val()}; $.get('/retention_moneys/select_form',a,function(response){});",class: 'form-control'} %>
      </div>
    </div>
  </div>
 <div id="dropdown"></div>
  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name %>
      </div>
    </div>
  </div>
<% end %><br>


<script>
$("#retention_money").validate({
    rules: {
      "retention_money[have_retention]":{
        required: true,
      },
       },
    messages: {
      "retention_money[have_retention]":{
        required: "Please Select Percentage",
      },
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>

