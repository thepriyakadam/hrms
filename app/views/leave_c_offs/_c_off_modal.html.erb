<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Compensatory Off Information </center></h4>
    </div>
    <div class="modal-body">
    <table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <td><%= @leave_c_off.employee.try(:manual_employee_code) %></td>  
      <th>Employee Name</th>
      <td><%= full_name(@leave_c_off.employee) %></td>
    </tr>
    <tr>   
      <th>Comp. Off Date</th>
      <td><%= @leave_c_off.c_off_date %></td>
      <th>Comp. Off Type</th>
      <td><%= @leave_c_off.c_off_type %></td>
    </tr>
    <tr>   
      <th>Comp. Off Expiry Date</th>
      <td><%= @leave_c_off.c_off_expire_day %></td>
      <th>Expiry Status</th>
      <td><%= @leave_c_off.expiry_status %></td>
    </tr>
    <tr>   
      <th>Taken</th>
      <td><%= @leave_c_off.is_taken %></td>
      <th>Expiry Date</th>
      <td><%= @leave_c_off.expiry_date %></td>
    </tr>
    <tr>   
      <th>Leave Count</th>
      <td><%= @leave_c_off.leave_count %></td>
      <th>Is Expiry</th>
      <td><%= @leave_c_off.is_expire %></td>
    </tr>
    <tr>   
      <th colspan="3">Taken Date</th>
      <td><%= @leave_c_off.taken_date %></td>
    </tr>
  </thead>
</table>
</div>
<div class="modal-footer"></div>
</div>
</div>  