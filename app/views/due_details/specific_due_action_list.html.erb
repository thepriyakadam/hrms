<div class="box">
  <div class="box-header">
    <h6 class="box-title">No Due Action of : <%= @due_employee_detail.employee.try(:first_name) %> <%= @due_employee_detail.employee.try(:middle_name) %> <%= @due_employee_detail.employee.try(:last_name) %> ,Template Name : <%= @due_employee_detail.due_template.try(:name) %> ,No Due Owner: <%= @due_employee_detail.reporting_master.employee.try(:first_name) %> <%= @due_employee_detail.reporting_master.employee.try(:middle_name) %> <%= @due_employee_detail.reporting_master.employee.try(:last_name) %></h6>
<div class="box-body">
<table  class="table table-bordered table-hover table-condensed'">
      <thead>
        <tr>
          <th>Item Name</th>
          <th>Remark</th>
          <th>Amount</th>
          <th>Status</th>
          <th>Confirmed</th>
       </tr>
      </thead>

      <tbody>
        <% @due_actions.each do |due_action| %>
          <tr>
            <td><%= due_action.name %></td>
            <td><%= due_action.remark %></td>
            <td><%= due_action.amount %></td>
            <td><%= due_action.status ? "Yes" : "No" %></td>
            <td>
            <% if due_action.is_confirm == nil %>
            <small class="label label-primary">Not Confirmed</small>
            <% else %>
            <small class="label label-default">Confirmed</small>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
</table>
</div>
</div>
</div>


