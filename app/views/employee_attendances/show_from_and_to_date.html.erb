<div class="box">
  <div class="box-header">
    <% if @employee_attendance_id == nil %>
      <center><p class="text-primary"> Attendance Not Available </p></center> 
    <% else %>
      <table id="example" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr><td colspan="7"><center>Employee Attendance - <%=@start%> to <%=@end%> </center></td></tr>
          <tr>
            <th>ID</th>
            <th>Employee</th>
            <th>Present</th>
            <th>Designation</th>
            <th>Department</th>
            <th>Cost Center</th>
            <th>Contact No</th>
          </tr>
        </thead>
        <tbody>
          <% @employee_attendances.each do |a| %>
            <tr>
              <td><%= a.employee.manual_employee_code %></td>
              <td><%= a.employee.first_name %> <%= a.employee.middle_name %> <%= a.employee.last_name %></td>
              <td><%= a.present %></td>
              <td><%= a.employee.joining_detail.try(:employee_designation).try(:name) %></td>
              <td><%= a.employee.company_location.try(:name) %> - <%= a.employee.department.try(:name) %></td>
              <td><%= a.employee.joining_detail.cost_center.try(:name) %></td>
              <td><%= a.employee.contact_no %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <%= link_to " Excel Report ",show_from_and_to_date_employee_attendances_path(:employee => {:day => params[:employee][:day], :present => params[:employee][:present],:to_date => params[:employee][:to_date],:company_id => params[:employee][:company_id],:company_location_id => params[:employee][:company_location_id],:department_id => params[:employee][:department_id]},format: "xls"), class: "btn btn-xs btn-success" %>
    <%= link_to "PDF Report", show_from_and_to_date_employee_attendances_path(:employee => {:day => params[:employee][:day], :present => params[:employee][:present],:to_date => params[:employee][:to_date],:company_id => params[:employee][:company_id],:company_location_id => params[:employee][:company_location_id],:department_id => params[:employee][:department_id]}, format: "pdf"), class: "btn btn-xs btn-info", :target => "_blank" %>

    <% end %>
 <%= link_to "Back",select_from_and_to_date_employee_attendances_path,class: "btn btn-default btn-xs" %>
  </div>
</div>
<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>