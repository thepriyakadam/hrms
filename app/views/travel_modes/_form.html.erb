<%= bootstrap_form_for(@travel_mode,html: {id: 'travel_mode'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true, placeholder: 'Travel Mode Code' %>
      </div>
    </div> 
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Travel Mode Type' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#travel_mode").validate({
    rules: {
      "travel_mode[code]":{
        required: true,
      },
      "travel_mode[name]":{
        required: true,
      }
       },
    messages: {
      "travel_mode[code]":{
        required: "Please Specify Travel Mode Code",
      },
       "travel_mode[name]":{
        required: "Please Specify Travel Mode Type",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>