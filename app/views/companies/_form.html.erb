<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Create Employee</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= bootstrap_form_for(@company) do |f| %>
    
      <div class="row">
        
        <div class="col-sm-2">
          <div class="field">
           <%= f.text_field :name %>
           </div>
        </div>

        <div class="col-sm-2">
           <div class="field">
          <%= f.select :company_type_id, all_company_type %>
           </div>
        </div>

         <div class="col-sm-2">
          <div class="field">
           <%= f.text_field :registration_no %>
         </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :pan_card_no %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :starting_date, class: 'datemask'%>
          </div>
        </div>
        
        
    </div>

   <div class="row">
         <div class="col-sm-12">
          <div class="field">
           <%= f.text_area :address %>
          </div>
        </div>
   </div>


        
    <div class="row">
         <div class="col-sm-2">
          <div class="field">
           <%= f.text_field :city %>
          </div>
        </div>
       

        <div class="col-sm-2">
          <div class="field">
           <%= f.text_field :district %>
          </div>
        </div>
   

         <div class="col-sm-2">
          <div class="field">
           <%= f.number_field :pin_code %>
          </div>
        </div>


         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :state %>
          </div>
        </div>

         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :contact_no %>
         </div>
        </div>
    </div>

   <div class="row">
     <div class="col-sm-2">
          <div class="field">
           <%= f.text_field :tax_no %>
         </div>
        </div>

       <div class="col-sm-2">
          <div class="field">
           <%= f.text_field :professional_tax_no %>
          </div>
        </div>

         <div class="col-sm-2">
          <div class="field">
           <%= f.text_field :email %>
         </div>
        </div> 
        

         <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :web_site %>
          </div>
        </div>

          
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :ceo_name %>
          </div>
        </div>

      </div>


      <div class="row">
         <div class="col-sm-3">
          <div class="actions">
           <%= f.submit %>
          </div>
        </div>
      </div>
    <% end %>
  </div><!-- /.box-body -->
  <div class="box-footer">
    Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about the plugin.
  </div>
</div><!-- /.box -->
