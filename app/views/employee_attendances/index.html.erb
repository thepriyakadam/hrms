<p id="notice"><%= notice %></p>

<h1>Listing Employee Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Employee Name</th>
      <th>Day</th>
      <th>Present</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_attendances.each do |employee_attendance| %>
      <tr>
        <td><%= employee_attendance.employee.try(:manual_employee_code) %></td>
        <td><%= employee_attendance.employee.try(:first_name) %> <%= employee_attendance.employee.try(:middle_name) %> <%= employee_attendance.employee.try(:last_name) %></td>
        <td><%= employee_attendance.day %></td>
        <td><%= employee_attendance.present %></td>
        <td><%= link_to 'Show', employee_attendance %></td>
        <td><%= link_to 'Edit', edit_employee_attendance_path(employee_attendance) %></td>
        <td><%= link_to 'Destroy', employee_attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

