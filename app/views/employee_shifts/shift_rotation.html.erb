<div class="box">
  <div class="box-header">
    <h3 class="box-title">Attendance List</h3>
    <div class="pull-right">
      <%= link_to "New Attendance", new_attendance_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Shift Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Action</th>
      </tr>
  </thead>

  <tbody>
    <% @shift_rotations.each do |rotation| %>
      <tr>
        <td><%= rotation.company_shift.try(:name) %></td>
        <td><%= rotation.start_date %></td>
        <td><%= rotation.end_date %></td>
        <td>
          <%= link_to '', employee_shift_list_employee_shifts_path(rotation),class: 'btn btn-sm btn-default fa fa-eye' %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>