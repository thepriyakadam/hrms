<div class="box">
  <div class="box-header">
    <h3 class="box-title">Working Day</h3>
    
    
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Advance salary</th>
        <th>Instalment date</th>
        <th>Instalment amount</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
       <% @instalments.each do |instalment| %>
        <tr>
          <td><%= instalment.advance_salary %></td>
          <td><%= instalment.instalment_date %></td>
          <td><%= instalment.instalment_amount %></td>
          <td>
            <%= link_to '', edit_instalment_path(instalment), class: 'btn btn-sm btn-success fa fa-edit',remote:true %>
            <%= link_to '', instalment, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-sm  btn-danger fa fa-close' %>
            <%= link_to '', instalment,class: 'btn btn-sm btn-default fa fa-eye' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>