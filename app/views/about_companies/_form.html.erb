<div class="box box-default">
   <div class="box-body"> 
<%= bootstrap_form_for(@about_company,html: {id: 'about_company'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,label:'Code', placeholder: 'Code' %>
      </div>
    </div> 
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,label:'Questions', placeholder: 'Questions' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :description,label:'Description', placeholder: 'Description' %>
      </div>
    </div>
     <div class="col-sm-3">
            <div class="field">
            <%= f.select :status,[['Active','true'],['Inactive','false']],{label: 'Status',include_blank: " Select Status"} %>
          </div>
          </div>
          </div>
     <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit 'Create About Company',:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
  </div>
  </div>

<% end %>