<div class="box">
  <div class="box-header">
    <h3 class="box-title">Performance Period</h3>
    <div class="pull-right">
      <%= link_to "New Period", new_performance_period_path, class: 'btn btn-sm btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @performance_periods.each do |performance_period| %>
          <tr>
            <td><%= performance_period.title %></td>
            <td><%= performance_period.description %></td>
            <td><%= performance_period.start_date %></td>
            <td><%= performance_period.end_date %></td>
            <td><%= performance_period.is_open %></td>
            <td>
            <%= link_to '', edit_performance_period_path(performance_period),class: 'btn btn-xs btn-success fa fa-edit' %>
            <%= link_to '', performance_period, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-danger fa fa-close' %>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>