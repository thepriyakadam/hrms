<div class="box box-default">
  <div class="box-body">
    <table id="example5" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |e| %>
          <tr> 
            <td><%= e.manual_employee_code %></td>
            <td><%= full_name(e) %></td>
            <td>
              <%#= link_to 'Declaration', add_employee_declaration_investment_declarations_path(employee_id: e.id),class: 'btn btn-primary btn-xs' %> 
              <%= link_to '', show_declaration_details_investment_declarations_path(employee_id: e.id),class: 'btn btn-default btn-xs fa fa-eye' %> 
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example5').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>