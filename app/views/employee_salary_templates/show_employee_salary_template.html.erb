<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Salary Template</h3>
    <div class="box-tools pull-right">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <div id="myModal"></div>    
      </div>
    </div>

    <table class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Salary Component</th>
          <th>Deducted</th>
          <th>Parent Component</th>
          <th>Percentage</th>
          <th>To Be Paid</th>
          <th>Monthly Amount</th>
          <th>Annual Amount</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_salary_templates.each do |template| %>
          <tr>
           <td><%= template.try(:salary_component).try(:name)%></td>
           <td><%= template.try(:is_deducted)%></td>
           <td><%= template.try(:parent_salary_component).try(:name)%></td>
           <td><%= template.try(:percentage)%></td>
           <td><%= template.try(:to_be_paid)%></td>
           <td align="right"><%= template.try(:monthly_amount)%></td>
           <td align="right"><%= template.try(:annual_amount)%></td>
           <td><%= link_to '', edit_employee_salary_template_path(template), class: 'btn btn-success btn-xs fa fa-edit',remote:true %></td>
          </tr>
        <% end %> 
        <tr>
          <th>Total</th>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td align="right"><%= @employee_salary_templates.sum(:monthly_amount) %></td>
          <td align="right"><%= @employee_salary_templates.sum(:annual_amount) %></td>
          <td></td>
        </tr>    
      </tbody>
    </table>
    <%= link_to 'Back', fresh_template_employee_templates_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
  </div><!-- /.box-body -->
</div><!-- /.box -->