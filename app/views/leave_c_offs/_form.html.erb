<div class="box-body">
  <%= bootstrap_form_for(@leave_c_off,html: {id: 'leave_c_off'},remote: true) do |f| %>
    <div class="row">
     <div class="col-sm-3">
          <div class="form-group required">
           <%= f.select :employee_id, employee_list_by_company_location, {label: 'Employee ',include_blank: " Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}  %>
           </div>
        </div>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <label>Date </label>
        <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :c_off_date,hide_label: true,class: 'c_off_date'%>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group required">
          <%= f.select :c_off_type,['Full Day','Half Day'],{label: 'C_Off Type',include_blank: " Select C_off Type"} %>
       </div>
      </div> 
      <div class="col-sm-3">
        <div class="form-group required">
          <%= f.text_field :c_off_expire_day, label:'Applicable Day'%>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="field">
         <%= f.check_box :expiry_status %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit :class => class_name, data: { disable_with: data_info } %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
 
  $(function(){
    $('.c_off_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:-0',
    dateFormat: 'dd-mm-yy' });

   }); 

  $("#leave_c_off").validate({
  rules: {
    "leave_c_off[employee_id]":{
      required: true
    },
    "leave_c_off[c_off_date]":{
      required: true
    },
    "leave_c_off[c_off_type]":{
      required: true
    },
    "leave_c_off[c_off_expire_day]":{
      required: true
    }
  },
  
  errorPlacement: function(error, element) {
   error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
   error.insertAfter(element.parent(element));
  }
}); 

$(document).ready(function() {
  $(".select2").select2();
});

</script>
