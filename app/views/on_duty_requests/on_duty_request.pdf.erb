<style type="text/css">
    th { text-align: left; }
    tr { page-break-inside: avoid; }
    div.alwaysbreak { page-break-before: always; }
    div.nobreak:before { clear:both; }
    div.nobreak{ page-break-inside: avoid;}
</style>
   
  
 <table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10">
        <% i = 0 %>
        <tr><td colspan="9"><center>
       <% if current_user.employee.company_location.company.company_logo == nil %>
      <% else %>
        <center> <%= wicked_pdf_image_tag current_user.employee.company_location.company.company_logo.url, :size => "90x50" %></center>
        <%end%>
        <strong><%= current_user.employee.company_location.company.try(:description) %></strong> <br>
        <%= current_user.employee.company_location.company.try(:address) %> </center> 
        </td></tr>

        <tr><th colspan="9"><center> Employee On Duty Request Report </center></th></tr>

  
    <tr>
      <th>Sr.No.</th>
      <th>ID</th>
      <th>Employee </th>
      <th>Leave Type</th>
      <th>No. Of Days</th>
      <th>From Date</th>
      <th>To Date</th>
      <th>Reason</th>
      <th>Status</th>
    </tr>

    <% @on_duty_requests.each do |on_duty_request| %>
      <tr>
      <td><%= i = i+1 %></td>
        <td><%= on_duty_request.employee.try(:manual_employee_code) %></td>
        <td><%= full_name(on_duty_request.employee) %></td>
        <td><%= on_duty_request.leave_type %></td>
        <td><%= on_duty_request.no_of_day %></td>
        <td><%= on_duty_request.start_date.to_date %></td>
        <td><%= on_duty_request.end_date.to_date %></td>
        <td><%= on_duty_request.reason %></td>
        <td><%= on_duty_request.current_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>