<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Experience Detail </center></h4>
    </div>
    <div class="modal-body">
<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th><strong>Employee</strong></th>
      <td> <%= full_name(@experience.employee) %></td>
</tr>

 <tr>
      <th><strong>Company Name</strong></th>
      <td> <%= @experience.company_name %></td>
</tr>

<tr>
      <th> <strong>Designation</strong></th>
      <td> <%= @experience.designation %></td>
    </tr>

    <tr>
      <th> <strong>Date</strong></th>
      <td><% if @experience.start_date == nil %>
      <%elsif @experience.end_date == nil %>
       <%= @experience.start_date %> To <small class= "label label-success">To be continuing </small>
      <% else%>
      <%= @experience.start_date %> To  <%= @experience.end_date %>
      <%end%>
      </td>
    </tr>
    <tr>
      <th> <strong>Experience</strong></th>
      <td> <%= @experience.no_of_year %></td>
    </tr>

    <tr>
      <th><strong>CTC</strong></th>
      <td> <%= @experience.ctc %></td>
    </tr>

  </thead>
</table>
</div>
<div class="modal-footer"></div>
</div>
</div>  