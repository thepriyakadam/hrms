<%= bootstrap_form_for(@well_faire,html: {id: 'well_faire'}) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <div class="form-group required">
        <%= f.select :month,['January','February','March','April','May','June','July','August','September','October','November','December'],{label: 'Select Month',include_blank: " Select Month"} %>
        </div>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <div class="field">
        <%= f.text_field :amount %>
        </div>
      </div>
    </div>

    <div class="col-sm-1">
      <label>Status </label>
      <div class="field">
        <%= f.check_box :status, label: 'Active'%>
      </div>
    </div>

    <div class="col-sm-3">
    <label></label>
      <div class="actions">
        <%= f.submit "Create Welfare",:class => class_name %>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#well_faire").validate({
    rules: {
      "well_faire[month]":{
        required: true,
      }
    },
    messages: {
      "well_faire[month]":{
        required: "Please Specify Month",
      }  
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>


