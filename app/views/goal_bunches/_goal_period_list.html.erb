<div class="box">
  <div class="box-header">
    <h3 class="box-title">Goal Approval - My Team</h3>
  </div>
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
          <th>ID</th>
          <th>Employee</th>
          <th>Department</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |e| %>
          <tr>
            <td><%= e.employee.manual_employee_code %></td>
            <td><%= full_name(e.employee) %></td>
            <td><%= e.employee.company_location.try(:name) %> - <%= e.employee.department.try(:name) %></td> 
            <td>
              <% if e.goal_approval == false %>
                <%= link_to 'Approve Goals', goal_approval_goal_bunches_path(id: e.id,emp_id: e.employee_id,period_id: @period.id) ,class: 'btn btn-xs btn-warning' %>
              <% else %>
                  <%= link_to 'View Goals', goal_approval_goal_bunches_path(id: e.id,emp_id: e.employee_id,period_id: @period.id) ,class: 'btn btn-xs btn-info' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'Back',subordinate_list_goal_bunches_path,class: 'btn btn-sm btn-default fa fa-arrow-left'%>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>
