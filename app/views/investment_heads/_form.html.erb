<%= bootstrap_form_for(@investment_head,html: {id: 'investment_head'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :section_id, section_all, {label:'Section',include_blank: " Select Section"} %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :description,label:'Description', placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :document_name,label:'Document Name', placeholder: 'Document Name' %>
      </div>
    </div>

    <div class="col-sm-3">
      <label>Multiple Investment</label>
      <div class="field">
        <%= f.check_box :multiple_investment, label:'Active' %>
      </div>
    </div>  

    <div class="col-sm-3">
    <label></label>
      <div class="actions">
        <%= f.submit 'Create Investment Head',:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>
