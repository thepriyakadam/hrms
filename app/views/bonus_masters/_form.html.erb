<%= bootstrap_form_for(@bonus_master,html: {id: 'bonus_master'},remote:true) do |f| %>
  <div class="row">
   
    <div class="col-sm-3">
      <div class="form-group required">       
        <%= f.select :is_bouns,[['Yes','true'],['No','false']],{label: 'Overtime Option',include_blank: " Select Overtime Option"} %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :limit_amount,label: 'Limit Amount' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :bonus_persentage,label:'Bonus Percentage' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="form-group required">       
        <%= f.select :status,[['Active','true'],['Inactive','false']],{label: 'OT Status',include_blank: " Select Status Option"} %>
      </div>
    </div>
  </div>
     
  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit"Create Bonus Master", :class => class_name %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">

$("#bonus_master").validate({
  rules: {
    "bonus_master[is_bouns]":{
      required: true
    },
    "bonus_master[limit_amount]":{
      required: true
    },
    "bonus_master[bonus_persentage]":{
      required: true
    },
    "bonus_master[status]":{
      required: true
    }
  },
  
  errorPlacement: function(error, element) {
   error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
   error.insertAfter(element.parent(element));
  }
});
</script>