<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell ss:Index="1"><Data ss:Type="String">ID </Data></Cell>
        <Cell ss:Index="2"><Data ss:Type="String">Employee</Data></Cell>
        <Cell ss:Index="3"><Data ss:Type="String">Leave Category</Data></Cell>
        <Cell ss:Index="4"><Data ss:Type="String">Leave Type </Data></Cell>
        <Cell ss:Index="5"><Data ss:Type="String">No. Of Days </Data></Cell>
        <Cell ss:Index="6"><Data ss:Type="String">Start Date </Data></Cell>
        <Cell ss:Index="7"><Data ss:Type="String">End Date </Data></Cell>
        <Cell ss:Index="7"><Data ss:Type="String">Reason </Data></Cell>
        <Cell ss:Index="8"><Data ss:Type="String">Status </Data></Cell>
      </Row>

      <% @employee_leav_requests.each do |employee_leav_request| %>
      <Row>
          <Cell ss:Index="1"><Data ss:Type="String"><%= employee_leav_request.employee.try(:manual_employee_code) %></Data></Cell>
          <Cell ss:Index="2"><Data ss:Type="String"><%= full_name(employee_leav_request.employee) %></Data></Cell>
          <Cell ss:Index="3"><Data ss:Type="String"><%= employee_leav_request.leav_category.try(:name) %></Data></Cell>
          <Cell ss:Index="4"><Data ss:Type="String"><%= employee_leav_request.leave_type %></Data></Cell>
          <Cell ss:Index="5"><Data ss:Type="String"><%= employee_leav_request.leave_count %></Data></Cell>
          <Cell ss:Index="6"><Data ss:Type="String"><%= employee_leav_request.start_date.to_date %></Data></Cell>
          <Cell ss:Index="7"><Data ss:Type="String"><%= employee_leav_request.end_date.to_date %></Data></Cell>
          <Cell ss:Index="8"><Data ss:Type="String"><%= employee_leav_request.reason %></Data></Cell>
          <Cell ss:Index="8"><Data ss:Type="String"><%= employee_leav_request.current_status %></Data></Cell>
      </Row>
      <% end %>
    </Table>
  </Worksheet>
</Workbook>





