<div class="box">
  <div class="box-header">
    <h3 class="box-title">Job Profile</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example3" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Vacancy Code</th>
              <th>Job Title</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @vacancy_masters.each do |vacancy_master| %>
              <tr>
                <td><%= vacancy_master.vacancy_code %></td>
                <td><%= vacancy_master.vacancy_name %></td>
                <td>
                  <%= link_to '', show_refferal_vacancy_masters_path(vacancy_master_id: vacancy_master.id),class: 'btn btn-xs btn-default fa fa-eye' %>
                  <% if vacancy_master.is_confirmed == true %>
                  <%= link_to 'View Resume',refferal_form_selected_resumes_path(vacancy_master_id: vacancy_master.id),class: 'btn btn-xs btn-info' %>
                  <% else %>
                  <%= link_to 'Add Resume',refferal_form_selected_resumes_path(vacancy_master_id: vacancy_master.id),class: 'btn btn-xs btn-primary' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example3').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>