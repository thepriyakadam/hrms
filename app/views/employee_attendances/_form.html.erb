<%= form_for(@employee_attendance) do |f| %>
  <div class="field">
    <%= f.label :employee_id %><br>
    <%= f.text_field :employee_id %>
  </div>
  <div class="field">
    <%= f.label :day %><br>
    <%= f.date_select :day %>
  </div>
  <div class="field">
    <%= f.label :present %><br>
    <%= f.text_field :present %>
  </div>
  <div class="field">
    <%= f.label :in %><br>
    <%= f.time_select :in %>
  </div>
  <div class="field">
    <%= f.label :out %><br>
    <%= f.time_select :out %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
