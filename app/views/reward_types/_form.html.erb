<%= bootstrap_form_for(@reward_type,html: {id: 'reward_type'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true,placeholder: 'Code' %>
      </div>
    </div> 
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true,placeholder: 'Name' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :description,hide_label:true,placeholder: 'Decription' %>
      </div>
    </div>

     <div class="col-sm-3">
      <div class="field">
        <%= f.check_box :status,hide_label:true,placeholder: 'status' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit'Create Reward Type', :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %><br>

