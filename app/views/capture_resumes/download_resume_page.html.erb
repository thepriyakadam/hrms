<div class="box">
  <div class="box-header">
    <h3 class="box-title">Download Resume</h3>
    <div class="pull-right">
      <%= link_to "Capture Resume", new_capture_resume_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    </div>
<div class="box-body">
<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name of candidate</th>
      <th>Post applied</th>
      <th>Educational Qualification</th>
      <th>Work Experience</th>
      <th>Email Id</th>
      <th>Current Job Title</th>
      <th>Download Resume</th>
      <th>Download Image</th>
    </tr>
  </thead>

  <tbody>
    <% @capture_resumes.each do |capture_resume| %>
      <tr>
        <td><%= capture_resume.name_of_candidate %></td>
        <td><%= capture_resume.post_applied %></td>
        <td><%= capture_resume.degree.try(:name) %></td>
        <td><%= capture_resume.work_experience %></td>
        <td><%= capture_resume.email %></td>
        <td><%= capture_resume.current_job_title %></td>
        <td><%= link_to ' Download Resume', download_path(id: capture_resume.id),class: 'btn btn-xs btn-info fa fa-download' %></td>
        <td><%= link_to ' Download Image', download_photo_path(id: capture_resume.id),class: 'btn btn-xs btn-warning fa fa-picture-o' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Capture resume', new_capture_resume_path %></div>
</div>
<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>