<p id="notice"><%= notice %></p>

<h1>Listing Employee Promotions</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Department</th>
      <th>Employee designation</th>
      <th>Employee grade</th>
      <th>Employee category</th>
      <th>Employee ctc</th>
      <th>Justification</th>
      <th>Effective from</th>
      <th>Effective to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_promotions.each do |employee_promotion| %>
      <tr>
        <td><%= employee_promotion.employee %></td>
        <td><%= employee_promotion.department %></td>
        <td><%= employee_promotion.employee_designation %></td>
        <td><%= employee_promotion.employee_grade %></td>
        <td><%= employee_promotion.employee_category_id %></td>
        <td><%= employee_promotion.employee_ctc %></td>
        <td><%= employee_promotion.justification %></td>
        <td><%= employee_promotion.effective_from %></td>
        <td><%= employee_promotion.effective_to %></td>
        <td><%= link_to 'Show', employee_promotion %></td>
        <td><%= link_to 'Edit', edit_employee_promotion_path(employee_promotion) %></td>
        <td><%= link_to 'Destroy', employee_promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

