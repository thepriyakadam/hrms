<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title"> Salary Slip Datewise Report </h3>
  </div><!-- /.box-header -->

  <div class="box-body">
    <%= bootstrap_form_for(:employee_template, url: { action: 'employee_salaryslip_details'},html: {id: 'employee_template'},remote:true) do |f| %>
      <div class="row">
                <div class="col-sm-3">
          <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= text_field :employee_template,:start_date,{class: 'form-control joining_date',placeholder:'From Date'} %>
          </div>
        </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= text_field :employee_template,:end_date,{class: 'form-control joining_date',placeholder:'To Date'} %>
          </div>
        </div>
        </div>

        <!-- <div class="col-sm-3">
            <div class="form-group required">
              <%#=f.select :company_id, all_company,{include_blank: "Select Company",hide_label: true},{onchange:"var a={id:$(this).val(), form : 'employee'}; $.get('/employees/collect_company_location',a,function(response){});"}%>
            </div>
          </div>

          <div class="col-sm-3">
            <div class="form-group required">
              <div id="company_location">
                <%#= render 'employees/company_location_dropdown' %> 
            </div>
            </div>
          </div>
        </div> -->
      <div class="row">
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
        </div>
        <div id="employee_salaryslip_details"></div>
    <% end %>
  </div><!-- /.box-body -->
</div><!-- /.box -->


<script type="text/javascript">
  $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#employee_template").submit();
  })
</script>

<script>
$("#employee_template").validate({
    rules: {
      "employee_template[start_date]":{
        required: true,
      },
      "employee_template[end_date]":{
        required: true,
      }
    },
    messages: {
      "employee_template[start_date]":{
        required: "Please select Date",
      },
      "employee_template[end_date]":{
        required: "Please select Date",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>

<script type="text/javascript">
  $(function(){
    $('.joining_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

