<%= bootstrap_form_for(@employee_goal,html: {id: "employee_goal"},remote: true) do |f| %>
<div id="error"></div>
  <%= f.hidden_field :employee_id,value: @employee.id %>
  <%= f.hidden_field :emp_head,value: current_user.employee_id %>

  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.select :period_id,all_period_type,{label: 'Period',include_blank: " Select Period"} %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.select :goal_perspective_id,all_goal_perspective_type,{label: 'Goal Perspective',include_blank: "Select Goal Perspective"}%>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :goal_measure,{label: 'Goal Measure',include_blank: "Select Goal Measure", placeholder: 'e.g.:punctuality'} %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :target,{label: 'Goal Targets/Units', placeholder: 'e.g.:100%'} %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :goal_weightage, label: 'Goal Weightage' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.select :difficulty_level,["1","2","3"],{label: 'Difficulty Level', include_blank: "Select Difficulty Level"} %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.select :allign_to_supervisor,["Yes","No"],{label: 'Aligned To Supervisor',include_blank: "Select Option"} %>
      </div>
    </div>
  </div>


  <div class= "row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Goal",class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
<hr>
<script type="text/javascript">
  $("#employee_goal").validate({
    rules: {
      "employee_goal[target]":{
        required: true
      },
      "employee_goal[period_id]":{
        required: true
      },
      "employee_goal[goal_measure]":{
        required: true
      },
      "employee_goal[goal_weightage]":{
        required: true
      },
      "employee_goal[difficulty_level]":{
        required: true
      },
      "employee_goal[goal_perspective_id]":{
        required: true
      },
      "employee_goal[goal_measure_id]":{
        required: true
      }
    },
    messages: {
      "employee_goal[target]":{
        required: "Please specify Target"
      },
      "employee_goal[period_id]":{
        required: "Please specify period id"
      },
      "employee_goal[goal_measure]":{
        required: "Please specify Goal Measure"
      },
      "employee_goal[goal_weightage]":{
        required: "Please specify Goal Weightage"
      },
      "employee_goal[difficulty_level]":{
        required: "Please specify Difficulty Level"
      },
      "employee_goal[goal_perspective_id]":{
        required: "Please specify Goal Perspective"
      },
      "employee_goal[goal_measure_id]":{
        required: "Please specify Goal Measure"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>