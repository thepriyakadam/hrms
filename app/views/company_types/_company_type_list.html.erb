<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @company_types.each do |company_type| %>
      <tr>
        <td><%= company_type.code %></td>
        <td><%= company_type.name %></td>
        <td><%= company_type.description %></td>
        <td>
              <%= link_to '', edit_company_type_path(company_type),class: 'btn btn-sm btn-success btn-xs fa fa-edit',remote:true %>
              <%= link_to '',  company_type, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
