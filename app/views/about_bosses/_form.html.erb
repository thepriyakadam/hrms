
    <%= bootstrap_form_for(@about_boss,html: {id: 'about_boss'},remote:true) do |f| %>
      <div class="row">
        <div class="col-sm-3">
            <div class="form-group required">
              <%= f.text_field :code,label:'Code', placeholder: 'Code' %>
            </div>
        </div> 
           <div class="col-sm-3">
            <div class="form-group required">
              <%= f.text_field :name,label:'Questions', placeholder: 'Questions' %>
              </div>
              </div>

            <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :description,label:'Description', placeholder: 'Description' %>
            </div>
          </div>
           
            <div class="col-sm-3">
            <label>Status</label>
            <div class="field">
            <%= f.check_box :status , label:'Active'%>
          </div>
          </div>
          </div>
           <div class="row">
          <div class="col-sm-3">
            <div class="actions">
              <%= f.submit 'Create About Boss',:class => class_name, data: { disable_with: data_info } %>
            </div>
          </div>
        </div>
<% end %>

<script>
$("#about_boss").validate({
    rules: {
      "about_boss[code]":{
        required: true,
      },
      "about_boss[name]":{
        required: true,
      }
       },
    messages: {
      "about_boss[code]":{
        required: "Please specify code",
      },
       "about_boss[name]":{
        required: "Please specify name",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
