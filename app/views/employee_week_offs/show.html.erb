<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title"> Employee Week Off</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
      <tr>
        <th><strong>Employee:</strong></th>
        <td><%= @employee_week_off.employee.first_name %> <%= @employee_week_off.employee.middle_name %> <%= @employee_week_off.employee.last_name %></td>
        
        <th><strong>Day:</strong></th>
        <td><%= @employee_week_off.day %></td>
      </tr>

      <tr>
        <th><strong>Date:</strong></th>
        <td><%= @employee_week_off.date %></td>

        <th><strong>Status:</strong></th>
        <td><%= @employee_week_off.status ? "Active" : "Inactive" %></td>
      </tr>

      <tr>
        <th><strong>Is confirm:</strong></th>
        <td><%= @employee_week_off.is_confirm ? "Yes" : "No" %></td>

        <th></th>
        <td></td>
      </tr>
    </table>
    <br>
    <%= link_to 'Edit', edit_employee_week_off_path(@employee_week_off),class:'btn btn-sm btn-success fa fa-edit' %> |
    <%= link_to 'Back', employee_week_offs_path,class:'btn btn-sm btn-default fa fa-arrow-left' %>

  </div>
</div>
