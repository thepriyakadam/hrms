<div class="box">
  <div class="box-header">
    <h3 class="box-title">Compensatory Off - Approval </h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <div class="row">
      <div class="col-sm-6">
        <table id="example2" class="table table-bordered table-hover table-condensed">
         <thead>
            <tr><td colspan="4"><center>First Level Request</center></td></tr>
            <tr>
              <th>ID</th>
              <th>Employee</th>
              <th>C.Off </th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @leave_c_off_pending.each do |e| %>
            <tr>
              <td><%= e.employee.manual_employee_code %></td>
              <td><%= full_name(e.employee)%></td>
                <td><%= e.leave_count %></td>
                <td>
                  <%= link_to 'Approve', approve_modal_leave_c_offs_path(e),class: 'btn btn-xs btn-primary',remote: true %>
                  <%= link_to 'Reject', reject_c_off_leave_c_offs_path(e),class: 'btn btn-xs btn-danger' %>
                </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

       <div class="col-sm-6">
         <table id="example2" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr><td colspan="4"><center>Second Level Request</center></td></tr>
            <tr>
              <th>ID</th>
              <th>Employee Name</th>
              <th>C.Off </th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @leave_c_off_first_approved.each do |e| %>
            <tr>
              <td><%= e.employee.manual_employee_code %></td>
              <td><%= full_name(e.employee)%></td>
                <td><%= e.leave_count %></td>
                <td>
                  <%= link_to 'Approve', final_approve_leave_c_offs_path(leave_c_off_id: e),class: 'btn btn-xs btn-primary' %>
                  <%= link_to 'Reject', final_reject_leave_c_offs_path(e),class: 'btn btn-xs btn-danger' %>
                </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div id="myModal" class="modal fade"></div>