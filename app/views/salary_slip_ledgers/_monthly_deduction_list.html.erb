<div class="box-header">
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>ID</th>
        <th>Employee Name</th>
        <th>Department</th>
        <th>Other Component</th>
        <th>Actual Amount</th>
    </tr>
    </thead>
    <tbody>
      <% @salaryslips.each do |slip| %>
        <% employee = slip.employee %>
        <tr>
          <td><%= slip.employee.manual_employee_code %></td>
          <td><%= employee.try(:first_name) %> <%= employee.try(:middle_name) %> <%= employee.try(:last_name) %></td>
          <td><%= employee.company_location.try(:name) %> - <%= employee.department.try(:name) %></td>
            <% @deducted_salaryslip = slip.salaryslip_components %>
            <% @deducted_salaryslip.each do |item| %>
              <% if item.other_component_name == "Advance" %>
                <td><%= item.other_component_name %></td>
                <td><%= item.actual_amount.round %></td>
              <% end %>
            <% end %>
        </tr>
      <% end %><!-- deducted items -->
    </tbody>
  </table>
</div>

  <%= link_to " Excel Report ",monthly_deduction_excel_salary_slip_ledgers_path(month: params[:salaryslip][:month], year: params[:salaryslip][:year],company_id: params[:salaryslip][:company_id],company_location_id: params[:food_deduction][:company_location_id], format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>
  <%= link_to " PDF Report ",monthly_deduction_pdf_salary_slip_ledgers_path(month: params[:salaryslip][:month], year: params[:salaryslip][:year],company_id: params[:salaryslip][:company_id],company_location_id: params[:food_deduction][:company_location_id], format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>