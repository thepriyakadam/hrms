<table id="example2" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>  
      <th>ESIC</th>
      <th>Percentage</th>
      <th>Effective Date</th>
      <th>Max limit</th>
      <th>Base component</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @esic_masters.each do |esic_master| %>
      <tr>
        <td><%= esic_master.esic %></td>
        <td><%= esic_master.percentage %></td>
        <td><%= esic_master.date_effective %></td>
        <td><%= esic_master.max_limit %></td>
        <td>
          <% i = 0 %>
          <% esic_master.base_component.split(",").each do |e| %>
            <% if i == 0 %>
              <%= SalaryComponent.find(e.to_i).name %>
            <% else %>
              + <%= SalaryComponent.find(e.to_i).name %>
            <% end %>
            <% i = i + 1 %>
          <% end %>
        </td>

        <td>
          <%= link_to '', edit_esic_master_path(esic_master),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
          <%= link_to '',  esic_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>