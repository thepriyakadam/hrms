<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Evaluation Rating</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_decisions.each do |interview_decision| %>
      <tr>
        <td><%= interview_decision.code %></td>
        <td><%= interview_decision.try(:name) %></td>
        <td><%= interview_decision.description %></td>
        <td>
            <%= link_to '', edit_interview_decision_path(interview_decision),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  interview_decision, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>