<h1>Listing Families</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>No of member</th>
      <th>F name</th>
      <th>M name</th>
      <th>M name</th>
      <th>L name</th>
      <th>Date of birth</th>
      <th>Age</th>
      <th>Contact no</th>
      <th>Phone no</th>
      <th>Email</th>
      <th>Permanent address</th>
      <th>City</th>
      <th>Dist</th>
      <th>State</th>
      <th>Pin code</th>
      <th>Current address</th>
      <th>Relation</th>
      <th>Adhar no</th>
      <th>Pan no</th>
      <th>Passport no</th>
      <th>Medical claim</th>
      <th>Marital</th>
      <th>Status</th>
      <th>Nationality</th>
      <th>Blood group</th>
      <th>Religion</th>
      <th>Phandicap</th>
      <th>Profession</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.employee %></td>
        <td><%= family.no_of_member %></td>
        <td><%= family.f_name %></td>
        <td><%= family.m_name %></td>
        <td><%= family.m_name %></td>
        <td><%= family.l_name %></td>
        <td><%= family.date_of_birth %></td>
        <td><%= family.age %></td>
        <td><%= family.contact_no %></td>
        <td><%= family.phone_no %></td>
        <td><%= family.email %></td>
        <td><%= family.permanent_address %></td>
        <td><%= family.city %></td>
        <td><%= family.dist %></td>
        <td><%= family.state %></td>
        <td><%= family.pin_code %></td>
        <td><%= family.current_address %></td>
        <td><%= family.relation %></td>
        <td><%= family.adhar_no %></td>
        <td><%= family.pan_no %></td>
        <td><%= family.passport_no %></td>
        <td><%= family.medical_claim %></td>
        <td><%= family.marital %></td>
        <td><%= family.status %></td>
        <td><%= family.nationality %></td>
        <td><%= family.blood_group %></td>
        <td><%= family.religion %></td>
        <td><%= family.phandicap %></td>
        <td><%= family.profession %></td>
        <td><%= link_to 'Show', family %></td>
        <td><%= link_to 'Edit', edit_family_path(family) %></td>
        <td><%= link_to 'Destroy', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

