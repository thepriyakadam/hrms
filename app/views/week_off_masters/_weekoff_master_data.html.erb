<br>
<div class="box box-default">
	<div class="box-body">

	 <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee</th>
          <th>Department</th>
          <th>Day</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @week_off_masters.each do |week_off_master| %>
          <tr>             
            <td><%= week_off_master.employee.manual_employee_code %></td>
            <td><%= full_name(week_off_master.employee) %></td>
            <td><%= week_off_master.employee.company_location.try(:name) %> - <%= week_off_master.employee.department.try(:name) %></td>
            <td><%= week_off_master.day %></td>
            <td><%= week_off_master.from.to_date %> to <%= week_off_master.to.to_date %></td>
            <td>
              <%= link_to 'Revert',revert_master_data_week_off_masters_path(week_off_master_id: week_off_master.id),class: 'btn btn-sm btn-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <br>
	</div>
</div>

<script type="text/javascript">

	$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>