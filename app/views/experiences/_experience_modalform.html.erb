<div class="modal-dialog" style="height:2000px; max-height:100px; width:900px; max-width:900px;">
  <div class="modal-content">
    <div class="modal-body">
     <%= bootstrap_form_for :experience,url:{action:"update_experience",id: @experience.id},html: {id: 'experience'} do |f| %>
         <div class="row">
        

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :company_name, class: 'input_company_name' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :designation, class: 'input_designation' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :no_of_year,label: "No. Of Years", class: 'input_no_of_year' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :ctc,label: "CTC", class: 'input_ctc' %>
          </div>
        </div>
      </div>

      <div class="row">
       <div class="col-sm-3" style="padding-top:20px;">
          <%= f.submit "Update Experience", class: 'btn btn-sm btn-warning fa fa-modx' %>
      </div>
      </div>
     
      <% end %>
      <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
    </div>
  </div>
</div>
<script>
$("#trainee").validate({
    rules: {
      "trainee[feedback]":{
        required: true,
      }
    },
    messages: {
      "trainee[feedback]":{
        required: "Please Specify Feedback",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
