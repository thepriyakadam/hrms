<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
   <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Employee</th>
      <th>Status</th>
      <th>Is confirm</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @issue_tracker_accesses.each do |issue_tracker_access| %>
      <tr>
        <td><%= issue_tracker_access.name %></td>
        <td><%= issue_tracker_access.role %></td>
        <td><%= issue_tracker_access.employee.try(:first_name) %> <%= issue_tracker_access.employee.try(:middle_name) %> <%= issue_tracker_access.employee.try(:last_name) %> </td>


        <td><%= issue_tracker_access.status ? "Active" : "Inactive" %></td>
        <td>
          <% if issue_tracker_access.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %> 
          <% end %>
          </td>
        <td>
          <%= link_to '', edit_issue_tracker_access_path(issue_tracker_access),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
          <%= link_to '',  issue_tracker_access, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
          <%= link_to '', is_confirm_issue_tracker_accesses_path(issue_tracker_access: issue_tracker_access),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %></td>
      </tr>
    <% end %>
  </tbody>
</table>