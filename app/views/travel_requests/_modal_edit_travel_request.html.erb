<div class="modal-dialog" style="height:1000px; max-height:100px; width:900px; max-width:900px;">
  <div class="modal-content">
    <div class="modal-body">
        <div class="box-header with-border">
          <h3 class="box-title">Travel Request</h3>
        </div>
        <div class="box-body">
        <%= bootstrap_form_for(TravelRequestHistory.new,url:{action:"edit_and_send_next_modal_submit",abc: @travel_request.id}) do |f| %>

          <%= f.hidden_field :travel_request_id, value: @travel_request.id %>

        <div class="row">

         <div class="col-sm-3">
          <div class="form-group required">
             <%= f.text_field :employee_id,label:'Employee Name',value: full_name(@travel_request.employee),readonly: true %>   
          </div>
        </div>

          <div class="col-sm-3">
            <label>Request To </label>
            <div class="field">
              <%= f.select :reporting_master_id,all_reporting_master_list,{hide_label: true,include_blank: " Select Reporting Manager"}%>
            </div>
          </div>

          <div class="col-sm-3">
            <label>Application Date </label>
            <div class="field">
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </div>
                <%= f.text_field :application_date, hide_label: true, class: 'application_date'%>
              </div>
            </div>
          </div>

          <div class="col-sm-3">
            <label>Travel Option</label>
              <div class="form-group required">
                <%= f.select :travel_option_id,all_travel_option,{hide_label: true,placeholder: 'Travel Option',include_blank: 'Select Travel Option'} %>
              </div>
            </div>

          </div>


        <div class="row">

         <div class="col-sm-3">
            <label>Travel Mode</label>
              <div class="form-group required">
                <%= f.select :travel_mode_id,all_travel_mode,{hide_label: true,placeholder: 'Travel mode',include_blank: 'Select Travel mode'} %>
              </div>
            </div>


          <div class="col-sm-3">
            <label>Traveling Date </label>
            <div class="field">
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </div>
                <%= f.text_field :traveling_date, hide_label: true, class: 'traveling_date'%>
              </div>
            </div>
          </div>


          <div class="col-sm-3">
            <div class="field">
              <div class="form-group required">
                <%= f.text_field :place, label: 'Place' %>
              </div>
            </div>
          </div>
          
          <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :total_advance, label: 'Total Advance' %>
            </div>
          </div>
        </div>

        <div class="row">

         <div class="col-sm-3">
            <div class="field">
              <div class="form-group required">
                <%= f.text_field :tour_purpose, label: 'Tour Purpose' %>
              </div>
            </div>
          </div>

          <div class="col-sm-3">
            <div class="actions">
              <%= f.submit "Update Travel Request",:class => class_name, data: { disable_with: data_info }  %>
              <!-- link_to 'Back', travel_request_confirmation_travel_requests_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %> -->
            </div>
          </div>
        </div>

      </div>
      <% end %>
      <script type="text/javascript">
        $(function(){
          $('.application_date').datepicker({
          changeYear:true,
          changeMonth: true,
          yearRange: '-200:-0',
          dateFormat: 'dd-mm-yy' });

          $('.traveling_date').datepicker({
          changeYear:true,
          changeMonth: true,
          yearRange: '-200:-0',
          dateFormat: 'dd-mm-yy' });
          });
      </script>
     </div>
  </div>
</div>
