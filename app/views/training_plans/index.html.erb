<div class="box">
  <div class="box-header">
    <h3 class="box-title">Training Plan List</h3>
    <div class="pull-right">
      <%= link_to "Create Training Plans", new_training_plan_path, class: 'btn btn-sm btn-primary' %> 
    </div>
  </div>
  <div class="box-body">
    <table id="example" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Sr.No</th>
          <th>Training date</th>
          <th>Topic</th>
          <th>No of employee</th>
          <th>Trainer Name</th>
          <th>No of Days</th>
          <th>No of Hrs</th>
          <th>Place</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% i = 0 %>
        <% @training_plans.each do |training_plan| %>
          <tr>
            <td><%= i=i+1 %></td>
            <td><%= training_plan.training_date %></td>
            <td><%= training_plan.training_topic_master.try(:name) %></td>
            <td><%= training_plan.no_of_employee %></td>
            <td><%= training_plan.trainer_name %></td>
            <td><%= training_plan.no_of_days %></td>
            <td><%= training_plan.no_of_hrs %></td>
            <td><%= training_plan.place %></td>
            <td>
            <%= link_to '', edit_training_plan_path(training_plan) ,class: 'btn btn-xs btn-success fa fa-edit' %>
            <%= link_to '', training_plan, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', training_plan,class: 'btn btn-xs btn-default fa fa-eye' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
