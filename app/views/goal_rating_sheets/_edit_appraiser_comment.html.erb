
   <%= bootstrap_form_for(@goal_rating_sheet,url:{controller: "goal_rating_sheets",action: 'update_appraiser', id: @goal_rating_sheet.id}) do |f| %>
    <div class= "row">
      <div class="col-sm-3">
        <div class= "field">
          <%= f.text_field :appraiser_comment %>
        </div>
      </div>

      <div class="col-sm-3">
        <div class= "field">
          <%= f.text_field :appraiser_rating %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit "Create Goal Rating" ,class: "btn btn-primary btn-sm"%>
        </div>
      </div>
    </div>
   
  <% end %>
