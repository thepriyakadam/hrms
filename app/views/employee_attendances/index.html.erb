<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Employee Attendance</h3>
    <div class="pull-right">
    <%= link_to "Add Employee Attendance", new_employee_attendance_path, class: 'btn btn-primary' %> 
    </div>
 <div class="box-body">
    <div class="row">
        <div class="col-sm-3">
          <div class="field">
            <%= select :employee_attendance,:month, ['January','February','March','April','May','June','July','August','September','October','November','December'],{label: 'Select Month',include_blank: " Select Month"}, class: "form-control" %>
           </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
            <%= select :employee_attendance,:year,['2015','2016','2017','2018','2019','2020','2021','2022','2023','2024','2025','2026','2027'],{label: 'Select Year',include_blank: " Select Year"}, {onchange:"var a={department_id:$(this).val(),month:$('#employee_attendance_month').val(),year:$('#employee_attendance_year').val()};$('.ajax-progress').show(); $.get('/employee_attendances/display_attendance_1',a,function(response){});",class: 'form-control'} %>
          </div>
        </div>
        </div>
     </div>
   <div id="display_attendance_1"></div>
</div>
</div>