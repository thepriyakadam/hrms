<%= bootstrap_form_for(@interview_decision,html: {id: 'interview_decision'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true, placeholder: 'Code ' %>
      </div>
    </div> 
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Evaluation Rating' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Evaluation" ,class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
<script>
$("#interview_decision").validate({
    rules: {
      "interview_decision[code]":{
        required: true
              },
      "interview_decision[name]":{
        required: true
      }
    },
    messages: {
      "interview_decision[code]":{
        required: "Please specify Code"
      },
      "interview_decision[name]":{
        required: "Please specify Name"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>