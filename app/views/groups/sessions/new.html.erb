<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
    <h3>Sign In</h3>
      <div class="field">
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>
  </div>

   <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <div class="field">
       <%= f.password_field :password, autocomplete: "off" %>
    </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <div class="field">
      <%= f.check_box :remember_me %>
    </div>
    </div>
  </div>
  <% end -%>

  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <div class="actions">
    <%= f.submit "Log in"%>
     </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-3">
    <%= render "groups/shared/links" %>
  </div>
</div>
