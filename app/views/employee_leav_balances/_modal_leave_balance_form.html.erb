<div class="modal-dialog" style="height:1000px; max-height:100px; width:900px; max-width:900px;">
  <div class="modal-content">
    <div class="modal-body">
     <%= bootstrap_form_for @employee_leav_balance,url:{action:"update_leave_balance",id:@employee_leav_balance.id} do |f| %>
        <div class="row">

         <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :no_of_leave %>
          </div>
        </div>

          <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :total_leave, readonly: true %>
            </div>
          </div>
          
          <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :expiry_date, class: "expiry_date" %>
            </div>
          </div>
          <div class="col-sm-3">
            <%= f.submit "Update Leave Balance", class: 'btn btn-sm btn-warning fa fa-modx' %>
          </div>
        </div>
      <% end %>
      <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
    </div>
  </div>
</div>
