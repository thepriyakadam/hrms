<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List with Working Days</h3>
    <div class="pull-right">
      <%= link_to "New Employee monthly day", new_employee_monthly_day_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
       <th>Employee ID</th>
      <th>Employee Name</th>
      <th>Month</th>
      <th>Year</th>
      <th>Working Day</th>
      <th>Overtime in Hrs</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_monthly_days.each do |employee_monthly_day| %>
      <tr>
        <td><%= employee_monthly_day.employee.try(:manual_employee_code) %></td>
        <td><%= employee_monthly_day.employee.try(:first_name)+' '+employee_monthly_day.employee.try(:middle_name)+' '+employee_monthly_day.employee.try(:last_name) %></td>
        <td><%= employee_monthly_day.month %></td>
        <td><%= employee_monthly_day.year.try(:name) %></td>
        <td><%= employee_monthly_day.no_of_working_day %></td>
        <td><%= employee_monthly_day.overtime %></td>
         <td>
            <%= link_to '', employee_monthly_day,class: 'btn btn-default btn-sm fa fa-eye' %>
            <%= link_to '', edit_employee_monthly_day_path(employee_monthly_day) ,class: 'btn btn-success btn-sm fa fa-edit' %>
            <%= link_to '', employee_monthly_day, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>