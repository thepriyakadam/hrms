<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Balance</h3>
    <div class="pull-right">
      <%= link_to "New Employee leave balance", new_employee_leav_balance_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed'">
    <thead>
      <tr>
      <th>Employee Code</th>
      <th>Employee Name</th>
      <th>Leave Category</th>
      <th>No of Leave</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_leav_balances.each do |employee_leav_balance| %>
      <tr>
        <td><%= employee_leav_balance.employee.try(:manual_employee_code) %></td>
         <td><%= employee_leav_balance.employee.try(:first_name) %><%= employee_leav_balance.employee.try(:middle_name) %><%= employee_leav_balance.employee.try(:last_name) %></td>
        <td><%= employee_leav_balance.leav_category.try(:name) %></td>
        <td><%= employee_leav_balance.no_of_leave %></td>

         <td>
            <%= link_to '', employee_leav_balance,class: 'btn btn-sm btn-default fa fa-eye' %>
            <%= link_to '', edit_employee_leav_balance_path(employee_leav_balance),class: 'btn btn-success fa fa-edit btn-sm' %>
            <%= link_to '', employee_leav_balance, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>