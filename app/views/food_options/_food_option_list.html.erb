<br>
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Travel option</th>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
      <th>optional</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @food_options.each do |food_option| %>
      <tr>
        <td><%= food_option.travel_option.try(:name) %></td>
        <td><%= food_option.code %></td>
        <td><%= food_option.name %></td>
        <td><%= food_option.description %></td>
        <td><%= food_option.amount %></td>
        <td><%= food_option.is_optional ? "Yes" : "No" %></td>
        <td><%= food_option.status ? 'Active' : 'Inactive' %></td>
        <td>
            <%= link_to '', food_option,class: 'btn btn-xs btn-default fa fa-eye' %>
            <%= link_to '', edit_food_option_path(food_option),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  food_option, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>