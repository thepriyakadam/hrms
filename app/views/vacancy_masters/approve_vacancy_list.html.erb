<div class="box">
  <div class="box-header">
    <h3 class="box-title">Vacancy List</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Organization</th>
              <th>Approver</th>
              <th>Job Title</th>
              <th>Vacancy Name</th>
              <th>Company Location</th>
              <th>Department</th>
              <th>Educational Qualification</th>
              <th>Date</th>
              <th>No. of Position</th>
              <th>Experience</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @vacancy_masters.each do |vacancy_master| %>
              <tr>
                <td><%= vacancy_master.other_organization %></td>
                <td><%= vacancy_master.reporting_master_id %></td>
                <td><%= vacancy_master.employee_designation.name %></td>
                <td><%= vacancy_master.vacancy_name %></td>
                <td><%= vacancy_master.company_location.try(:name) %></td>
                <td><%= vacancy_master.department.try(:name) %></td>
                <td><%= vacancy_master.degree.try(:name) %></td>
                <td><%= vacancy_master.created_at.to_date %></td>
                <td><%= vacancy_master.no_of_position %></td>
                <td><%= vacancy_master.experience %></td>
                <td>
                <% if vacancy_master.current_status == "Pending" %>
                <small class="label label-primary">Pending</small>
                <% elsif vacancy_master.current_status == "Approved" %>
                <small class="label label-success">Approved</small>
                <% elsif vacancy_master.current_status == "Reject" %>
                <small class="label label-danger">Reject</small>
                <% elsif vacancy_master.current_status == "Approved & Send Next" %>
                <small class="label label-info">Approved & Send Next</small>
                <% elsif vacancy_master.current_status == "Cancelled" %>
                <small class="label label-danger">Cancelled</small>
                <% else %>
                 <small class="label label-success">Revert</small>
                <% end %>
                </td>
                <td>
                 <%= link_to '', vacancy_master,class: 'btn btn-xs btn-default fa fa-eye' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>

<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>