<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title"> Issue Locker </h3>
  </div>
  <div class="box-body">
  <%= bootstrap_form_for(@issue_locker) do |f| %>
  
<div class="row">
  <div class="col-sm-3">
    <div class="form-group required">
      <%= f.select :issue_request_id,all_issue_request,{include_blank: "Select Issue Request"} %>
    </div>
  </div>

 <div class="col-sm-3">
    <div class="form-group required">
      <%= f.select :employee_id,employee_list_for_food_deduction,{include_blank: "Select Employee"} %>
    </div>
  </div>

  <div class="col-sm-3">
   <label>Status</label>
    <%= f.check_box :status,label:'Active' %>
  </div>
 
 <div class="col-sm-3">
     <div class="actions">
    <%= f.submit'Issue Locker',:class => class_name, data: { disable_with: data_info } %>
  </div>
 </div>
 </div>
 </div>
<% end %>
</div>
</div>
