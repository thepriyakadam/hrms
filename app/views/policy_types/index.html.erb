<h1>Listing Policy Types</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policy_types.each do |policy_type| %>
      <tr>
        <td><%= policy_type.code %></td>
        <td><%= policy_type.name %></td>
        <td><%= policy_type.description %></td>
        <td><%= policy_type.is_active %></td>
        <td><%= link_to 'Show', policy_type %></td>
        <td><%= link_to 'Edit', edit_policy_type_path(policy_type) %></td>
        <td><%= link_to 'Destroy', policy_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

