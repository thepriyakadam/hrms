<div class="box">
  <div class="box-header">
    <h3 class="box-title">Admin C.Off Approval</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">

      <div class="col-sm-12">
        <table id="example6" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>ID</th>
              <th>Employee</th>
              <th>Day</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @first_level_request_lists.try(:each) do |fl| %>
              <tr>
                <td><%= fl.employee.try(:manual_employee_code) %></td>
                <td><%= full_name(fl.employee) %></td>
                <td><%= fl.c_off_date %></td>
                <td>
                  <%= link_to 'View Detail', admin_level_c_off_detail_leave_c_offs_path(fl),class: 'btn btn-sm btn-primary' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

       
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

