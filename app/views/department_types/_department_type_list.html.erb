<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @department_types.each do |department_type| %>
      <tr>
        <td><%= department_type.code %></td>
        <td><%= department_type.name %></td>
        <td><%= department_type.description %></td>
        <td>
              <%= link_to '', edit_department_type_path(department_type),class: 'btn btn-sm btn-success btn-xs fa fa-edit',remote:true %>
              <%= link_to '',  department_type, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>