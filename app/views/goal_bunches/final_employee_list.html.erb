<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table id="example" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
           <th>ID</th>
           <th>Name</th>
           <th>Department</th>
           <th>Designation</th>
           <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |e| %>
      <tr>
        <td><%= e.manual_employee_code %></td>
        <td><%= full_name(e) %></td>
        <td><%= e.company_location.try(:name) %> - <%= e.department.try(:name) %></td> 
        <td><%= e.joining_detail.try(:employee_designation).try(:name) %></td>
        <td><%= link_to 'Show Goal List', period_list_print_goal_bunches_path(emp_id: e) ,class: 'btn btn-xs btn-info' %></td>
      </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>
