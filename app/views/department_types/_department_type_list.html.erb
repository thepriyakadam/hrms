<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @department_types.each do |department_type| %>
      <tr>
        <td><%= department_type.name %></td>
        <td>
          <% if department_type.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
            <% else %>
              <%= link_to '', edit_department_type_path(department_type),class: 'btn btn-sm btn-success btn-xs fa fa-edit',remote:true %>
              <%= link_to '',  department_type, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
              <%= link_to '', is_confirm_department_types_path(department_type: department_type),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
