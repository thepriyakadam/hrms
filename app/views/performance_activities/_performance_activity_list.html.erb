<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
    	<th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  	<% @performance_activities.each do |performance_activity| %>
      <tr>
        <td><%= performance_activity.code %></td>
        <td><%= performance_activity.name %></td>
        <td><%= performance_activity.description %></td>
        <td>
          <%= link_to '', edit_performance_activity_path(performance_activity) ,class: 'btn btn-sm btn-success btn-xs fa fa-edit',remote:true %>
          <%= link_to '',  performance_activity, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>