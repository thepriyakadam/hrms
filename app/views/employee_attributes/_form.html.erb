<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Attribute</h3>
  </div>
  <div class="box-body">
<%= bootstrap_form_for(@employee_attribute) do |f| %>
<table id="tbl" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Period</th>
      <th>Attribute</th>
      <th>Definition</th>
      <th>Weightage</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.select :performance_period_id,all_period_type,{label: 'Period ',include_blank: " Select Period",hide_label: true},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %></td>
      <td><%= f.select :attribute_master_id,all_attribute_type,{hide_label: true, include_blank: "Select Attribute" }%></td>
      <td><%= f.select :definition_id,all_definition_type,{hide_label: true, include_blank: "Select Definition"} %></td>
      <td><%= f.select :weightage,["1","2","3"],{hide_label: true, include_blank: "Select Weightage"} %></td>
    </tr>   
  </tbody>
</table>
  <div class= "row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Attribute" ,class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
  </div>
</div>
<% end %>
