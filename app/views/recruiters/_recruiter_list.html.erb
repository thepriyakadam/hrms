<br>
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @recruiters.each do |recruiter| %>
      <tr>
        <td><%= recruiter.employee.manual_employee_code %></td>
        <td><%= full_name(recruiter.employee) %></td>
        <td><%= recruiter.status ? "Active" : "Inactive" %></td>
        <td>
          <%= link_to '', edit_recruiter_path(recruiter),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
          <%= link_to '',  recruiter, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#example2').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>