<div class="box">
  <div class="box-header">
    <h3 class="box-title">Leave Rejected</h3>
    <div class="pull-right">
      <%= link_to "New Leave rejected",new_leav_rejected_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>Employee leav request</th>
      <th>Rejected date</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @leav_rejecteds.each do |leav_rejected| %>
      <tr>
        <td><%= leav_rejected.employee_leav_request %></td>
        <td><%= leav_rejected.rejected_date %></td>
          <td>
            <%= link_to '', leav_rejected,class: 'btn btn-default btn-sm fa fa-eye' %>
            <%= link_to '', edit_leav_rejected_path(leav_rejected),class: 'btn btn-success btn-sm  fa fa-edit' %>
            <%= link_to '', leav_rejected, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>