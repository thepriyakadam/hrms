<div class="box box-default">
<div class="box-header with-border">
    <h3 class="box-title">Employee Training Request</h3>
  </div>
  <div class="box-body">

<%= bootstrap_form_for(@training_request,html: {id: "training_request"}) do |f| %>

<%= f.hidden_field :employee_id, value: current_user.employee_id %>
  <div class="row">
    <div class="col-sm-3">
    <label>Training Topic</label>
      <div class="form-group required">
        <%= f.text_field :training_topic,hide_label: true,placeholder: 'Training Topic' %>
      </div>
    </div>
    <div class="col-sm-3">
    <label>Training Period</label>
      <div class="form-group required">
        <%= f.text_field :training_period,hide_label: true,placeholder: 'Training Period' %>
      </div>
    </div>

    <div class="col-sm-3">
    <div class="form-group required">
     <label>Training Date</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </div>
        <%= f.text_field :training_date, hide_label: true,class: 'birth_date'%>
      </div>
    </div>
  </div>

    <div class="col-sm-3">
    <label>Reporting Master</label>
      <div class="form-group required">
        <%= f.select :reporting_master_id,all_reporting_master_list,{hide_label: true,include_blank: " Select Reporting Master"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
      </div>
    </div>
    </div>
    
  <div class="row">
    <div class="col-sm-3">
    <label>Description</label>
      <div class="field">
        <%= f.text_area :description,hide_label: true,placeholder: 'Description' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Training Request", class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Back', training_requests_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>

      </div>
    </div>
  </div>
    <% end %>
</div>
</div>

<script type="text/javascript">

  $("#training_request").validate({
    rules: {
      "training_request[training_topic]":{
        required: true
      },
      "training_request[training_period]":{
        required: true
      },
      "training_request[training_date]":{
        required: true
      },
      "training_request[reporting_master_id]":{
        required: true
      }
    },
    messages: {
      "training_request[training_topic]":{
        required: "Please specify Training Topic"
      },
      "training_request[training_period]":{
        required: "Please specify Training Period"
      },
      "training_request[training_date]":{
        required: "Please specify No of Training Date"
      },
      "training_request[reporting_master_id]":{
        required: "Please specify Reporting Master"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>