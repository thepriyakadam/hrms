<div class="box box-default">
  <div class="box-header with-border">
    <div class="box-tools pull-right">
      <%= link_to 'Back', employees_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
      <%= link_to "Add Member", ajax_new_assigned_asset_employees_path(id: @employee.id), class: 'btn btn-primary',remote:true %>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
	    
      <th>Asset type</th>
      <th>Assets detail</th>
      <th>Assets</th>
      <th>Assets value</th>
      <th>Assest status</th>
      <th>Issue date</th>
      <th>Valid till</th>
      <th>Returned on</th>
      <th>Remarks</th>
      <th>Action</th>
    </tr>
  </thead>

	<tbody>
	<% @assigned_assets.each do |assigned_asset| %>
      <tr>
        
        <td><%= assigned_asset.asset_type %></td>
        <td><%= assigned_asset.assets_detail %></td>
        <td><%= assigned_asset.assets_id %></td>
        <td><%= assigned_asset.assets_value %></td>
        <td><%= assigned_asset.assest_status %></td>
        <td><%= assigned_asset.issue_date %></td>
        <td><%= assigned_asset.valid_till %></td>
        <td><%= assigned_asset.returned_on %></td>
        <td><%= assigned_asset.remarks %></td>
        <td>
        	<%= link_to '', edit_assigned_asset_path(assigned_asset),class: 'btn btn-success btn-sm fa fa-edit',remote:true %>
          <%= link_to '', assigned_asset, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example3').DataTable( {
        "scrollY":        "200px",
        "scrollX":        "1000px",
        "scrollCollapse": true,
        "paging":         false
    } );
} );
</script>