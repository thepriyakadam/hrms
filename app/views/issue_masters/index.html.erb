<p id="notice"><%= notice %></p>

<h1>Listing Issue Masters</h1>

<table>
  <thead>
    <tr>
      <th>Issue Tracker Group</th>
      <th>Issue Type</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_masters.each do |issue_master| %>
      <tr>
        <td><%= issue_master.issue_tracker_group %></td>
        <td><%= issue_master.issue_type %></td>
        <td><%= issue_master.name %></td>
        <td><%= issue_master.description %></td>
        <td><%= issue_master.status %></td>
        <td><%= issue_master.is_confirm %></td>
        <td><%= link_to 'Show', issue_master %></td>
        <td><%= link_to 'Edit', edit_issue_master_path(issue_master) %></td>
        <td><%= link_to 'Destroy', issue_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

