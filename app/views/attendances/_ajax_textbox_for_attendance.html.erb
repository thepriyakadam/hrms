<%= bootstrap_form_for(@attendance) do |f| %>
<div class="row">
  <div class="col-sm-3">
    <div class="field">
       <%= f.text_field :employee_shift, value: @employee.try(:employee_shift).try(:company_shift).try(:name) %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="field">
       <%= f.text_field :attendance_date, value: Date.today %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :check_in %>
    </div>
  </div>
   <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :check_out %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :company_hrs %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :over_time_hrs %>
    </div>
  </div>

  <div class="col-sm-3">
    <div class="field">
      <%= f.text_field :total_hrs %>
    </div>
  </div>
</div>
</div>
</div>
 <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit :class => class_name, data: { disable_with: data_info } %>
        </div>
      </div>
    </div>
    <!-- <div id="area"></div> -->
  <% end %>