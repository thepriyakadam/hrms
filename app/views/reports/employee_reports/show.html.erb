<!--SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Salary Report</h3>
  </div><!-- /.box-header -->

  <div class="box-body">
    <%= bootstrap_form_for(:emploee, url: { action: 'date_range_report',format: 'xls'}) do |f| %>

      <div class="col-sm-3">
          <div class="field">
          <%= select :salary, :company_location_id, all_company_location,{label: 'Company Location',include_blank: " Select Company Location"}, class: "form-control" %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
          <%= select :salary, :department_id, all_department_list,{label: 'Department Location',include_blank: " Select Department Location"}, class: "form-control" %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Download Excel", class: "btn btn-sm btn-warning" %>
          </div>
        </div>

      </div><br>
    <% end %>
  </div><!-- /.box-body -->
</div><!-- /.box -->

