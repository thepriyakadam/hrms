					        <td><%= j=j+1 %></td>
					        <td><%= item.salary_component.try(:name) %></td>
					        <td align="right"><%= item.amount %></td>
					        <% deduct_total = deduct_total + item.amount %>
					      </tr>
					    <% end %>
				    <% end %>
				    <tr>
			        <td><%=  %></td>
			        <td><b><%= "Total" %></b></td>
			        <td align="right"><b><%= deduct_total %></b></td>
			      </tr>
			    </tbody>
		  	</table>
			</div>
		</div>
	</div><!-- /.box-body -->
