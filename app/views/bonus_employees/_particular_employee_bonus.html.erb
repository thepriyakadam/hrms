<table id="ex" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Bonus date</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @particular_bonuses.each do |bonus_employee| %>
      <tr>
        <td><%= full_name(bonus_employee.employee) %></td>
        <td><%= bonus_employee.bonus_date %></td>
        <td><%= bonus_employee.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(function () {
  $("#ex").DataTable();
});
</script>