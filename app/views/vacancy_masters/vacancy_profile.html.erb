<div class="box">
  <div class="box-header">
    <h3 class="box-title">Vacancy Profile</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Vacancy Code</th>
              <th>Job Title</th>
              <th>No. of Position</th>
              <th>Department</th>
              <th>Experience</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @vacancy_masters.each do |vacancy_master| %>
              <tr>
                <td><%= vacancy_master.vacancy_code %></td>
                <td><%= vacancy_master.vacancy_name %></td>
                 <td><%= vacancy_master.no_of_position %></td>
                <td><%= vacancy_master.company_location.try(:name) %> - <%= vacancy_master.department.try(:name) %></td>
               
                <td><%= vacancy_master.experience %></td>
                <td>
                <%= link_to '', modal_show_vacancy_page_vacancy_masters_path(vacancy_master),class: 'btn btn-xs btn-default fa fa-eye',remote:true %>
                  <!-- <= link_to '', show_vacancy_profile_vacancy_masters_path(vacancy_master_id: vacancy_master.id),class: 'btn btn-xs btn-default fa fa-eye' %> -->
                  <%= link_to 'View Profile',part_resume_selected_resumes_path(vacancy_master_id: vacancy_master.id),class: 'btn btn-xs btn-primary' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div id="myModal" class="modal fade"></div>

<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>