<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
    <div class="pull-right">
    </div>
  </div>
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Employee ID</th>
          <th>Employee Name</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
          <% @employee_resignations.each do |employee_resignation| %>
          <tr>
            <td><%= employee_resignation.employee.try(:manual_employee_code) %></td>
            <td><%= full_name(employee_resignation.employee)%></td>
            <td>
              <%= link_to '', show_resignation_detail_employee_resignations_path(emp_id: employee_resignation.employee_id,resignation_id: employee_resignation.id), class: 'btn btn-default fa fa-eye btn-sm' %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

