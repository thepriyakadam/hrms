<div class="box">
  <div class="box-header">
    <h3 class="box-title">Search By Month Year</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
      <%= bootstrap_form_for(:employee, url: { action: 'month_year_wise_record'},html: {id: 'salary'},remote: true ) do |f| %>
    <div class="row">
      <div class="col-sm-2">
      <label>Month1</label>
        <div class="field">
          <%= select :salary,:month1, ['January','February','March','April','May','June','July','August','September','October','November','December'],{label: 'Select Month',include_blank: " Select Month"}, class: "form-control" %>
         </div>
      </div>
      <div class="col-sm-2">
      <label>Year1</label>
        <div class="field">
          <%= select :salary,:year1,['2015','2016','2017','2018','2019','2020','2021','2022','2023','2024','2025','2026','2027'],{label: 'Select Year',include_blank: " Select Year"},{class: 'form-control'} %>
        </div>
      </div>
      <div class="col-sm-2">
      <label>Month2</label>
        <div class="field">
          <%= select :salary,:month2, ['January','February','March','April','May','June','July','August','September','October','November','December'],{label: 'Select Month',include_blank: " Select Month"}, class: "form-control" %>
         </div>
      </div>
      <div class="col-sm-2">
      <label>Year2</label>
        <div class="field">
          <%= select :salary,:year2,['2015','2016','2017','2018','2019','2020','2021','2022','2023','2024','2025','2026','2027'],{label: 'Select Year',include_blank: " Select Year"},{class: 'form-control'} %>
        </div>
      </div>
      <div class="col-sm-2">
        <label></label>
          <div class="actions">
            <%= f.submit "Display Record", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
      </div>
    </div>
          
    <div class="ajax-progress"></div>
      <div id="month_year_wise_record"></div>
    </div>
<%end%>

<script type="text/javascript">
  $("#salary").validate({
    rules: {
      "salary[year1]":{
        required: true
      },
      "salary[month1]":{
        required: true
      },
      "salary[year2]":{
        required: true
      },
      "salary[month2]":{
        required: true
      }
    },
    messages: {
      "salary[year1]":{
        required: "Please specify Year"
      },
      "salary[month1]":{
        required: "Please specify Month"
      },
      "salary[year2]":{
        required: "Please specify Year"
      },
      "salary[month2]":{
        required: "Please specify Month"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>