<div class="box">
  <div class="box-header">
    <h3 class="box-title">Loan Approval</h3>
    <div class="pull-right">
    </div>
    </div>

<div class="box-body">

<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Member</th>
      <th>Date</th>
      <th>Loan type</th>
      <th>Amount</th>
      <th>No. of EMI</th>
      <th>EMI</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @loan_requests.each do |loan_request| %>
      <tr>
        <td><%= full_name(loan_request.membership.employee) %></td>
        <td><%= loan_request.date %></td>
        <td><%= loan_request.loan_type.try(:name) %></td>
        <td><%= loan_request.amount %></td>
        <td><%= loan_request.no_of_emi %></td>
        <td><%= loan_request.emi %></td>
        <td><%= loan_request.status %></td>
        <td><%= link_to 'Approve', approve_loan_request_loan_requests_path(loan_request),class: 'btn btn-xs btn-primary' %></td>
      </tr>
 <% end %>
  </tbody>
</table>
</div>
</div>