
<table id="example1" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>  
      <th>Sr. No</th>
      <th>State</th>
      <th>Code</th>
      <th>District</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @districts.each do |district| %>
      <tr>
        <td><%= i = i + 1 %></td>
        <td><%= district.state.try(:name) %></td>
        <td><%= district.code %></td>
        <td><%= district.name %></td>
        <td> <!-- link_to '', state,class: 'btn btn-xs btn-default fa fa-eye',remote:true  %> -->
      <%= link_to '', edit_district_path(district),class: 'btn btn-xs btn-success fa fa-edit',remote:true  %>
        <%= link_to '', district, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-xs btn-danger fa fa-close',remote:true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#example1').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>