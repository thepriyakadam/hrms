
<div class="box box-default">
  <div class="box-header">
    <h3 class="box-title">Final Compensatory Off</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  	<%= bootstrap_form_for :login, url: {action: 'update_coff_changes'}, html: {id: 'login'} do |f| %>  
			<table id="example6" class="table table-bordered table-hover table-condensed'">
			  <thead>
			    <tr>
			      <th>ID</th>
			      <th>Employee</th>
			    	<th>Date</th>
			    	<th colspan="3">Action </th>
			   </tr>
			  </thead>

			  <tbody>
			  	<% @leave_c_offs.each do |leave_c_off| %>
			  	 <%= f.hidden_field :leave_c_off_id, value: leave_c_off.id %>
			      <tr>
			        <td><%= leave_c_off.employee.try(:manual_employee_code) %></td>
			        <td><%= leave_c_off.employee.try(:first_name) %> <%= leave_c_off.employee.try(:middle_name) %> <%= leave_c_off.employee.try(:last_name) %></td>
			        <td><%= leave_c_off.c_off_date %></td>
			        <td>
			        	<%= submit_tag("COff Leave",name: 'coff', id: "buttonCtc", :class => "btn btn-xs btn-primary",:title => "COff Leave" ) %>
			          <%= submit_tag("COff Pay", name: 'encashment', id: "buttonCtc",:class => "btn btn-xs btn-info",:title => "COff Pay" ) %>
			          <%= submit_tag("COff Leave + Pay",name: 'coffencashment', id: "buttonCtc", :class => "btn btn-xs btn-success",:title => "COff Leave + Pay" ) %>
			        	<%= submit_tag("COff Reject",name: 'reject', id: "buttonCtc", :class => "btn btn-xs btn-danger",:title => "COff Reject" ) %>
			        </td>
			      </tr>
			  	<% end %>
			  </tbody>
			</table>
  	<% end %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
