<div class="box box-default">
  <div class="box-header with-border">
   
 <!-- /.box-header -->
   <div class="row">
   <div class="col-sm-1">
  <% if @joining_detail.employee.passport_photo_file_name == nil %>
  <% if @joining_detail.employee.gender == "Female" %>
   <%= image_tag "avatar2.png",class: "img", alt: "User Image", size: "70x70" %>
  <%else%>
   <%= image_tag "avatar5.png",class: "img", alt: "User Image", size: "70x70" %>
  <%end%>
 <%else%>
      <%= image_tag @employee.passport_photo.url, :size => "70x70" %>
      <%end%>
  </div>
    <div class="col-sm-6">
     <font color='#0077b3'>
       ID : <%= @joining_detail.employee.try(:manual_employee_code) %><br>
       Name : <%= @joining_detail.employee.try(:first_name) %> <%= @joining_detail.employee.try(:middle_name) %> <%= @joining_detail.employee.try(:last_name) %><br>
       Email : <%= @joining_detail.employee.try(:email) %></font>
    </div>
  </div>
   <div class="box-tools pull-right">
      <%= link_to 'Edit',  edit_joining_detail_path(@joining_detail,contract_month: @joining_detail.contract_month),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
      <%= link_to 'Back', employees_path,class: 'btn btn-default btn-xs fa fa-arrow-left' %>
    </div>
     </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
   <tr><th colspan="4"><center><font color='#0077b3'>Employee On Boarding Detail</font></center> </th></tr>

    <tr>
      <th><strong>UAN No.</strong></th>
      <td><%= @joining_detail.employee_uan_no %></td>

      <th><strong>PF No</strong></th>
      <td><%= @joining_detail.employee_pf_no %></td>
    </tr>

    <tr>
      <th> <strong>Joining Date</strong></th>
      <td><%= @joining_detail.joining_date %></td>

      <th> <strong>Confirmation Date</strong></th>
      <td><%= @joining_detail.confirmation_date %></td>
    </tr>
  
    <tr>
      <th><strong>Employee Grade</strong></th>
      <td><%= @joining_detail.employee_grade.try(:name) %></td>

      <th><strong>Employee Designation</strong></th>
      <td><%= @joining_detail.employee_designation.try(:name) %></td>
    </tr>

    <tr>
      <th><strong>Employee Category</strong></th>
      <td><%= @joining_detail.employee_category.try(:name) %></td>

      <th><strong>Contract Month</strong></th>
      <td><%= @joining_detail.try(:contract_month) %></td>
    </tr>

     <tr>
      <th><strong>Contract End Date</strong></th>
      <td><%= @joining_detail.try(:contract_end_date) %></td>
      
      <th><strong>Probation Period</strong></th>
      <td><%= @joining_detail.probation_period %></td>
    </tr>

    <tr>
      <th><strong>Notice Period After Probation</strong></th>
      <td><%= @joining_detail.notice_period_after_probation %></td> 
    
     <th><strong>Notice Period (During Probation)</strong></th>
      <td colspan="3"><%= @joining_detail.notice_period %></td>
    </tr>

     <tr>
      <th><strong>Passport</strong></th>
      <td><%= @joining_detail.have_passport %></td>

      <th><strong>Passport No.</strong></th>
      <td><%= @joining_detail.passport_no %></td>
    </tr> 

    <tr>
      <th><strong>Passport Issue Date</strong></th>
      <td><%= @joining_detail.passport_issue_date %></td>

      <th> <strong>Passport Expiry Date</strong></th>
      <td> <%= @joining_detail.passport_expiry_date %></td>
    </tr>

    <tr>
      <th><strong>Leaving Date</strong></th>
      <td><%= @joining_detail.try(:leaving_date) %></td>

      <th><strong>Retirment Date</strong></th>
      <td> <%= @joining_detail.retirement_date %></td>
    </tr>

    <tr>
      <th><strong>Employee Option</strong></th>
      <td><%= @joining_detail.is_new ? "New" : "Replacement" %></td>


      <th><strong>Employee Replacement</strong></th>
      <td><%= full_name(@joining_detail.try(:replacement).try(:employee)) %></td>
     </tr>


      <tr>
        <th><strong>Compensatory Off</strong></th>
        <td><%= @joining_detail.c_off ? "Yes" : "No" %></td>

        <th><strong>COff Expire</strong></th>
        <td><%= @joining_detail.c_off_expire ? "Yes" : "No" %></td>
      </tr>

      <tr>
        <th><strong>COff Applicable Day</strong></th>
        <td><%= @joining_detail.try(:c_off_applicable_day).to_f %></td>
        
        <th><strong>Cost Center</strong></th>
        <td><%= @joining_detail.cost_center.try(:name) %></td>
      </tr>
      <tr>
        <th><strong>Gps Track</strong></th>
        <td><%= @joining_detail.gps_track ? "Yes" : "No" %></td>

        <th><strong>Restricted Area</strong></th>
        <td><%= @joining_detail.restricted_area ? "Yes" : "No" %></td>
      </tr>
      <tr>
        <th><strong>Welfare</strong></th>
        <td><%= @joining_detail.welfare ? "Yes" : "No" %></td>

        <th><strong>Contact Library</strong></th>
        <td><%= @joining_detail.contact_library ? "Yes" : "No" %></td>
      </tr>

      <tr>
        <th><strong>Attendance Regularization</strong></th>
        <td><%= @joining_detail.is_regularization ? "Yes" : "No" %></td>

        <th><strong>Chief Operating Officer</strong></th>
        <td><%= @joining_detail.chief_operating_officer ? "Yes" : "No" %></td>
      </tr>
      
      <tr>
        <th><strong>Head Officer</strong></th>
        <td><%= @joining_detail.head_officer ? "Yes" : "No" %></td>

        <th></th>
        <td></td>
      </tr>

  <tr><th colspan="4"><center><font color='#0077b3'>Employee Payroll Detail</font></center> </th></tr>
    <tr>
      <th colspan="2"><strong>Payment Mode</strong></th>
      <td colspan="2"><%= @joining_detail.payment_mode.try(:name) %></td>

      <!-- <th>Basis Of Time</th>
      <td><%#= @joining_detail.basis_of_time ? "Yes" : "No" %></td> -->
    </tr>

    <tr>
      <th><strong>Employer PF</strong></th>
      <td><%= @joining_detail.is_employeer_pf ? "Yes" : "No" %></td>

      <th><strong>Employee PF</strong></th>
      <td><%= @joining_detail.select_pf %></td>
    </tr>

    <tr>
      <th><strong>PF No.</strong></th>
      <td><%= @joining_detail.employee_pf_no %></td>

      <th><strong>PF Max Amount</strong></th>
      <td><%= @joining_detail.pf_max_amount %></td>
    </tr>

    <tr>
      <th><strong>Employer ESIC</strong></th>
      <td><%= @joining_detail.is_employeer_esic ? "Yes" : "No" %></td>

      <th><strong>Employee ESIC</strong></th>
      <td><%= @joining_detail.have_esic ? "Yes" : "No" %></td>
    </tr>
    <tr>
      <th><strong>ESIC No.</strong></th>
      <td><%= @joining_detail.employee_efic_no %></td>

      <th><strong>Retention</strong></th>
      <td><%= @joining_detail.have_retention ? "Yes" : "No" %></td>
    </tr>

     <tr>
      <th><strong>Insurance</strong></th>
      <td><%= @joining_detail.is_insurance ? "Yes" : "No" %></td>

      <th><strong>Family Insurance</strong></th>
      <td><%= @joining_detail.is_family_pension ? "Yes" : "No" %></td>   

     </tr>

     <tr>
      <th><strong>DA</strong></th>
      <td></td>


      <th><strong>Bonus</strong></th>
      <td><%= @joining_detail.is_bonus ? "Yes" : "No" %></td>   

     </tr>

      <tr>
      <th><strong>OT Option</strong></th>
      <td><%= @joining_detail.ot_option ? "Yes" : "No" %></td>


      <th><strong>OT Rate</strong></th>
      <td><%= @joining_detail.ot_rate %></td>
     </tr>

     
 </table>
  </div><!-- /.box -->
</div>
