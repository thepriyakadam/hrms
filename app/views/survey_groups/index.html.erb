<p id="notice"><%= notice %></p>

<h1>Listing Survey Groups</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Name</th>
      <th>Contact</th>
      <th>Role</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_groups.each do |survey_group| %>
      <tr>
        <td><%= survey_group.employee %></td>
        <td><%= survey_group.name %></td>
        <td><%= survey_group.contact %></td>
        <td><%= survey_group.role %></td>
        <td><%= survey_group.status %></td>
        <td><%= link_to 'Show', survey_group %></td>
        <td><%= link_to 'Edit', edit_survey_group_path(survey_group) %></td>
        <td><%= link_to 'Destroy', survey_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

