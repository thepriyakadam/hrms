<p id="notice"><%= notice %></p>

<h1>Listing Blood Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blood_groups.each do |blood_group| %>
      <tr>
        <td><%= blood_group.name %></td>
        <td><%= link_to 'Show', blood_group %></td>
        <td><%= link_to 'Edit', edit_blood_group_path(blood_group) %></td>
        <td><%= link_to 'Destroy', blood_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

