<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Create Overtime</h3>
  </div><!-- /.box-header --> 
  <div class="box-body">
    <%= bootstrap_form_for(@overtime,html: {id: 'company'}) do |f| %>
      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
           <%= f.select :employee_id, Employee.all.collect {|e| [e.manual_employee_code+"  "+e.first_name+" "+e.last_name,e.id]} %>
           </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
        <label>Overtime Date </label>
         <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :ot_date,hide_label: true,class: 'company_start_date'%>
          </div>
         </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
           <%= f.select :ot_type, ['Hours','Product'],{label: 'Overtime Type',include_blank: "Select Overtime Type"} %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
             <%= f.text_field :ot_total_hrs %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :total_production %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
           <%= f.text_field :normal_wages_rate %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :ot_wages_rate %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :ot_earning %>
          </div>
        </div>
        <div class="col-sm-3">
        <label>Paid On</label>
         <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :paid_on_date,hide_label: true,class: 'company_start_date'%>
          </div>
         </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-9">
          <div class="form-group required">
           <%= f.text_area :remarks %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit :class => class_name, data: { disable_with: data_info } %>
          </div>
        </div>
    </div>
    <% end %>
  </div><!-- /.box-body -->  
</div><!-- /.box -->