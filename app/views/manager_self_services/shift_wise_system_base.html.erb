<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Shift Wise Attendance </h3>
  </div>
  <div class="box-body">
		<table id="example6" class="table table-bordered table-hover table-condensed">
		  <thead>
		    <tr>
		      <th>Sr. No</th>
		      <th>Shift</th>
		      <th>Date</th>
		      <th>Action</th>
		    </tr>
		  </thead>
		  <tbody>
		  <% i = 0 %>
		    <% @shift_employees.each do |e| %>
		      <tr>
		        <td><%= i = i + 1 %></td>
		        <td><%= e.shift_time.try(:shift) %> - <%= e.shift_time.try(:name) %></td>
		        <td><%= e.date %></td>
		        <td>
		        	<% if e.date == Date.today %>
		        	<%= link_to "Attendance" ,system_base_attendance_manager_self_services_path(shift_employee_id: e.id), class: "btn btn-primary btn-xs" %>
		        	<% end %>
		        	<%= link_to "" ,show_system_attendance_manager_self_services_path(shift_employee_id: e.id), class: "btn btn-default btn-xs fa fa-eye",remote: true %>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
<div id="myModal" class="modal fade"></div>
<div id="show_system_attendance" class="modal fade"></div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>