<div class="box">
  <div class="box-header">
    <h3 class="box-title">Performance Status</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered table-hover table-condensed">
     <thead>
        <tr><th colspan="3"><center>Period <%= @period.try(:name) %></center></th></tr>
        <tr>
         <th>Employee</th>
         <th>Appraiser</th>
         <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @goal_bunches.each do |g| %>
          <tr>
            <td><%= g.employee.manual_employee_code %> - <%= full_name(g.employee) %></td>
            <td><%= g.employee.try(:manager).try(:manual_employee_code) %> - <%= full_name(g.employee.try(:manager)) %></td>
            <td>
              <% if g.final_confirm == true %>
                <small class="label label-danger">Final Approved</small>
              <% elsif g.reviewer_confirm == true%>
                <small class="label label-primary">Reviewer Evaluated</small>
              <% elsif g.appraiser_confirm == true%>
                <small class="label label-success">Appraiser Evaluated</small>
              <% elsif g.appraisee_confirm == true%>
                <small class="label label-warning">Self Evaluated</small>
              <% elsif g.goal_approval == true %>
                <small class="label label-info">Goal Approved</small>
              <% elsif g.goal_confirm == true || g.goal_approval == false %>
                <small class="label label-default">Goal Set</small>
              <% elsif g.period_id != nil %>
                <small class="label label-info">Period Set</small>
              <% else%>
              <small class="label label-info">Else</small>
              <%end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
 <br>
<%= link_to 'Back',period_list_for_status_goal_bunches_path,class: 'btn btn-sm btn-default'%>
 </div>
</div>
