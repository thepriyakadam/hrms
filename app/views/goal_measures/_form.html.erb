<%= bootstrap_form_for(@goal_measure, remote: true) do |f| %>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Goal Measure'%>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Goal Measure", class: 'btn btn-primary btn-sm'%>
      </div>
    </div>
  </div>
<% end %>
