<%= bootstrap_form_for(@well_faire,remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :month %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :amount %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :status %>
      </div>
    </div>

    <div class="col-sm-3">
    <label></label>
      <div class="actions">
        <%= f.submit :class => class_name %>
      </div>
    </div>
  </div>
<% end %>