<div class="box-body">

  <div style="width: 700px; height: auto;
          padding: 10px;
          border: 5px solid gray;
          margin: 10;">
    <div style="float:left;"><b>Personel Information</b> </div><br><br>

<!--       <b><center>TO WHOM IT MAY CONCERN</center></b><br><br>
 -->
      <p><b>Name:</b> <%= @employee.try(:first_name) %> <%= @employee.try(:middle_name) %> <%= @employee.try(:last_name) %></p>
      <p><b>Address:</b> <%= @employee.permanent_address %></p>
      <p><b>Contact No:</b> <%= @employee.contact_no %> <b>E-mail:</b> <%= @employee.email %></p>
      <p><b>Date Of Birth:</b> <%= @employee.date_of_birth %> <b>Blood Group:</b> <%= @employee.blood_group.try(:name) %> <b>Maritial Status:<b> <%= @employee.marital_status %></p>

      <div style="float:left;">Family Background -  </div><br><br>

      <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
       <tr><th colspan="4"><center><font color='#0077b3'>Family Background</font></center> </th></tr>
      <tr>
        <th>Sr.No</th>
        <th>Family  member's name</th>
        <th>Relationship with employeee</th>
        <th>Occupation</th>
      </tr>
    </thead>
  <tbody>
  <% i=0 %>
    <% @families.each do |family| %>
      <tr>
        <td><%= i=i+1 %></td>
        <td><%= family.f_name %></td>
        <td><%= family.relation %></td>
        <td><%= family.profession %></td>
      </tr>
      <% end %>
    </tbody>
  </table><br>

  <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
    <tr><th colspan="5"><center><font color='#0077b3'>Education</font></center> </th></tr>
      <tr>
        <th>Qualification</th>
        <th>Marks</th>
        <th>Passout Year</th>
        <th>College/School</th>
        <th>University/Institute</th>
     </tr>
    </thead>

    <tbody>
       <% @qualifications.each do |qualification| %>
        <tr>
          <td><%= qualification.course %></td>
          <td><%= qualification.marks %></td>
          <td><%= qualification.year_id %></td>
          <td><%= qualification.college %></td>
          <td><%= qualification.university %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br>
 
 <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
    <tr><th colspan="3"><center><font color='#0077b3'>Skills</font></center> </th></tr>
    <tr>
      <th>Employee</th>
      <th>Name</th>
      <th>Skill level</th>
    </tr>
  </thead>

  <tbody>
    <% @skillsets.each do |skillset| %>
      <tr>
        <td><%= skillset.employee %></td>
        <td><%= skillset.name %></td>
        <td><%= skillset.skill_level %></td>
      </tr>
      <% end %>
    </tbody>
  </table><br>



  
