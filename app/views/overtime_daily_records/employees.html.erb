<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Overtime Daily Record </h3>
    <div class="pull-right">
      <%= link_to "New Overtime Daily Record", new_overtime_daily_record_path, class: 'btn btn-sm btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>Employee ID</th>
      <th>Employee Name</th>
      <th>Date</th>
      <th>Hours</th>
      <th>Rate</th>
      <th>Amount</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @overtime_daily_records.each do |overtime_daily_record| %>
      <tr>
        <td><%= overtime_daily_record.employee.try(:manual_employee_code) %></td>
        <td><%= full_name(overtime_daily_record.employee) %></td>
        <td><%= overtime_daily_record.ot_daily_date %></td>
        <td><%= overtime_daily_record.ot_daily_hrs %></td>
        <td><%= overtime_daily_record.ot_rate %></td>
        <td><%= overtime_daily_record.ot_daily_amount %></td>
        <td>
          <%= link_to '', edit_overtime_daily_record_path(overtime_daily_record),class: 'btn btn-xs btn-success fa fa-edit' %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
