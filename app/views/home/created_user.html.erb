<div class="box">
  <div class="box-header">
    <h3 class="box-title">Role Assigned User</h3>    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table  id="example2" class="table table-bordered table-hover table-condensed">
	    <thead>
	      <tr>
		      <th>Employee Code</th>
		      <th>Employee Name</th>
		      <th>Hrms Access Role</th>
		      <th>Reporting Person One</th>
		      <th>Reporting Person Two</th>
		      <th>Department</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @employees.each do |employee| %>   
			      <tr>
			        <td><%= employee.manual_employee_code %></td>
			        <td><%= employee.first_name %> <%= employee.middle_name %> <%= employee.last_name %></td>
			        <td><%= employee.member.role.try(:name) %>
			        <td><%= employee.manager_id %> </td>
			         <td><%= employee.manager_2_id %></td>
			        <td><%= employee.department.try(:name) %></td>
			      </tr>	
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>


