<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">

      <%= bootstrap_form_for @overall_rating,url:{action: "update_modal_self", method: :patch,id:@overall_rating.id} do |f| %>
        <div class="row">
          <div class="col-sm-4">
            <%= f.text_area :appraisee_comment,hide_label:true, placeholder: "Self comment" %>    
          </div>

          <div class="col-sm-2">
            <%= f.submit "Update", class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      <% end %>
     
    </div>
  </div>
</div>
