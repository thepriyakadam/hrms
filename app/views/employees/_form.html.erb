<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Create Employee</h3>
  
  <div class="pull-right">
   <h3 class="box-title">Last Employee ID : <%= Employee.last.try(:manual_employee_code) %> </h3>
   </div>
   </div><!-- /.box-header -->
  <div class="box-body">
    <%= bootstrap_form_for(@employee,html: {id: 'employee'}) do |f| %>
      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
           <%= f.text_field :manual_employee_code,label: 'Employee ID',placeholder: "Employee ID"%>
           </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :first_name , label: 'First Name' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :middle_name, label: 'Middle Name' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :last_name, label: 'Last Name' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.select :gender, ['Male','Female'],{label: 'Select Gender',include_blank: " Select Gender"} %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :email %>
          </div>
        </div>

         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :adhar_no, label: 'Aadhaar No.',placeholder: "e.g : 123456789012" %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :pan_no, label: 'PAN Card No.',placeholder: "e.g : ABCDE12345B" %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :licence_no, label: 'Driving Licence No.' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :contact_no,label: 'Contact No.' %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
            <%= f.select :religion_id, all_religions,{include_blank: " Select Religion"} %>
          </div>
        </div>
        <div class="col-sm-3">
        <div class="field">
            <%= f.select :status,['Active','Inactive'],{include_blank: " Select Employee Status"} %>
        </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
            <%= f.select :employee_type_id, all_employee_type,{include_blank: " Select Employee Type"} %>
          </div>
        </div>   
      </div>
      <div class="row">
        <div class="col-sm-3">
          <div class="field">
            <%= f.select :marital_status, ['Married','UnMarried'],{label: 'Marital Status',include_blank: " Select Marital Status"} %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.select :nationality_id, all_nationality,{include_blank: " Select Nationality"} %>
          </div>
        </div>

        <div class="col-sm-3">
          <label>Date of Birth: </label>
          <div class="field">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= f.text_field :date_of_birth, hide_label: true, class: 'birth_date'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.select :blood_group_id, all_blood_group, {label: 'Blood Group',include_blank: " Select Blood Group"} %>
          </div>
        </div>
      </div>

      <div class="row">
         <div class="col-sm-9">
          <div class="form-group required">
           <%= f.text_field :permanent_address, label: 'Permanent Address' %>
          </div>
        </div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :pin_code,label:"Pin/Zip Code",placeholder: "e.g : 400703"%>
          </div>
        </div>
        </div>
   
         <div class="row">
          <div class="col-sm-3">
            <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_country_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
              <%=f.select :country_id, all_countries,{include_blank: "Please Select Country"},{onchange:"var a={id:$(this).val(), form : 'employee'}; $.get('/companies/collect_states',a,function(response){});"}%>
            </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_state_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
              <div id="states">
                <%= render 'companies/state_dropdown' %> 
            </div> 
            </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <%= link_to "", new_district_path,class: "fa fa-plus fa-success",:target => "_blank" %>
              </div>
             <div id="district">
               <%= render 'companies/city_dropdown' %>
           </div>
           </div>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="field">
              <%= f.text_field :city %>
            </div>
          </div>
        </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="field">
            <%= f.text_field :current_address, label: 'Current Address' %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
            <%= f.select :handicap, ['Yes','No'],{label:"Differently Able",include_blank: "Please Select Differently Abled"},{onchange:"var a={value:$(this).val()}; $.get('/employees/ajax_show_textbox',a,function(response){});"} %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="field">
            <div id="handicap_type">
              <% if action_name == 'edit' and @employee.handicap_type != "" %>
                <%= f.text_field :handicap_type,label:"Disability Type" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <div class="field">
            <div class="field">
              <%= f.select :department_id, all_department_list,{label: 'Location',include_blank: " Select Location"} %>
            </div>
          </div>
        </div> 
      </div>

      <div class="row">
        <div class="col-sm-3">
          <div class="actions">
              <%= f.submit :class => class_name, data: { disable_with: data_info } %>
              <% if params['controller'] == 'employees' and params['action'] == 'edit' %>
                <%= link_to 'Back',basic_detail_employees_path(id: @employee.id),class: 'btn btn-default btn-sm fa fa-arrow', remote:true%>
              <%end%>
          </div>
        </div>
      </div>
    <% end %>
  </div><!-- /.box-body -->
</div><!-- /.box-->

<script type="text/javascript">
  $(function(){
    $('.birth_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>