<div class="box">
  <div class="box-header"><h3>Induction Confirmation</h3>
    <div class="pull-right">
    </div>
  </div>
  <div class="box-body">
<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @induction_details.each do |induction_detail| %>
      <tr>
         <td><%= induction_detail.employee.manual_employee_code %></td>
        <td><%= induction_detail.employee.try(:first_name) %> <%= induction_detail.employee.try(:middle_name) %> <%= induction_detail.employee.try(:last_name) %></td>
        <td>
          <% if induction_detail.induction_completed == false %>
            <%= link_to 'Confirm',confirm_induction_details_path(induction_detail), data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-info' %>
            <% elsif induction_detail.induction_completed == true %>
            <small class="label label-primary">Complete</small>
             <% else %>
            <% end %>
        </td>
        <div id="myModal" class="modal fade"></div>
        <td>
<!--           < if induction_detail.induction_completed == true %>
 -->          <%= link_to '', induction_detail,class: 'btn btn-xs btn-default fa fa-eye' %>
          <!-- < else %> -->
           <!--  <= link_to ' Update Date',update_date_modal_induction_details_path(induction_detail),class: 'btn btn btn-xs btn-success fa fa-modx',remote: true %> -->
<!--           < end %>
 -->        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 </div>
</div>
