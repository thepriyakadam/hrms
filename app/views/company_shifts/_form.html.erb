<%= bootstrap_form_for(@company_shift,html: {id: 'company_type'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Company Shift' %>
      </div>
    </div>
    <div class="col-sm-2">
           <div class="field">
           <%= f.text_field :in_time,hide_label:true, placeholder: 'In Time' %>
           </div>
        </div>
        <div class="col-sm-2">
           <div class="field">
           <%= f.text_field :out_time,hide_label:true, placeholder: 'Out Time' %>
           </div>
        </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name, data: { disable_with: data_info },value:'Create Company Shift' %>
      </div>
    </div>
  </div>
<% end %>