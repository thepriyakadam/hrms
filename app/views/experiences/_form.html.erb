<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Experience</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <%= bootstrap_form_for(@experience,html: {id: 'experince'},remote:true) do |f| %>
    <%= f.hidden_field :employee_id, value: @employee.id %>
    <div id="entry1" class="clonedInput">
      <div class="row">
        

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :company_name, class: 'input_company_name' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :designation, class: 'input_designation' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :no_of_year,label: "No. Of Years", class: 'input_no_of_year' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :ctc,label: "CTC", class: 'input_ctc' %>
          </div>
        </div>
      </div>
    </div>  
    <!--< unless params['controller'] == 'experiences' and params['action'] == 'edit' %>
      <div class="row">
        <div class="col-sm-2">
          <input type="button" id="btnAdd" value="+ Additional Experiences" class="btn btn-sm btn-success"> 
        </div>

        <div class="col-sm-3">
          <input type="button" id="btnDel" value="Remove Above Experiences" class="btn btn-sm btn-danger">
        </div>
      </div><br>
    <end%>  -->
    <div class="row">
      <div class="col-sm-6">
        <div class="actions">
          <%= f.submit :class => class_name, data: { disable_with: data_info } %>
          <% if params['controller'] == 'experiences' and params['action'] == 'edit' %>
            <%= link_to 'Back',ajax_experience_detail_employees_path(id: @employee.id),class: 'btn btn-sm btn-default',remote:true%>
          <%end%>
        </div>
      </div>
    </div>

  <% end %>
  </div><!-- /.box-body -->
  </div><!-- /.box -->

<script>
$("#experince").validate({
    rules: {
      "experince[company_name]":{
        required: true,
      },
      "experince[designation]":{
        required: true,
      },
      "experince[no_of_year]":{
        required: true,
        numbersOnly: true,
      }
       },
    messages: {
      "experince[company_name]":{
        required: "Please Specify Company Name",
      },
       "experince[designation]":{
        required: "Please Specify Designation ",
      },
      "experince[no_of_year]":{
        required: "Please Specify Experience Year",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
