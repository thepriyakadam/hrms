<!--SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Advance Detail Information</h3>
  </div><!-- /.box-header -->

  <div class="box-body">
    <%= bootstrap_form_for(:advance_salary, url: { action: 'advance_detail'},html: {id: 'advance_salary'},remote:true) do |f| %>
      <div class="row">
        <div class="col-sm-2">
          <div class="field">
            <%= f.select :year,['2015','2016','2017','2018','2019','2020','2021','2022','2023','2024','2025','2026','2027'],{label: 'Year',include_blank: " Select Year"}, class: "form-control" %>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="field">
            <%= f.select :month, ['January','February','March','April','May','June','July','August','September','October','November','December'],{label: 'Month',include_blank: " Select Month"}, class: "form-control" %>
           </div>
        </div>

        <div class="col-sm-2">
          <label>Company</label>
            <div class="form-group required">
              <%=f.select :company_id, all_company,{include_blank: "Select Company",hide_label: true},{onchange:"var a={id:$(this).val(), form :'advance_salary'}; $.get('/employees/collect_company_location',a,function(response){});"}%>
            </div>
          </div>

          <div class="col-sm-2">
            <div class="form-group required">
              <div id="company_location">
                <%= render 'employees/company_location_dropdown' %> 
            </div> 
            </div>
          </div>
        
        <div class="col-sm-2" style="padding-top:20px;">
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary" %>
          </div>
        </div>
        </div><br>
        <div id="advance_salary_detail"></div>

      <br>
    <% end %>
  </div><!-- /.box-body -->
</div><!-- /.box -->

<script>
$("#advance_salary").validate({
    rules: {
      "advance_salary[month]":{
        required: true,
      },
      "advance_salary[year]":{
        required: true,
      },
      "advance_salary[company_id]":{
        required: true,
      }
    },
    messages: {
      "advance_salary[month]":{
        required: "Please select Month",
      },
      "advance_salary[year]":{
        required: "Please select Year",
      },
      "advance_salary[company_id]":{
        required: "Please select Company",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
