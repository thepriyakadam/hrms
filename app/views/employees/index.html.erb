<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
    <div class="pull-right">
      <%= link_to "New Employee", new_employee_path, class: 'btn btn-sm btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>Department</th>
      <th>Grade</th>
      <th>Designation</th>
      <th>Action</th>
    </tr>
  </thead>


  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.manual_employee_code %></td>
        <td><%= full_name(employee) %></td>
        <td><%= employee.try(:company_location).try(:name)%> - <%= employee.try(:department).try(:name)%></td>
        <td><%= employee.try(:joining_detail).try(:employee_grade).try(:name) %></td>
         <td><%= employee.try(:joining_detail).try(:employee_designation).try(:name) %></td>
        <td>
          <%= link_to '', employee,class: 'btn btn-sm btn-default fa fa-eye' %>
        </td>
        </tr>
      <% end %>
        </tbody>
  </table>
</div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example1').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>



