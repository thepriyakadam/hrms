	<%= select :company_location,:state_id,(@states.present? ? (@states.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select State",hide_label:true},{onchange:"var a={id:$(this).val()}; $.get('/companies/collect_cities',a,function(response){});",class: "form-control"}%>
