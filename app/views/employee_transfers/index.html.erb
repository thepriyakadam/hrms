<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Transfer List</h3>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Reporting master</th>
      <th>Employee designation</th>
      <th>Employee category</th>
      <th>Company</th>
      <th>Company location</th>
      <th>Department</th>
      <th>Justification</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_transfers.each do |employee_transfer| %>
      <tr>
        <td><%= employee_transfer.employee.try(:manual_employee_code) %></td>
        <td><%= employee_transfer.reporting_master_id%></td>
        <td><%= employee_transfer.employee_designation.try(:name) %></td>
        <td><%= employee_transfer.employee_category.try(:name) %></td>
        <td><%= employee_transfer.company.try(:name) %></td>
        <td><%= employee_transfer.employee.try(:company_location).try(:name) %></td>  
        <td><%= employee_transfer.employee.try(:department).try(:name) %></td>
        <td><%= employee_transfer.justification %></td>
        <td>
        <!-- <= link_to '', employee_transfer,class:'btn btn-xs btn-default fa fa-eye' %> -->
        <%= link_to '', edit_employee_transfer_path(employee_transfer),class:'btn-success btn-xs fa fa-edit' %>
       <%= link_to '', employee_transfer, method: :delete, data: { confirm: 'Are you sure?' },class:'btn-danger btn-xs fa fa-close' %>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>