<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body" style="height:1000px; max-height:100px; width:630px; max-width:630px;">
     <%= bootstrap_form_for :rembursment,url:{action:'approve_and_send_next',rembursment_id: @rembursment.id},html: {id: 'rembursment'} do |f| %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.select :manager_id, all_reporting_master_list, {hide_label: true,include_blank: " Select Reporting Manager"}, class: 'input_degree_stream_id' %>
          </div>
          <div class="col-sm-2">
            <%= f.submit "Approve & Send next", class: 'btn btn-sm btn-primary fa fa-modx' %>
          </div>
        </div>
      <% end %>
      <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
    </div>
  </div>
</div>

<script>
$("#rembursment").validate({
    rules: {
      "rembursment[manager_id]":{
        required: true,
      }
    },
    messages: {
      "rembursment[manager_id]":{
        required: "Please specify Reporting Manager Name",
      }
      
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>


