<!--SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Leave Request
  </div><!-- /.box-header -->

  <div class="box-body">
    <%= bootstrap_form_for(@employee_leav_request,html: {id: 'employee_leav_request'}) do |f| %>
     <%= f.hidden_field :employee_id, value: @employee.id %>
     <div class="row">
      <div class="col-sm-12">
        <div class="field">
         <table class="table table-bordered table-hover table-condensed'">
           <thead>
           <tr><center><td colspan="4"><center>Initiate Leave Request For Employee : <%= @employee.manual_employee_code %>  <%= @employee.first_name %> <%= @employee.middle_name %> <%=@employee.last_name %>  </center></td></tr>
            <tr>
              <th><center> Manager 1 :</center></th>
              <td><%= @employee.manager.try(:first_name) %> <%= @employee.manager.try(:middle_name) %> <%= @employee.manager.try(:last_name) %></td>
              <th><center>Manager 2 :</center></th>
              <td><%= @employee.manager_2.try(:first_name) %> <%= @employee.manager_2.try(:middle_name) %> <%= @employee.manager_2.try(:last_name) %></td>
            </tr>
           </thead>
         </table>
        </div>
      </div>
    </div>
     <div class="row">
       
        <div class="col-sm-6">
          <div class="field">
         
          <table class="table table-bordered table-hover table-condensed'">
           <thead>
           <tr><center><th colspan="2"><center> Leave Balance </center></th></tr>
            <tr>
              <th>Leave Type</th>
              <th>No.of Leaves Available</th>
            </tr>
           </thead>
          <% @total_leaves.each do |l| %>
          <tr>
          <th><%= l.leav_category.name %></th>
          <td><%= l.no_of_leave %></td>
          </tr>
          <% end %>
          </table>
          </div>
        </div>

        
        <div class="col-sm-6">
          <div class="field">
          <table class="table table-bordered table-hover table-condensed'">
           <thead>
            <tr><center><th colspan="3"><center> C.Off Balance </center></th></tr>
            <tr>
              <th>Date</th>
              <th>C Off</th>
              <th>Expiry Date</th>
            </tr>
           </thead>
          <% @leave_c_offs.each do |leave_c_off| %>
          <tr>
          <th><%= leave_c_off.c_off_date %></th>
          <td><%= leave_c_off.leave_count %></td>
          <td><%= leave_c_off.c_off_date+leave_c_off.c_off_expire_day %></td>
          </tr>
          <% end %>
          </table>
          </div>
        </div>
      </div>
      <hr>

      <div class="row">
      
        <div class="col-sm-2">
          <div class="form-group required">
            <%= f.select :leav_category_id, all_leav_category,label: 'Leave Category' %>
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-group required">
           <%= f.select :leave_type, ['Full Day','Half Day'],label: 'Leave Type' %>
          </div>
        </div>

        <div class="col-sm-3">
         <div class="form-group required">
     <!--    <label>Date Range </label> -->
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= f.text_field :date_range,class: "pull-right active",label:'Date Range',id: "reservationtime" %>
            </div><!-- /.input group -->
          </div>
        </div>
        <div class="col-sm-5">
          <div class="form-group required">
            <%= f.text_field :reason %>
          </div>
        </div>
      </div>
     <br>
     
      <div class="row">
        
         <div class="col-sm-6">
          <div class="actions">
            <%= f.submit'Create Leave Request', :class => class_name, data: { disable_with: data_info } %>
            <%= link_to ' Back', employee_leav_requests_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div><!-- /.box-body -->
<br>
<script type="text/javascript">
$("#employee_leav_request").validate({
    rules: {
      "employee_leav_request[leav_category_id]":{
        required: true
      },
      "employee_leav_request[leave_type]":{
        required: true
      },
      "employee_leav_request[date_range]":{
        required: true
      },
      "employee_leav_request[reason]":{
        required: true
      }
    },
    messages: {
      "employee_leav_request[leav_category_id]":{
        required: "Please specify leave category."
      },
      "employee_leav_request[leave_type]":{
        required: "Please specify leave type."
      },
      "employee_leav_request[date_range]":{
        required: "Please specify date range."
      },
      "employee_leav_request[reason]":{
        required: "Please specify reason."
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
  });
  $(function(){
    $('#reservationtime').on('click', function() {
    
    });

  });
</script>
