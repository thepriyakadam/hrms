<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Value</th>
      <th>Discription</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.value %></td>
        <td><%= rating.discription %></td>
        <td>
          <% if rating.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_rating_path(rating),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
            <%= link_to '',  rating, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_ratings_path(rating: rating),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>