<div class="box">
  <div class="box-header">
    <h3 class="box-title">Training Record List</h3>
    <div class="pull-right">
      <%= link_to "Create Training Record", new_training_record_path, class: 'btn btn-sm btn-primary' %> 
    </div>
  </div>
  <div class="box-body">
    <table id="example" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Employee</th>
          <th>Training topic master</th>
          <th>Training date</th>
          <th>Duration</th>
          <th>Location</th>
          <th>Trainer name</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @training_records.each do |training_record| %>
          <tr>
            <td><%= training_record.employee.try(:manual_employee_code) %> <%= training_record.employee.try(:first_name) %> <%= training_record.employee.try(:last_name) %></td>
            <td><%= training_record.training_topic_master.try(:name) %></td>
            <td><%= training_record.training_date %></td>
            <td><%= training_record.duration %></td>
            <td><%= training_record.location %></td>
            <td><%= training_record.trainer_name %></td>
            <td>
            <%= link_to '', edit_training_record_path(training_record) ,class: 'btn btn-xs btn-success fa fa-edit' %>
            <%= link_to '', training_record, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', training_record,class: 'btn btn-xs btn-default fa fa-eye' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
