<table id="example6" class="table table-bordered table-hover table-condensed'">
<% i = 0 %>
  <thead>
   <tr>
      <th>Sr. No</th>
    	<th>Date</th>
    	<th>C.Off </th>
    	<th>Action</th>
   </tr>
  </thead>

  <tbody>
  <% @leave_c_offs.each do |leave_c_off| %>
      <tr>
        <td><%= i = i + 1 %></td>
        <td><%= leave_c_off.c_off_date %></td>
        <td><%= leave_c_off.leave_count %></td>
        <td>
            <% if leave_c_off.is_taken == true %>
            <small class= "label label-success">Taken</small>
            <% elsif leave_c_off.is_expire == true %>
            <small class= "label label-warning">Expired</small>
            <% elsif leave_c_off.current_status == "Pending" %>
            <small class= "label label-info">Pending</small>
            <% elsif leave_c_off.current_status == "FinalApproved" %>
            <small class= "label label-primary">FinalApproved</small>
            <% elsif leave_c_off.current_status == "FirstApproved" %>
            <small class= "label label-default">FirstApproved</small>
           <!--  <= link_to 'Revert', add_coff_leave_c_offs_path(id: leave_c_off), class: 'btn btn-xs btn-info' %> -->
            <% else %>
            <%= link_to '', destroy_self_leave_c_offs_path(leave_c_off), data: { confirm: 'Are you sure?' },class: 'btn btn-xs  btn-danger fa fa-close' %>
            <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div id="myModal" class="modal fade"></div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
