<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Goal Confirmation</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <%= bootstrap_form_for GoalBunch.new,url:{action:'appraiser_confirm',emp_id: @employee.id,goal_bunch_id: @goal_bunch_id.id,period_id: @period.id} do |f| %>  

  <div class="box-header with-border">
  <h3 class="box-title">Employee Details</h3>
</div>
  <table class="table table-bordered table-hover table-condensed">     
    <thead>
      <tr>
        <th>Employee Id</th>
        <th>Name</th>
        <th>Age</th>
        <th>Department</th>
        <th>Date Of Joining</th>
        <th>Grade</th>
        <th>Current Designation</th> 
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |a| %>
      <tr>
        <td><%= a.manual_employee_code %></td> 
        <td><%= a.first_name %> <%= a.middle_name %> <%= a.last_name %></td>
        <td><%=  %></td>
        <td><%= a.department.try(:name) %></td>
        <td><%= @joining_detail.joining_date %></td>
        <td><%= @joining_detail.employee_grade.try(:name) %></td>
        <td><%= @joining_detail.employee_designation.try(:name) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="box-header with-border">
    <h3 class="box-title">Qualification Details</h3>
  </div>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Degree</th>
        <th>Year Of Passing</th>
        <th>Marks</th>
        <th>Qualification</th>
      </tr>
    </thead>
    <tbody>
      <% @qualifications.each do |q| %>
        <tr>
          <td><%= q.degree.try(:name) %></td>
          <td><%= q.year.try(:name) %> </td>
          <td><%= q.marks %></td>
          <td><%= q.degree_type.try(:name) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="box-header with-border">
    <h3 class="box-title">Previous Experience</h3>
  </div>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Previous Company</th>
        <th>Designation</th>
        <th>Previous Exp.(Years)</th>
        <th>CTC</th>
      </tr>
    </thead>
    <tbody>
      <% @experiences.each do |e| %>
        <tr>
          <td><%= e.company_name %></td>
          <td><%= e.designation %></td>
          <td><%= e.no_of_year %></td>
          <td><%= e.ctc %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="box-header with-border">
    <h3 class="box-title">Promotion Details</h3>
  </div>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Department</th>
        <th>Designation</th>
        <th>Grade</th>
        <th>Category</th>
        <th>CTC</th>
        <th>From</th>
        <th>To</th>
      </tr>
    </thead>
    <tbody>
    <% @employee_promotions.each do |employee_promotion| %>
        <tr>
          <td><%= employee_promotion.employee.try(:company_location).try(:name) %> - <%= employee_promotion.employee.try(:department).try(:name) %></td>
          <td><%= employee_promotion.employee_designation.try(:name) %></td>
          <td><%= employee_promotion.employee_grade.try(:name) %></td>
          <td><%= employee_promotion.employee_category.try(:name) %></td>
          <td><%= employee_promotion.try(:ctc) %></td>
          <td><%= employee_promotion.effective_from %></td>
          <td><%= employee_promotion.effective_to %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @goal_bunch_id.goal_confirm == false %>

    <h3>Period : <%= @period.try(:name) %> <%= @period.try(:from) %> <%= @period.try(:to) %></h3>
      <div class="box-header with-border">
        <h3 class="box-title">Goal List</h3>
      </div>
        <table class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th><input type="checkbox" id="selectAll" value="selectAll"></th>
              <th>Goal perspective</th>
              <th>Goal weightage</th>
              <th>Goal measure</th>
              <th>Target</th>
              <th>Aligned</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @goal_ratings.each do |goal_rating| %>
              <tr>
                <td>
                <% if goal_rating.goal_bunch.goal_confirm == true %>
                <% else %>
                <%= check_box_tag "goal_rating_ids[]", goal_rating.goal_bunch_id %>
                <% end %>
                </td>
                <td><%= goal_rating.goal_perspective.try(:name) %></td>
                <td><%= goal_rating.goal_weightage %></td>
                <td><%= goal_rating.goal_measure %></td>
                <td><%= goal_rating.target %></td>
                <td><%= goal_rating.aligned %></td>
                <td>
                  <% if goal_rating.goal_bunch.goal_confirm == true %>
                    <small class="label label-info">Confirmed</small>
                  <% else %>
                    <%= link_to '', goal_modal_goal_ratings_path(goal_rating_id: goal_rating,period_id: @period.id),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <div class="box-header with-border">
      <h3 class="box-title">Attribute List</h3>
      </div>
        <table class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th><input type="checkbox" id="selectAll" value="selectAll"></th>
              <th>Attribute</th>
              <th>Goal weightage</th>
              <th>Goal measure</th>
              <th>Target</th>
              <th>Aligned</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @goal_attribute_ratings.each do |goal_rating| %>
              <tr>
                <td>
                <% if goal_rating.goal_bunch.goal_confirm == true %>
                <% else %>
                <%= check_box_tag "goal_rating_ids[]", goal_rating.goal_bunch_id %>
                <% end %>
                </td>
                <td><%= goal_rating.attribute_master.try(:name) %></td>
                <td><%= goal_rating.goal_weightage %></td>
                <td><%= goal_rating.goal_measure %></td>
                <td><%= goal_rating.target %></td>
                <td><%= goal_rating.aligned %></td>
                <td>
                  <% if goal_rating.goal_bunch.goal_confirm == true %>
                    <small class="label label-info">Confirmed</small>
                  <% else %>
                    <%= link_to '', attribute_modal_goal_ratings_path(goal_rating_id: goal_rating,period_id: @period.id),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>


  <% else %>
  <% end %>
      <div class="row">
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Confirm",class: 'btn btn-primary btn-sm' %> |
            <%= link_to 'Back',goal_period_list_goal_bunches_path(@employee.id),class: 'btn btn-sm btn-default fa fa-arrow-left'%>
          </div>
        </div>
      </div>
    <% end %>

</div>
</div>
<div id="myModal" class="modal fade"></div>
<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>
