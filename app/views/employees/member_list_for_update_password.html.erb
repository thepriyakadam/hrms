<div class="box">
  <div class="box-header">
    <h3 class="box-title">Member List</h3>
    <div class="pull-right">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>Department</th>
      <th>Designation</th>
      <th>No.</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |m| %>
      <tr>
        <td><%= m.manual_member_code %></td>
        <td><%= m.employee.try(:first_name) %> <%= m.employee.try(:middle_name) %> <%= m.employee.try(:last_name) %></td>
        <td><%= m.employee.try(:company_location).try(:name) %> - <%= m.employee.try(:department).try(:name) %></td>
        <td><%= m.employee.try(:joining_detail).try(:employee_designation).try(:name) %></td>
        <td><%= m.employee.try(:contact_no) %></td>
        <td>
          <%= link_to 'Reset Password', reset_password_employees_path(id: m.id),class: 'btn btn-sm btn-primary' %>
        </td>
        </tr>
      <% end %>
        </tbody>
  </table>
</div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>