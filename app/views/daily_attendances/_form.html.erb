<%= bootstrap_form_for :collect, url: collect_daily_attendances_path, method: :get, html: {id: "daily_attendance"}, remote: true do |f| %>
  <div class="row">  
    <div class="col-sm-3">
      <div class="form-group required">
        <%= select :collect,:employee_id, all_employee_list, {label: "Employee",include_blank: "Select Employee"},{:class=>"select2",:style=>"width: 100%;",:tabindex=>"-1"} %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :day, label:'Date', class: 'start_date'%>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3" style="padding-top: 20px">
        <div class="actions">
          <%= f.submit'Submit', :class => class_name, data: { disable_with: data_info } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $(function(){
    $('.start_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-5:+10',
    dateFormat: 'dd-mm-yy' });
  });
  $(function () {
    $(".select2").select2();
  });
</script>