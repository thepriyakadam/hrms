<div class="box-header with-border">
  </div>
  <table id="example" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <td colspan="6"><center>Employee List For Training</center></td>
        </tr>
        <tr>
          <th><input type="checkbox" id="selectAll" value="selectAll"></th>
          <th>ID</th>
          <th>Name</th>
          <th>Department</th>
          <th>Designation</th>
          <th>Contact No</th>
        </tr>
      </thead>

      <tbody>
        <% @training_requests.each do |training_request| %>
          <tr>
            <td><%= check_box_tag "employee_ids[]", training_request.employee_id %></td>
            <td><%= training_request.employee.try(:manual_employee_code) %></td> 
            <td><%= full_name(training_request.employee) %></td>
            <td><%= training_request.employee.department.try(:name) %></td>
            <td><%= training_request.employee.joining_detail.employee_designation.try(:name) %></td>
            <td><%= training_request.employee.try(:contact_no) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>
