        <td><%= daily_bill_detail.travel_expence_type.try(:name) %></td>
        <td><%= daily_bill_detail.travel_expence %></td>
      </tr>
    <% end %>
    <tr>
       <th colspan="3">Expense Amount</th>
        <th><%= @daily_bill_details.sum(:travel_expence) %></th>
     </tr>
