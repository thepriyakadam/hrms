<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Salary Master Data</h3>    
  </div><!-- /.box-header -->
	<div class="box-body">
		<div class="row">
			<div class="col-sm-4">
				<table class="table table-bordered table-hover table-condensed">
				  <thead>
				    <tr>
				      <th>Particular</th>
				      <th>Amount</th>
				    </tr>
				  </thead>

				  <tbody>
				  	<% addable_total = 0 %>
				    <% @addable_salary_components.each do |salary_component| %>
				      <tr>
				        <td><%= salary_component.salary_component.name %></td>
				        <td align="right"><%=salary_component.monthly_amount %></td>
				      </tr>
				    <% end %>
				    <tr>
			        <td>Total</td>
			        <td align="right"><%= @addable_total %></td>
			      </tr>
				  </tbody>
				</table>
			</div>
			<div class="col-sm-4">
				<table class="table table-bordered table-hover table-condensed">
				  <thead>
				    <tr>
				      <th>Particular</th>
				      <th>Amount</th>
				    </tr>
				  </thead>

				  <tbody>
				    <% deducted_total = 0 %>
				    <% @deducted_salary_components.each do |salary_component| %>
				      <tr>
				        <td><%= salary_component.salary_component.name %></td>
				        <td align="right"><%= salary_component.monthly_amount %></td>
				      </tr>
				    <% end %>
				    <% if @as_flag %>
					    <% @instalment_array.each do |ia| %>
						    <tr>
						    	<td>Installment</td>
						    	<td align="right"><%= ia.advance_salary.instalment_amount %></td>
						    </tr>
							<% end %>
						<% end %>
				    <tr>
				        <td>Absent</td>
				        <td align="right"><%= '%.2f'%(@absent_value) %></td>
				      </tr>
				    <tr>
			        <td>Total</td>
			        <td align="right"><%= '%.2f'%(@deducted_total) %></td>
			      </tr>
				  </tbody>
				</table>
			</div>
			<div class="col-sm-4">
				<table class="table table-bordered table-hover table-condensed">
				  <thead>
				    <tr>
				      <th>Particular</th>
				      <th>Value</th>
				    </tr>
				  </thead>

				  <tbody>
				      <tr>
				        <td>Month Day</td>
				        <td><%= @working_day.try(:day_in_month) %></td>
				      </tr>
				      <tr>
				        <td>Holidays</td>
				        <td><%= @working_day.try(:holiday_in_month) %></td>
				      </tr>
				      <tr>
				        <td>Leave Total</td>
				        <td><%= @working_day.try(:total_leave) %></td>
				      </tr>
				      <tr>
				        <td>Working Days</td>
				        <td><%= @working_day.try(:present_day) %></td>
				      </tr>
				       <tr>
				        <td>Absent Days</td>
				        <td><%= @working_day.try(:absent_day) %></td>
				      </tr>
				      <tr>
				        <td>Payble Days</td>
				        <td><%= @working_day.try(:payable_day) %></td>
				      </tr>
				  </tbody>
				</table>
			</div>
		</div>
	</div><!-- /.box-body -->
</div><!-- /.box -->

