<div class="box box-default">
  <div class="box-header with-border">
  <h6 class="box-title">Employee Nominations - <%= code_full_name(@employee_nominations.first.employee) %></h6>
    <div class="box-tools pull-right">

      <%= link_to 'Back', employees_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
      <%= link_to "Add Nominies", ajax_new_employee_nomination_employees_path(id: @employee.id), class: 'btn btn-primary btn-sm',remote:true %>
    </div>
  </div><!-- /.box-header --><br>
  <div class="box-body">
   <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
     <thead>
    <tr>
      <th>Nomination Type</th>
      <th>Nominee Name</th>
      <th>Nomination</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @employee_nominations.each do |employee_nomination| %>
      <tr>
        <td><%= employee_nomination.nomination_master.try(:name) %></td>
        <td><%= employee_nomination.family.f_name %> <%= employee_nomination.family.m_name %> <%= employee_nomination.family.l_name %></td>
        <td><%= employee_nomination.nomination %></td>
        <td>
        <%= link_to '', employee_nomination,class: 'btn btn-default fa btn-xs fa-eye',remote: true%>
        <%= link_to '', edit_employee_nomination_path(employee_nomination) ,class: 'btn btn-xs btn-success fa fa-edit' ,remote: true %>
          <!--  link_to '', employee_nomination, method: :delete, data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-danger fa fa-close' %> -->
        </td>
      <% end %>
    </tbody>
  </table>
  </div><!-- /.box -->
</div>