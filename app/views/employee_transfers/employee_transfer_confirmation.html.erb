<div class="box">
  <div class="box-header">
    <h3 class="box-title">Transfer Approval</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-12">
        <table id="example2" class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Employee</th>
              <th>Request To</th>
              <th>Employee designation</th>
              <th>Employee category</th>
              <th>Company</th>
              <th>Company location</th>
              <th>Department</th>
              <th>Justification</th>
            </tr>
          </thead>

          <tbody>
          <% @employee_transfers.each do |employee_transfer| %>
          <tr>
            <td><%= employee_transfer.employee.try(:manual_employee_code) %></td>
            <td><%= employee_transfer.reporting_master.employee.try(:first_name) %> <%= employee_transfer.reporting_master.employee.try(:middle_name) %> <%= employee_transfer.reporting_master.employee.try(:last_name) %></td>
            <td><%= employee_transfer.employee_designation.try(:name) %></td>
            <td><%= employee_transfer.employee_category.try(:name) %></td>
            <td><%= employee_transfer.company.try(:name) %></td>
            <td><%= employee_transfer.employee.try(:company_location).try(:name) %></td>  
            <td><%= employee_transfer.employee.try(:department).try(:name) %></td>
            <td><%= employee_transfer.justification %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div id="myModal" class="modal fade"></div>
    <div id="myModal1" class="modal fade"></div>
      <%= link_to 'Approve',approve_transfer_employee_transfers_path(@employee_transfer),class: 'btn btn-sm btn-primary fa fa-check' %> |
      <%= link_to 'Reject',reject_transfer_employee_transfers_path(@employee_transfer.id),class: 'btn btn-sm btn-danger fa fa-trash' %> |
      <%= link_to 'Approve & Send next',modal_approve_employee_transfers_path(@employee_transfer.id),class: 'btn btn btn-sm btn-success fa fa-modx',remote: true %> |
      <%= link_to 'Edit & Approve',modal_edit_employee_transfers_path(@employee_transfer.id),class: 'btn btn btn-sm btn-info fa fa-modx',remote: true %> |
      <%= link_to 'Edit and send next',modal_edit_and_send_next_employee_transfers_path(@employee_transfer.id),class: 'btn btn-sm btn-info fa fa-check', remote: true %>
  </div>
</div>