<div class="row">
      <div class="col-sm-6">
        <table class="table table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Particular</th>
              <th>Actual Amount</th>
              <th>Calculated Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @addable_salary_components.each do |item| %>
              <tr>
                <td><%= item.salary_component.name %></td>
                <td id="<%= item.id %>_actual_amount" align="right">
                  <%= item.actual_amount.round %>
                </td>
                <td align="right">
                  <%= item.calculated_amount.round %>
                  <font color="green"><%= link_to "", salary_bubble_form_salaryslips_path(item_id: item.id,column_name:'calculated_amount'),class: "fa fa-edit", remote:true %></font>
                </td>
              </tr>
            <% end %>
            <tr>
              <td>Total</td>
              <td align="right"><%= @salaryslip.actual_gross_salary.round %></td>
              <td align="right"><%= @salaryslip.calculated_gross_salary.round %></td>
            </tr>
            <% @deducted_salary_components.each do |item| %>
              <tr>
                <td><%= item.salary_component.name %></td>
                <td align="right"><%= item.actual_amount.round %></td>
                <td align="right"><%= item.calculated_amount.round %></td>
              </tr>
            <% end %>
            <tr>
              <td>Total</td>
              <td align="right"><%= @salaryslip.actual_total_deduction.round %></td>
              <td align="right"><%= @salaryslip.calculated_total_deduction.round %></td>
            </tr>
            <tr>
              <td>Net Salary</td>
              <td align="right"><%= @salaryslip.actual_net_salary.round %></td>
              <td align="right"><%= @salaryslip.calculated_net_salary.round %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>


          <script type="text/javascript">

  $(function(){
    <% @addable_salary_components.each do |item| %>
      $('#<%= item.id %>_actual_amount').on('click', function() {
        alert("ok");
      });
    <% end %>
  })
</script>