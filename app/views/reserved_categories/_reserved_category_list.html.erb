<div class="box-header with-border">
</div>
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr> 
     <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
   <% @reserved_categories.each do |reserved_category| %>
      <tr>
        <td><%= reserved_category.code %></td>
        <td><%= reserved_category.name %></td>
        <td><%= reserved_category.description %></td>
        <td>
          <% if reserved_category.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_reserved_category_path(reserved_category),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  reserved_category, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_reserved_categories_path(reserved_category: reserved_category),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
