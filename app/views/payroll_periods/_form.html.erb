<%= bootstrap_form_for(@payroll_period,html: {id: 'payroll_period'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <label>From </label>
      <div class="field">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :from, hide_label: true, class: 'birth_date1'%>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <label>To </label>
      <div class="field">
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-calendar"></i>
          </div>
          <%= f.text_field :to, hide_label: true, class: 'birth_date1'%>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <label>Status </label>
      <div class="field">
        <%= f.check_box :status, label: 'Active'%>
      </div>
    </div>
    <div class="col-sm-3" style="padding-top:20px;">
      <div class="actions">
        <%= f.submit "Create Payroll Period", class: 'btn btn-primary btn-sm ' %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('.birth_date1').datepicker({
  changeYear:true,
  changeMonth: true,
  yearRange: '-100:+10',
  dateFormat: 'dd-mm-yy' });

$("#payroll_period").validate({
    rules: {
      "payroll_period[from]":{
        required: true,
      },
      "payroll_period[to]":{
        required: true,
      }
       },
    messages: {
      "payroll_period[from]":{
        required: "Please Specify From",
      },
      "payroll_period[to]":{
        required: "Please Specify To",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>