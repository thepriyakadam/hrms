
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Final Approval Vacancy List</h3>
    <div class="pull-right">
    </div>
  </div>

<div class="box-body">

    <table id="example1" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
        <th>Sr. No.</th>
       <th>Vacancy</th>
      <th>No. of position</th>
      <th>Status</th>
      <th>Action</th>
        </tr>
      </thead>

      <tbody>
      <% i = 0 %>
         <% @vacancy_requests.each do |vacancy_request| %>
      <tr>
        <td><%= i = i+1 %></td>
        <td><%= vacancy_request.vacancy %></td>
        <td><%= vacancy_request.no_of_position %></td>
         <td><%= vacancy_request.current_status %></td>
            <td>
              <%= link_to 'Approve',approval_detail_vacancy_requests_path(vacancy_request: vacancy_request.id),class: 'btn btn-sm btn-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>