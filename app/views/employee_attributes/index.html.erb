<div class="box">
  <div class="box-header">
    <h3 class="box-title">Created Employee Attribute</h3>
    <div class="pull-right">
      <%= link_to "New Attribute", new_employee_attribute_path, class: 'btn btn-sm btn-primary' %> 
    </div>  
  </div>
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Definition</th>
          <th>Weightage</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_attributes.each do |employee_attribute| %>
        <tr>
          <td><%= employee_attribute.attribute_master.name %></td>
          <td><%= employee_attribute.definition.name %></td>
          <td><%= employee_attribute.weightage %></td>
          <td>
            
            <%= link_to '', edit_employee_attribute_path(employee_attribute) ,class: 'btn btn-xs btn-success fa fa-edit' %>
            <%= link_to '', employee_attribute, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-danger fa fa-close' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>