<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Qualification Details</h3>
    <div class="box-tools pull-right">
      <%= link_to "Add Qualification", ajax_new_qualification_employees_path(id: @employee.id), class: 'btn btn-primary',remote:true %>
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
      <tr>
        <th>Degree Type</th>
        <th>Class</th>
        <th>Degree Steam</th>
        <th>Marks</th>
        <th>Year</th>
        <th>College</th>
        <th>University</th>
        <th>Action</th>
      </tr>
       <% @qualifications.each do |qualification| %>
      <tr>
          <td><%= qualification.degree_type.name %></td>
          <td><%= qualification.degree.name %></td>
          <td><%= qualification.degree_stream.name %></td>
          <td><%= qualification.marks %></td>
          <td><%= qualification.year.name %></td>
          <td><%= qualification.college %></td>
          <td><%= qualification.university.name %></td>
          <td>
            <%= link_to '', edit_qualification_path(qualification),class: 'btn btn-success fa fa-edit',remote:true %>
            <%= link_to '', qualification, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
      </tr>
        <%end%>
      </table>

  <div class="box-footer">
    Visit <a href="https://indiba.in/">www.indiba.in</a> for more Information about the HRMSONE.
  </div>
  </div><!-- /.box -->
</div>


