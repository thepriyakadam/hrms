<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave History</h3>
  </div><!-- /.box-header -->
  <div class="box-body">

  <table id="example1" class="table table-bordered table-hover table-condensed">
    <tbody>
      <tr><td colspan="4"><font color='red'><center>Current OD Detail</center></font></td></tr>
      <tr>
        <th>ID</th>
        <td><%= @current_request.employee.try(:manual_employee_code) %></td>

        <th>Employee Name</th>
        <td><%= full_name(@employee) %></td>
      </tr>
      <tr>
        <th>No. of Day</th>
        <td><%= @current_request.no_of_day %></td>

        <th>Period</th>
        <td><%= @current_request.start_date.to_date %> to <%= @current_request.end_date.to_date %></td>
      </tr>
      <tr>
        <th> Current Status</th>
        <td><%= @current_request.try(:current_status) %></td>

        <th>Reason</th>
        <td><%= @current_request.try(:reason) %></td>
      </tr>
    </tbody>
  </table>
  <br>
    <% if @current_request.current_status == "Pending" %>
        <%= link_to 'Approve', first_approve_od_status_record_path(@current_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-info fa fa-check' %> |
        <%= link_to 'Reject', first_reject_od_status_record_path(@current_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-danger fa fa-trash' %>
      <% else %>
        <%= link_to 'Approve', second_approve_od_status_record_path(@current_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-info fa fa-check' %> |
        <%= link_to 'Reject', second_reject_od_status_record_path(@current_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-danger fa fa-trash' %>
      <% end %>
  </div>
</div>