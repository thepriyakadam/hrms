<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Description</th>
      <th>Validity Date</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @salary_templates.each do |salary_template| %>
      <tr>
        <td><%= salary_template.code %></td>
        <td><%= salary_template.description %></td>
        <td><%= salary_template.validity_date %></td>
       <td><%= salary_template.is_active ? "Active" : "Inactive" %></td>
        <td>
        <% if salary_template.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
          <%= link_to 'Edit Template Detail', edit_salary_template_path(salary_template),class: 'btn btn-sm btn-success btn-xs',remote:true %>
          <%= link_to 'Assign Component To Template', salary_component_templates_path(salary_template),class: 'btn btn-sm btn-info btn-xs' %>
           <%= link_to '', is_confirm_salary_templates_path(salary_template: salary_template),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-primary fa fa-check' %>
          <%= link_to 'page', salary_template_page_salary_component_templates_path(salary_template),class: 'btn btn-xs btn-primary ' %>
  
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
