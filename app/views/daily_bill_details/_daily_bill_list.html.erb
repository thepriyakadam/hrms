<%= bootstrap_form_for @daily_bill_detail do |f| %>
    <table id="example2" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>  
<!--           <th><input type="checkbox" id="selectAll" value="selectAll"></th>
 -->          <th>Expense Date</th>
          <th>Place</th>
          <th>Expense Type</th>
          <th>Expense Amount</th>
          <th>Currency</th>
          <th>Image</th>
          <th>Document</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @daily_bill_details.each do |daily_bill_detail| %>
          <tr>
          <!--   <td>
              < if daily_bill_detail.is_confirm == true %>
              < else %><= check_box_tag "daily_bill_detail_ids[]",daily_bill_detail.id %>< end %>
            </td> -->
            <td><%= daily_bill_detail.expence_date %></td>
            <td><%= daily_bill_detail.e_place %></td>
            <td><%= daily_bill_detail.travel_expence_type.try(:name) %></td>
            <td><%= daily_bill_detail.travel_expence %></td>
            <td><%= daily_bill_detail.currency_master.try(:name) %> <%= daily_bill_detail.currency_master.try(:description) %></td>
            <td>
              <% if daily_bill_detail.avatar_file_file_name == nil %>
                <small class="label label-warning">Not Available</small>
              <% else %>
                <%= link_to '',download_doc_path(id: daily_bill_detail.id),class: 'btn btn-xs fa fa-download' %>
              <% end %>
            </td>
            <td>
                <% if daily_bill_detail.passport_photo_file_name == nil %>
                  <small class="label label-warning">Not Available</small>
                <% else %>
                  <%= link_to '',download_pics_path(id: daily_bill_detail.id),class: 'btn btn-xs fa fa-picture-o' %>
                <% end %>
            </td>            
            <td>
              <% if daily_bill_detail.is_confirm == true %>
                <small class="label label-info">Confirmed</small>
              <% else %>
                <%= link_to '', edit_daily_bill_detail_path(daily_bill_detail),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
                <%= link_to '',  daily_bill_detail, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
              <% end %>
              <% if daily_bill_detail.request_status == "Approved" %>
                <small class="label label-success">Approved</small>
              <% else %>
              <% end %>
            </td>
          </tr>
        <% end %>
        <tr>
              <th>Total</th>
              <td></td>
              <td></td>
              <td><%= @daily_bill_details.sum(:travel_expence) %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
        </tr>    
      </tbody>
    </table>
  
    <div class="row">
      <div class="col-sm-9">
        <div class="actions">
        <% if @travel_request.is_confirm == true %>
        <% else %>
        <%= link_to 'Confirm',is_confirm_daily_bill_details_path(travel_request_id: @travel_request.id),class: 'btn btn-primary btn-sm',data: { confirm: 'Are you sure?' } %>
          <!--<= f.submit "Confirm", class: 'btn btn-primary btn-sm',data: { confirm: 'Are you sure?' } %>--> |
        <% end %>

          <%= link_to 'Print PDF', print_daily_bill_daily_bill_details_path(format: 'pdf',qwe:@travel_request.id ),class: 'btn btn-sm btn-warning',:target => '_blank' %>
         
          <%= link_to 'Back', daily_bill_travel_requests_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>

        </div>
      </div>
    </div>
  <% end %>