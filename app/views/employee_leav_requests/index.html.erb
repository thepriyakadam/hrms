<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Request</h3>
    <div class="pull-right">
      <%= link_to "New Employee Leave Request", new_employee_leav_request_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Employee</th>
      <th>Leav category</th>
      <th>Leave type</th>
      <th>Satrt date</th>
      <th>End date</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_leav_requests.each do |employee_leav_request| %>
      <tr>
        <td><%= employee_leav_request.employee %></td>
        <td><%= employee_leav_request.leav_category.name %></td>
        <td><%= employee_leav_request.leave_type %></td>
        <td><%= employee_leav_request.satrt_date %></td>
        <td><%= employee_leav_request.end_date %></td>
         <td>
            <%= link_to '', employee_leav_request,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_employee_leav_request_path(employee_leav_request),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', employee_leav_request, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>