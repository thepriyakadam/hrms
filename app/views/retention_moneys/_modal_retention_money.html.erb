<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Retention Money Detail </center></h4>
    </div>
    <div class="modal-body">
		<table class="table table-bordered table-hover table-condensed">
		  <thead>
		  <tr>
			<th><strong>Retention</strong></th>
			<td><%= @retention_money.have_retention ? "Yes" : "No" %></td>
			<th><strong>Amount</strong></th>
			<td><%= @retention_money.amount %></td>
		</tr>
		<tr>
			<th><strong>Base Component</strong></th>
			 <td colspan="3"> <% i = 0 %>
		          <% @retention_money.base_component.split(",").each do |e| %>
		            <% if i == 0 %>
		              <%= SalaryComponent.find(e.to_i).name %>
		            <% else %>
		              + <%= SalaryComponent.find(e.to_i).name %>
		            <% end %>
		            <% i = i + 1 %>
		          <% end %>
		      </td>
			
		</tr>

		<tr>
			<th><strong>No. of Month</strong></th>
			<td><%= @retention_money.no_of_month %></td>

				<th><strong>Persentage</strong></th>
			<td><%= @retention_money.persent %></td>

		</tr>

		<tr>

			<th><strong>Max Amount</strong></th>
			<td><%= @retention_money.max_limit %></td>
			<th><strong>Description</strong></th>
			<td><%= @retention_money.description %></td>
		</tr>



		<tr>
			<th><strong>Status</strong></th>
			<td colspan="3"><%= @retention_money.is_active %></td>
		</tr>
		  </thead>
		</table>
	 </div>
	<div class="modal-footer"></div>
  </div>
</div>  