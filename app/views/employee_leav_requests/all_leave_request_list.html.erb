<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Approval</h3>
    <div class="pull-right"></div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-sm-6">
        <table id="example6" class="table table-bordered table-hover table-condensed">
          <thead>
           <tr><td colspan="5"><center>First Level Request</center></td></tr>
            <tr>
              <th>ID</th>
              <th>Employee Name</th>
              <th>Category</th>
              <th>Day</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @first_level_request_lists.try(:each) do |fl| %>
              <tr>
                <td><%= fl.employee.try(:manual_employee_code) %></td>
                <td><%= fl.employee.try(:first_name) %> <%= fl.employee.try(:middle_name) %> <%=fl.employee.try(:last_name) %></td>
                <td><%= fl.leav_category.try(:name) %></td>
                <td><%= fl.leave_count %></td>
                <td>
                  <%= link_to 'View Detail', admin_employee_history_with_current_leave_employee_leav_requests_path(fl),class: 'btn btn-sm btn-warning' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

       <div class="col-sm-6">
        <table id="example7" class="table table-bordered table-hover table-condensed">
          <thead>
          <tr><td colspan="5"><center>Second Level Request</center></td></tr>
            <tr>
              <th>ID</th>
              <th>Employee Name</th>
              <th>Category</th>
              <th>Day</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% @second_level_request_lists.try(:each) do |sl| %>
              <tr>
                <td><%= sl.employee.try(:manual_employee_code) %></td>
                <td><%= sl.employee.try(:first_name) %> <%= sl.employee.try(:middle_name) %> <%=sl.employee.try(:last_name) %></td>
                <td><%= sl.leav_category.try(:name) %></td>
                <td><%= sl.leave_count %></td>
                <td>
                  <%= link_to 'View Detail', admin_employee_history_with_current_leave_employee_leav_requests_path(sl),class: 'btn btn-sm btn-warning' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

<script type="text/javascript">
$(document).ready(function() {
    $('#example7').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
