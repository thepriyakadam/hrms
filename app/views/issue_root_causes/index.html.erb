<p id="notice"><%= notice %></p>

<h1>Listing Issue Root Causes</h1>

<table>
  <thead>
    <tr>
      <th>Issue tracker group</th>
      <th>Name</th>
      <th>Is active</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_root_causes.each do |issue_root_cause| %>
      <tr>
        <td><%= issue_root_cause.issue_tracker_group %></td>
        <td><%= issue_root_cause.name %></td>
        <td><%= issue_root_cause.is_active  %></td>
        <td><%= issue_root_cause.is_confirm %></td>
        <td><%= link_to 'Show', issue_root_cause %></td>
        <td><%= link_to 'Edit', edit_issue_root_cause_path(issue_root_cause) %></td>
        <td><%= link_to 'Destroy', issue_root_cause, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

