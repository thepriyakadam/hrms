<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Particular On Duty Request</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>On Duty Date</th>
          <th>On Duty Type</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @particular_od_records.each do |p| %>
          <tr>
            <td><%= p.leave_date.to_date %></td>
            <td><%= p.is_full ? "Full Day" : "Half Day" %></td>
            <% if p.is_cancel_after_approve %>
              <td><small class="label label-info">Cancelled After Approve</small></td>
            <% else %>
              <td><%= link_to 'Revert',cancel_after_approve_od_status_records_path(p), class: 'btn btn-xs btn-danger'%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>    
    <br>
      <%= link_to 'Back',hr_view_request_on_duty_requests_path(@on_duty_request.employee_id), class: 'btn btn-default btn-sm fa fa-arrow-left' %>
  </div>
</div>
