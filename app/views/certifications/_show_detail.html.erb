<div class="box box-default">
  <div class="box-header with-border">
   <div class="row">
  <div class="col-sm-1">
      <%= image_tag @employee.passport_photo.url, :size => "70x70" %>
  </div>
    <div class="col-sm-6">
     <font color='#0077b3'>
       ID : <%= @certifications.first.employee.try(:manual_employee_code) %><br>
       Name : <%= full_name(@certifications.first.employee) %><br>
       Email : <%= @certifications.first.employee.email %></font>
    </div>
  </div>
    <div class="box-tools pull-right">
      <%= link_to "Add Certification", ajax_new_certification_employees_path(id: @employee.id), class: 'btn btn-sm btn-primary',remote:true %>
      <%= link_to 'Back', employees_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
     <tr><th colspan="5"><center><font color='#0077b3'>Certificate Detail</font></center> </th></tr>
   <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
     <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.name %></td>
        <td><%= certification.year.try(:name) %></td>
        <td><%= certification.duration %></td>
        <td><%= certification.description %></td>
        <td>
           <%= link_to '', edit_certification_path(certification),class: 'btn btn-success btn-sm fa fa-edit',remote:true %>
           <!-- link_to '', certification, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %> --> 
        </td>
      </tr>
      <%end%>
    </table>
  </div><!-- /.box -->
</div>