
<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Physical Details</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->



<div class="box-body">
<%= bootstrap_form_for(@employee_physical,html: {id: 'employee_physical'},remote:true) do |f| %>
 
<%= f.hidden_field :employee_id, value: @employee.id %>
  <div class="row">
      
  
      <div class="col-sm-3">
        <div class="form-group required">
         <%= f.text_field :height,label:"Height",placeholder: "Height(in inches)" %>
       </div>
    </div>
 
      <div class="col-sm-3">
        <div class="form-group required">
          <%= f.text_field :weight,label:"Weight",placeholder: "Weight(in Kg)" %>
       </div>
    </div>
 
      <div class="col-sm-3">
        <div class="form-group required">
          <%= f.text_field :size,label:"T-shirt Size",placeholder: "T-shirt Size(XS,S,M,L,XL,XXL)" %>
       </div>
    </div>
  </div>


  <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit :class => class_name, data: { disable_with: data_info } %>
       </div>
    </div>
  </div>
<% end %>
</div><!-- /.box-body -->
  <div class="box-footer">
    Visit <a href="https://indiba.in/">www.indiba.in</a> for more Information about the HRMSONE.
  </div>
</div><!-- /.box -->