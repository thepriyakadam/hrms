<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">
      <%= bootstrap_form_for @goal_rating,url:{action: "update_goal_set_modal",goal_id: @goal_rating.id} do |f| %>

        <div class="row">
          <div class="col-sm-4">
          <label>Goal Perspective</label>
            <%= f.select :goal_perspective_id,all_goal_perspective,{hide_label:true, include_blank: "Select Goal Perspective"} %>    
          </div>
          <div class="col-sm-4">
          <label>Goal Measure</label>
            <%= f.text_field :goal_measure,hide_label:true, placeholder: "Goal Measure" %>   
          </div>
          <div class="col-sm-4">
          <label>Target/Unit</label>
            <%= f.text_field :target,hide_label:true, placeholder: "Target/Unit" %>    
          </div>
        </div>
        <div class="row">
        <div class="col-sm-4">
          <label>Goal Weightage</label>
            <%= f.text_field :goal_weightage,hide_label:true, placeholder: "Goal Weightage" %>    
          </div>
          <div class="col-sm-4">
          <label>Aligned To Supervisor</label>
            <%= f.select :aligned,["Yes","No"],hide_label:true, placeholder: "Aligned" %>    
          </div>

          <div class="col-sm-2" style="padding-top:20px;">
            <%= f.submit "update", class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      <% end %>
     
    </div>
  </div>
</div>
