<table  id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>Manager 1</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |e| %>
      <tr>
        <td><%= e.manual_employee_code %></td>
        <td><%= e.first_name %> <%= e.last_name %></td> 
        <td><%= e.manager.try(:first_name) %> <%= e.manager.try(:last_name) %></td>
        <td><%= link_to "", edit_manager_employees_path(id: e), class: "btn btn-success btn-xs fa fa-edit", remote:true %>
          <%= link_to '', update_manager_modal_employees_path(e), class: 'btn btn-xs btn-default fa fa-eye',remote: true%>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>



<script type="text/javascript">
$(document).ready(function() {
    $('#example').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

