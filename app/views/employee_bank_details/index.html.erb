<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Employee Bank Details</h3>
    <div class="pull-right">
      <%= link_to "Employee Bank Detail", new_employee_bank_detail_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed'">
    <thead>
      <tr>
      <th>Employee</th>
      <th>Account No</th>
      <th>Bank Name</th>
      <th>Branch Name</th>
      <th>Contact No</th>
      <th>MICR Code</th>
      <th>Branch Code</th>
      <th>IFSC Code</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_bank_details.each do |employee_bank_detail| %>
      <tr>
        <td><%= employee_bank_detail.employee %></td>
        <td><%= employee_bank_detail.account_no %></td>
        <td><%= employee_bank_detail.bank.try(:name) %></td>
        <td><%= employee_bank_detail.branch_name %></td>
        <td><%= employee_bank_detail.contact_no %></td>
        <td><%= employee_bank_detail.micr_code %></td>
        <td><%= employee_bank_detail.branch_code %></td>
        <td><%= employee_bank_detail.ifsc_code %></td>
        <td>
            <%= link_to '', employee_bank_detail,class: 'btn btn-default fa fa-eye btn-sm' %>
            <%= link_to '', edit_employee_bank_detail_path(employee_bank_detail),class: 'btn btn-sm btn-success fa fa-edit' %>
            <%= link_to '', employee_bank_detail, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>