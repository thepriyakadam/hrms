<div class="box">
  <div class="box-header">
    <h3 class="box-title">Company List</h3>
    <div class="pull-right">
      <%= link_to "Create Company", new_company_path, class: 'btn btn-sm btn-primary' %> 
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Company Code</th>
        <th>Company Name</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.manual_company_code%></td>
          <td><%= company.name %></td>
          <td>
            <%= link_to '', company,class: 'btn btn-sm btn-default fa fa-eye' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>