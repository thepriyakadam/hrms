<div class="box">
  <div class="box-header">
    <h3 class="box-title">Interview Round</h3>
<div class="box-body">
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Interviewer Name</th>
      <th>Interview type</th>
      <th>Interview date</th>
      <th>Interview time</th>
      <th>Location</th>
      <th>Schedule comment</th>
      <th>Evaluation</th>
    </tr>
  </thead>
  <tbody>
    <% @interview_rounds.each do |interview_round| %>
      <tr>
        <td><%= full_name(interview_round.employee) %></td>
        <td><%= interview_round.interview_type.try(:name) %></td>
        <td><%= interview_round.interview_date %></td>
        <td><%= interview_round.interview_time %></td>
        <td><%= interview_round.location %></td>
        <td><%= interview_round.schedule_comment %></td>
        <td>
            <%= link_to ' Evaluate', new_interview_analysis_path(interview_round_id: interview_round.id),class: 'btn btn-xs btn-success fa fa-comment' %>
        </td>
        <!-- <td>
        <= link_to '', interview_round,class: 'btn btn-xs btn-default fa fa-eye' %>
        </td> -->
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
</div>

<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>
