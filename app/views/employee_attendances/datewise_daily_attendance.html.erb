<div class="box">
	<div class="box-header">
	  <h3 class="box-title"> Attendance List </h3>
		<div class="box-body">
		  <%= bootstrap_form_for(:employee, url: { action: 'show_datewise_daily_attendance'},html: {id: "employee"},remote:true) do |f| %>
		  	<div class="row">
		      <div class="col-sm-3">
		        <div class="form-group required">
		          <div class="input-group">
		            <div class="input-group-addon">
		              <i class="fa fa-calendar"></i>
		            </div>
		            <%= text_field :employee,:date,hide_label: true,class: 'request_date form-control'%>
		          </div>
		        </div>
		      </div>
	        <div class="col-sm-2">
	          <%= f.submit "Show Employees",class: "btn btn-xl btn-primary fa fa-print",id: "buttonCtc" %>
	        </div>
		    </div>
   			<div id="show_datewise_daily_attendance"></div>

		  <% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
  $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#advance_salary").submit();
  })
</script>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 

   $("#employee").validate({
    rules: {
      "employee[date]":{
        required: true,
      }
       },
    messages: {
      "employee[date]":{
        required: "Please Specify From Date",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
