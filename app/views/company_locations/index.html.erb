<p id="notice"><%= notice %></p>

<h1>Listing Company Locations</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>District</th>
      <th>Pin code</th>
      <th>Contact no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_locations.each do |company_location| %>
      <tr>
        <td><%= company_location.company.name %></td>
        <td><%= company_location.name %></td>
        <td><%= company_location.address %></td>
        <td><%= company_location.city %></td>
        <td><%= company_location.district %></td>
        <td><%= company_location.pin_code %></td>
        <td><%= company_location.contact_no %></td>
        <td><%= link_to 'Show', company_location %></td>
        <td><%= link_to 'Edit', edit_company_location_path(company_location) %></td>
        <td><%= link_to 'Destroy', company_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

