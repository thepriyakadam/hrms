<div class="box box-default">
<div class="box-body">
<table class="table table-bordered table-hover table-condensed">     
  <thead>
  <tr><th colspan="7"><center>Employee Details</center></th></tr>
    <tr>
      <th>Employee Id</th>
      <th>Name</th>
      <th>Age</th>
      <th>Department</th>
      <th>Date Of Joining</th>
      <th>Grade</th>
      <th>Current Designation</th> 
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |a| %>
    <tr>
      <td><%= a.manual_employee_code %></td> 
      <td><%= a.first_name %> <%= a.middle_name %> <%= a.last_name %></td>
      <td><%=  %></td>
      <td><%= a.department.try(:name) %></td>
      <td><%= @joining_detail.joining_date %></td>
      <td><%= @joining_detail.employee_grade.try(:name) %></td>
      <td><%= @joining_detail.employee_designation.try(:name) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

  <table class="table table-bordered table-hover table-condensed">
    <thead>
    <tr><th colspan="4"><center>Previous Experience</center></th></tr>
      <tr>
        <th>Previous Company</th>
        <th>Designation</th>
        <th>Previous Exp.(Years)</th>
        <th>CTC</th>
      </tr>
    </thead>
    <tbody>
      <% @experiences.each do |e| %>
        <tr>
          <td><%= e.company_name %></td>
          <td><%= e.designation %></td>
          <td><%= e.no_of_year %></td>
          <td><%= e.ctc %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table class="table table-bordered table-hover table-condensed">
    <thead>
    <tr><th colspan="4"><center>Qualification Details</center></th></tr>
      <tr>
        <th>Degree</th>
        <th>Year Of Passing</th>
        <th>Marks</th>
        <th>Qualification</th>
      </tr>
    </thead>
    <tbody>
      <% @qualifications.each do |q| %>
        <tr>
          <td><%= q.degree.try(:name) %></td>
          <td><%= q.year.try(:name) %></td>
          <td><%= q.marks %></td>
          <td><%= q.degree_type.try(:name) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <table class="table table-bordered table-hover table-condensed">
    <thead>
    <tr><th colspan="7"><center>Promotion Details</center></th></tr>
      <tr>
        <th>Department</th>
        <th>Designation</th>
        <th>Grade</th>
        <th>Category</th>
        <th>CTC</th>
        <th>From</th>
        <th>To</th>
      </tr>
    </thead>
    <tbody>
    <% @employee_promotions.each do |employee_promotion| %>
        <tr>
          <td><%= employee_promotion.employee.try(:company_location).try(:name) %> - <%= employee_promotion.employee.try(:department).try(:name) %></td>
          <td><%= employee_promotion.employee_designation.try(:name) %></td>
          <td><%= employee_promotion.employee_grade.try(:name) %></td>
          <td><%= employee_promotion.employee_category.try(:name) %></td>
          <td><%= employee_promotion.try(:ctc) %></td>
          <td><%= employee_promotion.effective_from %></td>
          <td><%= employee_promotion.effective_to %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <% if  @goal_bunch.nil? %>
  <center><p class="text-warning"> No Goals Available </p></center> 
  <% else %>
    <% if @goal_bunch.review_comment == nil %>
      <%= bootstrap_form_for @goal_rating,url:{action:'reviewer_create',emp_id: @employee.id,goal_bunch_id: @goal_bunch_id.id,period_id: @period.id} do |f| %>
      <%= hidden_field_tag :reviewer_id, {},value: current_user.employee_id %> 
        <table class="table table-bordered table-hover table-condensed">
          <thead>
          <tr><th colspan="10"><center>Goal Rating</center></th></tr>
            <tr>
              <th>Goal perspective</th>
              <th>Measure</th>
              <th>Target</th>
              <th>Weightage</th>
              <th>Aligned</th>
              <th>Self Comment</th>
              <th>Self Rating</th>
              <th>Appraiser Comment</th>
              <th>Appraiser Rating</th>
              <th>Reviewer Comment</th>
            </tr>
          </thead>
          <tbody>
            <% @goal_ratings.each do |goal_rating| %>
              <tr>
                <td><%= goal_rating.goal_perspective.try(:name) %></td>
                <td><%= goal_rating.goal_measure %></td>
                <td><%= goal_rating.target %></td>
                <td><%= goal_rating.goal_weightage %></td>
                <td><%= goal_rating.aligned %></td>
                <td><%= goal_rating.appraisee_comment %></td>
                <td><%= goal_rating.appraisee_rating_id %></td>
                <td><%= goal_rating.appraiser_comment %></td>
                <td><%= goal_rating.appraiser_rating_id %></td>
                <td><%= text_field_tag 'reviewer_comments[]',"",class: "form-control",autofocus: true %></td>
                <%= hidden_field_tag 'goal_rating_ids[]',"",value: goal_rating.id %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <table class="table table-bordered table-hover table-condensed">
          <thead>
          <tr><th colspan="10"><center>Attribute Rating</center></th></tr>
            <tr>
              <th>Attribute</th>
              <th>Measure</th>
              <th>Target</th>
              <th>Weightage</th>
              <th>Aligned</th>
              <th>Self Comment</th>
              <th>Self Rating</th>
              <th>Appraiser Comment</th>
              <th>Appraiser Rating</th>
              <th>Reviewer Comment</th>
            </tr>
          </thead>
          <tbody>
            <% @goal_attribute_ratings.each do |goal_rating| %>
              <tr>
                <td><%= goal_rating.attribute_master.try(:name) %></td>
                <td><%= goal_rating.goal_measure %></td>
                <td><%= goal_rating.target %></td>
                <td><%= goal_rating.goal_weightage %></td>
                <td><%= goal_rating.aligned %></td>
                <td><%= goal_rating.appraisee_comment %></td>
                <td><%= goal_rating.appraisee_rating_id %></td>
                <td><%= goal_rating.appraiser_comment %></td>
                <td><%= goal_rating.appraiser_rating_id %></td>
                <td><%= text_field_tag 'reviewer_comments[]',"",class: "form-control" %></td>
                <%= hidden_field_tag 'goal_rating_ids[]',"",value: goal_rating.id %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% unless @goal_ratings.empty? && @goal_attribute_ratings.empty? %>
          <div class="row">
            <div class="col-sm-3">
              <div class="actions">
                <%= f.submit "Create Comment", class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Back',period_list_reviewer_goal_bunches_path(period_id: @period.id),class: 'btn btn-sm btn-default fa fa-arrow-left' %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %> <!-- review_commentnil -->
  <% end %>
<hr>

  <%= bootstrap_form_for GoalBunch.new,url:{action:'reviewer_comment_confirm',id: @employee.id} do |f| %>
    <table class="table table-bordered table-hover table-condensed">
      <thead>
      <tr><th colspan="11"><center>Goal Details</center></th></tr>
        <tr>
          <th>Goal perspective</th>
          <th>Measure</th>
          <th>Target</th>
          <th>Weightage</th>
          <th>Aligned</th>
          <th>Self Comment</th>
          <th>Self Rating</th>
          <th>Appraiser Comment</th>
          <th>Appraiser Rating</th>
          <th>Reviewer Comment</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @reviewer_goal_ratings.each do |goal_rating| %>
          <tr>
            <td><%= goal_rating.goal_perspective.try(:name) %></td>
            <td><%= goal_rating.goal_measure %></td>
            <td><%= goal_rating.target %></td>
            <td><%= goal_rating.goal_weightage %></td>
            <td><%= goal_rating.aligned %></td>
            <td><%= goal_rating.appraisee_comment %></td>
            <td><%= goal_rating.appraisee_rating_id %></td>
            <td><%= goal_rating.appraiser_comment %></td>
            <td><%= goal_rating.appraiser_rating_id %></td>
            <td><%= goal_rating.reviewer_comment %></td>
            <td>
              <% if @goal_bunch.reviewer_confirm == true %>
              <small class="label label-info">Confirmed</small>
              <% else %>
              <%= link_to '', reviewer_modal_goal_ratings_path(goal_rating_id: goal_rating,period_id: @period.id),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table table-bordered table-hover table-condensed">
      <thead>
      <tr><th colspan="11"><center>Attribute Details</center></th></tr>
        <tr>
          <th>Attribute</th>
          <th>Measure</th>
          <th>Target</th>
          <th>Weightage</th>
          <th>Aligned</th>
          <th>Self Comment</th>
          <th>Self Rating</th>
          <th>Appraiser Comment</th>
          <th>Appraiser Rating</th>
          <th>Reviewer Comment</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @reviewer_attribute_ratings.each do |goal_rating| %>
          <tr>
            
            <td><%= goal_rating.attribute_master.try(:name) %></td>
            <td><%= goal_rating.goal_measure %></td>
            <td><%= goal_rating.target %></td>
            <td><%= goal_rating.goal_weightage %></td>
            <td><%= goal_rating.aligned %></td>
            <td><%= goal_rating.appraisee_comment %></td>
            <td><%= goal_rating.appraisee_rating_id %></td>
            <td><%= goal_rating.appraiser_comment %></td>
            <td><%= goal_rating.appraiser_rating_id %></td>
            <td><%= goal_rating.reviewer_comment %></td>
            <td>
              <% if @goal_bunch.reviewer_confirm == true %>
              <small class="label label-info">Confirmed</small>
              <% else %>
              <%= link_to '', reviewer_modal_goal_ratings_path(goal_rating_id: goal_rating,period_id: @period.id),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="col-sm-3">
        <div class="actions">

          <% unless @goal_ratings.empty? && @goal_attribute_ratings.empty? %>
          <% else %>
            <% unless @goal_bunch.nil? %>
              <% if @goal_bunch.reviewer_confirm == true %>
              <% else %>
              <%= link_to 'Overall Comment', modal_reviewer_overall_goal_bunches_path(goal_bunch_id: @goal_bunch.id,period_id: @period.id), class: 'btn btn-warning btn-sm',remote: true %>
              <% end %>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  <% end %>
  <hr>

  <%= bootstrap_form_for GoalBunch.new,url:{action:'reviewer_overall_comment_confirm',emp_id: @employee.id,goal_bunch_id: @goal_bunch.id,period_id: @period.id} do |f| %>
    
    <table class="table table-bordered table-hover table-condensed">
      <thead>
      <tr><th colspan="4"><center>Recommendation For Employee</center></th></tr>
        <tr>
          <th>Promotion</th>
          <th>Increment</th>
          <th>Designation</th>
          <th>CTC</th>
        </tr>
      </thead>
      <tbody>
      <% @goal_bunches.each do |goal_bunch| %>
        <tr>
          <td><%= goal_bunch.r_promotion ? "Yes" : "No" %></td>
          <td><%= goal_bunch.r_increment ? "Yes" : "No" %></td>
          <td><%= goal_bunch.r_designation.try(:name) %></td>
          <td><%= goal_bunch.r_ctc %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table table-bordered table-hover table-condensed">
      <thead>
      <tr><th colspan="3"><center>Overall Comment For Employee</center></th></tr>
        <tr>
          <th><input type="checkbox" id="selectAll" value="selectAll"></th>
          <th>Overall Comment</th>
          <th>Overall Rating</th>
        </tr>
      </thead>
      <tbody>
      <% @goal_bunches.each do |goal_bunch| %>
        <tr>
          <td>
            <% if goal_bunch.reviewer_confirm == true %>
            <% else %>
            <%= check_box_tag "goal_bunch_ids[]", goal_bunch.id %>
            <% end %>
          </td>
          <td><%= goal_bunch.review_comment %></td>
          <td><%= goal_bunch.reviewer_rating_id %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <% unless @goal_bunch.nil? %>
        <% if @goal_bunch.review_comment == nil %>
        <% else %>
            <div class="col-sm-3">
              <div class="actions">
                <%= f.submit "Confirm", class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Back',period_list_reviewer_goal_bunches_path(period_id: @period.id),class: 'btn btn-sm btn-default fa fa-arrow-left' %>
              </div>
            </div>
         <% end %>
        <% end %>
      <% end %>
    <% end %>

    </div>
  </div>
</div>

<div id="myModal" class="modal fade"></div>
<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>
