 <div class="row">
    <div class="col-sm-6">
<div class="login-box">
  <div class="login-logo">

  <!-- <= image_tag "redefine_logo.jpg",size: "120x120" %> -->
  <!-- <= image_tag "spark.jpg",size: "270x100" %> -->
<!--   <= image_tag "span_pumps_logo.jpg",size: "120x120" %> -->

  <% t = Company.first %>
	<% company_logo = t.company_logo.url %>
  <%= image_tag company_logo ,size: "210x100" %>   

  </div><!-- /.login-logo -->

  <p><center><strong>Welcome To HCMZONE </strong></center></p>
  <div class="login-box-body">
  <%if t.nil?%>
    <p class="login-box-msg"><center> Login in to the portal</center></p>
  <%else%>
    <p class="login-box-msg"><center> Login in to the <%=t.name%> portal</center></p>
  <%end%>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Employee Code" %>
      </div>
      <div class="form-group has-feedback">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
      </div>
          <div class="checkbox icheck">
            <label>
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            </label>
          </div> 
      <%= f.submit 'SIGN IN' ,data: { disable_with: "Logging in..."}, class: "btn btn-block btn-social btn-github" %>

      <div class="social-auth-links text-center">
        <!-- <p>- OR -</p> -->
        <% if t.name == "Uttamenergy" %>
          <a target="_blank" href="/Apk/uttamenergy/uttam.apk" class="btn btn-social-icon btn-download"><i class="fa fa-download" style="font-size:35px;color:black;"></i></a>
        <% elsif t.name == "SPAN PUMPS " %>
          <a target="_blank" href="/Apk/spanpum/spanpump.apk" class="btn btn-social-icon btn-download"><i class="fa fa-download" style="font-size:35px;color:black;"></i></a>
        <% elsif t.name == "Sparkline" %>
          <a target="_blank" href="/Apk/sparkline/sparkline.apk" class="btn btn-social-icon btn-download"><i class="fa fa-download" style="font-size:35px;color:black;"></i></a>
        <% elsif t.name == "Netcore" %>
          <a target="_blank" href="/Apk/netcore/netcore.apk" class="btn btn-social-icon btn-download"><i class="fa fa-download" style="font-size:35px;color:black;"></i></a>
        <% elsif t.name == "ABC" %>
          <a target="_blank" href="/Apk/demo/demo.apk" class="btn btn-social-icon btn-download"><i class="fa fa-download" style="font-size:35px;color:black;"></i></a>
        <% else %>
          <a target="_blank" href="/Apk/demo/demo.apk" class="btn btn-social-icon btn-download"><i class="fa fa-download" style="font-size:35px;color:black;"></i></a>
        <% end %>
        <a target="_blank" href="#" class="btn btn-social-icon btn-facebook"><i class="fa fa-facebook"></i> </a>
        <a target="_blank" href="#" class="btn btn-social-icon btn-twitter"><i class="fa fa-twitter"></i> </a>
        <a target="_blank" href="#" class="btn btn-social-icon btn-linkedin"><i class="fa fa-linkedin"></i> </a>
        <a target="_blank" href="#" class="btn btn-social-icon btn-google"><i class="fa fa-google"></i> </a>
        <a target="_blank" href="#" class="btn btn-social-icon btn-instagram"><i class="fa fa-instagram"></i> </a>
       
      </div> <!-- /.social-auth-links-->
     <!--  <= render "members/shared/links" %> -->
    <% end %> 
  </div><!-- /.login-box-body -->


</div><!-- /.login-box -->
</div>
<div class="col-sm-6">

<div class="login-box">
<div class="login-box-body">
  <% t=Thought.where(date: Date.today) %>
<% t.each do |t| %>

<div style="padding-top: 100px; font-size: 16pt;font-style: italic;color: #000000; font-family: 'Times New Roman', Times, serif;">
  <%= t.thought %>
  </div>
  <div  style="font-size: 12pt;font-style: italic;color: #000000; font-family: 'Times New Roman', Times, serif; text-align: right;">
  -<%= t.thought_of %>
  </div>
<% end %>
</div>
</div>
</div>
