<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">

      <%= bootstrap_form_for @goal_rating,url:{action: "update_self_modal",goal_rating_id:@goal_rating.id} do |f| %>
        <div class="row">
          <div class="col-sm-4">
            <label>Self Comment</label>
            <%= f.text_field :appraisee_comment,hide_label:true, placeholder: "Self comment" %>    
          </div>

          <div class="col-sm-2" style="padding-top:20px;">
            <%= f.submit "Update", class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      <% end %>
     
    </div>
  </div>
</div>
