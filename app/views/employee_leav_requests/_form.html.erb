<!--SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Leave Request</h3>
  </div><!-- /.box-header -->

  <div class="box-body">
    <%= bootstrap_form_for(@employee_leav_request,html: {id: 'employee_leav_request'}) do |f| %>
     <%= f.hidden_field :employee_id, value: @employee.id %>
     <div class="row">
      <div class="col-sm-6">
        <div class="field">
         <table class="table table-bordered table-hover table-condensed'">
           <thead>
           <tr>
           <th colspan="2"><center> Leave Process </center></th>
           </tr>
           <tr>
           <th> Employee </th>
           <td><%= @employee.manual_employee_code %> - <%= @employee.first_name %> <%= @employee.middle_name %> <%=@employee.last_name %></td>
           </tr>
           <tr>
              <th>Manager 1 </th>
              <td><%= @employee.manager.try(:manual_employee_code) %> - <%= @employee.manager.try(:first_name) %> <%= @employee.manager.try(:middle_name) %> <%= @employee.manager.try(:last_name) %></td>
            </tr>
            <tr>
              <th>Manager 2 </th>
              <td><%= @employee.manager_2.try(:manual_employee_code) %> - <%= @employee.manager_2.try(:first_name) %> <%= @employee.manager_2.try(:middle_name) %> <%= @employee.manager_2.try(:last_name) %></td>
            </tr>
           </thead>
         </table>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="field">
        <table class="table table-bordered table-hover table-condensed'">
         <thead>
         <tr><center><th colspan="2"><center>Leave Balance</center></th></tr>
          <tr>
            <th>Leave Type</th>
            <th>Leave Balance</th>
          </tr>
         </thead>
        <% @total_leaves.where(is_active: true).each do |l| %>
        <tr>
        <td><%= l.leav_category.name %></td>
        <td><%= l.no_of_leave %></td>
        </tr>
        <% end %>
        </table>
        </div>
        </div>
    </div>

      <div class="row">
      
        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.select :leav_category_id, all_leav_category,label: 'Leave Category' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
           <%= f.select :leave_type, ['Full Day','Half Day'],label: 'Leave Type' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= f.text_field :start_date, label: "From Date", class: 'birth_date'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= f.text_field :end_date, label: "To Date", class: 'birth_date'%>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-5">
          <div class="form-group required">
            <%= f.text_field :reason %>
          </div>
        </div>
      </div>
     <br>
     
      <div class="row">
         <div class="col-sm-6">
          <div class="actions">
            <%= f.submit'Create Leave Request', :class => class_name, data: { disable_with: data_info } %>
            <%= link_to ' Back', employee_leav_requests_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div><!-- /.box-body -->
<br>
<script type="text/javascript">
$("#employee_leav_request").validate({
    rules: {
      "employee_leav_request[leav_category_id]":{
        required: true
      },
      "employee_leav_request[leave_type]":{
        required: true
      },
      "employee_leav_request[start_date]":{
        required: true
      },
      "employee_leav_request[end_date]":{
        required: true
      },
      "employee_leav_request[reason]":{
        required: true
      }
    },
    messages: {
      "employee_leav_request[leav_category_id]":{
        required: "Please specify leave category."
      },
      "employee_leav_request[leave_type]":{
        required: "Please specify leave type."
      },
      "employee_leav_request[start_date]":{
        required: "Please specify date range."
      },
      "employee_leav_request[end_date]":{
        required: "Please specify date range."
      },
      "employee_leav_request[reason]":{
        required: "Please specify reason."
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
  });
  $(function(){
    $('#reservationtime').on('click', function() {
    
    });

  });

  $(function(){
    $('.birth_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 

</script>
