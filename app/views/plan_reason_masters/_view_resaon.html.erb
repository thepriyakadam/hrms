<!-- Main content -->
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Plan Reason </center></h4>
    </div>
    <div class="modal-body">
      <table class="table table-bordered table-hover table-condensed">
        <tbody>
       	  <tr>
            <th><strong>Code</strong></th>
            <td><%= @plan_reason.code %></td>
          </tr>
          <tr>
              <th><strong>Name</strong></th>
              <td><%= @plan_reason.name %></td>
          </tr>
          <tr>
              <th><strong>Description</strong></th>
              <td><%= @plan_reason.description %></td>
          </tr>
          <tr>
              <th><strong>Status</strong></th>
              <td><%= @plan_reason.status %></td>
          </tr>
      </tbody>
	    </table> <br>
	    <div align="center">
	    <%#= link_to 'Approve', plan_approve_employee_plans_path(@employee_plan.id), data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm" %>
   </div>
    
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

