<p id="notice"><%= notice %></p>

<h1>Listing Employee Documents</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_documents.each do |employee_document| %>
      <tr>
        <td><%= employee_document.employee %></td>
        <td><%= employee_document.name %></td>
        <td><%= employee_document.status %></td>
        <td><%= link_to 'Show', employee_document %></td>
        <td><%= link_to 'Edit', edit_employee_document_path(employee_document) %></td>
        <td><%= link_to 'Destroy', employee_document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

