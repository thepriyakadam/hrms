<div class="box">
  <div class="box-header">
    <h3 class="box-title">Machine Attendance</h3>
    </div>
<div class="box-body">
<%= bootstrap_form_for MachineAttendance.new,url:{action:'save_machine_attendance'},html: {id: 'machine_attendance'} do |f| %>
  <div class="row">
  <label></label>
    <div class="col-sm-3">
    <%= select :machine_attendance,:employee_id,all_employee_list,{include_blank: " Select Employees"}, class: "form-control" %>
  </div>
  <div class="col-sm-3">
      <div class="form-group required">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </div>
        <%= text_field :machine_attendance,:day,label: "Date",class: 'joining_date'%>
      </div>
    </div>
  </div>
    <div class="col-sm-2">
      <div class="bootstrap-timepicker">
        <div class="form-group">
          <label>In Time</label>
          <div class="input-group">
            <%= text_field :machine_attendance,:in,hide_label:true, class: 'form-control timepicker' %>
            <div class="input-group-addon">
              <i class="fa fa-clock-o"></i>
            </div>
          </div><!-- /.input group -->
        </div><!-- /.form group -->
      </div>
    </div>
    <div class="col-sm-2">
      <div class="bootstrap-timepicker">
        <div class="form-group">
          <label>Out Time</label>
          <div class="input-group">
            <%= text_field :machine_attendance,:out,hide_label:true, class: 'form-control timepicker' %>
            <div class="input-group-addon">
              <i class="fa fa-clock-o"></i>
            </div>
          </div><!-- /.input group -->
        </div><!-- /.form group -->
      </div>
    </div>
    </div>
     
    <div class="row">
    <div class="col-sm-3">
    <label></label>
      <div class="actions">
        <%= f.submit "Create Machine Attendance" ,class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div><br>
</div>
</div>
<% end %>

<script type="text/javascript">
  $(function(){
    $('.joining_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>