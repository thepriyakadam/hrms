<div class="box">
  <div class="box-header">
    <h3 class="box-title">Training Requests</h3>
    <div class="pull-right">
    </div>
  </div>

<div class="box-body">

    <table id="example1" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Employee ID</th>
          <th>Employee Name</th>
          <th>Topic</th>
          <th>Request Date</th>
          <th>No. Of Trainee</th>
          <th>Place</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @training_requests.each do |training_request| %>
          <tr>
            <td><%= training_request.employee.try(:manual_employee_code) %></td>
            <td> <%= full_name(training_request.employee) %> </td>
            <td><%= training_request.training_topic_master.try(:name) %></td>
            <td><%= training_request.training_date %></td>
            <td><%= training_request.no_of_employee %></td>
            <td><%= training_request.place %></td>
            
            <td>
              <% if training_request.status == "Pending" %>
              <small class="label label-primary">Pending</small>
                  <% elsif training_request.status == "Approved" %>
                  <small class="label label-primary">Approved</small>
                  <% elsif training_request.status == "Rejected" %>
                  <small class="label label-primary">Rejected</small>
                  <% elsif training_request.status == "Approved & Send Next" %>
                  <small class="label label-primary">Approved & Send Next</small>   
              <% else %>
              <% end %>
          </td>
          <td>
            <% if training_request.status == "Approved" or training_request.status == "Rejected" %>
            <% else %>
            <%= link_to 'Approve / Reject',training_request_confirmation_training_requests_path(training_request_id: training_request.id),class: 'btn btn-sm btn-warning' %> 
            <% end %>
           <%= link_to '', training_request,class: 'btn btn-xs btn-default fa fa-eye' %>
        </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>