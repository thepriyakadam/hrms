<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Issue Tracker Group</th>
      <th>Employee</th>
      <th>Status</th>
      <th>Is confirm</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @issue_tracker_members.each do |issue_tracker_member| %>
      <tr>
        <td><%= issue_tracker_member.issue_tracker_group.try(:name) %></td>
        <td><%= issue_tracker_member.employee.try(:first_name) %> <%= issue_tracker_member.employee.try(:middle_name) %> <%= issue_tracker_member.employee.try(:last_name) %> </td>
        <td><%= issue_tracker_member.status ? "Active" : "Inactive" %></td>
        <td>
          <% if issue_tracker_member.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %> 
          <% end %>
          </td>
        <td>
          <%= link_to '', edit_issue_tracker_member_path(issue_tracker_member),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
          <%= link_to '',  issue_tracker_member, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
          <%= link_to '', is_confirm_issue_tracker_groups_path(issue_tracker_member: issue_tracker_member),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %></td>
      </tr>
    <% end %>
  </tbody>
</table>