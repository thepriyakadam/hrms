<div class="box">
  <div class="box-header">
    <h3 class="box-title">Membership Details</h3>
    <div class="pull-right">
      <%= link_to 'New Membership', new_society_member_ship_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example1" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Society Member</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
       <% @society_member_ships.each do |society_member_ship| %>
        <tr>
          <td><%= society_member_ship.employee.try(:manual_employee_code) %></td>
          <td><%= full_name(society_member_ship.employee) %></td>
          <td><%= society_member_ship.is_society_member ? "Yes" : "No" %></td>
          <td><%= society_member_ship.start_date %></td>
          <td><%= society_member_ship.amount %></td>
          <td>
            <%= link_to '', edit_society_member_ship_path(society_member_ship), class: 'btn btn-xs btn-success fa fa-edit' %>
            <%= link_to '', society_member_ship,class: 'btn btn-xs btn-default fa fa-eye' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>