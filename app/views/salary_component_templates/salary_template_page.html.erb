<div class="box">
<div class="box-header">
    <div class="pull-right">
    </div>
  </div><!-- /.box-header -->

    <div class="box-body">
    <div class="row">
      <div class="col-sm-1">
       
      </div>
      <div class="col-sm-10">
        <table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
  <tr><td colspan="6"><center> Employee Salary Template Information </center></td></tr>
  <tr><td colspan="6"><center> <%= @salary_template.code %> - <%= @salary_template.try(:description) %></center></td></tr>
    <tr>
      <th>Sr.No.</th>
      <th>Salary Component</th>
      <th>Is Deducted</th>
      <th>Parent Salary Component</th>
      <th>Percentage</th>
      <th>To Be Paid</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% @salary_component_templates.each do |salary_component_template| %>
      <tr>
        <td><%= i=i+1 %></td>
        <td><%= salary_component_template.try(:salary_component).try(:name) %></td>
        <td><%= salary_component_template.try(:is_deducted) ? "Yes" : "No" %></td>
        <td><%= salary_component_template.try(:parent_salary_component).try(:name) %></td>
        <td><%= salary_component_template.try(:percentage) %></td>
        <td><%= salary_component_template.try(:to_be_paid) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', new_salary_template_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
