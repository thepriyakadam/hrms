<%= bootstrap_form_for(@regularization_reason,htlm: {id: 'regularization_reason'},remote: true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <label> Code </label>
        <%= f.text_field :code, hide_label: true,placeholder: "Code" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <label> Name </label>
        <%= f.text_field :name, hide_label: true,placeholder: "Name" %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group required">
        <label> Description </label>
        <%= f.text_area :description, hide_label: true,placeholder: "Description" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.check_box :status, label: "Active" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create",class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#regularization_reason").validate({
  rules: {
    "regularization_reason[code]":{
      required: true,
    },
    "regularization_reason[name]":{
      required: true,
    }
  },
  messages: {
    "regularization_reason[code]":{
      required: "Please Specify Code",
    },
    "regularization_reason[name]":{
      required: "Please specify name",
    }
  },
  errorPlacement: function(error, element) {
  error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
  error.insertAfter(element.parent(element));
  }
  });
</script>