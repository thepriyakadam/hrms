   <div class="box-body"> 
<%= bootstrap_form_for(@issue_tracker_member,html: {id: 'issue_tracker_member'} ,remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :issue_tracker_group_id,all_issue_tracker_group,{label: "Group",include_blank: "Select Group"} %>
      </div>
    </div> 
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :employee_id, all_active_employee_with_code, {include_blank: "Select Employee"},{:class=>"select2",:style=>"width: 100%;",:tabindex=>"-1"} %>
      </div>


    </div>
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :role,['Admin','Co-ordinator'],{include_blank: "Select Role"} %>
      </div>
    </div>
    <div class="col-sm-3">
      <label>Status</label>
        <%= f.check_box :status,label:'Active' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <label></label>
        <div class="actions">
          <%= f.submit'Create Member',:class => class_name, data: { disable_with: data_info } %>
        </div>
    </div>
  </div>
  </div><br>
<% end %>


<script>
$("#issue_tracker_member").validate({
    rules: {
      "issue_tracker_member[issue_tracker_group_id]":{
        required: true,
      },
      "issue_tracker_member[employee_id]":{
        required: true,
      },
      "issue_tracker_member[role]":{
        required: true,
      }
       },
    messages: {
      "issue_tracker_member[issue_tracker_group_id]":{
        required: "Please Select Group",
      },
       "issue_tracker_member[employee_id]":{
        required: "Please Select Member",
      },
      "issue_tracker_member[role]":{
        required: "Please Select Role",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
