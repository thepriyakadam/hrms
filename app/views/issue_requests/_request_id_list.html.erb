 <div class="box-header">
    <div class="pull-right">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example1" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Support ID</th>
        <th>Support</th>
        <th>Support Raised By</th>
        <th>Support Date</th>
        <th>Root Cause</th>
        <th>Description</th>
        <th>Priority </th>
        <th>Support Solved By</th>
        <th>Solved</th>
        <th>Confirm</th>
        <th>Effort Time</th>
        <th>Comment</th>
        <th>Support Locker ID</th>
        <th>Lock Date</th>
        <th>Lock Time</th>
      </tr>
    </thead>

    <tbody>
     <% @issue_requests.each do |issue_request| %>
     <% @issue_locker_histories.each do |issue_locker_history| %>
        <tr>
          <td><%= issue_request.id %></td>
          <td><%= issue_request.issue_master.try(:name) %></td>
          <td><%= full_name(issue_request.employee) %></td>
          <td><%= issue_request.date %></td>
          <td><%= issue_request.issue_root_cause.try(:name) %></td>
          <td><%= issue_request.description %></td>
          <td><%= issue_request.issue_priority %></td>
          <td><%= full_name(issue_request.issue_tracker_member.employee) %></td>
          <td><%= issue_request.status %></td>
           <td><%= issue_request.is_complete %></td>
          <td><%= issue_request.effort_time %></td>
          <td><%= issue_request.comment %></td>
          <td><%= issue_locker_history.issue_locker_id %></td>
          <td><%= issue_locker_history.lock_date %></td>
          <td><%= issue_locker_history.lock_time %></td>
        </tr>
      <% end %>
      <% end %> 
    </tbody>
    </table>
    </div>
    <%= link_to " Excel Report ",id_wise_report_xls_issue_requests_path(issue_request_id: @issue_request.id, format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>
    <%= link_to " Print Support PDF ",id_wise_report_pdf_issue_requests_path(issue_request_id: @issue_request.id , format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>
    </div>


        
