<p id="notice"><%= notice %></p>

<h1>Listing Survey Questions</h1>

<table>
  <thead>
    <tr>
      <th>Survey group</th>
      <th>Question code</th>
      <th>Question category</th>
      <th>Question</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_questions.each do |survey_question| %>
      <tr>
        <td><%= survey_question.survey_group %></td>
        <td><%= survey_question.question_code %></td>
        <td><%= survey_question.question_category %></td>
        <td><%= survey_question.question %></td>
        <td><%= survey_question.status %></td>
        <td><%= link_to 'Show', survey_question %></td>
        <td><%= link_to 'Edit', edit_survey_question_path(survey_question) %></td>
        <td><%= link_to 'Destroy', survey_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

