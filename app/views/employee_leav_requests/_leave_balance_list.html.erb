<div class="row">
 
 <div class="col-sm-6">
  <table class="table table-bordered table-hover table-condensed">
    <thead>
    <tr><th colspan="2"><center>Leave Balance</center></th></tr>
      <tr>
        <th>Leave Type</th>
        <th>Leave Balance</th>
      </tr>
    </thead>

    <tbody>
      <% @employee_leav_balances.where(is_active: true).each do |b| %>
        <tr>
          <td><%= b.leav_category.try(:code) %></td>
          <td><%= b.no_of_leave %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>
 </div>

