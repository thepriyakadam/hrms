<h1>Listing Compliance Types</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compliance_types.each do |compliance_type| %>
      <tr>
        <td><%= compliance_type.code %></td>
        <td><%= compliance_type.name %></td>
        <td><%= compliance_type.description %></td>
        <td><%= compliance_type.status %></td>
        <td><%= link_to 'Show', compliance_type %></td>
        <td><%= link_to 'Edit', edit_compliance_type_path(compliance_type) %></td>
        <td><%= link_to 'Destroy', compliance_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

