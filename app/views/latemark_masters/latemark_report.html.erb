<div class="box">
  <div class="box-header">
    <h3 class="box-title">Datewise Latemark Report</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= bootstrap_form_for(:latemark_master, url: { action: 'show_datewise_report'},html: {id: 'latemark_master'},remote: true ) do |f| %>
      <div class="row">
        <div class="col-sm-3">
          <label>From Date</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= text_field :latemark_master, :from_date,label: 'From Date',placeholder: "From Date",class: 'form-control latemark_day'%>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
        <label>To Date</label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
             <%= text_field :latemark_master,:to_date,label: 'To Date',placeholder: "To Date", class: 'form-control latemark_day'%>
            </div>
          </div>
        </div>
        <div class="col-sm-2">
        <label></label>
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
        </div>
      </div>

          <div id="datewise_report"></div>
    <% end %>
</div>
</div>

<script type="text/javascript">
  $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#advance_salary").submit();
  })
</script>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

<script type="text/javascript">
  $(function(){
    $('.latemark_day').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:+5',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

<script>
$("#latemark_master").validate({
    rules: {
      "latemark_master[from_date]":{
        required: true
              },
      "latemark_master[to_date]":{
        required: true
              }
    },
    messages: {
      "latemark_master[from_date]":{
        required: "Please Specify From Date"
      },
      "latemark_master[to_date]":{
        required: "Please Specify To Date"
      }

    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>