<%= bootstrap_form_for(@cost_center,html: {id: 'cost center'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Cost Center' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit"Create Cost Center", :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>