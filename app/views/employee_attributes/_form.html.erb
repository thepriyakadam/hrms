<%= bootstrap_form_for(@employee_attribute,remote:true,html: {id: "employee_attribute"}) do |f| %>
  <div id="error" class="error text-center" style="color:red; background-color: pink;"></div>
  </br>
  <%= f.hidden_field :employee_id,value: @employee.id %>

  <div class="row">
    <div class="col-sm-3">
      <div class="field">
        <%= f.select :performance_period_id, all_period_type,{hide_label: true,include_blank: " Select Period"}%>
      </div>
    </div>

    <div class="col-sm-5">
      <div class="field">
        <%= f.select :attribute_master_id, all_attribute_type,{hide_label: true, include_blank: "Select Attribute & Definition" }%>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="field">
        <%= f.text_field :weightage,{hide_label: true, placeholder: "Weightage in percentage"} %>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="actions">
        <%= f.submit "Create Attribute" ,class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end %><br>

<script type="text/javascript">
  $("#employee_attribute").validate({
    rules: {
      "employee_attribute[performance_period_id]":{
        required: true
      },
      "employee_attribute[attribute_master_id]":{
        required: true
      },
      "employee_attribute[weightage]":{
        required: true,
        numbersOnly:true,
        range:[1,100]
      }
    },
    messages: {
      "employee_attribute[performance_period_id]":{
        required: "Please specify period"
      },
      "employee_attribute[attribute_master_id]":{
        required: "Please specify attribute & definition"
      },
      "employee_attribute[weightage]":{
        required: "Please specify weightage"
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>