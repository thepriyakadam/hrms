<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @induction_masters.each do |induction_master| %>
      <tr>
        <td><%= induction_master.code %></td>
        <td><%= induction_master.description %></td>
        <td>
          <%= link_to ' Edit Template Detail', edit_induction_master_path(induction_master),class: 'btn btn-sm btn-success btn-xs',remote:true %>
          <%= link_to ' Destroy', induction_master, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-danger',remote:true %>
          <%= link_to ' Assign Induction Activity',new_induction_activity_path(induction_master.id),class: 'btn btn-xs btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

