<table class="table table-hover">
<tr>
  <th>Date</th>
  <th>Task</th>
  <th>Status</th>
  <th>Time</th>
  <th>Time Remaining</th>
  <th>Action</th>
</tr>

<% @employee_task_to_dos.each do |e| %>
<tr>
  <td><span class="label label-primary"><%= e.task_date %></span></td>
  <td><%= e.task_name %></td>
  <td><span class="label label-success"><%= e.status ? "Active" : "Inactive" %></span></td>
  <td><span class="label label-info"><%= e.task_time1 %></span></td>
  <td><% a_date_time = Time.now
     b_date_time = e.task_time1
     (a_date_time - b_date_time).to_i

     @Seconds = ((a_date_time - b_date_time)*24*60*60).to_i

     @sec = @Seconds % 60

     @Minutes = @Seconds / 60

     @min = @Minutes % 60

     @Hours = @Minutes / 60

     @hour = @Hours % 24

     @Days = @Hours / 24

     @s=@Days.to_s + 'Days, ' + @hour.to_s + 'Hours, '+ @min.to_s + 'Mins, ' + @sec.to_s + 'Secs' %>
      <%= @s %> 
     </td>
  <td>
    <%= link_to '', edit_employee_task_to_do_path(e),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
  </td>
</tr>
<% end %>
</table>
