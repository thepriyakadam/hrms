<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Leave Request Detail </center></h4>
    </div>
    <div class="modal-body">
<table class="table table-bordered table-hover table-condensed">
  <thead>
 <tr>
      <th><strong>ID</strong></th>
      <td><%= @employee_leav_request.employee.try(:manual_employee_code) %></td>
 </tr>
 
 <tr>     
      <th><strong>Employee</strong></th>
      <td><%= full_name(@employee_leav_request.employee) %></td>
      
    </tr>

    <tr>
      <th>  <strong>Leave Category</strong></th>
      <td> <%= @employee_leav_request.leav_category.try(:code) %> - <%= @employee_leav_request.leav_category.try(:name) %></td>
</tr>
 
 <tr>  
      <th> <strong>Leave Type</strong></th>
      <td><%= @employee_leav_request.leave_type %></td>

    </tr>
    <tr>
      <th> <strong>Date</strong></th>
      <td><%= @employee_leav_request.start_date.to_date %> to <%= @employee_leav_request.end_date.to_date %></td>
</tr>
 
    <tr>
     <th><strong>No. of Days</strong></th>
      <td><%= @employee_leav_request.leave_count %></td>
      </tr>
  <tr>  
      <th><strong>LTA</strong></th>
      <td><%= @employee_leav_request.lta ? "Yes" : "No" %></td>

    </tr>
 <tr>  
      <th><strong>Leave Reason</strong></th>
      <td><%= @employee_leav_request.reason %></td>

    </tr>
     <tr>  
      <th><strong>Status</strong></th>
      <td><%= @employee_leav_request.current_status %></td>

    </tr>
  </thead>
</table>
</div>
<div class="modal-footer"></div>
</div>
</div>  