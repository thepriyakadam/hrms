 -->        <!--<= f.select :reporting_master_id,all_resignation_list, {hide_label: true,include_blank: "Select Employee"} %>-->
      </div>
    </div>
  </div>
 </div>
 </div>
<% end %> 

<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>