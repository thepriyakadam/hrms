<div class="box">
  <div class="box-body">

  <table id="example1" class="table table-bordered table-hover table-condensed">
    <tr><th colspan="4"><center>Employee  Detail</center></th></tr>
      <tbody>
        <tr>
          <th>ID</th>
          <td><%= @current_request.employee.try(:manual_employee_code) %></td>

          <th>Employee Name</th>
          <td><%= full_name(@current_request.employee) %></td>
        </tr>
        <tr>
          <th>Department</th>
          <td><%= @current_request.employee.try(:department).try(:name) %></td>

          <th>Designation</th>
          <td><%= @current_request.employee.try(:joining_detail).try(:employee_designation).try(:name) %></td>
        </tr>
        <tr>
          <th>Manager 1 </th>
          <td><%= @current_request.employee.manager.try(:manual_employee_code) %> - <%= full_name(@current_request.employee.try(:manager)) %></td>
       
          <th>Manager 2 </th>
          <td><%= @current_request.employee.manager_2.try(:manual_employee_code) %> - <%= full_name(@current_request.employee.try(:manager_2)) %></td>
        </tr>

      </tbody>
    </table>
    <br>

   <table id="example6" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr><th colspan="7"><center>Employee OD History</center></th></tr>
        <tr>
          <th>Employee ID</th>
          <th>OD Type</th>
          <th>From Date</th>
          <th>To Date</th>
          <th>No. Of Days</th>
          <th>Reason</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <% @on_duty_requests.each do |on_duty_request| %>
          <tr>
            <% if @current_request.id == on_duty_request.id %>
              <th><font color='green'>*<%= on_duty_request.employee.try(:manual_employee_code) %> </font></th>
              <th><font color='green'><%= on_duty_request.leave_type %></font></th>
              <th><font color='green'><%= on_duty_request.start_date.to_date %></font></th>
              <th><font color='green'><%= on_duty_request.end_date.to_date %></font></th>
              <th><font color='green'><%= on_duty_request.no_of_day %></font></th>
              <th><font color='green'><%= on_duty_request.reason %></font></th>
            <%else%>
              <td><%= on_duty_request.employee.try(:manual_employee_code) %></td>
              <td><%= on_duty_request.leave_type %></td>
              <td><%= on_duty_request.start_date.to_date %> </td>
              <td><%= on_duty_request.end_date.to_date %></td>
              <td><%= on_duty_request.no_of_day %></td>
              <td><%= on_duty_request.reason %></td>
            <%end%>
            <td>
              <% on_duty_request.od_status_records.try(:each) do |r| %>
                <% case r.status %>
                  <% when "Pending" %>
                    <small class="label label-default">Pending</small>
                  <% when "FirstApproved" %>
                    <small class="label label-primary">FirstApproved</small>
                  <% when "FinalApproved" %>
                    <small class="label label-success">FinalApproved</small>
                  <% when "Rejected" %>
                    <small class="label label-danger">Rejected</small>
                  <% when "Cancelled" %>
                    <small class="label label-warning">Cancelled</small>
                  <% else %>
                    <small class="label label-info">Else</small>
                <%end%>
              <%end%>
            </td> 
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  <table id="example1" class="table table-bordered table-hover table-condensed">
    <tbody>
      <tr><td colspan="4"><font color='red'><center>Employee Current OD Detail</center></font></td></tr>
      <tr>
        <th>ID</th>
        <td><%= @current_request.employee.try(:manual_employee_code) %></td>

        <th>Employee Name</th>
        <td><%= full_name(@current_request.employee) %></td>
      </tr>
      <tr>
        <th>From Date</th>
        <td><%= @current_request.start_date.to_date %></td>

        <th>To Date</th>
        <td><%= @current_request.end_date.to_date %></td>
      </tr>
      <tr>
        <th>No. of Day</th>
        <td><%= @current_request.no_of_day %></td>

        <th>Current Status</th>
        <td><%= @current_request.try(:current_status) %></td>
      </tr>
      <tr>
        <th>Reason</th>
        <td colspan="3"><%= @current_request.try(:reason) %></td>
      </tr>
    </tbody>
  </table>
  <br>
     <%= link_to 'Back', request_approval_list_on_duty_requests_path,class: 'btn btn-sm btn-default fa fa-arrow-left' %> |
    <% if @current_request.current_status == "Pending" %>
        <%= link_to 'Approve', first_approve_od_status_record_path(@current_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-info fa fa-check' %> |
        <%= link_to 'Reject', first_reject_od_status_record_path(@current_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-danger fa fa-trash' %>
      <% else %>
        <%= link_to 'Approve', second_approve_od_status_record_path(@current_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-info fa fa-check' %> |
        <%= link_to 'Reject', second_reject_od_status_record_path(@current_request.id), data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-danger fa fa-trash' %>
      <% end %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>