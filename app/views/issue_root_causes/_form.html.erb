<div class="box box-default">
  <div class="box-body"> 
    <%= bootstrap_form_for(@issue_root_cause,html: {id: 'issue_root_cause'},remote:true )do |f| %>
      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.select :issue_tracker_group_id,all_issue_tracker_group,{label:"Group" ,include_blank: "Select Group"} %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :name,label:'Support Root Cause', placeholder: 'Support Root Cause' %>
          </div>
        </div>
        <div class="col-sm-3">
          <label>Status</label>
            <%= f.check_box :is_active,label:'Active' %>
        </div>
        <div class="col-sm-3">
          <label></label>
            <div class="actions">
              <%= f.submit'Create Root Cause',:class => class_name, data: { disable_with: data_info } %>
        </div>
        </div>
       <% end %>
     </div>
</div>

<script>
$("#issue_root_cause").validate({
    rules: {
      "issue_root_cause[issue_tracker_group_id]":{
        required: true,
      },
      "issue_root_cause[name]":{
        required: true,
      },
       },
    messages: {
      "issue_root_cause[issue_tracker_group_id]":{
        required: "Please Select Group",
      },
       "issue_root_cause[name]":{
        required: "Please Specify Root Cause",
      },
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>



