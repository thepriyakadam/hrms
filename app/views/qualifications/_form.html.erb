<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Qualifications</h3>
  </div><!-- /.box-header -->

<div class="box-body">

<%= bootstrap_form_for(@qualification,html: {id: 'qualification'},remote:true) do |f| %>
  <%= f.hidden_field :employee_id, value: @employee.id %>
    <!-- <div id="entry1" class="clonedInput alert"> -->
    <div id="entry1" class="clonedInput">
      <div class="row">

      <!-- <div class="box-tools pull-right">
     <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
     <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
   </div> -->
      
         <!-- <span class="icon-input-btn"><span class="glyphicon glyphicon-remove"></span>
         <input type="button" id="btnDel" class="btn"></span> -->

          <!--NEW-->
         <span><span type="button" id="btnDel" class="glyphicon glyphicon-remove btn"></span>

      <!-- <a href="#" class="close" data-dismiss="alert">&times;</a> -->
        <div class="col-sm-3">
          <div class="field">
            <%= f.select :degree_type_id, all_degree_type, {include_blank: "Select Qualifications Level",label:"Qualifications Level"}, class: 'input_degree_type_id' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.select :degree_id, all_degree, {include_blank: "Select Qualifications",label:"Qualifications"}, class: 'input_degree_id' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.select :degree_stream_id, all_degree_stream, {include_blank: " Select Qualifications Specializations",label:"Qualifications Specializations"}, class: 'input_degree_stream_id' %>
          </div>
        </div>
    
        <div class="col-sm-2">
          <div class="field">
            <%= f.text_field :marks, label: 'Marks(%)', class: 'input_marks' %>
          </div>
        </div>
    </div>    
   <div class="row">
        <div class="col-sm-3">
          <div class="field">
           <%= f.select :year_id, all_year,{include_blank: " Select Passing Year",label: "Passout Year"},class: 'input_year_id' %>
          </div>
        </div>
       
        <div class="col-sm-4">
          <div class="field">
          <%= f.text_field :college,label:"College/School", class: 'input_college' %>
           </div>
        </div>

        <div class="col-sm-4">
          <div class="field">
           <%= f.select :university_id, all_university,{include_blank: " Select University/Institute",label:"University/Institute"},class: 'input_university_id' %>
          </div>
        </div>

  

      </div>
    </div>
