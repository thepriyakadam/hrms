<div class="box">
  <div class="box-body">
    <table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10">
        <thead>
          <tr>
            <th>ID</th>
            <th>Employee</th>
            <th>Cost Center</th>
            <% for i in @from_date.strftime("%d")..@to_date.strftime("%d") %>
              <th><%= i %></th>
            <%end%>
          </tr>
          <tr>
            <th colspan="3">Day</th>
              <% @from_date.step(@to_date).each do |l| %>
                <th><%= l.strftime("%a") %></th>
              <%end%>
          </tr>
        </thead>
        <tbody>
          <% exist = {} %>
          <% @employees.each do |e| %>
            <tr>
              <td><%= e.employee.manual_employee_code %></td>
              <td><%= full_name(e.employee) %></td>
              <td><%= e.employee.joining_detail.try(:cost_center).try(:name) %></td>
              <% sorted_exists = calculate_attendance_datewise(@from_date,@to_date, exist, e)%>
              <% sorted_exists.each do |k,v|%>
                <td><%= v %></td>
              <%end%>
            </tr>
            <% absent_day_count = absent_day_count(exist) %>
            <% present_day = present_day_count(exist) %>
            <% holiday_in_month = holiday_in_month_count(exist) %>
            <% week_off_day = week_off_day_count(exist) %>
            <% od_day = od_day_count(exist) %>
            <% gatepass = gatepass_count(exist) %>
            <% process_off = process_off_count(exist) %>
            <% access_card_forgotten = access_card_forgotten_count(exist) %>

            <% workingday = [] %>
            <% workingday = create_leave_datewise(@from_date,@to_date, e) %>
            <%= hidden_field_tag "attendances[]", e.id %>
            <%= hidden_field e.employee_id, 'employee_id', value: e.employee_id %>
            <%= hidden_field e.employee_id, 'month_name', value: @date.strftime("%B") %>
            <%= hidden_field e.employee_id, 'year', value: @date.strftime("%Y") %>
            <%= hidden_field e.employee_id, 'day_in_month', value: count_day(@day,e.employee_id) %>
            <%= hidden_field e.employee_id, 'present_day', value: present_day.to_f + process_off.to_f + access_card_forgotten.to_f + workingday[2] %>
            <%= hidden_field e.employee_id, 'od_day', value: od_day %>
            <%= hidden_field e.employee_id, 'total_leave', value: workingday[0] + workingday[1] %>
            <%= hidden_field e.employee_id, 'nonpay_leave', value: workingday[1] %>
            <%= hidden_field e.employee_id, 'pay_leave', value: workingday[0] %>
            <%= hidden_field e.employee_id, 'gatepass', value: gatepass_count(exist) %>
            <%= hidden_field e.employee_id, 'holiday_in_month', value: holiday_in_month %>
            <%= hidden_field e.employee_id, 'week_off_day', value: week_off_day %>

            <% if gatepass <= 2 %>
              <% gatepass_value = gatepass.to_f %>
            <% else %>
              <% gatepass_value1 = gatepass.to_f - 2 %>
              <% gatepas_value = gatepass_value1.to_f/2 %>
              <% gatepass_value = gatepass.to_f - gatepass_value1.to_f %>
            <% end %>

              <%= hidden_field e.employee_id, 'absent_day', value: absent_day_count.to_f + workingday[3] + gatepas_value.to_f %>

              <% if e.employee.try(:joining_detail).try(:employee_category).try(:name) == 'Worker' %>
                <%= hidden_field e.employee_id, 'payable_day', value: present_day.to_f process_off.to_f + access_card_forgotten.to_f + holiday_in_month.to_f + workingday[0] + workingday[2] + od_day.to_f + gatepas_value.to_f + gatepass_value.to_f %>
              <% else %>
                <%= hidden_field e.employee_id, 'payable_day', value: present_day.to_f process_off.to_f + access_card_forgotten.to_f + holiday_in_month.to_f + week_off_day.to_f + workingday[0] + workingday[2] + od_day.to_f + gatepas_value.to_f + gatepass_value.to_f %>
              <% end %>  
            
            <% if e.employee.try(:joining_detail).try(:employee_category).try(:name) == 'Worker' %>
              <%= hidden_field e.employee_id, 'nonpayable_day', value: absent_day_count.to_f+ gatepas_value.to_f  + workingday[1] + workingday[3] + week_off_day.to_f  %>
            <% else %>
              <%= hidden_field e.employee_id, 'nonpayable_day', value: absent_day_count.to_f+ gatepas_value.to_f  + workingday[1] + workingday[3]  %>
            <% end %> 

            <% exist.clear %>
          <%end%>
        </tbody>
      </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true,
        "scrollY": 500
    } );
} );
</script>