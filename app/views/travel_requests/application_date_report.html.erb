<div class="box">
  <div class="box-header">
    <h3 class="box-title">Application Date Report</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
<%= bootstrap_form_for(:travel_request, url: { action: 'print_application_report'},html: {id: 'salary'},remote: true ) do |f| %>
	 <div class="row">
      <div class="col-sm-3">
      <label>From Date</label>
         <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= text_field :salary,:from_date,hide_label: true,placeholder: "From Date",class: 'form-control request_date'%>
          </div>
         </div>
        </div>

        <div class="col-sm-3">
        <label>To Date</label>
         <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
           <%= text_field :salary,:to_date,hide_label: true,placeholder: "To Date", class: 'form-control request_date'%>
          </div>
         </div>
        </div>

       <div class="col-sm-2">
            <div class="form-group required">
            <div class="input-group">
              <%= f.select :company_id, all_company,{include_blank: "Select Company"},{onchange:"var a={id:$(this).val(), form : 'travel_request'}; $.get('/employees/collect_company_location',a,function(response){});"}%>
            </div>
            </div>
      </div>
     
      <div class="col-sm-2">
            <div class="form-group required">
              <div id="company_location">
                <%= render 'employees/company_location_dropdown' %> 
            </div> 
            </div>
          </div>

       <div class="col-sm-2">
            <div class="form-group required">
            <div class="input-group">
              <div id="department">
                <%= render 'employees/department_dropdown' %> 
            </div> 
            </div>
            </div>
        </div>
        </div>
     <div class="row">
       <div class="col-sm-2">
       <label></label>
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
        </div>


        </div>
       <div id="travel_list"></div>
</div>
</div>
<%end%>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

<script type="text/javascript">
 
   $("#salary").validate({
    rules: {
      "salary[from_date]":{
        required: true,
      
      },
      "salary[to_date]":{
        required: true,
      }
    },
    messages: {
      "salary[from_date]":{
        required: "Please Specify Date Range",
      },
      "salary[to_date]":{
        required: "Please Specify Date Range",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
