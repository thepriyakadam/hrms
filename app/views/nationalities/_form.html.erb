<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Create Employee Physicals</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->


<%= form_for(@nationality) do |f| %>
  <% if @nationality.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@nationality.errors.count, "error") %> prohibited this nationality from being saved:</h2>

      <ul>
      <% @nationality.errors.full_messages.each do |message| %>
