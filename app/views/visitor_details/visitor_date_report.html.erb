<div class="box">
  <div class="box-header">
    <h3 class="box-title">Visitor Date Report</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
<%= bootstrap_form_for(:visitor_detail, url: { action: 'print_visitor_report'},html: {id: 'salary'},remote: true ) do |f| %>
	 <div class="row">
      <div class="col-sm-3">
      <label>From Date</label>
         <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= text_field :salary,:from_date,hide_label: true,placeholder: "From Date",class: 'form-control request_date'%>
          </div>
         </div>
        </div>

        <div class="col-sm-3">
        <label>To Date</label>
         <div class="form-group required">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
           <%= text_field :salary,:to_date,hide_label: true,placeholder: "To Date", class: 'form-control request_date'%>
          </div>
         </div>
        </div>

     <div class="row">
       <div class="col-sm-2">
       <label></label>
          <div class="actions">
            <%= f.submit "Display Report", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
        </div>


        </div>
       <div id="visitor_report"></div>
</div>
</div>
<%end%>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-100:-0',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

