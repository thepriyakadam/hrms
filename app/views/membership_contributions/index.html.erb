<div class="box">
  <div class="box-header">
    <h3 class="box-title">Member Contribution</h3>
    <div class="pull-right">
    <%= link_to 'Add Contribution', new_membership_contribution_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    </div>

<div class="box-body">

<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Member</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @membership_contributions.each do |membership_contribution| %>
      <tr>
        <td><%= full_name(membership_contribution.membership.employee) %></td>
        <td><%= membership_contribution.date %></td>
        <td><%= membership_contribution.amount %></td>
        <td><%= link_to '', membership_contribution ,class: 'btn btn-xs btn-default fa fa-eye'%></td>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>