 <div class="box-header">
    <div class="pull-right">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="comments">
    <table id="example1" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Issue ID</th>
        <th>Issue</th>
        <th>Issue Raised By</th>
        <th>Issue Date</th>
        <th>Root Cause</th>
        <th>Description</th>
        <th>Priority </th>
        <th>Issue Solved By</th>
        <th>Solved</th>
        <th>Confirm</th>
        <th>Effort Time</th>
        <th>Comment</th>
      </tr>
    </thead>

    <tbody>
     <% @issue_requests.each do |issue_request| %>
        <tr>
        <td><%= issue_request.id %></td>
          <td><%= issue_request.issue_master.try(:name) %></td>
          <td><%= full_name(issue_request.employee) %></td>
          <td><%= issue_request.date %></td>
          <td><%= issue_request.issue_root_cause.try(:name) %></td>
          <td><%= issue_request.description %></td>
          <td><%= issue_request.issue_priority %></td>
          <td><%= full_name(issue_request.issue_tracker_member.employee) %></td>
          <td><%= issue_request.status %></td>
           <td><%= issue_request.is_complete %></td>
          <td><%= issue_request.effort_time %></td>
          <td><%= issue_request.comment %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
    </div>
    <%= link_to " Excel Report ",group_report_list_issue_requests_path(issue_tracker_group_id: params[:issue_tracker_group_id], date: params[:date], format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>
    <%= link_to " Print Issue Tracker ",issue_tracker_pdf_issue_requests_path(issue_tracker_group_id: params[:issue_tracker_group_id], date: params[:date], format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>
    </div>