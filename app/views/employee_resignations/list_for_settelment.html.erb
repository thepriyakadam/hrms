<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Settelment Date</h3>
    <div class="pull-right">
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example6" class="table table-bordered table-hover table-condensed'">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee Name</th>
          <th>Resignation Date</th>
          <th>Action</th>
       </tr>
      </thead>

      <tbody>
        <% @employee_resignations.each do |employee_resignation| %>
          <tr>
            <td><%= employee_resignation.employee.try(:manual_employee_code) %></td>
            <td><%= full_name(employee_resignation.employee) %></td>
            <td><%= employee_resignation.resignation_date %></td>
            <td><%= link_to 'Settelment Date',settelment_date_employee_resignations_path(employee_resignation),class: 'btn btn btn-sm btn-primary',remote: true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>
<div id="settelment_date" class="modal fade"></div>

