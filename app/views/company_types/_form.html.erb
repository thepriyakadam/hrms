
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Company Types</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div>

<div class="box-body">
<%= bootstrap_form_for(@company_type,html: {id: 'company_type'}) do |f| %>
  

  <div class="row">
    <div class="col-sm-1"></div>
      <div class="col-sm-3">
        <div class="form-group required">
         <%= f.text_field :name,label:"Company Type" %>
       </div>
    </div>
  </div>


   <div class="row">
         <div class="col-sm-5">
          <div class="actions">
            <%= f.submit "Create Company type",class: "btn btn-primary",data: { disable_with: 'Wait....'} %>
          </div>

<% end %>
</div><!-- /.box-body -->
  <div class="box-footer">
    Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about the plugin.
  </div>
</div><!-- /.box -->
