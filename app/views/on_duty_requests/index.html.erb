<div class="box">
  <div class="box-header">
    <div class="pull-right">
      <%= link_to "New OD Request", new_on_duty_request_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    <br><br>
    <div class="box-body">
      <table class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>Employee Name :</th><th><%= @employee.manual_employee_code %></th><th><%= full_name(@employee) %></th></tr>
           <tr> <th>Manager 1 :</th><th><%= @employee.manager.try(:manual_employee_code) %></th><th><%= full_name(@employee.try(:manager)) %></th></tr>
           <tr> <th>Manager 2 :</th><th><%= @employee.manager_2.try(:manual_employee_code) %> </th><th><%= full_name(@employee.try(:manager_2)) %></th>
          </tr>
        </thead>
      </table>
    </div>

    <div class="box-body">
      <table id="example" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>Leave type</th>
            <th>Start date</th>
            <th>End date</th>
            <th>No of day</th>
            <th>Reason</th>
            <th>Current status</th>
           
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @on_duty_requests.each do |on_duty_request| %>
            <tr>
              <td><%= on_duty_request.leave_type %></td>
              <td><%= on_duty_request.start_date.to_date %></td>
              <td><%= on_duty_request.end_date.to_date %></td>
              <td><%= on_duty_request.no_of_day %></td>
              <td><%= on_duty_request.current_status %></td>
              <td><%= on_duty_request.reason %></td>
              <td>
                <%= link_to '', on_duty_request, class: 'btn btn-default btn-xs fa fa-eye' %>
                <% if on_duty_request.current_status == "Pending" %>
                  <%= link_to '', cancel_od_status_record_path(on_duty_request), data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-trash' %>
                <% else %>
                 
                <% end %>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>