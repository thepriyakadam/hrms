
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Select Candidate</h3>
    <div class="pull-right">
    </div>
  </div>

<div class="box-body">

    <table id="example6" class="table table-bordered table-hover table-condensed'">
      <thead>
        <tr>
        <th>Sr. No.</th>
       <th>Vacancy</th>
      <th>No. of Position</th>
      <th>Action</th>
        </tr>
      </thead>

      <tbody>
      <% i = 0 %>
         <% @vacancy_requests.each do |vacancy_request| %>
      <tr>
      <td><%= i = i+1  %></td>
        <td><%= vacancy_request.vacancy %></td>
        <td><%= vacancy_request.no_of_position %></td>
            <td>
              <%= link_to 'Select Candidate',new_candidate_form_path(vacancy_request: vacancy_request.id),class: 'btn btn-sm btn-primary' %> 
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>