<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @nomination_masters.each do |nomination_master| %>
      <tr>
        <td><%= nomination_master.code %></td>
        <td><%= nomination_master.name %></td>
        <td><%= nomination_master.description %></td>
        <td>
          <% if nomination_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_nomination_master_path(nomination_master),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  nomination_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
            <%= link_to '', is_confirm_nomination_masters_path(nomination_master: nomination_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>