<label class="control-label required" for="company_district" aria-required="true">Sub Department</label>

<% if @form == 'employee' %>
	<%= select :employee,:sub_department_id,(@sub_departments.present? ? (@sub_departments.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select Department",hide_label:true},class: "form-control"%>
<%else %>
	<%= select :company,:sub_department_id,(@sub_departments.present? ? (@sub_departments.collect {|b| [b.name,b.id]}) : {}),{prompt:"Select Department",hide_label:true},class: "form-control"%>
<%end%>