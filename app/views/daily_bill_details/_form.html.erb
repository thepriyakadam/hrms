<%= bootstrap_form_for(@daily_bill_detail,remote:true) do |f| %>
  <div id="entry1" class="clonedInput">
    <div class="row">
      <div class="col-sm-3">
        <label>Expence Date </label>
        <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :expence_date, hide_label: true, class: 'input_expence_date' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% unless params['controller'] == 'daily_bill_details' and params['action'] == 'edit' %>
    <div class="row">
      <div class="col-sm-2">
        <input type="button" id="btnAdd" value="+ Add Bill Details" class="btn btn-sm btn-success"> 
      </div>

      <div class="col-sm-3">
        <input type="button" id="btnDel" value="Remove Bill Details" class="btn btn-sm btn-danger">
      </div>
    </div><br>
  <%end%>

  <div class="row">
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name, data: { disable_with: data_info }  %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    // $(document).on("focus", ".input_expence_date", function(){
    //   $(this).datepicker();
    // });

    $('#btnAdd').click(function () {
      var num     = $('.clonedInput').length,
          newNum  = new Number(num + 1),      
          newElem = $('#entry' + num).clone().attr('id', 'entry' + newNum).fadeIn('slow'); 
      newElem.find('.input_expence_date').attr('name','daily_bill_detail['+ newNum +'][expence_date]').attr('id', newNum + '_daily_bill_detail_expence_date').val('');

      $('#entry' + num).after(newElem);
      $('#ID' + newNum + '_title').focus();
      $('#btnDel').attr('disabled', false);
      if (newNum == 5)
      $('#btnAdd').attr('disabled', true).prop('value', "You've reached the limit");

    $('#'+newNum+'_daily_bill_detail_expence_date').removeClass("input_expence_date");
      
      $('#'+newNum+'_daily_bill_detail_expence_date').datepicker({
      changeYear:true,
      changeMonth: true,
      yearRange: '-200:-0',
      dateFormat: 'dd-mm-yy' });
      console.log(newNum+"-----------------");
    });
  });
</script>