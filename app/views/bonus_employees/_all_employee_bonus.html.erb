<table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Bonus date</th>
      <th>Total Amount</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @bonus_employees.each do |b| %>
      <tr>
        <td><%= full_name(b.employee) %></td>
        <td><%= b.bonus_date %></td>
        <td><%= bonus_total(b) %></td>
        <td>
          <!-- link_to '', edit_bonus_employee_path(bonus_employee),class: 'btn btn-xs btn-success fa fa-edit' -->
          <%= link_to '', particular_employee_bonus_bonus_employees_path(b.employee_id),class: 'btn btn-xs btn-default fa fa-eye',remote:true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(function () {
  $("#example1").DataTable();
});
</script>