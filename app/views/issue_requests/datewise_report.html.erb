<div class="box">
  <div class="box-header">
    <h3 class="box-title">Datewise Support Report</h3>
    <div class="pull-right">
    <!--  <= link_to "New Issue Request",  new_issue_request_path, class: 'btn btn-primary' %>  -->
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">

    <%= bootstrap_form_for(:issue_request,url: { action: 'datewise_report_list'},html: {id: 'issue_request'},remote: true) do |f| %>

      <div class="row">
        <div class="col-sm-3">
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= text_field :issue_request, :from, placeholder: 'From',class: 'form-control request_date' %>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= text_field :issue_request, :to, placeholder: 'To',class: 'form-control request_date' %>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Display", class: "btn btn-sm btn-primary",id: "buttonCtc" %>
          </div>
        </div>
      </div>
      <div id="datewise_li"></div>

    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

<script type="text/javascript">
   $("#issue_request").validate({
    rules: {
      "issue_request[from]":{
        required: true,
      
      },
      "issue_request[to]":{
        required: true,
      },

      "issue_request[issue_tracker_group_id]":{
        required: true,
      },
      "issue_request[issue_tracker_member_id]":{
        required: true,
      }
    },
    messages: {
      "issue_request[from]":{
        required: "Please Specify Date Range",
      },
      "issue_request[to]":{
        required: "Please select Date",
      },
      "issue_request[issue_tracker_group_id]":{
        required: "Please select Group",
      },
       "issue_request[issue_tracker_member_id]":{
        required: "Please select Member",
      }
    },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
