<p id="notice"><%= notice %></p>

<h1>Listing Interview Decisions</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interview_decisions.each do |interview_decision| %>
      <tr>
        <td><%= interview_decision.code %></td>
        <td><%= interview_decision.name %></td>
        <td><%= interview_decision.description %></td>
        <td><%= link_to 'Show', interview_decision %></td>
        <td><%= link_to 'Edit', edit_interview_decision_path(interview_decision) %></td>
        <td><%= link_to 'Destroy', interview_decision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

