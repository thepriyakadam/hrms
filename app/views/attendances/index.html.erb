<div class="box">
  <div class="box-header">
    <h3 class="box-title">Attendance List</h3>
    <div class="pull-right">
      <%= link_to "New Attendance", new_attendance_path, class: 'btn btn-sm btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
      <th>Shift</th>
      <th>Employee</th>
      <th>Date</th>
      <th>Check in</th>
      <th>Check out</th>
      <th>Company hrs</th>
      <th>Over time hrs</th>
      <th>Total hrs</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.employee_shift.company_shift.try(:name) %></td>
        <td><%= attendance.employee.try(:first_name)+' '+attendance.employee.try(:middle_name)+' '+attendance.employee.try(:last_name) %></td>
        <td><%= attendance.attendance_date %></td>
        <td><%= attendance.check_in %></td>
        <td><%= attendance.check_out %></td>
        <td><%= attendance.company_hrs %></td>
        <td><%= attendance.over_time_hrs %></td>
        <td><%= attendance.total_hrs %></td>
         <td>
            <%= link_to '', attendance,class: 'btn btn-default btn-sm fa fa-eye' %>
            <%= link_to '', edit_attendance_path(attendance) ,class: 'btn btn-success btn-sm fa fa-edit' %>
            <%= link_to '', attendance, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>