<%= bootstrap_form_for(@due_detail,html: {id: 'due_detail'}) do |f| %>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
      <%= f.select :due_employee_template_id,{label: 'Due Employee Template',include_blank: " Select Due Employee Template"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
      </div>
    </div> 
     <div class="col-sm-3">
          <div class="form-group required">
          <%= f.select :reporting_master_id,all_reporting_master_list,{label: 'Reporting Manager',include_blank: " Select Reporting Manager"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
            </div>
        </div>

    <div class="col-sm-3">
     <label>Status</label>
      <div class="form-group required">
        <%= f.check_box :status,label: 'Active' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Due Detail ",:class => class_name,  data: { disable_with: data_info } %>
      </div>
    </div>

  </div>
<% end %>


