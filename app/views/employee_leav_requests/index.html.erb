<div class="box">
  <div class="box-header">
    <h3 class="box-title">Leave Detail</h3>
    <div class="pull-right">
      <% if @employee.try(:joining_detail).try(:c_off) == true %>
      <%= link_to "New Leave Request", new_employee_leav_request_path, class: 'btn btn-sm btn-primary' %>
      <%= link_to "Compensatory Off List", modal_leave_c_offs_path(employee_id: @employee.id), class: 'btn btn-sm btn-primary',remote:true %>
      <%else%>
      <%= link_to "New Leave Request", new_employee_leav_request_path, class: 'btn btn-sm btn-primary' %>
      <%end%>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
  <div id="leave_balance">
    <%= render 'leave_balance_list' %>
  </div>
  <div id="leave_request">
    <%= render 'leave_request_list' %>
  </div>
</div>
</div>
<div id="myModal" class="modal fade"></div>
