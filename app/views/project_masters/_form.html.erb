<%= bootstrap_form_for(@project_master,html: {id: 'project_master'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true, placeholder: 'Project Master Code' %>
      </div>
    </div> 
     <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Project Master Name' %>
      </div>
    </div>
     <div class="col-sm-3">
      <div class="field">
        <%= f.text_field :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Project Master",:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>


<script>
$("#project_master").validate({
    rules: {
      "project_master[code]":{
        required: true,
      },
       "project_master[name]":{
        required: true,
      },
       },
    messages: {
      "project_master[code]":{
        required: "Please Specify Code",
      },
    messages: {
      "project_master[name]":{
        required: "Please Specify Name",
      },
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>