<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
  </div><!-- /.box-header -->

  <table  id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>ID</th>
        <th>Employee Name</th>
        <th>Yearly</th>
        <th>Monthly</th>
      </tr>
    </thead>

    <tbody>
      <% @texable_amounts.each do |ta| %>
        <tr>
          <td><%= ta.employee.manual_employee_code %></td>
          <td><%= full_name(ta.employee) %></td>
          <td><%= ta.yearly %></td>
          <td><%= ta.monthly %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>