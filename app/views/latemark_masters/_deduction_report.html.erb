<div class="box">
  <div class="box-header">
    <h3 class="box-title">Deduction List</h3>
  </div><!-- /.box-header -->
  <div class="box-body">

      <table id="example6" class="table table-bordered table-hover table-condensed">
        <thead>
          <tr><th colspan="5"><center>From <%= @from %> To <%= @to %></center></th></tr>
          <tr>
            <th>ID</th>
            <th>Employee</th>
            <th>Date</th>
            <th>Count</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @latemark_deductions.each do |latemark_deduction| %>
            <tr>
              <td><%= latemark_deduction.employee.manual_employee_code %></td>
              <td><%= full_name(latemark_deduction.employee) %></td>
              <td><%= latemark_deduction.latemark_day %></td>
              <td><%= latemark_deduction.latemark_count %></td>
              <td><%= latemark_deduction.latemark_amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to " Excel Report ",show_deduction_report_latemark_masters_path(:latemark_master =>{:from_date => params[:latemark_master][:from_date],:to_date => params[:latemark_master][:to_date]}, format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>
      
      <%= link_to " PDF Report ",show_deduction_report_latemark_masters_path(:latemark_master =>{:from_date => params[:latemark_master][:from_date],:to_date => params[:latemark_master][:to_date]}, format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>

  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>