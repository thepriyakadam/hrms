<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Create Employee</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->
  <div class="box-body">
    <%= bootstrap_form_for(@employee) do |f| %>

      <%= f.hidden_field :department_id, value: current_user.account_id %>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :first_name %>
         </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
          <div class="col-sm-3">
           <div class="field">
          <%= f.text_field :middle_name %>
         </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :last_name %>
         </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.date_select :date_of_birth %>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :contact_no %>
         </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :email %>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :permanent_address %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :city %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :district %>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.number_field :pin_code %>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :state %>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :current_address %>
         </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :adhar_no %>
         </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :pan_no %>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :licence_no %>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
           <%= f.text_field :passport_no %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.select :marital_status, ['Marride','Unmarride'] %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.select :nationality_id, all_nationality %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.select :blood_group_id, all_blood_group %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.select :handicap, ['Yes','No'] %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.text_field :status %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.select :employee_type_id, all_employee_type %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="field">
            <%= f.select :gender, ['Male','Female'] %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
         <div class="col-sm-3">
          <div class="actions">
           <%= f.submit %>
          </div>
        </div>
      </div>
    <% end %>
  </div><!-- /.box-body -->
  <div class="box-footer">
    Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about the plugin.
  </div>
</div><!-- /.box -->