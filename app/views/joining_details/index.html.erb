<h1>Listing Joining Details</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Joining date</th>
      <th>Reffernce from</th>
      <th>Admin hr</th>
      <th>Tech hr</th>
      <th>Designation</th>
      <th>Ctc</th>
      <th>Account no</th>
      <th>Employee grade</th>
      <th>Confirmation date</th>
      <th>Status</th>
      <th>Probation period</th>
      <th>Notice period</th>
      <th>Medical schem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @joining_details.each do |joining_detail| %>
      <tr>
        <td><%= joining_detail.employee %></td>
        <td><%= joining_detail.joining_date %></td>
        <td><%= joining_detail.reffernce_from %></td>
        <td><%= joining_detail.admin_hr %></td>
        <td><%= joining_detail.tech_hr %></td>
        <td><%= joining_detail.designation %></td>
        <td><%= joining_detail.ctc %></td>
        <td><%= joining_detail.account_no %></td>
        <td><%= joining_detail.employee_grade %></td>
        <td><%= joining_detail.confirmation_date %></td>
        <td><%= joining_detail.status %></td>
        <td><%= joining_detail.probation_period %></td>
        <td><%= joining_detail.notice_period %></td>
        <td><%= joining_detail.medical_schem %></td>
        <td><%= link_to 'Show', joining_detail %></td>
        <td><%= link_to 'Edit', edit_joining_detail_path(joining_detail) %></td>
        <td><%= link_to 'Destroy', joining_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

