<div class="box-body">
<%= bootstrap_form_for(@department,html: {id: 'department'},remote: true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
       <%= f.text_field :manual_department_code,label: 'Department Code',placeholder: "Department Code"%>
       </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
        <div class="form-group required">
         <%= f.select :company_location_id, all_company_location %>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group required">
         <%= f.text_field :name,label:"Department Name" %>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group required">
          <%= f.select :department_type_id, all_department_type %>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="field">
         <%= f.text_field :contact_no %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="field">
        <%= f.text_area :description %>
      </div>
    </div>
  </div>

  <div class="col-sm-3">
      <div class="actions">
        <%= f.submit :class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>