<table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Template Name</th>
      <th>Active Date</th>
      <th>Inactive Date</th>
      <th>Active Template</th>
    </tr>
  </thead>
  <tbody>
    <% @employee_templates.each do |t| %>
      <tr>
        <td><%= t.salary_template.try(:code) %></td>
        <td><%= t.start_date %></td>
        <td><%= t.end_date %></td>
        <td>
          <% if t.is_active %>
            <small class="label label-info">Current Template</small>
          <% elsif t.is_active == false and t.start_date.nil? %>
            <%= link_to "Activate",activate_employee_template_path(t),class: "btn btn-xs btn-success",remote:true %>
          <% else %>
            <small class="label label-danger">Expired Template</small>
          <% end %>
          <%= link_to '', show_employee_salary_template_employee_salary_templates_path(t.employee_id),class: 'btn btn-default fa fa-eye' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= link_to 'Back', employee_templates_path,class: 'btn btn-default btn-sm fa fa-arrow-left' %>
</div>