<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Document Name</th>
      <th>Download Document</th>
      <th>Status</th>
      <th>Action</th>
  <tbody>
    <% @employee_documents.each do |employee_document| %>
      <tr>
        <td><%= employee_document.employee.try(:manual_employee_code) %></td>
        <td><%= employee_document.name %></td>
         <td>
           <% if employee_document.document_file_name == nil %>
           <small class="label label-default">Document Not Available</small>
             <% else %>
             <%= link_to ' Document',download_emp_path(id: employee_document.id),class: 'btn btn-xs btn btn-info fa fa-download' %>
             <% end %>
        </td>
        <td><%= employee_document.status ? "Active" : "Inactive" %></td>
         <td>
<!--           <= link_to '', edit_employee_document_path(employee_document),class: 'btn btn-success btn-xs fa fa-edit',remote:true %>
 -->          <%= link_to '',  employee_document, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-close',remote:true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
