<table id="example1" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
   <% @nationalities.each do |nationality| %>
      <tr>
        <td><%= nationality.name %></td>
        <td>
          <% if nationality.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_nationality_path(nationality),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  nationality, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
            <%= link_to '', is_confirm_nationalities_path(nationality: nationality),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
