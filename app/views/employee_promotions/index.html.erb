<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Promotion List</h3>
    <div class="pull-right">
      <%= link_to "New Employee Promotion", new_employee_promotion_path, class: 'btn btn-primary btn-sm' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Department</th>
        <th>Designation</th>
        <th>Grade</th>
        <th>Category</th>
        <th>Effective From</th>
        <th>Effective To</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @employee_promotions.each do |employee_promotion| %>
        <tr>
          <td><%= employee_promotion.employee.try(:manual_employee_code) %></td>
          <td><%= employee_promotion.employee.try(:first_name) %> <%= employee_promotion.employee.try(:middle_name) %> <%= employee_promotion.employee.try(:last_name) %></td>
          <td><%= employee_promotion.employee.company_location.try(:name) %> - <%= employee_promotion.employee.department.try(:name) %></td>
          <td><%= employee_promotion.employee_designation.try(:name) %></td>
          <td><%= employee_promotion.employee_grade.try(:name) %></td>
          <td><%= employee_promotion.employee_category.try(:name) %></td>
          <td><%= employee_promotion.effective_from %></td>
          <td><%= employee_promotion.effective_to %></td>
          <td>
            <%= link_to '', employee_promotion,class: 'btn btn-default btn-xs fa fa-eye' %>
            <%= link_to '', edit_employee_promotion_path(employee_promotion),class: 'btn btn-xs btn-success fa fa-edit' %>
            <%= link_to '', employee_promotion, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs fa fa-close' %>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
