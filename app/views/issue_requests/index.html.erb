<p id="notice"><%= notice %></p>

<h1>Listing Issue Requests</h1>

<table>
  <thead>
    <tr>
      <th>Issue master</th>
      <th>Issue tracker member</th>
      <th>Issue tracker group</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
      <th>Employee</th>
      <th>Issue priority</th>
      <th>Status</th>
      <th>Is confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_requests.each do |issue_request| %>
      <tr>
        <td><%= issue_request.issue_master %></td>
        <td><%= issue_request.issue_tracker_member %></td>
        <td><%= issue_request.issue_tracker_group %></td>
        <td><%= issue_request.description %></td>
        <td><%= issue_request.date %></td>
        <td><%= issue_request.time %></td>
        <td><%= issue_request.employee %></td>
        <td><%= issue_request.issue_priority %></td>
        <td><%= issue_request.status %></td>
        <td><%= issue_request.is_confirm %></td>
        <td><%= link_to 'Show', issue_request %></td>
        <td><%= link_to 'Edit', edit_issue_request_path(issue_request) %></td>
        <td><%= link_to 'Destroy', issue_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue request', new_issue_request_path %>
