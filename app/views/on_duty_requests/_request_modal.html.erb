<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> On Duty Request Detail </center></h4>
    </div>
    <div class="modal-body">
<table class="table table-bordered table-hover table-condensed">
  <thead>
 <tr>
        <th><strong>ID</strong></th>
        <td><%= @on_duty_request.try(:employee).try(:manual_employee_code) %></td>
        </tr>
        <tr>
        <th><strong>Employee</strong></th>
        <td><%= full_name(@on_duty_request.employee) %></td>
</tr>
<tr>      
        <th><strong>OD Type</strong></th>
        <td><%= @on_duty_request.leave_type %></td>
      </tr>

      <tr>
        <th><strong>Date</strong></th>
        <td><%= @on_duty_request.start_date.to_date %> to <%= @on_duty_request.end_date.to_date %></td>
      </tr>

      <tr>
        <th><strong>No. of Days</strong></th>
        <td><%= @on_duty_request.no_of_day %></td>
      </tr>
<tr> 
        <th><strong>Reason</strong></th>
        <td><%= @on_duty_request.reason %></td>
      </tr>
      <tr>
        <th><strong>Status</strong></th>
        <td><%= @on_duty_request.current_status %></td>
    </tr>

  </thead>
</table>
</div>
<div class="modal-footer"></div>
</div>
</div>  