<br>
<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>  
      <th>Code</th>
      <th>Description</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @salary_templates.each do |salary_template| %>
      <tr>
        <td><%= salary_template.code %></td>
        <td><%= salary_template.description %></td>
       <td><%= salary_template.is_active ? "Active" : "Inactive" %></td>
        <td>
        <% if salary_template.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
          <%= link_to '', edit_salary_template_path(salary_template),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
          <%= link_to '', salary_component_templates_path(salary_template),class: 'btn btn-xs btn-info btn-xs fa fa-tasks' %>
           <!-- <= link_to '', is_confirm_salary_templates_path(salary_template: salary_template),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-primary fa fa-check' %> -->
          <%= link_to '', salary_template_page_salary_component_templates_path(salary_template),class: 'btn btn-xs btn-primary fa fa-info-circle' %>
  
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50, 100, "All"]]
    } );
} );
</script>

