	<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Details</h3>
  </div>
  <div class="box-body">

	<table class="table table-bordered table-hover table-condensed">    
    <thead>
	    <tr>
	    	<th>Employee Id</th>
	    	<th>Name</th>
        <th>Age</th>
	    	<th>Department</th>
	    	<th>Date Of Joining</th>
	    	<th>Joining Grade</th>
	    	<th>Current Designation</th> 
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |a| %>
      <tr>
        <td><%= a.manual_employee_code %></td> 
        <td><%= a.first_name %></td>
        <td><%= Time.now.year-a.date_of_birth.year %></td>
        <td><%= a.department.name %></td>
        <td><%= @joining_detail.joining_date %></td>
        <td><%= @joining_detail.employee_grade.name %></td>
        <td><%= @joining_detail.employee_designation.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<div class="row">
  <div class="col-sm-6">
    <div class="box-header with-border">
      <h3 class="box-title">Past Experience</h3>
    </div>
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
	    	<th>Past Company</th>
        <th>Designation</th>
        <th>Past Exp In Years</th>
        <th>Past CTC</th>
        <th>Current CTC</th>
      </tr>
    </thead>
    <tbody>
    <% @experiences.each do |e| %>
      <tr>
       <td><%= e.company_name %></td>
       <td><%= e.designation %></td>
       <td><%= e.no_of_year %></td>
       <td><%= e.ctc %></td>
       <td><%= @ctc %></td>
      </tr>
      <% end %>
    </tbody>
	</table>
  </div>

  <div class="col-sm-6">
    <div class="box-header with-border">
      <h3 class="box-title">Qualification Details</h3>
    </div>
      <table class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>Degree/Deploma</th>
            <th>Year Of Passing/marks%</th>
            <th>Qualification Category</th>
          </tr>
        </thead>
        <tbody>
        <% @qualifications.each do |q| %>
          <tr>
            <td><%= q.degree.name %></td>
            <td><%= q.year.name.to_s+" / "+q.marks.to_s %></td>
            <td><%= q.degree_type.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  
</div>

  <%= bootstrap_form_for(@goal_rating_sheet,url:{action: "final_create", id: @employee.id}) do |f| %>
   <div class="box-header with-border">
    <h3 class="box-title">Goals</h3>
  </div>
  <table id="tbl" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Goal Perspctive</th>
        <th>Goal Measure</th>
        <th>Target</th>
        <th>Goal Weightage</th>
        <th>Difficulty Level</th>
        
        <th>Allign To Supervisor</th>
        <th>Appraisee Comment</th>
        <th>Appraisee Rating</th>
        <th>Appraiser1 Comment</th>
        <th>Appraiser1 Rating</th>
        <th>Appraiser2 Comment</th>
        <th>Appraiser2 Rating</th>
        <th>Final Comment</th>
        <th>Final Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @goal_ratings.each do |g| %>
        <tr>
          <td><%= g.employee_goal.goal_perspective.name %></td>
          <td><%= g.employee_goal.goal_measure %></td>
          <td><%= g.employee_goal.target %></td>
          <td><%= g.employee_goal.goal_weightage %></td>
          <td><%= g.employee_goal.difficulty_level %></td>
          <td><%= g.employee_goal.allign_to_supervisor %></td>

          <td><%= g.appraisee_comment %></td>
          <td><%= g.appraisee_rating.try(:code) %></td>
          <td><%= g.appraiser_comment %></td>
          <td><%= g.appraiser_rating.try(:code) %></td>
          <td><%= g.appraiser2_comment %></td>
          <td><%= g.appraiser2_rating.try(:code) %></td>

          <td><%= text_field_tag 'final_comment[]'%></td>
          <td><%= select_tag 'final_rating_id[]',options_for_select(all_rating_type) ,{class: 'form-control', hide_label: true} %></td>


          <%= hidden_field_tag 'goal_rating_sheet_id[]', {},value: g.id %> 
          <%= hidden_field_tag :final_id_id, {},value: current_user.employee_id %>
        </tr>
          
      <% end %>
    </tbody>
  </table>

  <% if @goal_ratings.empty? %>

  <% else %>
    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit "Assign Rating" , class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>

<%= bootstrap_form_for @goal_rating_sheet,url:{action:'is_confirm_final',id: @employee.id} do |f| %>

  <div class="box-header with-border">
    <h3 class="box-title">Goals</h3>
  </div>
  <table id="tbl" class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th><input type="checkbox" id="selectAll" value="selectAll"></th>
        <th>Goal Perspctive</th>
        <th>Goal Measure</th>
        <th>Target</th>
        <th>Goal Weightage</th>
        <th>Difficulty Level</th>
        
        <th>Allign To Supervisor</th>
        <th>Appraisee Comment</th>
        <th>Appraisee Rating</th>
        <th>Appraiser1 Comment</th>
        <th>Appraiser1 Rating</th>
        <th>Appraiser2 Comment</th>
        <th>Appraiser2 Rating</th>
        <th>Final Comment</th>
        <th>Final Rating</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @goal_rating_sheets.each do |g| %>
        <tr>
          <td><%= check_box_tag "goal_rating_sheet_ids[]", g.id %></td>
          <td><%= g.employee_goal.goal_perspective.name %></td>
          <td><%= g.employee_goal.goal_measure %></td>
          <td><%= g.employee_goal.target %></td>
          <td><%= g.employee_goal.goal_weightage %></td>
          <td><%= g.employee_goal.difficulty_level %></td>
          <td><%= g.employee_goal.allign_to_supervisor %></td>

          <td><%= g.appraisee_comment %></td>
          <td><%= g.appraisee_rating.try(:code) %></td>
          <td><%= g.appraiser_comment %></td>
          <td><%= g.appraiser_rating.try(:code) %></td>
          <td><%= g.appraiser2_comment %></td>
          <td><%= g.appraiser2_rating.try(:code) %></td>
          <td><%= g.final_comment %></td>
          <td><%= g.final_rating.try(:code) %></td>
          <td>
            <% if g.is_confirm_final == true %>
            <small class="label label-info">Confirmed</small>
            <% else %>
            <%= link_to '', edit_final_goal_rating_sheets_path(g) ,class: 'btn btn-xs btn-success fa fa-edit' %>
            <% end %>
          </td>
          <%= hidden_field_tag 'goal_rating_sheet_id[]', {},value: g.id %> 
          <%= hidden_field_tag :final_id_id, {},value: current_user.employee_id %>
        </tr>

    <% end %>
    </tbody>
  </table>

    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit "Confirm", class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>
      </br>
  <%= link_to 'Attribute', final_comment_attribute_rating_sheets_path(@employee.id),class: 'btn btn-warning btn-sm' %> |
  <%= link_to 'Back', employee_list_goal_rating_sheets_path(@employee.id),class: 'btn btn-default btn-sm fa fa-arrow-left' %> 
</div>
</div>
<% end %>

<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>