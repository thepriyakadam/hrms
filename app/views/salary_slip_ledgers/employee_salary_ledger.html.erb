<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Salary Lager </h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
     <div class="col-sm-3">
      <label>From</label>
        <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
             <%= text_field :salary, :from_date,hide_label:true, class: 'from_date'%>
          </div>
        </div>
      </div>

      <div class="col-sm-3">
      <label>To</label>
        <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
             <%= text_field :salary, :to_date,hide_label:true, class: 'from_date'%>
          </div>
        </div>
      </div>
       <div class="col-sm-3">
        <label>Select employee</label>
          <div class="form-group required">
            <%= select :salary, :employee_id, employee_list_for_food_deduction, {include_blank: "Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>
          </div>
        </div>
    </div><br>
</div>

<script type="text/javascript">
  $(function(){
    $('.from_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-10:+25',
    dateFormat: 'dd-mm-yy' });
    });
    </script>

