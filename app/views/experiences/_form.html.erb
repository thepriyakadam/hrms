<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Experiences</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
  <%= bootstrap_form_for(@experience,html: {id: 'experince'},remote:true) do |f| %>
    <%= f.hidden_field :employee_id, value: @employee.id %>
    <div id="entry1" class="clonedInput">
      <div class="row">
        

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :company_name, class: 'input_company_name' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :designation, class: 'input_designation' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :no_of_year,label: "No. Of Years", class: 'input_no_of_year' %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group required">
            <%= f.text_field :ctc,label: "CTC", class: 'input_ctc' %>
          </div>
        </div>
      </div>
    </div>  
    <% unless params['controller'] == 'experiences' and params['action'] == 'edit' %>
      <div class="row">
        <div class="col-sm-2">
          <input type="button" id="btnAdd" value="+ Additional Experiences" class="btn btn-sm btn-success"> 
        </div>

        <div class="col-sm-3">
          <input type="button" id="btnDel" value="Remove Above Experiences" class="btn btn-sm btn-danger">
        </div>
      </div><br>
    <%end%>  
    <div class="row">
      <div class="col-sm-3">
        <div class="actions">
          <%= f.submit :class => class_name, data: { disable_with: data_info } %>
          <% if params['controller'] == 'experiences' and params['action'] == 'edit' %>
            <%= link_to 'Back',ajax_experience_detail_employees_path(id: @employee.id),class: 'btn btn-sm btn-default',remote:true%>
          <%end%>
        </div>
      </div>
    </div>

  <% end %>
  </div><!-- /.box-body -->
  </div><!-- /.box -->


<script type="text/javascript">
  $(function () {
  $('#btnAdd').click(function () {
    var num     = $('.clonedInput').length, 
        newNum  = new Number(num + 1),      
        newElem = $('#entry' + num).clone().attr('id', 'entry' + newNum).fadeIn('slow'); 
    newElem.find('.input_no_of_year').attr('name','experience['+ newNum +'][no_of_year]').attr('id', newNum + '_experience_no_of_year').val('');
    newElem.find('.input_company_name').attr('name','experience['+ newNum +'][company_name]').attr('id', newNum + '_experience_company_name').val('');
    newElem.find('.input_designation').attr('name','experience['+ newNum +'][designation]').attr('id', newNum + '_experience_designation').val('');
    newElem.find('.input_ctc').attr('name','experience['+ newNum +'][ctc]').attr('id', newNum + '_experience_ctc').val('');
    
    
    
    $('#entry' + num).after(newElem);
    $('#ID' + newNum + '_title').focus();

    $('#btnDel').attr('disabled', false);

    if (newNum == 5)
    $('#btnAdd').attr('disabled', true).prop('value', "You've reached the limit"); 
  });

  $('#btnDel').click(function () {
      if (confirm("Are you sure you wish to remove this section? This cannot be undone."))
          {
              var num = $('.clonedInput').length;
              $('#entry' + num).slideUp('slow', function () {$(this).remove();
                  if (num -1 === 1)
              $('#btnDel').attr('disabled', true);
              $('#btnAdd').attr('disabled', false).prop('value', "+ Additional Experiences");});
          }
      return false;
  });
  $('#btnAdd').attr('disabled', false);
  $('#btnDel').attr('disabled', true);
});
</script>