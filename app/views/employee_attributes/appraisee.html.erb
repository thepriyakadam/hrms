<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Attribute</h3>
    <div class="pull-right">
      <%= link_to "New Goal", new_employee_attribute_path, class: 'btn btn-sm btn-primary' %> 
    </div>  
  </div>
  <div class="box-body">
  <%= bootstrap_form_for(:employee_attribute,url: {action: "appraisee_create"}) do |f| %>
    <table id="example2" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Definition</th>
          <th>Weightage</th>
          <th>Appraisee Comment</th>
          <th>Appraisee Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @employee_attributes.each do |employee_attribute| %>
        <tr>
          <td><%= employee_attribute.attribute_master.name %></td>
          <td><%= employee_attribute.definition.name %></td>
          <td><%= employee_attribute.weightage %></td>
          <td><%= text_field_tag 'appraisee_comment[]' %></td>
          <td><%= text_field_tag 'appraisee_rating[]' %></td>
          <%= hidden_field_tag 'employee_attribute_id[]',{},value: employee_attribute.id %>
          <%= hidden_field_tag :appraisee_id, {},value: current_user.employee_id %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Attribute",class: 'btn btn-primary btn-sm'%>
      </div>
    </div>
  <% end %>
  </div>
</div>


