
<% if @flag == true %>
$("#first_form").html("<%= j render 'first_form' %>");
$("#second_form").hide();
$("#third_form").hide();
$("#forth_form").hide();
$("#first_form").show();
<% elsif @flag == "5" %>
$("#second_form").html("<%= j render 'second_form' %>");
$("#first_form").hide();
$("#third_form").hide();
$("#forth_form").hide();
$("#second_form").show();
<% elsif @flag == false %>
$("#third_form").html("<%= j render 'third_form' %>");
$("#second_form").hide();
$("#forth_form").hide();
$("#first_form").hide();
$("#third_form").show();
<% elsif @flag == "0" %>
$("#forth_form").html("<%= j render 'forth_form' %>");
$("#first_form").hide();
$("#third_form").hide();
$("#second_form").hide();
$("#forth_form").show();
<% else %>
<% end %>