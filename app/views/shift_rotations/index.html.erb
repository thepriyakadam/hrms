<p id="notice"><%= notice %></p>

<h1>Listing Shift Rotations</h1>

<table>
  <thead>
    <tr>
      <th>Company shift</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shift_rotations.each do |shift_rotation| %>
      <tr>
        <td><%= shift_rotation.company_shift %></td>
        <td><%= shift_rotation.start_date %></td>
        <td><%= shift_rotation.end_date %></td>
        <td><%= link_to 'Show', shift_rotation %></td>
        <td><%= link_to 'Edit', edit_shift_rotation_path(shift_rotation) %></td>
        <td><%= link_to 'Destroy', shift_rotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

