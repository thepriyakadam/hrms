<p id="notice"><%= notice %></p>

<h1>Listing Leav Requests</h1>

<table>
  <thead>
    <tr>
      <th>Leav type</th>
      <th>Employee</th>
      <th>Available leaves</th>
      <th>Leave</th>
      <th>Date from</th>
      <th>Date to</th>
      <th>No of days</th>
      <th>Reason</th>
      <th>Applied on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leav_requests.each do |leav_request| %>
      <tr>
        <td><%= leav_request.leav_type %></td>
        <td><%= leav_request.employee %></td>
        <td><%= leav_request.available_leaves %></td>
        <td><%= leav_request.leave %></td>
        <td><%= leav_request.date_from %></td>
        <td><%= leav_request.date_to %></td>
        <td><%= leav_request.no_of_days %></td>
        <td><%= leav_request.reason %></td>
        <td><%= leav_request.applied_on %></td>
        <td><%= link_to 'Show', leav_request %></td>
        <td><%= link_to 'Edit', edit_leav_request_path(leav_request) %></td>
        <td><%= link_to 'Destroy', leav_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

