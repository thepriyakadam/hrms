<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Particular Leave Request</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr><th>ID : <%= @particular_leave_records.first.employee.manual_employee_code %></th><th colspan="2">Employee Name : <%= full_name(@particular_leave_records.first.employee) %></th></tr>
        <tr>
          <th>Date</th>
          <th>Leave Category</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @particular_leave_records.each do |p| %>
          <tr>
            <td><%= p.leave_date.to_date %></td>
            <td><%= p.leav_category.name %></td>
            <% if p.is_cancel_after_approve %>
              <td><small class="label label-info">Cancelled After Approve</small></td>
            <% else %>
              <td><%= link_to 'Cancel',cancel_after_approve_leave_status_records_path(p), data: { confirm: 'Are you sure?' },class: 'btn btn-xs btn-warning'%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table> 
    <br>   
      <%= link_to 'Back',hr_view_request_employee_leav_requests_path(@employee_leave_request.employee_id), class: 'btn btn-default btn-sm fa fa-arrow-left' %>
  </div>
</div>
