<%= bootstrap_form_for(@expence_opestion,html: {id: 'expence_opestion'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.select :employee_grade_id, all_employee_grade ,{label: 'Grade',include_blank: " Select Grade"} %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code, label: 'Grade Code', placeholder: 'Grade Code' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name, label: 'Grade Name', placeholder: 'Grade Name' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :description,label: 'Grade Description' , placeholder: 'Grade Description' %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.check_box :status, label:'Active' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Expence Opestion" ,:class => class_name, data: { disable_with: data_info } %>
      </div>
    </div>
  </div>
<% end %>
<br />

<script>
$("#expence_opestion").validate({
    rules: {
      "expence_opestion[employee_grade_id]":{
        required: true,
      },
      "expence_opestion[name]":{
        required: true,
      }
       },
    messages: {
      "expence_opestion[employee_grade_id]":{
        required: "Please specify code",
      },
       "expence_opestion[name]":{
        required: "Please specify name",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>
