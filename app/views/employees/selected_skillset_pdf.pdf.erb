<style>
    th {
        text-align: left;
    }
    tr {
        page-break-inside: avoid;
    }
    div.alwaysbreak { page-break-before: always; }
    div.nobreak:before { clear:both; }
    div.nobreak{ page-break-inside: avoid;
    }
</style>
  <table style="border-collapse: collapse; font-size:9pt;" border=1 width=1200 cellpadding="10">
    <thead>
     <tr><td colspan="4"><center><strong><%= current_user.employee.company_location.company.try(:description) %></strong> <br>
        <%= current_user.employee.company_location.company.try(:address) %><br> 
        <%= current_user.employee.company_location.try(:name) %></center> </td></tr>
      <tr>
        <th> ID</th>
        <th>Employee Name</th>
        <th>Skill</th>
        <th>Level</th>
      </tr>
      </thead>
      <tbody>
    <% @skillsets.each do |skillset| %>
      <tr>
          <td><%= skillset.employee.try(:manual_employee_code ) %></td>
          <td><%= full_name(skillset.employee) %></td>
          <td><%= skillset.name %></td>
          <td><%= skillset.skill_level %></td>
      </tr>
       <%end%>
      </tbody>
      </table>    
