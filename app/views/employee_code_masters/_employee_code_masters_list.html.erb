<table id="example" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Range</th>
      <th>Last Range</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_code_masters.each do |employee_code_master| %>
      <tr>
        <td><%= employee_code_master.name %></td>
        <td><%= employee_code_master.range %></td>
        <td><%= employee_code_master.last_range %></td>
        <td><%= employee_code_master.is_active ? "Active" : "Inactive" %></td>
        <td>
          <% if employee_code_master.is_confirm == true %>
            <small class= "label label-primary">Confirmed</small>
          <% else %>
            <%= link_to '', edit_employee_code_master_path(employee_code_master),class: 'btn btn-xs btn-success fa fa-edit',remote:true %>
            <%= link_to '',  employee_code_master, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-xs btn-danger fa fa-close' %>
             <%= link_to '', is_confirm_employee_code_masters_path(employee_code_master: employee_code_master),data: { confirm: 'Are you sure?'},class: 'btn btn-xs btn-info fa fa-check' %>
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>