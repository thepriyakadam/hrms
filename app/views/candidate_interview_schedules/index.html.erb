<div class="box">
  <div class="box-header">
    <h3 class="box-title">Interview Schedule</h3>
    <div class="pull-right">
    </div>
  </div>

  <div class="box-body">

<table id="example6" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact No.</th>
      <th>Resume</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @candidate_forms.each do |candidate_form| %>
      <tr>
        <td><%= candidate_form.name %></td>
        <td><%= candidate_form.contact_no %></td>
         <td>
         <% if candidate_form.document1_file_name == nil %>
           <small class="label label-default">Not Available</small>
             <% else %>
             <center><%= link_to '',document_1_path(id: candidate_form.id),class: 'btn btn-xs fa fa-download' %>
             <% end %>
             </center>
        </td>
    <td> 
    <% if @candidate_form_id == nil %>
    <%= link_to 'Schedule Interview',new_candidate_interview_schedule_path(candidate_form_id: candidate_form.id),class: 'btn btn-sm btn-primary' %> 
    <% else %>
     <center><small class="label label-success">Interview Scheduled</small></center>
     <% end %>
     </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>