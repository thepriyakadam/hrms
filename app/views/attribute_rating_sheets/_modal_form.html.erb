<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">

      <%= bootstrap_form_for @attribute_rating_sheet,url:{action: "update_modal", method: :patch,id:@attribute_rating_sheet.id} do |f| %>
        <div class="row">
          <div class="col-sm-4">
            <%= f.text_field :appraisee_comment,hide_label:true, placeholder: "appraisee_comment" %>    
          </div>

           <div class="col-sm-4">
            <%= f.text_field :appraisee_rating_id,hide_label:true, placeholder: "appraisee_rating" %>    
          </div>

          <div class="col-sm-2">
            <%= f.submit "Update", class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      <% end %>
     
    </div>
  </div>
</div>
