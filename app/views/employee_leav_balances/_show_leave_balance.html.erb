<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee Leave Balance</h3>
  </div><!-- /.box-header -->
  <div class="box-body">

	  <table id="example1" class="table table-bordered table-hover table-condensed">
		  <thead>
		  	<tr>
		  		<th>Employee : <%= full_name(@employee) %></th>
		  		<th colspan="4">From : <%= @from_date.to_date %> To <%= @to_date.to_date %></th>
		  	</tr>
		    <tr>
		      <th>Leave Category</th>
		      <th>No. Of Leave</th>
		      <th>From</th>
		      <th>To</th>
		      <th>Status</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @leave_records.each do |leave_record| %>
		      <tr>
		        <td><%= leave_record.leav_category.try(:name) %></td>
		        <td><%= leave_record.employee_leav_request.leave_count %></td>
		        <td><%= leave_record.employee_leav_request.start_date.to_date %></td>
		        <td><%= leave_record.employee_leav_request.end_date.to_date %></td>
		        <td><%= leave_record.status %></td>
		      </tr>
		    <% end %>
		   </tbody>
		  </table>
		  <br>
		 <%= link_to " Excel Report ",show_leave_balance_employee_leav_balances_path(from_date: params[:employee][:from_date],to_date: params[:employee][:to_date],employee_id: params[:employee][:employee_id],format: "xls"), class: "btn btn-xl btn-success fa fa-print" %>

	    <%= link_to " PDF Report ",show_leave_balance_employee_leav_balances_path(from_date: params[:employee][:from_date],to_date: params[:employee][:to_date],employee_id: params[:employee][:employee_id],format: "pdf"), class: "btn btn-xl btn-info fa fa-print", :target => "_blank" %>

		 </div>
	</div>