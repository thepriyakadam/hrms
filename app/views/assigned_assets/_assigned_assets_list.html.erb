<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
	    <th>Employee</th>
      <th>Asset type</th>
      <th>Assets detail</th>
      <th>Assets</th>
      <th>Assets value</th>
      <th>Assest status</th>
      <th>Issue date</th>
      <th>Valid till</th>
      <th>Returned on</th>
      <th>Remarks</th>
      <th>Action</th>
    </tr>
  </thead>

	<tbody>
	<% @assigned_assets.each do |assigned_asset| %>
      <tr>
        <td><%= assigned_asset.employee %></td>
        <td><%= assigned_asset.asset_type %></td>
        <td><%= assigned_asset.assets_detail %></td>
        <td><%= assigned_asset.assets_id %></td>
        <td><%= assigned_asset.assets_value %></td>
        <td><%= assigned_asset.assest_status %></td>
        <td><%= assigned_asset.issue_date %></td>
        <td><%= assigned_asset.valid_till %></td>
        <td><%= assigned_asset.returned_on %></td>
        <td><%= assigned_asset.remarks %></td>
        <td>
        	<%= link_to '', edit_assigned_asset_path(assigned_asset),class: 'btn btn-success btn-sm fa fa-edit',remote:true %>
         <!--  < link_to '', assigned_asset, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm fa fa-close' %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example3').DataTable( {
        "scrollY":        "200px",
        "scrollX":        "1000px",
        "scrollCollapse": true,
        "paging":         false
    } );
} );
</script>