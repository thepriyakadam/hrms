<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Family Details</h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
    </div>
  </div><!-- /.box-header -->


<div class="box-body">
<%= bootstrap_form_for(@family,html: {id: 'family'}) do |f| %>

  <div class="row">
   
      <div class="col-sm-3">
        <div class="form-group required">
          <%= f.text_field :relation %>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group required">
         <%= f.text_field :f_name,label: 'First Name' %>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="field">
         <%= f.text_field :m_name,label: 'Middle Name' %>
        </div>
    </div>
     <div class="col-sm-3">
        <div class="form-group required">
        <%= f.text_field :l_name,label: 'Last Name' %>
        </div>
    </div>
</div>

<div class="row">
     <div class="col-sm-3">
     <div class="field">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </div>
            <%= f.text_field :date_of_birth, class: 'datemask'%>
          </div>
      </div>
      </div>
      <div class="col-sm-3">
        <div class="field">
          <%= f.number_field :age %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :contact_no %>
        </div>
     </div>
     <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :phone_no %>
        </div>
    </div>
</div>

<div class="row">
   
      <div class="col-sm-12">
        <div class="field">
         <%= f.text_field :permanent_address %>
        </div>
    </div>
</div>

<div class="row">
    
      <div class="col-sm-3">
        <div class="field">
         <%= f.text_field :state %>
        </div>
    </div>

     <div class="col-sm-3">
        <div class="field">
         <%= f.text_field :dist %>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="field">
        <%= f.text_field :city %>
        </div>
    </div>
 
    <div class="col-sm-3">
        <div class="field">
        <%= f.number_field :pin_code %>
        </div>
    </div>   
     
</div>

<div class="row">
   
      <div class="col-sm-12">
        <div class="field">
         <%= f.text_field :current_address %>
        </div>
    </div>
</div>

<div class="row">
   
    <div class="col-sm-3">
        <div class="field">
         <%= f.text_field :email %>
        </div>
    </div>

   
     
    <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :adhar_no %>
        </div>
    </div>

   
      <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :pan_no,label:"Pan No" %>
        </div>
    </div>
</div>

<div class="row">
   
      <div class="col-sm-3">
        <div class="field">
        <%= f.text_field :passport_no %>
        </div>
      </div>
 
   
      <div class="col-sm-3">
        <div class="field">
          <%= f.select :medical_claim, ['Yes','No'] %>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="field">
        <%= f.select :marital, ['Married','UnMarried'] %>
         
        </div>
    </div>
 
    
      <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :status %>
        </div>
    </div>
</div>

<div class="row">
      <div class="col-sm-3">
        <div class="field">
         <%= f.select :nationality_id, all_nationality %>
        </div>
    </div>
 
      <div class="col-sm-3">
        <div class="field">
        <%= f.select :blood_group, all_blood_group,{include_blank: "Select something"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}%>
        </div>
    </div>
   <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :religion %>
        </div>
    </div>
 
      <div class="col-sm-3">
        <div class="field">
        <%= f.select :phandicap, ['Yes','No'],label:"Handicap"%>
        </div>
      </div>
</div>

<div class="row">
      <div class="col-sm-3">
        <div class="field">
          <%= f.text_field :profession %>
        </div>
      </div>
 </div>

  <div class="row">
    <div class="col-sm-1"></div>
      <div class="col-sm-3">
        <div class="actions">
            <%= f.submit :class => class_name, data: { disable_with: data_info } %>
        </div>
    </div>
  </div>
<% end %>
</div><!-- /.box-body -->
  <div class="box-footer">
    Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about the plugin.
  </div>
</div><!-- /.box -->
