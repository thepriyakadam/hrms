 <table style="border-collapse: collapse;" border=1 width=900 class="table table-bordered table-hover">  
  <thead>
    <tr>
      <th colspan="3"><center>Employee Detail</center></th>
    </tr>
    <tr>
      <th>Employee ID</th>
      <th>Name</th>
      <th>Department</th>
    </tr>
  </thead>
  <tbody>
  <% @employees.each do |e|  %>
    <tr>
      <td><%= e.manual_employee_code %></td> 
      <td><%= full_name(e) %></td>
      <td><%= e.department.try(:name) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
