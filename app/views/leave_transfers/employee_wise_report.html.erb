<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Leave Transfer Report</h3>
  </div>
   <div class="box-body">
    <%= bootstrap_form_for(:employee, url: { action: 'show_employeewise_detail'},html: {id: "employee"},remote:true) do |f| %>
       <div class="row">
          <div class="col-sm-3">
            <div class="form-group required">
              <%= f.select :employee_id, all_active_employee_with_code, {include_blank: "Select Employee"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"} %>    
            </div>
          </div>

          <div class="col-sm-2" style="padding-top:20px;">
            <%= f.submit "Show Details",class: "btn btn-xl btn-primary fa fa-print",id: "buttonCtc" %>
          </div>
        </div>

          <div class="ajax-progress"></div>
          <div id="employeewise_detail"></div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#advance_salary").submit();
  })

$("#employee").validate({
    rules: {
      "employee[employee_id]":{
        required: true,
      }
       },
    messages: {
       "employee[employee_id]":{
        required: "Please Select Employee",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>