
<!--SELECT2 EXAMPLE -->
<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title">Employee Leave Balance Report</h3>
    <div class="pull-right">
      <%= link_to " Upload ", import_xl_employee_leav_balances_path, class: 'fa fa-upload btn btn-xl btn-info' %>
      <%= link_to " Template", "/Templates/12.Employee Leave Balance.xls", :class=>"fa fa-download btn-xl btn btn-warning" %>
    </div>
  </div><!-- /.box-header -->

  <div class="box-body">
    <%= bootstrap_form_for(:emploee, url: { action: 'employee_leav_balance_report',format: 'xls'}) do |f| %>

      <div class="col-sm-3">
          <div class="field">
          <%= select :salary, :company_location_id, all_company_location2,{label: 'Company Location',include_blank: " Select Company Location"}, class: "form-control" %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="actions">
            <%= f.submit "Download Excel", class: "btn btn-sm btn-primary" %>
          </div>
        </div>

      </div><br>
    <% end %>
  </div><!-- /.box-body -->
</div><!-- /.box -->
