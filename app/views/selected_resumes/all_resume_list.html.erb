<div class="box">
  <div class="box-header">
    <h3 class="box-title">Resume List</h3>
<div class="box-body">
<%= bootstrap_form_for @selected_resume,url:{action:'is_confirm'} do |f| %>   
<table class="table table-bordered table-hover table-condensed example3">
  <thead>
    <tr>
      <th><input type="checkbox" id="selectAll" value="selectAll"></th>
      <th>Name</th>
      <th>Contact No.</th>
      <th>Degree</th>
      <th>CTC</th>
      <th>Experience</th>
      <th>Notice Period</th>
      <th>Status</th>
      <th>Offer Letter Status</th>
      <th>Download Resume</th>
      <th>Download Image</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @selected_resumes.each do |selected_resume| %>
      <tr>
        <td>
          <% if selected_resume.status == "Shortlisted" %>
          <% elsif selected_resume.status == "Interview Scheduled" %>
          <% elsif selected_resume.status == "Interview Rescheduled" %>
          <% else %>
            <%= check_box_tag "selected_resume_ids[]", selected_resume.id %>
          <% end %>
        </td>
        <td><%= selected_resume.name %></td>
        <td><%= selected_resume.contact_no %></td>
        <td><%= selected_resume.degree.try(:name) %></td>
        <td><%= selected_resume.ctc %></td>
        <td><%= selected_resume.experience %></td>
        <td><%= selected_resume.notice_period %></td>
        <td>
          <div id="myModal1" class="modal fade"></div>
          <% if selected_resume.status == "Shortlisted" %>
            <small class="label label-primary">Shortlisted</small>
            <% elsif selected_resume.status == "Interview Scheduled" %>
            <small class="label label-primary">Interview Scheduled</small>
            <%= link_to ' Update Status',modal_change_status_selected_resumes_path(selected_resume),class: 'btn btn btn-sm btn-default fa fa-modx',remote: true %>
            <% elsif selected_resume.status == "Interview Rescheduled" %>
            <small class="label label-danger">Interview Rescheduled</small>
            <%= link_to ' Update Status',modal_change_status_selected_resumes_path(selected_resume),class: 'btn btn btn-sm btn-default fa fa-modx',remote: true %>
            <% else %>
            <small class="label label-default">Not Yet Shortlisted</small>
            <% end %>
        </td>
        <td><%= selected_resume.offer_letter_status %> <div id="myModal" class="modal fade"></div>
          <% if selected_resume.status == "Shortlisted" %>
          <%= link_to ' Offer Letter',modal_selected_resumes_path(selected_resume),class: 'btn btn btn-sm btn-default fa fa-modx',remote: true %>
          <% elsif selected_resume.status == "Interview Scheduled" %>
          <%= link_to ' Offer Letter',modal_selected_resumes_path(selected_resume),class: 'btn btn btn-sm btn-default fa fa-modx',remote: true %>
          <% else %>
          <% end %>
          </td>
       <td>
         <% if selected_resume.avatar_file_name == nil %>
           <small class="label label-default">Resume Not Available</small>
             <% else %>
             <center><%= link_to '',download_resume_path(id: selected_resume.id),class: 'btn btn-xs fa fa-download' %>
             <% end %></center>
          </td>
          <td>
          <% if selected_resume.passport_photo_file_name == nil %>
              <small class="label label-default">Image Not Available</small>
              <% else %>
              <center><%= link_to '',download_image_path(id: selected_resume.id),class: 'btn btn-xs fa fa-picture-o' %></center>
              <% end %>
        </td>
        <td>
        <%= link_to '', selected_resume,class: 'btn btn-xs btn-default fa fa-eye' %>
        <%= link_to '', selected_resume, method: :delete, data: { confirm: 'Are you sure?',remote:true },class: 'btn btn-danger btn-xs fa fa-close' %>
           <% if selected_resume.status == "Shortlisted" %>
          <%= link_to ' Interview', new_interview_schedule_path(selected_resume.id),class: 'btn btn-xs btn-primary fa fa-check' %>
          <% else %>
          <% end %>
          
        </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="myModal2" class="modal fade"></div>

<div class="row">
  <div class="col-sm-3">
    <div class="actions">
      <%= f.submit "Confirm", class: 'btn btn-primary btn-sm' %> 
      
    </div>
  </div>
</div>
 <% end %>
 </div>
 </div>
 </div>



<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });

  $(document).ready(function() {
    $('.example3').DataTable( {
      "scrollX":        "1200px",
      "paging":         false,
      "searching":     false
    });
  });
</script>