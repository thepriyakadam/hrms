<%= bootstrap_form_for(@employee_grade,html: {id: 'employee_grade'},remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :code,hide_label:true, placeholder: 'Code' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :name,hide_label:true, placeholder: 'Name' %>
      </div>
    </div>

        <div class="col-sm-3">
      <div class="form-group required">
        <%= f.text_field :description,hide_label:true, placeholder: 'Description' %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="actions">
        <%= f.submit "Create Employee Grade",:class => class_name, data: { disable_with: data_info }%>
      </div>
    </div>
  </div>
<% end %>

<script>
$("#employee_grade").validate({
    rules: {
      "employee_grade[code]":{
        required: true,
      },
      "employee_grade[name]":{
        required: true,
      }
       },
    messages: {
      "employee_grade[code]":{
        required: "Please specify code",
      },
       "employee_grade[name]":{
        required: "Please specify name",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>

