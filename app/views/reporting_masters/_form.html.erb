<%= bootstrap_form_for(@reporting_master,remote:true) do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <div class="form-group required">
         <%= f.select :employee_id, all_active_employee_with_code, {label: 'Employee ',include_blank: " Select Reporting Manager"},{:class=>"select2 select2-hidden-accessible",:style=>"width: 100%;",:tabindex=>"-1"}  %>
      </div>
    </div>
    <div class="col-sm-3">
    <label></label>
      <div class="actions">
        <%= f.submit "Create Reporting Manager",:class => class_name %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $(".select2").select2();
  });
</script>