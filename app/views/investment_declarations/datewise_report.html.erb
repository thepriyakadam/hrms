<div class="box">
  <div class="box-header">
    <h3 class="box-title"> Investment Declaration</h3>
  <div class="box-body">
    <%= bootstrap_form_for(:employee, url: { action: 'show_datewise_report'},html: {id: "employee"}) do |f| %>
    <div class="row">
        <div class="col-sm-3">
          <label>From </label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= text_field :employee,:from,hide_label: true,class: 'request_date form-control'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <label>To </label>
          <div class="form-group required">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-calendar"></i>
              </div>
              <%= text_field :employee,:to,hide_label: true,class: 'request_date form-control'%>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="field">
            <%= f.select :status ,[['Approved',true],['Pending',false]] ,{label: 'Status',include_blank: "Select Status"} %>
          </div>
        </div>

        <div class="col-sm-2" style="padding-top:20px;">
          <%= f.submit "Show Employee List",class: "btn btn-xl btn-primary fa fa-print",id: "buttonCtc" %>
        </div>
      </div>
     </div>
  <% end %>
</div>
</div>
<script type="text/javascript">
  $("#buttonCtc").click(function(){
    $('.ajax-progress').show();
    $("#advance_salary").submit();
  })
</script>

<script type="text/javascript">
  $(function(){
    $('.request_date').datepicker({
    changeYear:true,
    changeMonth: true,
    yearRange: '-200:+1',
    dateFormat: 'dd-mm-yy' });
  }); 
</script>

<script>
$("#employee").validate({
    rules: {
      "employee[from]":{
        required: true,
      },
      "employee[to]":{
        required: true,
      }
       },
    messages: {
      "employee[from]":{
        required: "Please Specify From",
      },
       "employee[to]":{
        required: "Please Select To",
      }
       },
    errorPlacement: function(error, element) {
     error.css({"color": "red", "font-size": "12px","font-weight" : "normal"})
     error.insertAfter(element.parent(element));
    }
   });
</script>