<div class="box">
  <div class="box-header">
    <h3 class="box-title">Employee List</h3>
    <div class="pull-right">
    </div>
  </div>
  <div class="box-body">
    <table id="example" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Employee</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
          <% @employee_resignations.each do |employee_resignation| %>
          <tr>
          <td><%= employee_resignation.employee.try(:manual_employee_code) %></td>
            <td><%= full_name(employee_resignation.employee)%></td>
             <td><%= employee_resignation.resignation_date%></td>
            <td><%= link_to '', show_resignation_detail_self_services_path(id: employee_resignation), class: 'btn btn-default fa fa-eye btn-sm' %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
