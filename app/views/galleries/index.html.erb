<div class="box box-default">
  <div class="box-header with-border">
    <h3 class="box-title"> Event Photo Galleries </h3>
    <div class="pull-right">
      <%= link_to 'New', new_gallery_path, class: "btn btn-sm btn-primary" %> <br />
      </div>
      <br />
      <p></p>
        <ul class="thumbnails files">
        <% @galleries.each do |gallery| %>
            <li class="span4" id="gallery_<%= gallery.id %>">
              <div class="thumbnail">
                <p style="text-align: center;">
                    <%= gallery.name.truncate(14) %>
                <% if gallery.pictures.first %>
                <%= link_to image_tag(gallery.pictures.first.image.url), gallery_path(gallery) %>
                <% else %>
                  N/A
                <% end %>
                <div class="caption">
                  <p style="text-align: center;">
                    <%= gallery.try(:description) %><br />
                    <%= link_to "Show", gallery_path(gallery) %>
                    <%= link_to 'Edit', edit_gallery_path(gallery), class: "btn btn-xs btn-success fa fa-edit" %>
                    <%= link_to "Delete", gallery, :data => { :confirm => "Are you sure?" },:method => :delete,class: 'btn btn-xs btn-danger fa fa-trash'
                    %>
                  </p>
                </div>
              </div>
            </li>
        <% end %>
        </ul>
  </div>
  </div>
