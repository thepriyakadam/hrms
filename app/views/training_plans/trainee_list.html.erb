<div class="box">
  <div class="box-header">
    <h3 class="box-title">Training Feedback Form</h3>
  </div>
  <div class="box-body">
<div class="box-body">
<table id="example2" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Sr.No</th>
      <th>Employee Name</th>
      <th>Feedback</th>
      <th>Action</th>
  </thead>
  <tbody>
  <% i = 0 %>
   <% @trainees.each do |trainee| %>
      <tr>
        <td><%= i=i+1 %></td>
        <td><%= trainee.employee.try(:first_name) %> <%= trainee.employee.try(:middle_name) %> <%= trainee.employee.try(:last_name) %></td>
        <td><%= trainee.feedback %></td>
        <div id="myModal" class="modal fade"></div>
        <td><%= link_to ' Update Feedback',modal_feedback_training_plans_path(trainee),class: 'btn btn btn-xs btn-success fa fa-modx',remote: true %>
          <%= link_to '', training_details_list_training_plans_path(trainee),class: 'btn btn-xs btn-default fa fa-eye' %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>
</tr>
</thead>
</table>
</div>
</div>
</div>