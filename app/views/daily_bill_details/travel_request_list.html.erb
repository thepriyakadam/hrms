<div class="box">
  <div class="box-header">
    <h3 class="box-title">Expence Request</h3>
    </div>

<div class="box-body">

<table id="example6" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee Name</th>
      <th>Place</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @travel_requests.each do |travel_request| %>
      <tr>
        <td><%= travel_request.employee.try(:manual_employee_code) %></td>
        <td><%= travel_request.employee.try(:first_name) %> <%= travel_request.employee.try(:middle_name) %> <%= travel_request.employee.try(:last_name) %></td>
        <td><%= travel_request.place %></td>
        <td>
           <!--  < if travel_request.daily_bill_status == "true" %>
            <small class="label label-success">Approved</small>
            < else %> -->
            <%= link_to 'Approve', daily_bill_request_confirmation_daily_bill_details_path(travel_request),class: 'btn btn-sm btn-primary' %>
            <!--< end %>-->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]],
        "scrollX": true
    } );
} );
</script>
