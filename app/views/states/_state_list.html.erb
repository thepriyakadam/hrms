<table id="example2" class="table table-bordered table-hover table-condensed'">
  <thead>
    <tr>  
      <th>Country</th>
      <th>Code</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.country.try(:name) %></td>
        <td><%= state.code %></td>
        <td><%= state.name %></td>
        <td> <!-- link_to '', state,class: 'btn btn-xs btn-default fa fa-eye',remote:true  %> -->
      <%= link_to '', edit_state_path(state),class: 'btn btn-xs btn-success fa fa-edit',remote:true  %>
        <!-- link_to '', state, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-xs btn-danger fa fa-close',remote:true %> --></td>
      </tr>
    <% end %>
  </tbody>
</table>
