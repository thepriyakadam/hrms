
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Final Approval/Reject Rembursment List</h3>
    <div class="pull-right">
    </div>
  </div>

<div class="box-body">

    <table id="example1" class="table table-bordered table-hover table-condensed">
      <thead>
        <tr>
         <th>ID</th>
         <th>Employee</th>
         <th>Rembursment</th>
         <th>Rembursment Date</th>
         <th>Amount</th>
         <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% @rembursments.each do |rembursment| %>
          <tr>
            <td><%= rembursment.employee.try(:manual_employee_code) %></td>
            <td><%= full_name(rembursment.employee) %></td>
            <td><%= rembursment.rembursmentmaster.try(:name) %></td>
            <td><%= rembursment.rembursment_date %></td>
            <td><%= rembursment.amount %></td>
            <td>
              <%= link_to 'Approve / Reject',rembursment_confirmation_rembursments_path(rembursment_id: rembursment.id),class: 'btn btn-sm btn-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>