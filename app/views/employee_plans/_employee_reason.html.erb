<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><center> Plan Reason </center></h4>
    </div>
    <div class="modal-body">
      <table class="table table-bordered table-hover table-condensed">
        <thead>
          <%= bootstrap_form_for :employee_plan, url:{ action: "reason", employee_plan_id: @employee_plan.id}  do |f| %>
            <div class="row">
              <div class="col-sm-3">
                <div class="form-group required">
                  <%= f.select :plan_reason_master_id, all_plan_reason, {include_blank: 'Select plan reason'} %>
                </div>
              </div>
              <div class="col-sm-3">
                <div class="form-group required">
                  <%= f.text_field :feedback, label:'Reason' %>
                </div>
              </div>
              <div class="col-sm-3">
                <div class="actions" style="padding-top: 20px;">
                  <%= f.submit 'Submit', class: "btn btn-primary btn-sm"%>
                </div>
              </div>
            </div>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>
