<div class="box">
  <div class="box-header">
    <h3 class="box-title">Joining Deatils</h3>
    <div class="pull-right">
      <%= link_to "New Joining detail", new_joining_detail_path, class: 'btn btn-primary' %> 
    </div>
    
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
      <th>Employee</th>
      <th>Joining date</th>
      <th>Admin Interviewer</th>
      <th>Technical Interviewer</th>
      <th>Designation</th>
      <th>Employee grade</th>
      
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @joining_details.each do |joining_detail| %>
      <tr>
        <td><%= joining_detail.employee.id %></td>
        <td><%= joining_detail.joining_date %></td>
        <td><%= joining_detail.admin_hr %></td>
        <td><%= joining_detail.tech_hr %></td>
        <td><%= joining_detail.designation %></td>
        <td><%= joining_detail.employee_grade.name %></td>
         <td>
            <%= link_to '', joining_detail,class: 'btn btn-default fa fa-eye' %>
            <%= link_to '', edit_joining_detail_path(joining_detail),class: 'btn btn-success fa fa-edit' %>
            <%= link_to '', joining_detail, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger fa fa-close' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
