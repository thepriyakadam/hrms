<div class="box">
  <div class="box-header">
  </div>
  <div class="box-body">
  <%= form_for :goal_ratings, url: { action: 'detail_goal_wise',period_id: @period.id} do |f| %>
    <table id="example6" class="table table-bordered table-hover table-condensed">
     <thead>
        <tr>
          <th><input type="checkbox" id="selectAll" value="selectAll"></th>
          <th>Employee ID</th>
          <th>Employee Name</th>
          <th>Department</th>
          <th>Designation</th>
          <th>Contact No</th>
        </tr>
      </thead>
      <tbody>
        <% @goal_bunches.each do |e| %>
        <tr>
        <td><%= check_box_tag "goal_bunch_ids[]", e.id %></td>
        <td><%= e.employee.manual_employee_code %></td>
        <td><%= e.employee.first_name %> <%= e.employee.middle_name %> <%= e.employee.last_name %> </td>
        <td><%= e.employee.company_location.try(:name) %> - <%= e.employee.department.try(:name) %></td> 
        <td><%= e.employee.joining_detail.employee_designation.try(:name) %></td>
        <td><%= e.employee.contact_no %>
        </tr>
        <% end %>
      </tbody>
    </table>
      <div class="col-sm-3">
          <%= f.submit "Show Employee Detail",class: "btn btn-xl btn-primary fa fa-print" %>
        </div>
    <% end %>    
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $('#example6').DataTable( {
        "lengthMenu": [[10, 25, 50,100, -1], [10, 25, 50,100, "All"]]
    } );
} );
</script>

<script type="text/javascript">
  $(function () {
    $('#selectAll').click(function() {
      if (this.checked) {
        $(':checkbox').each(function() {
          this.checked = true;                       
        });
      } 
      else {
        $(':checkbox').each(function() {
          this.checked = false;                        
        });
      } 
    });
  });
</script>
