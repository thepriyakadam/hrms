<div class="box">
  <div class="box-header">
    <h3 class="box-title">Set Goal and Attributes - My Team</h3>
    <div class="pull-right">  
    </div>
  </div>
  <div class="box-body">
  <table id="example2" class="table table-bordered table-hover table-condensed">
      <thead>
      	<tr>
      		<th>Employee ID</th>
          <th>Employee Name</th>
          <th>Department</th>
          <th>Designation</th>
      		<th>Action</th>
      	</tr>
 			</thead>
 			<tbody>
        <% @employees.each do |e| %>
        <tr>
        <td><%= e.manual_employee_code %></td>
        <td><%= full_name(e) %> </td>
        <td><%= e.company_location.try(:name) %> - <%= e.department.try(:name) %></td> 
        <td><%= e.joining_detail.employee_designation.try(:name) %></td>
        <td><%= link_to 'Assign Goals And Attributes', new_employee_goal_path(e) ,class: 'btn btn-xs btn-primary' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
